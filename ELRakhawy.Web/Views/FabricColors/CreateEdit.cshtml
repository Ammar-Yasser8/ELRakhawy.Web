@using ELRakhawy.EL.ViewModels
@model FabricColorViewModel
@{
    ViewData["Title"] = Model.FormTitle;
    var currentTime = "2025-09-02 19:36:11";
    var currentUser = "Ammar-Yasser8";
}

<div class="container-fluid mt-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="text-primary mb-1">
                <i class="fas @(Model.IsEdit ? "fa-edit" : "fa-plus") me-2"></i>@Model.FormTitle
            </h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">الرئيسية</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index")">ألوان القماش</a></li>
                    <li class="breadcrumb-item active">@(Model.IsEdit ? "تعديل" : "إضافة")</li>
                </ol>
            </nav>
        </div>
        <div class="text-end">
            <small class="text-muted d-block">@currentTime</small>
            <small class="text-muted d-block">@currentUser</small>
        </div>
    </div>

    <!-- Form Card -->
    <div class="card shadow-sm">
        <div class="card-header @(Model.IsEdit ? "bg-warning" : "bg-primary") text-white">
            <h5 class="mb-0">
                <i class="fas fa-palette me-2"></i>بيانات لون القماش
            </h5>
        </div>
        <div class="card-body">
            <form id="fabricColorForm" action="@Url.Action("Save")" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="StyleName" />

                <div class="row">
                    <!-- Color Name -->
                    <div class="col-md-6 mb-4">
                        <h6 class="text-primary border-bottom pb-2">
                            <i class="fas fa-palette me-2"></i>معلومات اللون
                        </h6>
                        <div class="mb-3">
                            <label asp-for="Color" class="form-label required">
                                <i class="fas fa-paint-brush text-primary me-1"></i>اسم اللون
                            </label>
                            <input asp-for="Color" class="form-control" placeholder="أدخل اسم لون القماش" />
                            <span asp-validation-for="Color" class="text-danger"></span>
                            <div class="form-text">
                                <small class="text-muted">
                                    <i class="fas fa-info-circle me-1"></i>يجب أن يكون اسم اللون فريداً
                                </small>
                            </div>
                        </div>
                    </div>

                    <!-- Style Selection -->
                    <div class="col-md-6 mb-4">
                        <h6 class="text-primary border-bottom pb-2">
                            <i class="fas fa-swatchbook me-2"></i>الطراز المرتبط
                        </h6>
                        <div class="mb-3">
                            <label asp-for="StyleId" class="form-label required">
                                <i class="fas fa-tag text-success me-1"></i>الطراز
                            </label>
                            <select asp-for="StyleId" class="form-select">
                                <option value="">-- اختر الطراز --</option>
                                @foreach (var style in Model.AvailableStyles)
                                {
                                    <option value="@style.Value" @@(Model.StyleId?.ToString() == style.Value ? "selected" : "")>@style.Text</option>
                                }
                            </select>
                            <span asp-validation-for="StyleId" class="text-danger"></span>
                            <div class="form-text">
                                <small class="text-muted">
                                    <i class="fas fa-lightbulb me-1"></i>اختر الطراز الذي ينتمي إليه هذا اللون
                                </small>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <!-- Comment -->
                    <div class="col-md-12 mb-4">
                        <h6 class="text-primary border-bottom pb-2">
                            <i class="fas fa-comment me-2"></i>بيان إضافي
                        </h6>
                        <div class="mb-3">
                            <label asp-for="Comment" class="form-label">
                                <i class="fas fa-sticky-note text-secondary me-1"></i>البيان
                            </label>
                            <textarea asp-for="Comment" class="form-control" rows="4" 
                                      placeholder="أدخل أي ملاحظات أو تفاصيل إضافية عن لون القماش (اختياري)"></textarea>
                            <span asp-validation-for="Comment" class="text-danger"></span>
                            <div class="form-text">
                                <small class="text-muted">
                                    <i class="fas fa-lightbulb me-1"></i>يمكنك إضافة وصف للون، الدرجات المتاحة، أو أي معلومات مفيدة
                                </small>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="row mt-4">
                    <div class="col-12">
                        <div class="d-flex gap-2 justify-content-end">
                            <a href="@Url.Action("Index")" class="btn btn-secondary">
                                <i class="fas fa-times me-1"></i>إلغاء
                            </a>
                            <button type="button" class="btn btn-info" id="previewBtn">
                                <i class="fas fa-eye me-1"></i>معاينة
                            </button>
                            <button type="submit" class="btn @(Model.IsEdit ? "btn-warning" : "btn-primary")" id="saveBtn">
                                <i class="fas fa-save me-1"></i>
                                @(Model.IsEdit ? "تحديث اللون" : "حفظ اللون")
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        $(document).ready(function() {
            console.log('Fabric Color Form loaded at 2025-09-02 19:36:11 by Ammar-Yasser8');
            
            // Initialize select2
            $('.form-select').select2({
                theme: 'bootstrap-5',
                width: '100%',
                language: {
                    noResults: function() {
                        return "لا توجد نتائج";
                    },
                    searching: function() {
                        return "جاري البحث...";
                    }
                }
            });

            // Preview functionality
            $('#previewBtn').click(function() {
                var data = {
                    color: $('#Color').val() || 'غير محدد',
                    style: $('#StyleId option:selected').text() || 'غير محدد',
                    comment: $('#Comment').val() || 'لا يوجد بيان'
                };

                var isEdit = @Json.Serialize(Model.IsEdit);
                var preview = `
                    <div class="text-start">
                        <p><strong>اسم اللون:</strong> ${data.color}</p>
                        <p><strong>الطراز:</strong> ${data.style}</p>
                        <p><strong>البيان:</strong> ${data.comment}</p>
                    </div>
                `;

                Swal.fire({
                    title: isEdit ? 'معاينة تحديث لون القماش' : 'معاينة لون القماش الجديد',
                    html: preview,
                    icon: 'info',
                    showCancelButton: true,
                    confirmButtonText: isEdit ? 'تحديث الآن' : 'حفظ الآن',
                    cancelButtonText: 'تراجع',
                    confirmButtonColor: isEdit ? '#ffc107' : '#0d6efd'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $('#fabricColorForm').submit();
                    }
                });
            });

            // Form submission
            $('#fabricColorForm').submit(function() {
                $('#saveBtn').prop('disabled', true)
                    .html('<span class="spinner-border spinner-border-sm me-2"></span>جاري الحفظ...');
            });
        });
    </script>
}