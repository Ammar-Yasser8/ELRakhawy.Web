@section Scripts {
    <script>
        $(document).ready(function() {
            const CURRENT_TIME = '2025-08-19 19:06:16';
            const CURRENT_USER = 'Ammar-Yasser8';

            console.log('Enhanced stakeholders info with full API integration loaded:', {
                time: CURRENT_TIME,
                user: CURRENT_USER
            });

            // Initialize components
            const toastElement = document.getElementById('notificationToast');
            const toast = new bootstrap.Toast(toastElement, { delay: 4000 });
            const deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
            const detailsModal = new bootstrap.Modal(document.getElementById('detailsModal'));

            let stakeholdersData = [];
            let currentDetailsId = null;

            // Enhanced notification function
            function showNotification(message, type = 'success') {
                const icons = {
                    success: 'fa-check-circle',
                    error: 'fa-exclamation-circle',
                    warning: 'fa-exclamation-triangle',
                    info: 'fa-info-circle'
                };

                const colors = {
                    success: 'bg-success',
                    error: 'bg-danger',
                    warning: 'bg-warning',
                    info: 'bg-info'
                };

                $('#toastIcon').removeClass().addClass(`fas ${icons[type]} me-2`);
                $('#toastMessage').text(message);
                $('#notificationToast').removeClass('bg-success bg-danger bg-warning bg-info text-white text-dark')
                    .addClass(`${colors[type]} ${type === 'warning' ? 'text-dark' : 'text-white'}`);

                toast.show();
            }

            // Loading functions
            function showLoading() {
                $('#loadingOverlay').removeClass('d-none');
            }

            function hideLoading() {
                $('#loadingOverlay').addClass('d-none');
            }

            // Load stakeholders data via API
            function loadStakeholders() {
                showLoading();

                $.ajax({
                    url: '/api/StakeholdersInfo',
                    method: 'GET',
                    success: function(response) {
                        hideLoading();

                        if (response.success) {
                            stakeholdersData = response.data;
                            renderStakeholders(stakeholdersData);
                            updateCounts(stakeholdersData.length);

                            if (stakeholdersData.length === 0) {
                                $('#emptyState').show();
                                $('#stakeholdersContainer').hide();
                            } else {
                                $('#emptyState').hide();
                                $('#stakeholdersContainer').show();
                            }

                            console.log('Loaded stakeholders via API:', {
                                count: stakeholdersData.length,
                                time: CURRENT_TIME,
                                user: CURRENT_USER
                            });
                        } else {
                            showNotification('حدث خطأ أثناء تحميل البيانات', 'error');
                            $('#emptyState').show();
                            $('#stakeholdersContainer').hide();
                        }
                    },
                    error: function(xhr, status, error) {
                        hideLoading();
                        showNotification('حدث خطأ أثناء تحميل بيانات الجهات', 'error');
                        console.error('Load error:', { xhr, status, error, time: CURRENT_TIME });
                        $('#emptyState').show();
                        $('#stakeholdersContainer').hide();
                    }
                });
            }

            // Load stakeholder details via API
            function loadStakeholderDetails(id) {
                showLoading();

                $.ajax({
                    url: `/api/StakeholdersInfo/${id}`,
                    method: 'GET',
                    success: function(response) {
                        hideLoading();

                        if (response.success) {
                            renderDetailsModal(response.data);
                            currentDetailsId = id;
                            detailsModal.show();

                            console.log('Loaded stakeholder details via API:', {
                                id: id,
                                name: response.data.name,
                                time: CURRENT_TIME,
                                user: CURRENT_USER
                            });
                        } else {
                            showNotification('حدث خطأ أثناء تحميل تفاصيل الجهة', 'error');
                        }
                    },
                    error: function(xhr, status, error) {
                        hideLoading();
                        showNotification('حدث خطأ أثناء تحميل تفاصيل الجهة', 'error');
                        console.error('Details load error:', { xhr, status, error, time: CURRENT_TIME });
                    }
                });
            }

            // Render details modal content
            function renderDetailsModal(stakeholder) {
                const typesHtml = stakeholder.types && stakeholder.types.length > 0
                    ? stakeholder.types.map(type =>
                        `<div class="col-auto">
                            <span class="badge ${type.isPrimary ? "bg-primary" : "bg-light text-dark border"} fs-6 py-2 px-3">
                                <i class="fas fa-tag me-1"></i>${type.typeName}
                                ${type.isPrimary ? '<i class="fas fa-star ms-1" title="النوع الرئيسي"></i>' : ''}
                            </span>
                        </div>`
                      ).join('')
                    : '<div class="col-12"><span class="text-muted fst-italic"><i class="fas fa-info-circle me-2"></i>لا توجد أنواع مرتبطة</span></div>';

                const primaryType = stakeholder.types ? stakeholder.types.find(t => t.isPrimary) : null;
                const financialTypeHtml = primaryType && primaryType.financialTransactionType
                    ? `<div class="alert alert-light border-start border-4 border-warning">
                        <h6 class="alert-heading mb-2">
                            <i class="fas fa-coins text-warning me-2"></i>نوع المعاملة المالية
                        </h6>
                        <p class="mb-0">${primaryType.financialTransactionType}</p>
                       </div>`
                    : '<div class="alert alert-light text-muted text-center"><i class="fas fa-info-circle me-2"></i>لا يوجد نوع معاملة مالية محدد</div>';

                const contactHtml = stakeholder.contactNumbers
                    ? `<div class="alert alert-light border-start border-4 border-info">
                        <h6 class="alert-heading mb-2">
                            <i class="fas fa-phone text-info me-2"></i>بيانات الاتصال
                        </h6>
                        <p class="mb-0" dir="ltr">${stakeholder.contactNumbers}</p>
                       </div>`
                    : '<div class="alert alert-light text-muted text-center"><i class="fas fa-phone-slash me-2"></i>لا توجد بيانات اتصال</div>';

                const commentHtml = stakeholder.comment
                    ? `<div class="alert alert-light border-start border-4 border-secondary">
                        <h6 class="alert-heading mb-2">
                            <i class="fas fa-comment-alt text-secondary me-2"></i>البيان والتعليقات
                        </h6>
                        <p class="mb-0">${stakeholder.comment}</p>
                       </div>`
                    : '<div class="alert alert-light text-muted text-center"><i class="fas fa-comment-slash me-2"></i>لا يوجد بيان أو تعليقات</div>';

                const detailsContent = `
                    <div class="p-4">
                        <!-- Header Section -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <div class="d-flex align-items-center p-3 bg-light rounded">
                                    <div class="flex-shrink-0 me-3">
                                        <div class="icon-circle bg-info text-white">
                                            <i class="fas fa-building fa-2x"></i>
                                        </div>
                                    </div>
                                    <div class="flex-grow-1">
                                        <h4 class="mb-1 fw-bold text-dark">${stakeholder.name}</h4>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <small class="text-muted">
                                                    <i class="fas fa-toggle-${stakeholder.status ? 'on text-success' : 'off text-danger'} me-1"></i>
                                                    الحالة: <strong>${stakeholder.status ? 'نشط' : 'غير نشط'}</strong>
                                                </small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Types Section -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <h6 class="fw-bold text-dark mb-3">
                                    <i class="fas fa-tags text-info me-2"></i>أنواع الجهة
                                </h6>
                                <div class="row g-2">
                                    ${typesHtml}
                                </div>
                            </div>
                        </div>

                        <!-- Financial Transaction Type Section -->
                        <div class="row mb-4">
                            <div class="col-12">
                                ${financialTypeHtml}
                            </div>
                        </div>

                        <!-- Contact Section -->
                        <div class="row mb-4">
                            <div class="col-12">
                                ${contactHtml}
                            </div>
                        </div>

                        <!-- Comment Section -->
                        <div class="row mb-4">
                            <div class="col-12">
                                ${commentHtml}
                            </div>
                        </div>

                        <!-- Meta Information -->
                        <div class="row mt-4 pt-3 border-top">
                            <div class="col-12">
                                <div class="row text-center">
                                    <div class="col-md-4">
                                        <div class="p-2">
                                            <div class="text-primary fs-5 fw-bold">${stakeholder.types ? stakeholder.types.length : 0}</div>
                                            <small class="text-muted">أنواع مرتبطة</small>
                                        </div>
                                    </div>
                                   
                                </div>
                            </div>
                        </div>
                    </div>
                `;

                $('#detailsContent').html(detailsContent);
            }

            // Render stakeholders table
            function renderStakeholders(data) {
                const tbody = $('#stakeholdersTableBody');
                tbody.empty();

                if (!data || data.length === 0) {
                    return;
                }

                data.forEach(function(stakeholder) {
                    const typesHtml = stakeholder.types && stakeholder.types.length > 0
                        ? stakeholder.types.map(type =>
                            `<span class="badge ${type.isPrimary ? "bg-primary" : "bg-light text-dark border"}">
                                ${type.typeName}
                                ${type.isPrimary ? '<i class="fas fa-star ms-1 small" title="النوع الرئيسي"></i>' : ''}
                            </span>`
                          ).join(' ')
                        : '<span class="text-muted fst-italic">لا يوجد نوع</span>';

                    const statusHtml = `
                        <div class="form-check form-switch">
                            <input type="checkbox" class="form-check-input status-toggle"
                                   ${stakeholder.status ? "checked" : ""}
                                   data-id="${stakeholder.id}"
                                   data-name="${stakeholder.name}">
                            <label class="form-check-label">
                                ${stakeholder.status ? "نشط" : "غير نشط"}
                            </label>
                        </div>
                    `;

                    const primaryType = stakeholder.types ? stakeholder.types.find(t => t.isPrimary) : null;
                    const financialType = primaryType && primaryType.financialTransactionType
                        ? primaryType.financialTransactionType
                        : '<span class="text-muted">-</span>';

                    const phoneHtml = stakeholder.contactNumbers
                        ? `<div class="d-flex align-items-center gap-2">
                            <i class="fas fa-phone text-primary"></i>
                            <span dir="ltr" class="small">${stakeholder.contactNumbers}</span>
                           </div>`
                        : '<span class="text-muted">-</span>';

                    const commentHtml = stakeholder.comment
                        ? `<span title="${stakeholder.comment}" class="comment-text">
                            ${stakeholder.comment.length > 60 ? stakeholder.comment.substring(0, 57) + '...' : stakeholder.comment}
                           </span>`
                        : '<span class="text-muted">-</span>';

                    const row = `
                        <tr data-id="${stakeholder.id}" class="stakeholder-row">
                            <td class="stakeholder-name">
                                <div class="d-flex align-items-center">
                                    <div class="stakeholder-icon me-2">
                                        <i class="fas fa-building text-success"></i>
                                    </div>
                                    <div>
                                        <span class="fw-semibold">${stakeholder.name}</span>
                                        <br>
                                        
                                    </div>
                                </div>
                            </td>
                            <td class="stakeholder-type">
                                <div class="d-flex flex-wrap gap-1">
                                    ${typesHtml}
                                </div>
                            </td>
                            <td class="stakeholder-status">${statusHtml}</td>
                            <td class="stakeholder-financial">${financialType}</td>
                            <td class="stakeholder-phone">${phoneHtml}</td>
                            <td class="stakeholder-comment">${commentHtml}</td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a href="/StakeholdersInfo/Edit/${stakeholder.id}"
                                       class="btn btn-sm btn-outline-info"
                                       title="تعديل ${stakeholder.name}">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <button class="btn btn-sm btn-outline-secondary view-details"
                                            data-id="${stakeholder.id}"
                                            title="تفاصيل ${stakeholder.name}">
                                        <i class="fas fa-info-circle"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger delete-stakeholder"
                                            data-id="${stakeholder.id}"
                                            data-name="${stakeholder.name}"
                                            title="حذف ${stakeholder.name}">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    `;
                    tbody.append(row);
                });
            }

            // Enhanced search functionality
            function performSearch() {
                const nameSearch = $('#searchByName').val().toLowerCase().trim();
                const typeSearch = $('#searchByType').val().toLowerCase().trim();
                const statusSearch = $('#searchByStatus').val();
                const financialSearch = $('#searchByFinancial').val().toLowerCase().trim();
                const phoneSearch = $('#searchByPhone').val().toLowerCase().trim();
                const commentSearch = $('#searchByComment').val().toLowerCase().trim();
                let visibleCount = 0;

                $('.stakeholder-row').each(function() {
                    const row = $(this);
                    const name = row.find('.stakeholder-name').text().toLowerCase();
                    const type = row.find('.stakeholder-type').text().toLowerCase();
                    const status = row.find('.status-toggle').prop('checked') ? 'active' : 'inactive';
                    const financial = row.find('.stakeholder-financial').text().toLowerCase();
                    const phone = row.find('.stakeholder-phone').text().toLowerCase();
                    const comment = row.find('.stakeholder-comment').text().toLowerCase();

                    const nameMatch = !nameSearch || name.includes(nameSearch);
                    const typeMatch = !typeSearch || type.includes(typeSearch);
                    const statusMatch = !statusSearch || status === statusSearch;
                    const financialMatch = !financialSearch || financial.includes(financialSearch);
                    const phoneMatch = !phoneSearch || phone.includes(phoneSearch);
                    const commentMatch = !commentSearch || comment.includes(commentSearch);

                    const shouldShow = nameMatch && typeMatch && statusMatch && financialMatch && phoneMatch && commentMatch;
                    row.toggle(shouldShow);

                    if (shouldShow) visibleCount++;
                });

                updateSearchInfo(visibleCount, nameSearch, typeSearch, statusSearch, financialSearch, phoneSearch, commentSearch);
            }

            function updateSearchInfo(visibleCount, nameSearch, typeSearch, statusSearch, financialSearch, phoneSearch, commentSearch) {
                $('#visibleCount').text(visibleCount);
                $('#badgeCount').text(visibleCount);

                // Show/hide clear buttons
                $('#clearNameSearch').toggle(nameSearch.length > 0);
                $('#clearTypeSearch').toggle(typeSearch.length > 0);
                $('#clearFinancialSearch').toggle(financialSearch.length > 0);
                $('#clearPhoneSearch').toggle(phoneSearch.length > 0);
                $('#clearCommentSearch').toggle(commentSearch.length > 0);

                const hasAnySearch = nameSearch.length > 0 || typeSearch.length > 0 || statusSearch ||
                                   financialSearch.length > 0 || phoneSearch.length > 0 || commentSearch.length > 0;
                $('#clearAllSearch').toggle(hasAnySearch);

                // Show/hide no results
                if (visibleCount === 0 && hasAnySearch) {
                    $('#noResultsMessage').show();
                    $('#stakeholdersContainer .section-card').hide();
                } else {
                    $('#noResultsMessage').hide();
                    $('#stakeholdersContainer .section-card').show();
                }

                // Add visual feedback to search inputs
                $('#searchByName').toggleClass('border-primary', nameSearch.length > 0);
                $('#searchByType').toggleClass('border-primary', typeSearch.length > 0);
                $('#searchByStatus').toggleClass('border-primary', statusSearch);
                $('#searchByFinancial').toggleClass('border-primary', financialSearch.length > 0);
                $('#searchByPhone').toggleClass('border-primary', phoneSearch.length > 0);
                $('#searchByComment').toggleClass('border-primary', commentSearch.length > 0);
            }

            function updateCounts(count) {
                $('#totalCount').text(count);
                $('#visibleCount').text(count);
                $('#badgeCount').text(count);
            }

            // Search events
            let searchTimeout;
            $('#searchByName, #searchByType, #searchByFinancial, #searchByPhone, #searchByComment').on('input', function() {
                clearTimeout(searchTimeout);
                searchTimeout = setTimeout(performSearch, 200);
            });

            $('#searchByStatus').on('change', function() {
                performSearch();
            });

            // Clear search buttons
            $('#clearNameSearch').click(function() {
                $('#searchByName').val('').removeClass('border-primary');
                performSearch();
                $('#searchByName').focus();
            });

            $('#clearTypeSearch').click(function() {
                $('#searchByType').val('').removeClass('border-primary');
                performSearch();
                $('#searchByType').focus();
            });

            $('#clearFinancialSearch').click(function() {
                $('#searchByFinancial').val('').removeClass('border-primary');
                performSearch();
                $('#searchByFinancial').focus();
            });

            $('#clearPhoneSearch').click(function() {
                $('#searchByPhone').val('').removeClass('border-primary');
                performSearch();
                $('#searchByPhone').focus();
            });

            $('#clearCommentSearch').click(function() {
                $('#searchByComment').val('').removeClass('border-primary');
                performSearch();
                $('#searchByComment').focus();
            });

            $('#clearAllSearch, #resetSearch').click(function() {
                $('#searchByName, #searchByType, #searchByFinancial, #searchByPhone, #searchByComment').val('').removeClass('border-primary');
                $('#searchByStatus').val('').removeClass('border-primary');
                performSearch();
            });

            // View details handler
            $(document).on('click', '.view-details', function() {
                const id = $(this).data('id');
                loadStakeholderDetails(id);
            });

            // Edit from details modal
            $('#editFromDetails').click(function() {
                if (currentDetailsId) {
                    detailsModal.hide();
                    window.location.href = `/StakeholdersInfo/Edit/${currentDetailsId}`;
                }
            });

            // Delete handlers
            $(document).on('click', '.delete-stakeholder', function() {
                const id = $(this).data('id');
                const name = $(this).data('name');

                $('#deleteStakeholderId').val(id);
                $('#deleteStakeholderName').text(name);
                deleteModal.show();
            });

            // Delete stakeholder via API
            $('#confirmDelete').click(function() {
                const id = $('#deleteStakeholderId').val();
                const btn = $(this);
                const originalText = btn.html();

                btn.prop('disabled', true).html('<span class="spinner-border spinner-border-sm me-2"></span>جاري الحذف...');

                $.ajax({
                    url: `/StakeholdersInfo/${id}`,
                    method: 'DELETE',
                    success: function(response) {
                        btn.prop('disabled', false).html(originalText);

                        if (response.success) {
                            showNotification(response.message, 'success');
                            deleteModal.hide();

                            // Remove from UI and update data
                            $(`tr[data-id="${id}"]`).fadeOut(300, function() {
                                $(this).remove();
                                stakeholdersData = stakeholdersData.filter(s => s.id != id);
                                updateCounts(stakeholdersData.length);

                                if (stakeholdersData.length === 0) {
                                    $('#emptyState').show();
                                    $('#stakeholdersContainer').hide();
                                }
                            });
                        } else {
                            showNotification(response.message || 'حدث خطأ أثناء الحذف', 'error');
                        }
                    },
                    error: function(xhr, status, error) {
                        btn.prop('disabled', false).html(originalText);
                        const errorMessage = xhr.responseJSON?.message || 'حدث خطأ أثناء حذف الجهة';
                        showNotification(errorMessage, 'error');
                        console.error('Delete error:', { xhr, status, error, time: CURRENT_TIME });
                    }
                });
            });

            // Status toggle via API
            $(document).on('change', '.status-toggle', function() {
                const checkbox = $(this);
                const id = checkbox.data('id');
                const name = checkbox.data('name');
                const newStatus = checkbox.prop('checked');

                $.ajax({
                    url: `/api/StakeholdersInfo/${id}/status`,
                    method: 'PUT',
                    contentType: 'application/json',
                    data: JSON.stringify({ status: newStatus }),
                    success: function(response) {
                        if (response.success) {
                            // Update all instances of this stakeholder's status
                            $(`.status-toggle[data-id="${id}"]`)
                                .prop('checked', newStatus)
                                .closest('.form-switch')
                                .find('.form-check-label')
                                .text(newStatus ? 'نشط' : 'غير نشط');

                            // Update data
                            const stakeholder = stakeholdersData.find(s => s.id == id);
                            if (stakeholder) {
                                stakeholder.status = newStatus;
                            }

                            showNotification(response.message, 'success');
                        } else {
                            checkbox.prop('checked', !newStatus);
                            showNotification(response.message || 'حدث خطأ أثناء تحديث الحالة', 'error');
                        }
                    },
                    error: function(xhr) {
                        checkbox.prop('checked', !newStatus);
                        const errorMessage = xhr.responseJSON?.message || 'حدث خطأ أثناء تحديث الحالة';
                        showNotification(errorMessage, 'error');
                    }
                });
            });

            // Refresh data
            $('#refreshData').click(function() {
                const btn = $(this);
                const originalText = btn.html();
                btn.prop('disabled', true).html('<span class="spinner-border spinner-border-sm me-2"></span>جاري التحديث...');

                loadStakeholders();

                setTimeout(() => {
                    btn.prop('disabled', false).html(originalText);
                }, 1000);
            });

            // Auto-dismiss success alerts after 5 seconds
            setTimeout(function() {
                $('.alert-success, .alert-danger').fadeOut(350);
            }, 5000);

            // Keyboard shortcuts
            $(document).keydown(function(e) {
                if (e.ctrlKey && e.keyCode === 70) { // Ctrl+F
                    e.preventDefault();
                    $('#searchByName').focus();
                }
                if (e.keyCode === 27) { // Escape
                    $('#searchByName, #searchByType, #searchByFinancial, #searchByPhone, #searchByComment').val('').removeClass('border-primary');
                    $('#searchByStatus').val('').removeClass('border-primary');
                    performSearch();
                }
            });

            // Initialize page
            loadStakeholders();

            console.log('Enhanced stakeholders info page with full API integration initialized successfully at', CURRENT_TIME, 'by', CURRENT_USER);
        });
    </script>

