                                .prop('checked', newStatus)
                                .closest('.form-switch')
                                .find('.form-check-label')
                                .text(newStatus ? 'نشط' : 'غير نشط');

                            // Update data
                            const stakeholder = stakeholdersData.find(s => s.id == id);
                            if (stakeholder) {
                                stakeholder.status = newStatus;
                            }

                            showNotification(response.message, 'success');
                        } else {
                            checkbox.prop('checked', !newStatus);
                            showNotification(response.message || 'حدث خطأ أثناء تحديث الحالة', 'error');
                        }
                    },
                    error: function(xhr) {
                        checkbox.prop('checked', !newStatus);
                        const errorMessage = xhr.responseJSON?.message || 'حدث خطأ أثناء تحديث الحالة';
                        showNotification(errorMessage, 'error');
                    }
                });
            });

            // ==================== REFRESH AND UTILITIES ====================

            // Refresh data
            $('#refreshData').click(function() {
                const btn = $(this);
                const originalText = btn.html();
                btn.prop('disabled', true).html('<span class="spinner-border spinner-border-sm me-2"></span>جاري التحديث...');

                loadStakeholders();

                setTimeout(() => {
                    btn.prop('disabled', false).html(originalText);
                }, 1000);
            });

            // Auto-dismiss success alerts after 5 seconds
            setTimeout(function() {
                $('.alert-success, .alert-danger').fadeOut(350);
            }, 5000);

            // Keyboard shortcuts
            $(document).keydown(function(e) {
                if (e.ctrlKey && e.keyCode === 70) { // Ctrl+F
                    e.preventDefault();
                    $('#searchByName').focus();
                }
                if (e.keyCode === 27) { // Escape
                    $('#searchByName, #searchByType, #searchByFinancial, #searchByPhone, #searchByComment').val('').removeClass('border-primary');
                    $('#searchByStatus').val('').removeClass('border-primary');
                    performSearch();
                }
            });

            // ==================== DEBUGGING AND TESTING ====================

            // Test number conversion functions
            console.log('Testing Arabic number conversion:');
