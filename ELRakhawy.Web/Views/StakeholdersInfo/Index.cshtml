            console.log('Test text with 123:', toArabicDigits_search('نص تجريبي 123'));

            // ==================== INITIALIZATION ====================

            // Initialize page
            loadStakeholders();

            console.log('Enhanced stakeholders info page with modal Arabic numbers initialized successfully at', CURRENT_TIME, 'by', CURRENT_USER);
        });


