            // Apply number conversion based on the input content for search
            function applyNumberConversion_search($input) {
                let val = $input.val();
                let useArabicNumbers = shouldUseArabicNumbers_search(val || "");
                let newVal = useArabicNumbers ? toArabicDigits_search(val || "") : toLatinDigits_search(val || "");

                if (newVal !== val) {
                    let cursorPos = $input[0].selectionStart || 0;
                    $input.val(newVal);
                    try {
                        $input[0].setSelectionRange(cursorPos, cursorPos);
                    } catch (ex) {
                        $input.focus();
                    }
                }
            }

