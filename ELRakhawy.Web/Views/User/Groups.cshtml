@using ELRakhawy.EL.Models
@using ELRakhawy.EL.ViewModels
@model List<UserRoleGroupViewModel>

@{
    ViewData["Title"] = "المستخدمين حسب الصلاحيات";
}
<!-- Enhanced Navigation Breadcrumb -->
<nav aria-label="breadcrumb" class="mb-4">
    <div class="card border-0 shadow-sm">
        <div class="card-body py-2">
            <ol class="breadcrumb mb-0 align-items-center">
                <li class="breadcrumb-item">
                    <a href="@Url.Action("Index", "Home")" class="text-decoration-none d-flex align-items-center">
                        <i class="fas fa-home text-primary me-2"></i>
                        <span class="fw-semibold">الرئيسية</span>
                    </a>
                </li>
                <li class="breadcrumb-item active d-flex align-items-center">
                    <i class="fas fa-users-cog text-success me-2"></i>
                    <span class="fw-bold text-dark">@ViewData["Title"]</span>
                </li>
            </ol>
        </div>
    </div>
</nav>

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">
            <i class="fas fa-users-cog text-primary"></i> المستخدمين حسب الصلاحيات
        </h2>
        <div>
            <span class="badge bg-info fs-6 me-2">
                <i class="fas fa-users"></i> الإجمالي: @Model.Sum(g => g.Count)
            </span>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-list"></i> عرض الكل
            </a>
        </div>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="fas fa-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> لا يوجد مستخدمين في النظام
        </div>
    }
    else
    {
        <div class="row g-3">
            @foreach (var group in Model)
            {
                var cardColor = group.Role switch
                {
                    UserRole.SuperAdmin => "danger",
                    UserRole.Editor => "primary",
                    UserRole.Viewer => "success",
                    UserRole.Added => "warning",
                    UserRole.Clear => "secondary",
                    _ => "info"
                };

                var iconClass = group.Role switch
                {
                    UserRole.SuperAdmin => "fa-user-shield",
                    UserRole.Editor => "fa-user-edit",
                    UserRole.Viewer => "fa-user-check",
                    UserRole.Added => "fa-user-plus",
                    UserRole.Clear => "fa-user-times",
                    _ => "fa-user"
                };

                <div class="col-xl-2 col-lg-3 col-md-4 col-sm-6">
                    <a href="@Url.Action("Index", "User", new { role = group.Role })"
                       class="text-decoration-none">
                        <div class="card h-100 shadow-sm border-0 hover-card">
                            <div class="card-body text-center p-3">
                                <div class="mb-2">
                                    <div class="icon-circle bg-@cardColor bg-opacity-10 mx-auto">
                                        <i class="fas @iconClass fa-2x text-@cardColor"></i>
                                    </div>
                                </div>
                                <h5 class="card-title mb-2 text-dark">@group.RoleName</h5>
                                <h2 class="text-@cardColor mb-2 fw-bold">@group.Count</h2>
                                <p class="text-muted mb-2">
                                    <small>مستخدم</small>
                                </p>
                                <div class="d-grid">
                                    <span class="btn btn-@cardColor btn-sm">
                                        <i class="fas fa-arrow-left me-1"></i> عرض
                                    </span>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    }
</div>

<style>
    .hover-card {
        transition: all 0.3s ease;
        cursor: pointer;
    }

        .hover-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 1rem 2rem rgba(0, 0, 0, 0.15) !important;
        }

    .icon-circle {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto;
    }

    .breadcrumb-item + .breadcrumb-item::before {
        content: "←";
        margin: 0 0.5rem;
    }

    /* Ensure 5 cards per row on large screens */
    @@media (min-width: 1200px) {
        .col-xl-2 {
            flex: 0 0 20%;
            max-width: 20%;
        }
    }

    /* Responsive adjustments */
    @@media (max-width: 1199px) {
        .col-lg-3 {
            flex: 0 0 33.333333%;
            max-width: 33.333333%;
        }
    }

    @@media (max-width: 991px) {
        .col-md-4 {
            flex: 0 0 50%;
            max-width: 50%;
        }
    }

    @@media (max-width: 575px) {
        .col-sm-6 {
            flex: 0 0 100%;
            max-width: 100%;
        }
    }
</style>