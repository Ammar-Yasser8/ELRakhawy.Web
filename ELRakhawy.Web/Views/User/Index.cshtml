<!-- Enhanced Data Display Section with Inline Search -->
<div id="usersContainer">
    <div class="section-card">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-light border-bottom">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold text-dark">
                        <i class="fas fa-list me-2 text-primary"></i>قائمة المستخدمين
                    </h5>
                    <div class="d-flex align-items-center gap-3">
                        <div class="badge bg-success px-3 py-2">
                            <i class="fas fa-database me-1"></i>
                            <span id="badgeCount">@((Model?.Count() ?? 0).ToString("N0", new System.Globalization.CultureInfo("ar-SA")))</span> مستخدم
                        </div>
                        <button class="btn btn-outline-danger btn-sm" id="clearAllSearch" style="display: none;">
                            <i class="fas fa-eraser me-1"></i>مسح المرشحات
                        </button>
                        <div class="d-flex flex-column flex-lg-row gap-2 justify-content-lg-end">
                            <button class="btn btn-outline-info" id="refreshData" onclick="location.reload()">
                                <i class="fas fa-sync-alt me-1"></i>تحديث البيانات
                            </button>

                            <button class="btn btn-success" id="addUserBtn">
                                <i class="fas fa-plus-circle me-1"></i>إضافة مستخدم جديد
                            </button>
                        </div>
                        <div class="btn-group export-btn-group ms-2">
                            <button class="btn btn-outline-success export-btn" onclick="exportToExcel()">
                                <i class="fas fa-file-excel me-1"></i>تصدير إلى Excel
                            </button>
                            <button class="btn btn-outline-secondary export-btn" onclick="printTable()">
                                <i class="fas fa-print me-1"></i>طباعة
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Table content with users -->
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0" id="usersTable">
                        <thead class="table-light">
                            <tr>
                                <th class="fw-bold sortable" data-column="0" style="width: 35%;">
                                    <i class="fas fa-user text-primary me-1"></i>الاسم الكامل
                                    <i class="fas fa-sort sort-icon text-muted ms-1"></i>
                                </th>
                                <th class="fw-bold sortable" data-column="1" style="width: 35%;">
                                    <i class="fas fa-envelope text-info me-1"></i>البريد الإلكتروني
                                    <i class="fas fa-sort sort-icon text-muted ms-1"></i>
                                </th>
                                <th class="fw-bold sortable" data-column="2" style="width: 15%;">
                                    <i class="fas fa-user-tag text-warning me-1"></i>الدور
                                    <i class="fas fa-sort sort-icon text-muted ms-1"></i>
                                </th>
                                <th class="text-center fw-bold" style="width: 15%;">
                                    <i class="fas fa-cogs text-secondary me-1"></i>الإجراءات
                                </th>
                            </tr>
                            <!-- Inline Search Row -->
                            <tr class="search-row bg-white">
                                <th class="border-bottom-0 pb-2 pt-2">
                                    <div class="search-container">
                                        <div class="input-group input-group-sm">
                                            <span class="input-group-text bg-light border-end-0">
                                                <i class="fas fa-search text-muted"></i>
                                            </span>
                                            <input type="text" id="searchByName" class="form-control border-start-0"
                                                   placeholder="ابحث في الأسماء...">
                                            <button class="btn btn-outline-secondary btn-sm" type="button" id="clearNameSearch" style="display: none;">
                                                <i class="fas fa-times"></i>
                                            </button>
                                        </div>
                                    </div>
                                </th>
                                <th class="border-bottom-0 pb-2 pt-2">
                                    <div class="search-container">
                                        <div class="input-group input-group-sm">
                                            <span class="input-group-text bg-light border-end-0">
                                                <i class="fas fa-search text-muted"></i>
                                            </span>
                                            <input type="text" id="searchByEmail" class="form-control border-start-0"
                                                   placeholder="ابحث في البريد الإلكتروني...">
                                            <button class="btn btn-outline-secondary btn-sm" type="button" id="clearEmailSearch" style="display: none;">
                                                <i class="fas fa-times"></i>
                                            </button>
                                        </div>
                                    </div>
                                </th>
                                <th class="border-bottom-0 pb-2 pt-2">
                                    <div class="search-container">
                                        <div class="input-group input-group-sm">
                                            <span class="input-group-text bg-light border-end-0">
                                                <i class="fas fa-filter text-muted"></i>
                                            </span>
                                            <select id="searchByRole" class="form-select border-start-0">
                                                <option value="">جميع الأدوار</option>
                                                <option value="SuperAdmin">مدير عام</option>
                                                <option value="Editor">محرر</option>
                                                <option value="Viewer">مشاهد</option>
                                                <option value="Added">مضاف</option>
                                                <option value="Clear">واضح</option>
                                            </select>
                                            <button class="btn btn-outline-secondary btn-sm" type="button" id="clearRoleSearch" style="display: none;">
                                                <i class="fas fa-times"></i>
                                            </button>
                                        </div>
                                    </div>
                                </th>
                                <th class="border-bottom-0 pb-2 pt-2 text-center">
                                    <small class="text-muted">
                                        <i class="fas fa-filter me-1"></i>البحث والتصفية
                                    </small>
                                </th>
                            </tr>
                        </thead>
                        <tbody id="usersTableBody">
                            @if (Model != null && Model.Any())
                            {
                                @foreach (var user in Model)
                                {
                                    <tr class="user-row" 
                                        data-id="@user.Id"
                                        data-name="@user.FullName.ToLower()" 
                                        data-email="@user.Email.ToLower()" 
                                        data-role="@user.Role.ToString()">
                                        <td class="user-name">
                                            <div class="d-flex align-items-center">
                                                <div class="user-icon me-3">
                                                    <div class="avatar bg-primary text-white rounded-circle d-flex align-items-center justify-content-center"
                                                         style="width: 45px; height: 45px;">
                                                        <i class="fas fa-user"></i>
                                                    </div>
                                                </div>
                                                <div>
                                                    <span class="fw-semibold">@user.FullName</span>
                                                    <br>
                                                    <small class="text-muted">@user.FirstName @user.LastName</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="user-email">
                                            <span class="text-primary">@user.Email</span>
                                        </td>
                                        <td class="user-role">
                                            @{
                                                string badgeClass = user.Role switch
                                                {
                                                    UserRole.SuperAdmin => "bg-danger",
                                                    UserRole.Editor => "bg-info",
                                                    UserRole.Viewer => "bg-warning text-dark",
                                                    UserRole.Added => "bg-success",
                                                    UserRole.Clear => "bg-secondary",
                                                    _ => "bg-light text-dark"
                                                };
                                                
                                                string roleNameAr = user.Role switch
                                                {
                                                    UserRole.SuperAdmin => "مدير عام",
                                                    UserRole.Editor => "محرر",
                                                    UserRole.Viewer => "مشاهد",
                                                    UserRole.Added => "مضاف",
                                                    UserRole.Clear => "مسؤول",
                                                    _ => "غير محدد"
                                                };
                                            }
                                            <span class="badge @badgeClass px-3 py-2">@roleNameAr</span>
                                        </td>
                                        <td class="text-center">
                                            <div class="btn-group" role="group">
                                                <button class="btn btn-sm btn-outline-info view-details"
                                                        data-id="@user.Id"
                                                        title="عرض تفاصيل @user.FullName"
                                                        data-bs-toggle="tooltip">
                                                    <i class="fas fa-info-circle"></i>
                                                </button>
                                                <button class="btn btn-sm btn-outline-warning edit-user"
                                                        data-id="@user.Id"
                                                        title="تعديل @user.FullName"
                                                        data-bs-toggle="tooltip">
                                                    <i class="fas fa-edit"></i>
                                                </button>
                                                <button class="btn btn-sm btn-outline-secondary reset-password"
                                                        data-id="@user.Id"
                                                        data-name="@user.FullName"
                                                        title="إعادة تعيين كلمة المرور"
                                                        data-bs-toggle="tooltip">
                                                    <i class="fas fa-key"></i>
                                                </button>
                                                <button class="btn btn-sm btn-outline-danger delete-user"
                                                        data-id="@user.Id" 
                                                        data-name="@user.FullName" 
                                                        title="مسؤول @user.FullName"
                                                        data-bs-toggle="tooltip">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Create User Modal (Removed Active Status) -->
