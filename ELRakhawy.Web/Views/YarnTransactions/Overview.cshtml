                        parseInt(item.totalTransactions) || 0,
                        parseInt(item.inboundTransactions) || 0,
                        parseInt(item.outboundTransactions) || 0,
                        item.lastTransactionDate,
                        parseInt(item.daysSinceLastTransaction) || 0
                    ]);
                });

                const itemsSheet = XLSX.utils.aoa_to_sheet(itemsData);
                itemsSheet['!cols'] = [
                    { width: 12 }, { width: 25 }, { width: 20 }, { width: 20 },
                    { width: 15 }, { width: 12 }, { width: 25 }, { width: 10 },
                    { width: 15 }, { width: 12 }, { width: 12 }, { width: 18 }, { width: 20 }
                ];

                XLSX.utils.book_append_sheet(workbook, itemsSheet, 'تفاصيل الأصناف');

                const timestamp = new Date().toISOString().slice(0, 19).replace(/:/g, '-');
                const filename = `ارصدة_الغزل_${timestamp}.xlsx`;

                XLSX.writeFile(workbook, filename);

                setTimeout(() => {
                    alert('تم تصدير البيانات بنجاح إلى ملف Excel!');
                }, 500);

            } catch (error) {
                console.error('خطأ في generateExcelWithSheetJS:', error);
                generateExcelFallback(data);
            }
        }

        function generateExcelFallback(data) {
            try {
                let csvContent = '\uFEFF';
                csvContent += 'نظرة عامة على أرصدة الغزل\n\n';
                csvContent += 'تاريخ التصدير,' + data.summary.exportDate + '\n';
                csvContent += 'وقت التصدير,' + data.summary.exportTime + '\n\n';
                csvContent += 'معرف الصنف,اسم الصنف,الغزل الأصلي,الشركة المصنعة,رصيد الكمية (كجم),رصيد العدد,تفاصيل التعبئة,الحالة,إجمالي المعاملات,معاملات الوارد,معاملات الصادر,آخر معاملة,أيام منذ آخر معاملة\n';

                data.items.forEach(item => {
                    const row = [
                        item.yarnItemId,
                        '"' + item.yarnItemName + '"',
                        '"' + item.originYarnName + '"',
                        '"' + item.manufacturerNames + '"',
                        item.quantityBalance,
                        item.countBalance,
                        '"' + item.packagingBreakdown + '"',
                        item.status,
                        item.totalTransactions,
                        item.inboundTransactions,
                        item.outboundTransactions,
                        '"' + item.lastTransactionDate + '"',
                        item.daysSinceLastTransaction
                    ].join(',');
                    csvContent += row + '\n';
                });

                const blob = new Blob([csvContent], { type: 'text/csv;charset=utf-8;' });
                const link = document.createElement('a');
                const timestamp = new Date().toISOString().slice(0, 19).replace(/:/g, '-');
                const filename = `ارصدة_الغزل_${timestamp}.csv`;

                const url = URL.createObjectURL(blob);
                link.setAttribute('href', url);
                link.setAttribute('download', filename);
                link.style.visibility = 'hidden';
                document.body.appendChild(link);
                link.click();
                document.body.removeChild(link);
                URL.revokeObjectURL(url);

                alert('تم تصدير البيانات بنجاح إلى ملف CSV!');

            } catch (error) {
                console.error('خطأ في generateExcelFallback:', error);
                alert('حدث خطأ أثناء تصدير البيانات: ' + error.message);
            }
        }

        // ===== WHATSAPP SHARE =====
        function shareWhatsApp() {
            showLoadingOverlay();

            try {
                const totalItems = toLatinDigits($('#totalItemsDisplay').text());
                const availableItems = toLatinDigits($('#availableItemsDisplay').text());
                const totalQuantity = toLatinDigits($('#totalQuantityDisplay').text().replace(/[^\d.,]/g, ''));
                const totalCount = toLatinDigits($('#totalCountDisplay').text());
                const lastUpdated = toLatinDigits($('#lastUpdatedDisplay').text());
                const percentageAvailable = toLatinDigits($('#percentageDisplay').text());

                let message = `تقرير نظرة عامة على أرصدة الغزل\n\n`;
                message += `الإحصائيات الرئيسية:\n`;
                message += `• إجمالي الأصناف: ${totalItems} صنف\n`;
                message += `• الأصناف المتاحة: ${availableItems} صنف (${percentageAvailable}%)\n`;
                message += `• إجمالي الكمية: ${totalQuantity} كجم\n`;
                message += `• إجمالي العدد: ${totalCount} وحدة\n`;
                message += `• آخر تحديث: ${lastUpdated}\n\n`;

                const items = [];
                $('.yarn-item-row:visible').each(function() {
                    const row = $(this);
                    items.push({
                        name: row.find('td:first strong').text().trim(),
                        quantity: row.find('.quantity-balance').text().trim(),
                        status: row.find('td:nth-child(6) .badge').text().trim()
                    });
                });

                if (items.length > 0) {
                    message += `تفاصيل الأصناف:\n\n`;
                    const maxItems = Math.min(items.length, 10);
                    items.slice(0, maxItems).forEach((item, index) => {
                        message += `${item.name}\n`;
                        message += `   الرصيد: ${item.quantity} كجم\n`;
                        message += `   الحالة: ${item.status}\n`;
                        if (index < maxItems - 1) message += `\n`;
                    });

                    if (items.length > maxItems) {
                        message += `\nو ${items.length - maxItems} صنف إضافي\n`;
                    }
                }

                message += `\n───\n`;
                message += `مصدر التقرير: نظام إدارة مخزون الغزل\n`;
                message += `المستخدم: ${CURRENT_USER}\n`;
                message += `وقت الإنشاء: ${new Date().toLocaleString('ar-EG')}`;

                hideLoadingOverlay();

                const encodedMessage = encodeURIComponent(message);
                const whatsappUrl = `https://wa.me/?text=${encodedMessage}`;

                if (message.length > 4000) {
                    const truncatedMessage = message.substring(0, 3900) + '\n\nتم اختصار التقرير بسبب طول الرسالة';
                    const truncatedUrl = `https://wa.me/?text=${encodeURIComponent(truncatedMessage)}`;
                    if (confirm('الرسالة طويلة جدًا لواتساب. هل تريد إرسال نسخة مختصرة؟')) {
                        window.open(truncatedUrl, '_blank');
                    }
                } else {
                    window.open(whatsappUrl, '_blank');
                }

            } catch (error) {
                hideLoadingOverlay();
                console.error('خطأ في إنشاء رسالة واتساب:', error);
                alert('حدث خطأ أثناء إنشاء رسالة واتساب: ' + error.message);
            }
        }

