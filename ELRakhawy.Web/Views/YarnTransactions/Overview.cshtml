                let message = `تقرير نظرة عامة على أرصدة الغزل\n\n`;

                message += `الإحصائيات الرئيسية:\n`;
                message += `• إجمالي الأصناف: ${totalItems} صنف\n`;
                message += `• الأصناف المتاحة: ${availableItems} صنف (${percentageAvailable}%)\n`;
                message += `• إجمالي الكمية: ${totalQuantity} كجم\n`;
                message += `• إجمالي العدد: ${totalCount} وحدة\n`;
                message += `• آخر تحديث: ${lastUpdated}\n\n`;

                message += `إعدادات التقرير:\n`;
                message += `• نوع العرض: ${availableOnly ? 'الأصناف المتاحة فقط' : 'جميع الأصناف'}\n`;
                message += `• وقت التقرير: ${new Date().toLocaleDateString('ar-EG')} - ${new Date().toLocaleTimeString('ar-EG', {hour: '2-digit', minute: '2-digit'})}\n\n`;

                // جمع بيانات الأصناف المرئية
                const items = [];
                $('.yarn-item-row:visible').each(function() {
                    const row = $(this);
                    const yarnName = row.find('td:first strong').text().trim();
                    const originYarn = row.find('td:nth-child(2) .text-info').text().trim();
                    const manufacturer = row.find('td:nth-child(3) small').text().trim();
                    const quantityBalance = row.find('.quantity-balance').text().trim();
                    const statusBadge = row.find('td:nth-child(6) .badge').text().trim();
                    const transactionCount = row.find('.transaction-count').text().trim();
                    const isAvailable = row.data('available');

                    items.push({
                        name: yarnName,
                        origin: originYarn,
                        manufacturer: manufacturer,
                        quantity: quantityBalance,
                        status: statusBadge,
                        transactions: transactionCount,
                        available: isAvailable
                    });
                });

                // إضافة تفاصيل الأصناف
                if (items.length > 0) {
                    message += `تفاصيل الأصناف ${availableOnly ? '(المتاحة فقط)' : ''}:\n\n`;

                    // تحديد عدد العناصر المعروضة لتجنب طول الرسالة
                    const maxItems = Math.min(items.length, 10);
                    const displayItems = items.slice(0, maxItems);

                    displayItems.forEach((item, index) => {
                        const statusText = item.available ? 'متاح' : 'غير متاح';
                        const originText = item.origin && item.origin !== 'غير محدد' ? ` (${item.origin})` : '';
                        const manufacturerText = item.manufacturer && item.manufacturer !== 'غير محدد' ? ` - ${item.manufacturer}` : '';

                        message += `${item.name}${originText}${manufacturerText}\n`;
                        message += `   الرصيد: ${item.quantity} كجم\n`;
                        message += `   الحالة: ${statusText}\n`;
                        message += `   عدد المعاملات: ${item.transactions}\n`;

                        if (index < maxItems - 1) message += `\n`;
                    });

                    if (items.length > maxItems) {
                        message += `\nو ${items.length - maxItems} صنف إضافي\n`;
                    }
                } else {
                    message += `ملاحظة: لا توجد أصناف ${availableOnly ? 'متاحة' : ''} للعرض حاليًا\n`;
                }

                // إضافة تذييل الرسالة
                message += `\n───\n`;
                message += `مصدر التقرير: نظام إدارة مخزون الغزل\n`;
                message += `المستخدم: ${CURRENT_USER}\n`;
                message += `وقت الإنشاء: ${new Date().toLocaleString('ar-EG', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric',
                    hour: '2-digit',
                    minute: '2-digit'
                })}`;

                hideLoadingOverlay();

                // فتح واتساب مع الرسالة
                const encodedMessage = encodeURIComponent(message);
                const whatsappUrl = `https://wa.me/?text=${encodedMessage}`;

                // التحقق من طول الرسالة (واتساب له حدود أحرف)
                if (message.length > 4000) {
                    // إنشاء نسخة مختصرة مع تحذير
                    const truncatedMessage = message.substring(0, 3900) + '\n\nتم اختصار التقرير بسبب طول الرسالة';
                    const truncatedUrl = `https://wa.me/?text=${encodeURIComponent(truncatedMessage)}`;

                    if (confirm('الرسالة طويلة جدًا لواتساب. هل تريد إرسال نسخة مختصرة؟')) {
                        window.open(truncatedUrl, '_blank');
                    }
                } else {
                    window.open(whatsappUrl, '_blank');
                }

                console.log('تم إنشاء رسالة واتساب بنجاح في', CURRENT_TIME);

            } catch (error) {
                hideLoadingOverlay();
                console.error('خطأ في إنشاء رسالة واتساب:', error);
                alert('حدث خطأ أثناء إنشاء رسالة واتساب: ' + error.message);
            }
        }

        // دالة مساعدة لتحويل الأرقام العربية إلى لاتينية
        function toLatinDigits(str) {
            if (typeof str !== 'string') str = str.toString();
            return str.replace(/[٠-٩]/g, d => '٠١٢٣٤٥٦٧٨٩'.indexOf(d));
        }
        function printOverview() { window.print(); }
        function showLoadingOverlay() { $('#loadingOverlay').show(); }
        function hideLoadingOverlay() { $('#loadingOverlay').hide(); }

        // Clean up on modal close
        $('#itemDetailsModal').on('hidden.bs.modal', function () {
            currentYarnItemId = null;
            currentPage = 1;
            console.log('🔒 Modal closed and cleaned up at', CURRENT_TIME);
        });

        // Keyboard shortcuts
        $(document).keydown(function(e) {
            if (e.ctrlKey && e.keyCode === 82) { e.preventDefault(); refreshData(); }
            if (e.keyCode === 27) { $('#itemDetailsModal').modal('hide'); }
        });

        console.log('✅ Yarn Overview page fully loaded with enhanced debugging at', CURRENT_TIME, 'by', CURRENT_USER);
    </script>
