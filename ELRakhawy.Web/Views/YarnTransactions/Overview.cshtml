@using ELRakhawy.EL.ViewModels
@model YarnOverviewViewModel

@{
    ViewData["Title"] = "نظرة عامة على أرصدة الغزل";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="text-primary mb-0">
                    <i class="fas fa-chart-line me-2"></i>
                    نظرة عامة على أرصدة الغزل
                </h2>
                <div class="d-flex gap-2">
                    <button type="button" class="btn btn-outline-primary" onclick="refreshData()">
                        <i class="fas fa-sync-alt me-1"></i>
                        تحديث
                    </button>
                    <div class="dropdown">
                        <button class="btn btn-success dropdown-toggle" type="button" data-bs-toggle="dropdown">
                            <i class="fas fa-download me-1"></i>
                            تصدير ومشاركة
                        </button>
                        <ul class="dropdown-menu">
                            <li>
                                <button class="dropdown-item" onclick="exportToExcel()">
                                    <i class="fas fa-file-excel me-2 text-success"></i>
                                    تصدير إلى Excel
                                </button>
                            </li>
                            <li>
                                <button class="dropdown-item" onclick="shareWhatsApp()">
                                    <i class="fab fa-whatsapp me-2 text-success"></i>
                                    مشاركة عبر واتساب
                                </button>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <button class="dropdown-item" onclick="printOverview()">
                                    <i class="fas fa-print me-2"></i>
                                    طباعة
                                </button>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card border-primary h-100">
                <div class="card-body text-center">
                    <i class="fas fa-boxes fa-2x text-primary mb-2"></i>
                    <h4 class="text-primary">@Model.TotalItems</h4>
                    <p class="text-muted mb-0">إجمالي الأصناف</p>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card border-success h-100">
                <div class="card-body text-center">
                    <i class="fas fa-check-circle fa-2x text-success mb-2"></i>
                    <h4 class="text-success">@Model.AvailableItems</h4>
                    <p class="text-muted mb-0">الأصناف المتاحة</p>
                    <small class="text-success">@Model.PercentageAvailable.ToString("F1")%</small>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card border-info h-100">
                <div class="card-body text-center">
                    <i class="fas fa-weight fa-2x text-info mb-2"></i>
                    <h4 class="text-info">@Model.TotalQuantityBalance.ToString("N2")</h4>
                    <p class="text-muted mb-0">إجمالي الكمية</p>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card border-warning h-100">
                <div class="card-body text-center">
                    <i class="fas fa-sort-numeric-up fa-2x text-warning mb-2"></i>
                    <h4 class="text-warning">@Model.TotalCountBalance</h4>
                    <p class="text-muted mb-0">إجمالي العدد</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters and Controls -->
    <div class="row mb-3">
        <div class="col-12">
            <div class="card">
                <div class="card-body py-2">
                    <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
                        <div class="d-flex align-items-center gap-3">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="availableOnlyFilter"
                                       @(Model.AvailableOnly ? "checked" : "") onchange="toggleAvailableFilter()">
                                <label class="form-check-label" for="availableOnlyFilter">
                                    <i class="fas fa-filter me-1"></i>
                                    المتاح فقط
                                </label>
                            </div>

                            <div class="input-group" style="width: 250px;">
                                <input type="text" class="form-control" id="searchInput"
                                       placeholder="البحث في الأصناف..." onkeyup="filterItems()">
                                <span class="input-group-text">
                                    <i class="fas fa-search"></i>
                                </span>
                            </div>
                        </div>

                        <div class="d-flex align-items-center gap-2">
                            <small class="text-muted">
                                آخر تحديث: @Model.LastUpdated.ToString("dd/MM/yyyy HH:mm")
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Overview Table -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0" id="overviewTable">
                            <thead class="table-dark sticky-top">
                                <tr>
                                    <th>صنف الغزل</th>
                                    <th>الغزل الأصلي</th>
                                    <th>الشركة المصنعة</th>
                                    <th>رصيد الكمية</th>
                                    <th>رصيد العدد</th>
                                    <th>الحالة</th>
                                    <th>إجمالي المعاملات</th>
                                    <th>آخر معاملة</th>
                                    <th>الإجراءات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.OverviewItems)
                                {
                                    <tr class="yarn-item-row" data-yarn-id="@item.YarnItemId"
                                        data-available="@item.IsAvailable.ToString().ToLower()"
                                        data-search-text="@($"{item.YarnItemName} {item.OriginYarnName} {item.ManufacturerNames}".ToLower())">
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="me-2">
                                                    @if (item.IsAvailable)
                                                    {
                                                        <div class="bg-success rounded-circle" style="width: 10px; height: 10px;"></div>
                                                    }
                                                    else
                                                    {
                                                        <div class="bg-danger rounded-circle" style="width: 10px; height: 10px;"></div>
                                                    }
                                                </div>
                                                <strong>@item.YarnItemName</strong>
                                            </div>
                                        </td>
                                        <td>@(item.OriginYarnName ?? "غير محدد")</td>
                                        <td>@(item.ManufacturerNames ?? "غير محدد")</td>
                                        <td>
                                            <span class="@(item.QuantityBalance > 0 ? "text-success" : "text-danger") fw-bold">
                                                @item.QuantityBalance.ToString("N3")
                                            </span>
                                        </td>
                                        <td>
                                            <span class="@(item.CountBalance > 0 ? "text-success" : "text-danger") fw-bold">
                                                @item.CountBalance
                                            </span>
                                        </td>
                                        <td>
                                            <span class="badge @(item.IsAvailable ? "bg-success" : "bg-danger")">
                                                @item.AvailabilityStatus
                                            </span>
                                        </td>
                                        <td>
                                            <div class="d-flex flex-column">
                                                <span class="fw-bold">@item.TotalTransactions</span>
                                                @if (item.TotalTransactions > 0)
                                                {
                                                    <small class="text-muted">
                                                        وارد: @item.InboundTransactions | صادر: @item.OutboundTransactions
                                                    </small>
                                                }
                                            </div>
                                        </td>
                                        <td>
                                            @if (item.LastTransactionDate.HasValue)
                                            {
                                                <div class="d-flex flex-column">
                                                    <span>@item.LastTransactionText</span>
                                                    @if (item.DaysSinceLastTransaction >= 0)
                                                    {
                                                        <small class="text-muted">
                                                            منذ @item.DaysSinceLastTransaction يوم
                                                        </small>
                                                    }
                                                </div>
                                            }
                                            else
                                            {
                                                <span class="text-muted">لا توجد معاملات</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                @* <button class="btn btn-outline-info"
                                                        onclick="viewItemDetails(@item.YarnItemId, '@item.YarnItemName')"
                                                        title="عرض التفاصيل">
                                                    <i class="fas fa-eye"></i>
                                                </button> *@
                                                <a href="@Url.Action("Search", "YarnTransactions", new { YarnItemId = item.YarnItemId })"
                                                   class="btn btn-outline-primary" title="البحث في المعاملات">
                                                    <i class="fas fa-search"></i>
                                                </a>
                                                @if (item.IsAvailable)
                                                {
                                                    <a href="@Url.Action("Outbound", "YarnTransactions", new { YarnItemId = item.YarnItemId, IsInbound = false })"
                                                       class="btn btn-outline-warning" title="إنشاء معاملة صادر">
                                                        <i class="fas fa-arrow-up"></i>
                                                    </a>
                                                }
                                                <a href="@Url.Action("Inbound", "YarnTransactions", new { YarnItemId = item.YarnItemId, IsInbound = true })"
                                                   class="btn btn-outline-success" title="إنشاء معاملة وارد">
                                                    <i class="fas fa-arrow-down"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (!Model.OverviewItems.Any())
    {
        <div class="row mt-4">
            <div class="col-12">
                <div class="alert alert-info text-center">
                    <i class="fas fa-info-circle fa-2x mb-3"></i>
                    <h5>لا توجد أصناف غزل</h5>
                    <p>لم يتم العثور على أي أصناف غزل نشطة في النظام.</p>
                    <a href="@Url.Action("Create", "YarnItems")" class="btn btn-primary">
                        <i class="fas fa-plus me-1"></i>
                        إضافة صنف جديد
                    </a>
                </div>
            </div>
        </div>
    }
</div>

<!-- Item Details Modal -->
<div class="modal fade" id="itemDetailsModal" tabindex="-1" aria-labelledby="itemDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="itemDetailsModalLabel">
                    <i class="fas fa-info-circle me-2"></i>
                    تفاصيل صنف الغزل
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="modalBody">
                <div class="text-center py-4">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">جاري التحميل...</span>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إغلاق</button>
                <button type="button" class="btn btn-primary" id="seeMoreBtn" onclick="seeMoreTransactions()">
                    <i class="fas fa-eye me-1"></i>
                    عرض المزيد
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Loading Overlay -->
<div id="loadingOverlay" class="loading-overlay" style="display: none;">
    <div class="spinner-border text-primary" role="status">
        <span class="visually-hidden">جاري التحميل...</span>
    </div>
</div>

@section Scripts {
    <script>
        let currentYarnItemId = 0;
        let currentPage = 1;
        const pageSize = 10;

        $(document).ready(function() {
            // Initialize tooltips
            $('[title]').tooltip();

            // Auto-refresh every 5 minutes
            setInterval(function() {
                refreshData();
            }, 300000);
        });

        // Filter functions
        function toggleAvailableFilter() {
            const availableOnly = $('#availableOnlyFilter').is(':checked');
            window.location.href = '@Url.Action("Overview", "YarnTransactions")?availableOnly=' + availableOnly;
        }

        function filterItems() {
            const searchTerm = $('#searchInput').val().toLowerCase();
            const availableOnly = $('#availableOnlyFilter').is(':checked');

            $('.yarn-item-row').each(function() {
                const row = $(this);
                const searchText = row.data('search-text');
                const isAvailable = row.data('available');

                let showRow = true;

                // Apply search filter
                if (searchTerm && !searchText.includes(searchTerm)) {
                    showRow = false;
                }

                // Apply availability filter
                if (availableOnly && !isAvailable) {
                    showRow = false;
                }

                if (showRow) {
                    row.show();
                } else {
                    row.hide();
                }
            });

            // Update visible count
            updateVisibleCount();
        }

        function updateVisibleCount() {
            const visibleRows = $('.yarn-item-row:visible').length;
            const totalRows = $('.yarn-item-row').length;

            // You can add a count display element if needed
            console.log(`Showing ${visibleRows} of ${totalRows} items`);
        }

        // Data operations
        function refreshData() {
            showLoadingOverlay();
            const availableOnly = $('#availableOnlyFilter').is(':checked');
            window.location.href = '@Url.Action("Overview", "YarnTransactions")?availableOnly=' + availableOnly;
        }
          // Global variables
        let currentYarnItemId = null;
        let currentPage = 1;
        let pageSize = 10;
        let loadingTimeout = null;

        function viewItemDetails(yarnItemId, yarnItemName) {
            currentYarnItemId = yarnItemId;
            currentPage = 1;

            $('#itemDetailsModalLabel').html(`<i class="fas fa-info-circle me-2"></i>تفاصيل صنف الغزل: ${yarnItemName}`);
            $('#itemDetailsModal').modal('show');

            loadItemDetails();
        }

        function loadItemDetails() {
            // Clear any existing timeout
            if (loadingTimeout) {
                clearTimeout(loadingTimeout);
            }

            $('#modalBody').html(`
                <div class="text-center py-5">
                    <div class="spinner-border text-primary mb-3" role="status" style="width: 3rem; height: 3rem;">
                        <span class="visually-hidden">جاري التحميل...</span>
                    </div>
                    <h6 class="text-muted">جاري تحميل تفاصيل الصنف...</h6>
                    <div class="progress mt-3" style="height: 6px;">
                        <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" style="width: 0%"></div>
                    </div>
                </div>
            `);

            // Simulate progress bar
            let progress = 0;
            const progressInterval = setInterval(() => {
                progress += Math.random() * 30;
                if (progress > 90) progress = 90;
                $('.progress-bar').css('width', progress + '%');
            }, 200);

            // Set a timeout to show extended loading message
            loadingTimeout = setTimeout(() => {
                $('#modalBody').html(`
                    <div class="text-center py-5">
                        <div class="spinner-border text-warning mb-3" role="status" style="width: 3rem; height: 3rem;">
                            <span class="visually-hidden">جاري التحميل...</span>
                        </div>
                        <h6 class="text-warning">يتم تحميل البيانات...</h6>
                        <p class="text-muted small">قد يستغرق هذا بضع ثوانٍ إضافية بسبب حجم البيانات</p>
                        <div class="progress mt-3" style="height: 6px;">
                            <div class="progress-bar bg-warning progress-bar-striped progress-bar-animated" role="progressbar" style="width: 95%"></div>
                        </div>
                    </div>
                `);
            }, 5000);

            $.ajax({
                url: '@Url.Action("ItemDetails", "YarnTransactions")',
                type: 'GET',
                data: {
                    id: currentYarnItemId,
                    page: currentPage,
                    pageSize: pageSize
                },
                timeout: 30000, // Increased to 30 seconds
                cache: false, // Disable caching
                beforeSend: function() {
                    // Show loading state
                    console.log(`Loading details for yarn item ${currentYarnItemId}, page ${currentPage}`);
                },
                success: function(response) {
                    clearInterval(progressInterval);
                    clearTimeout(loadingTimeout);
                    $('.progress-bar').css('width', '100%');

                    setTimeout(() => {
                        if (response && response.success) {
                            renderItemDetails(response);
                        } else {
                            showError(response?.message || 'حدث خطأ أثناء تحميل البيانات');
                        }
                    }, 300);
                },
                error: function(xhr, status, error) {
                    clearInterval(progressInterval);
                    clearTimeout(loadingTimeout);

                    console.error('Error loading item details:', {
                        status: status,
                        error: error,
                        responseText: xhr.responseText,
                        statusCode: xhr.status
                    });

                    let errorMessage = 'حدث خطأ أثناء تحميل البيانات';

                    if (status === 'timeout') {
                        errorMessage = 'انتهت مهلة الاتصال. البيانات قد تكون كبيرة الحجم، يرجى المحاولة مرة أخرى.';
                    } else if (xhr.status === 404) {
                        errorMessage = 'لم يتم العثور على البيانات المطلوبة.';
                    } else if (xhr.status === 500) {
                        errorMessage = 'حدث خطأ في الخادم. يرجى المحاولة لاحقاً أو الاتصال بالدعم الفني.';
                    } else if (xhr.status === 0) {
                        errorMessage = 'فشل في الاتصال بالخادم. يرجى التحقق من الاتصال بالإنترنت.';
                    }

                    showError(errorMessage);
                },
                complete: function() {
                    clearInterval(progressInterval);
                    clearTimeout(loadingTimeout);
                }
            });
        }

        function renderItemDetails(data) {
            try {
                const yarnItem = data.yarnItem;
                const transactions = data.transactions || [];
                const pagination = data.pagination;
                const currentTime = "2025-09-01 12:32:28";

                let html = `
                    <!-- Item Summary -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="card border-primary shadow-sm">
                                <div class="card-header bg-primary text-white">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <h6 class="mb-0">
                                            <i class="fas fa-info me-2"></i>
                                            معلومات الصنف
                                        </h6>
                                        <small class="opacity-75">
                                            <i class="fas fa-clock me-1"></i>
                                            ${currentTime}
                                        </small>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label class="fw-bold text-primary">اسم الصنف:</label>
                                                <span class="ms-2">${yarnItem.Name || 'غير محدد'}</span>
                                            </div>
                                            <div class="mb-3">
                                                <label class="fw-bold text-primary">الغزل الأصلي:</label>
                                                <span class="ms-2 text-muted">${yarnItem.OriginYarn || 'غير محدد'}</span>
                                            </div>
                                            <div class="mb-3">
                                                <label class="fw-bold text-primary">الشركة المصنعة:</label>
                                                <span class="ms-2 text-muted">${yarnItem.Manufacturer || 'غير محدد'}</span>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="row text-center">
                                                <div class="col-6">
                                                    <div class="border-end pe-3">
                                                        <h4 class="mb-1 ${(yarnItem.QuantityBalance || 0) >= 0 ? 'text-success' : 'text-danger'}">
                                                            ${(yarnItem.QuantityBalance || 0).toFixed(3)}
                                                        </h4>
                                                        <small class="text-muted">رصيد الكمية (كجم)</small>
                                                    </div>
                                                </div>
                                                <div class="col-6">
                                                    <h4 class="mb-1 ${(yarnItem.CountBalance || 0) >= 0 ? 'text-success' : 'text-danger'}">
                                                        ${yarnItem.CountBalance || 0}
                                                    </h4>
                                                    <small class="text-muted">رصيد العدد</small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <hr class="my-3">

                                    <div class="row text-center">
                                        <div class="col-md-2 col-6 mb-2">
                                            <div class="bg-success bg-opacity-10 p-3 rounded">
                                                <h6 class="text-success mb-1">${(yarnItem.TotalInbound || 0).toFixed(3)}</h6>
                                                <small class="text-muted">إجمالي الوارد</small>
                                            </div>
                                        </div>
                                        <div class="col-md-2 col-6 mb-2">
                                            <div class="bg-danger bg-opacity-10 p-3 rounded">
                                                <h6 class="text-danger mb-1">${(yarnItem.TotalOutbound || 0).toFixed(3)}</h6>
                                                <small class="text-muted">إجمالي الصادر</small>
                                            </div>
                                        </div>
                                        <div class="col-md-2 col-6 mb-2">
                                            <div class="bg-info bg-opacity-10 p-3 rounded">
                                                <h6 class="text-info mb-1">${yarnItem.TotalTransactions || 0}</h6>
                                                <small class="text-muted">إجمالي المعاملات</small>
                                            </div>
                                        </div>
                                        <div class="col-md-2 col-6 mb-2">
                                            <div class="bg-warning bg-opacity-10 p-3 rounded">
                                                <h6 class="text-warning mb-1">${((yarnItem.TotalInbound || 0) - (yarnItem.TotalOutbound || 0)).toFixed(3)}</h6>
                                                <small class="text-muted">الصافي</small>
                                            </div>
                                        </div>
                                        <div class="col-md-4 col-12 mb-2">
                                            <div class="p-3">
                                                <span class="badge ${yarnItem.IsAvailable ? 'bg-success' : 'bg-danger'} fs-6 px-3 py-2">
                                                    <i class="fas fa-${yarnItem.IsAvailable ? 'check-circle' : 'times-circle'} me-1"></i>
                                                    ${yarnItem.IsAvailable ? 'متاح في المخزون' : 'غير متاح'}
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                `;

                if (transactions.length > 0) {
                    html += `
                        <!-- Recent Transactions -->
                        <div class="row">
                            <div class="col-12">
                                <div class="card border-info shadow-sm">
                                    <div class="card-header bg-info text-white">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <h6 class="mb-0">
                                                <i class="fas fa-history me-2"></i>
                                                المعاملات الأخيرة
                                            </h6>
                                            <small class="opacity-75">
                                                الصفحة ${pagination.CurrentPage} من ${pagination.TotalPages}
                                            </small>
                                        </div>
                                    </div>
                                    <div class="card-body p-0">
                                        <div class="table-responsive">
                                            <table class="table table-hover table-sm mb-0">
                                                <thead class="table-dark">
                                                    <tr>
                                                        <th>رقم المعاملة</th>
                                                        <th>التاريخ</th>
                                                        <th>النوع</th>
                                                        <th>الكمية</th>
                                                        <th>العدد</th>
                                                        <th>التاجر</th>
                                                        <th>رصيد الكمية</th>
                                                        <th>ملاحظات</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                    `;

                    transactions.forEach(function(transaction) {
                        const transactionDate = new Date(transaction.Date);
                        html += `
                            <tr>
                                <td>
                                    <div class="fw-bold text-primary small">${transaction.TransactionId || ''}</div>
                                    ${transaction.InternalId ? `<small class="text-muted d-block">داخلي: ${transaction.InternalId}</small>` : ''}
                                </td>
                                <td>
                                    <div class="fw-bold small">${transactionDate.toLocaleDateString('ar-EG')}</div>
                                    <small class="text-muted">${transactionDate.toLocaleTimeString('ar-EG', {hour: '2-digit', minute: '2-digit'})}</small>
                                </td>
                                <td>
                                    <span class="badge rounded-pill ${transaction.IsInbound ? 'bg-success' : 'bg-danger'} small">
                                        ${transaction.IsInbound ? 'وارد' : 'صادر'}
                                    </span>
                                </td>
                                <td class="${transaction.IsInbound ? 'text-success' : 'text-danger'} fw-bold small">
                                    ${(transaction.Quantity || 0).toFixed(3)}
                                </td>
                                <td class="fw-bold small">${transaction.Count || 0}</td>
                                <td>
                                    <div class="small text-muted">${transaction.StakeholderTypeName || ''}</div>
                                    <div class="fw-bold small">${transaction.StakeholderName || ''}</div>
                                </td>
                                <td class="fw-bold text-primary small">${(transaction.QuantityBalance || 0).toFixed(3)}</td>
                                <td class="small">
                                    ${transaction.Comment ?
                                        `<span class="text-muted" title="${transaction.Comment}">
                                            ${transaction.Comment.length > 15 ? transaction.Comment.substring(0, 15) + '...' : transaction.Comment}
                                        </span>` :
                                        '<span class="text-muted">-</span>'
                                    }
                                </td>
                            </tr>
                        `;
                    });

                    html += `
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    `;

                    // Add pagination if needed
                    if (pagination.TotalPages > 1) {
                        html += `
                            <div class="row mt-3">
                                <div class="col-12">
                                    <nav aria-label="تنقل المعاملات">
                                        <ul class="pagination pagination-sm justify-content-center mb-0">
                        `;

                        if (pagination.HasPreviousPage) {
                            html += `<li class="page-item">
                                <a class="page-link" href="#" onclick="loadPage(${pagination.CurrentPage - 1}); return false;">
                                    <i class="fas fa-chevron-right me-1"></i>السابق
                                </a>
                            </li>`;
                        }

                        // Show page numbers (simplified for performance)
                        const startPage = Math.max(1, pagination.CurrentPage - 1);
                        const endPage = Math.min(pagination.TotalPages, pagination.CurrentPage + 1);

                        for (let i = startPage; i <= endPage; i++) {
                            html += `<li class="page-item ${i === pagination.CurrentPage ? 'active' : ''}">
                                <a class="page-link" href="#" onclick="loadPage(${i}); return false;">${i}</a>
                            </li>`;
                        }

                        if (pagination.HasNextPage) {
                            html += `<li class="page-item">
                                <a class="page-link" href="#" onclick="loadPage(${pagination.CurrentPage + 1}); return false;">
                                    التالي<i class="fas fa-chevron-left ms-1"></i>
                                </a>
                            </li>`;
                        }

                        html += `
                                        </ul>
                                    </nav>
                                </div>
                            </div>
                        `;
                    }
                } else {
                    html += `
                        <div class="row">
                            <div class="col-12">
                                <div class="alert alert-info text-center py-4">
                                    <i class="fas fa-info-circle fa-2x mb-3 text-info"></i>
                                    <h6 class="mb-2">لا توجد معاملات</h6>
                                    <p class="mb-0 text-muted small">لم يتم تسجيل أي معاملات لهذا الصنف حتى الآن.</p>
                                </div>
                            </div>
                        </div>
                    `;
                }

                $('#modalBody').html(html);

                // Update "See More" button visibility
                if (pagination.TotalTransactions > pageSize) {
                    $('#seeMoreBtn').show().off('click').on('click', function() {
                        seeMoreTransactions();
                    });
                } else {
                    $('#seeMoreBtn').hide();
                }

                // Initialize tooltips
                $('[title]').tooltip({
                    placement: 'top',
                    trigger: 'hover'
                });

            } catch (error) {
                console.error('Error rendering item details:', error);
                showError('حدث خطأ أثناء عرض البيانات');
            }
        }

        function loadPage(page) {
            currentPage = page;
            loadItemDetails();
        }

        function seeMoreTransactions() {
            $('#itemDetailsModal').modal('hide');

            const searchUrl = `@Url.Action("Search", "YarnTransactions")?YarnItemId=${currentYarnItemId}&FromDate=${new Date(Date.now() - 365*24*60*60*1000).toISOString().split('T')[0]}&ToDate=${new Date().toISOString().split('T')[0]}`;

            window.location.href = searchUrl;
        }

        function showError(message) {
            $('#modalBody').html(`
                <div class="alert alert-danger text-center py-4">
                    <i class="fas fa-exclamation-triangle fa-3x mb-3 text-danger"></i>
                    <h5 class="mb-2">حدث خطأ</h5>
                    <p class="mb-3">${message}</p>
                    <div class="d-flex gap-2 justify-content-center">
                        <button type="button" class="btn btn-primary btn-sm" onclick="loadItemDetails()">
                            <i class="fas fa-redo me-1"></i>إعادة المحاولة
                        </button>
                        <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">
                            <i class="fas fa-times me-1"></i>إغلاق
                        </button>
                    </div>
                </div>
            `);
        }

        // Clean up on modal close
        $('#itemDetailsModal').on('hidden.bs.modal', function () {
            if (loadingTimeout) {
                clearTimeout(loadingTimeout);
            }
            currentYarnItemId = null;
            currentPage = 1;
        });
        // Export functions
        function exportToExcel() {
            showLoadingOverlay();

            const form = $('<form>', {
                method: 'POST',
                action: '@Url.Action("ExportOverview", "YarnTransactions")'
            });

            // Add anti-forgery token
            form.append($('@Html.AntiForgeryToken()'));

            // Add available only filter
            form.append($('<input>', {
                type: 'hidden',
                name: 'availableOnly',
                value: $('#availableOnlyFilter').is(':checked')
            }));

            form.appendTo('body').submit().remove();

            setTimeout(hideLoadingOverlay, 2000);
        }

        function shareWhatsApp() {
            showLoadingOverlay();

            $.ajax({
                url: '@Url.Action("ShareWhatsApp", "YarnTransactions")',
                type: 'POST',
                data: {
                    availableOnly: $('#availableOnlyFilter').is(':checked'),
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                },
                success: function(response) {
                    hideLoadingOverlay();
                    if (response.success) {
                        const message = encodeURIComponent(response.message);
                        const whatsappUrl = `https://wa.me/?text=${message}`;
                        window.open(whatsappUrl, '_blank');
                    } else {
                        showError(response.message || 'حدث خطأ أثناء إنشاء رسالة واتساب');
                    }
                },
                error: function(xhr, status, error) {
                    hideLoadingOverlay();
                    console.error('Error sharing WhatsApp:', error);
                    showError('حدث خطأ أثناء إنشاء رسالة واتساب');
                }
            });
        }

        function printOverview() {
            window.print();
        }

        // Utility functions
        function showLoadingOverlay() {
            $('#loadingOverlay').show();
        }

        function hideLoadingOverlay() {
            $('#loadingOverlay').hide();
        }

        function showError(message) {
            $('#modalBody').html(`
                <div class="alert alert-danger text-center">
                    <i class="fas fa-exclamation-triangle fa-2x mb-3"></i>
                    <h6>حدث خطأ</h6>
                    <p>${message}</p>
                </div>
            `);
        }

        // Keyboard shortcuts
        $(document).keydown(function(e) {
            // Ctrl+R for refresh
            if (e.ctrlKey && e.keyCode === 82) {
                e.preventDefault();
                refreshData();
            }

            // Escape to close modal
            if (e.keyCode === 27) {
                $('#itemDetailsModal').modal('hide');
            }
        });
    </script>
