        // Utility functions
        function toArabicDigits(str) {
            if (!str) return str;
            return str.replace(/[0-9]/g, d => '٠١٢٣٤٥٦٧٨٩'[d]);
        }

        function toLatinDigits(str) {
            if (!str) return str;
            return str.replace(/[٠-٩]/g, d => '0123456789'['٠١٢٣٤٥٦٧٨٩'.indexOf(d)]);
        }

        // Smart number formatting based on context
        function smartNumberFormatting(str) {
            if (!str || str.length === 0) return str;

            // If string has only 1 character or contains any English letters, use English digits
            if (str.length === 1 || hasEnglishLetters(str)) {
                return toLatinDigits(str);
            }

            // Otherwise, use Arabic digits for display
            return toArabicDigits(str);
        }

        function hasEnglishLetters(str) {
            return /[a-zA-Z]/.test(str);
        }

        function isArabicChar(c) {
            return /[\u0600-\u06FF]/.test(c);
        }

        function isEnglishChar(c) {
            return /[a-zA-Z]/.test(c);
        }

        function getLastLetter(str) {
            for (let i = str.length - 1; i >= 0; i--) {
                let char = str[i];
                if (isArabicChar(char)) {
                    return 'arabic';
                } else if (isEnglishChar(char)) {
                    return 'english';
                }
            }
            return 'arabic'; // default is Arabic
        }
