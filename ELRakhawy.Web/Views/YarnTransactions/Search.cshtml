@using System.Globalization
@using ELRakhawy.EL.ViewModels
@model YarnTransactionSearchViewModel
@{
    ViewData["Title"] = "بحث معاملات الغزل";
    var currentTime = DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss");
    var currentUser = User.Identity?.Name ?? "المستخدم الحالي";
    var arabicCulture = new CultureInfo("ar-SA");
    arabicCulture.NumberFormat.NumberDecimalSeparator = ".";

    // Calculate search statistics
    var hasResults = Model?.Results?.Any() == true;
    var searchPerformed = ViewBag.SearchPerformed == true;
    var totalInbound = hasResults ? Model.Results.Where(r => r.IsInbound).Sum(r => r.Quantity) : 0;
    var totalOutbound = hasResults ? Model.Results.Where(r => !r.IsInbound).Sum(r => r.Quantity) : 0;
    var netBalance = totalInbound - totalOutbound;
    var totalTransactions = hasResults ? Model.Results.Count : 0;
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - نظام الغزل</title>

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <!-- DataTables -->
    <link href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/buttons/2.3.6/css/buttons.bootstrap5.min.css" rel="stylesheet" />

    <!-- Custom Styles -->
    <style>
        :root {
            --primary: #2c5aa0;
            --primary-light: #3a69b8;
            --primary-dark: #1e3f7c;
            --secondary: #6c757d;
            --success: #198754;
            --info: #0dcaf0;
            --warning: #ffc107;
            --danger: #dc3545;
            --light: #f8f9fa;
            --dark: #212529;
            --gray-100: #f8f9fa;
            --gray-200: #e9ecef;
            --gray-300: #dee2e6;
            --gray-400: #ced4da;
            --gray-500: #adb5bd;
            --gray-600: #6c757d;
            --gray-700: #495057;
            --gray-800: #343a40;
            --gray-900: #212529;
            --border-radius: 0.5rem;
            --box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
            --transition: all 0.3s ease;
        }

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f5f7f9;
            color: var(--gray-800);
            line-height: 1.6;
        }

        .yarn-search-container {
            max-width: 1600px;
            margin: 0 auto;
            padding: 1rem;
        }

        /* Breadcrumb */
        .breadcrumb-nav {
            margin-bottom: 1.5rem;
        }

        .breadcrumb {
            background-color: transparent;
            padding: 0;
        }

        .breadcrumb-item {
            font-size: 0.9rem;
        }

            .breadcrumb-item a {
                color: var(--primary);
                text-decoration: none;
                transition: var(--transition);
            }

                .breadcrumb-item a:hover {
                    color: var(--primary-dark);
                }

            .breadcrumb-item.active {
                color: var(--gray-600);
            }

        /* Page Header */
        .page-header {
            background: linear-gradient(120deg, var(--primary), var(--primary-dark));
            border-radius: var(--border-radius);
            padding: 1.5rem;
            color: white;
            margin-bottom: 2rem;
            box-shadow: var(--box-shadow);
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
        }

        .page-title {
            font-size: 1.75rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
        }

        .page-subtitle {
            font-size: 1rem;
            opacity: 0.9;
        }

        .session-info {
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
            background: rgba(255, 255, 255, 0.15);
            padding: 0.75rem 1rem;
            border-radius: calc(var(--border-radius) - 0.2rem);
        }

        .info-item {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 0.85rem;
        }

        /* Search Section */
        .search-card {
            background: white;
            border-radius: var(--border-radius);
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            margin-bottom: 2rem;
            overflow: hidden;
        }

            .search-card .card-header {
                background: var(--gray-100);
                padding: 1.25rem 1.5rem;
                border-bottom: 1px solid var(--gray-300);
                display: flex;
                justify-content: space-between;
                align-items: center;
            }

                .search-card .card-header h2 {
                    margin: 0;
                    font-size: 1.25rem;
                    font-weight: 600;
                    color: var(--gray-800);
                }

            .search-card .card-body {
                padding: 1.5rem;
            }

        .search-form .form-row {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 1.25rem;
            margin-bottom: 1.5rem;
        }

        .form-group {
            margin-bottom: 0;
        }

            .form-group label {
                display: flex;
                align-items: center;
                gap: 0.5rem;
                font-weight: 600;
                color: var(--gray-700);
                margin-bottom: 0.5rem;
                font-size: 0.9rem;
            }

        .form-control, .form-select {
            padding: 0.75rem 1rem;
            border: 1px solid var(--gray-400);
            border-radius: calc(var(--border-radius) - 0.2rem);
            font-size: 0.95rem;
            transition: var(--transition);
            background-color: white;
        }

            .form-control:focus, .form-select:focus {
                outline: none;
                border-color: var(--primary);
                box-shadow: 0 0 0 0.2rem rgba(44, 90, 160, 0.25);
            }

        .form-error {
            color: var(--danger);
            font-size: 0.75rem;
            margin-top: 0.25rem;
        }

        .form-actions {
            display: flex;
            justify-content: flex-end;
            gap: 0.75rem;
            padding-top: 1.25rem;
            border-top: 1px solid var(--gray-300);
        }

        .btn {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.75rem 1.25rem;
            border: none;
            border-radius: calc(var(--border-radius) - 0.2rem);
            font-weight: 600;
            text-decoration: none;
            cursor: pointer;
            transition: var(--transition);
            font-size: 0.9rem;
        }

        .btn-primary {
            background: var(--primary);
            color: white;
        }

            .btn-primary:hover {
                background: var(--primary-dark);
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            }

        .btn-outline-secondary {
            background: transparent;
            color: var(--gray-600);
            border: 1px solid var(--gray-400);
        }

            .btn-outline-secondary:hover {
                background: var(--gray-100);
                color: var(--gray-700);
            }

        .btn-sm {
            padding: 0.5rem 0.75rem;
            font-size: 0.8rem;
        }

        .btn-success {
            background: var(--success);
            color: white;
        }

        .btn-info {
            background: var(--info);
            color: white;
        }

        /* Statistics Section */
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
            gap: 1.25rem;
            margin-bottom: 2rem;
        }

        .stat-card {
            background: white;
            border-radius: var(--border-radius);
            padding: 1.25rem;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            display: flex;
            align-items: center;
            gap: 1rem;
            transition: var(--transition);
        }

            .stat-card:hover {
                transform: translateY(-3px);
                box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
            }

        .stat-icon {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            flex-shrink: 0;
        }

        .stat-content {
            flex-grow: 1;
        }

        .stat-value {
            font-size: 1.75rem;
            font-weight: 700;
            margin-bottom: 0.25rem;
            line-height: 1;
        }

        .stat-label {
            font-size: 0.85rem;
            color: var(--gray-600);
            margin: 0;
        }

        .stat-card.primary .stat-icon {
            background: rgba(44, 90, 160, 0.15);
            color: var(--primary);
        }

        .stat-card.success .stat-icon {
            background: rgba(25, 135, 84, 0.15);
            color: var(--success);
        }

        .stat-card.warning .stat-icon {
            background: rgba(255, 193, 7, 0.15);
            color: var(--warning);
        }

        .stat-card.info .stat-icon, .stat-card.danger .stat-icon {
            background: rgba(13, 202, 240, 0.15);
            color: var(--info);
        }

        .stat-card.danger .stat-icon {
            background: rgba(220, 53, 69, 0.15);
            color: var(--danger);
        }

        /* Results Section */
        .results-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1.25rem;
            flex-wrap: wrap;
            gap: 1rem;
        }

            .results-header h2 {
                font-size: 1.5rem;
                font-weight: 600;
                color: var(--gray-800);
                margin: 0;
            }

        .results-actions {
            display: flex;
            gap: 0.75rem;
        }

        .table-container {
            background: white;
            border-radius: var(--border-radius);
            overflow: hidden;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            margin-bottom: 2rem;
        }

        .results-table {
            width: 100%;
            border-collapse: collapse;
            margin: 0;
        }

            .results-table th {
                background-color: var(--primary);
                color: white;
                font-weight: 600;
                padding: 0.9rem 1rem;
                text-align: right;
                font-size: 0.9rem;
            }

            .results-table td {
                padding: 0.9rem 1rem;
                border-bottom: 1px solid var(--gray-200);
                vertical-align: middle;
            }

            .results-table tr:last-child td {
                border-bottom: none;
            }

            .results-table tr {
                transition: var(--transition);
            }

                .results-table tr:not(.details-row):hover {
                    background-color: rgba(44, 90, 160, 0.03);
                }

        .date-cell .date-display {
            display: flex;
            flex-direction: column;
        }

        .date-cell .date {
            font-weight: 600;
            font-size: 0.9rem;
        }

        .date-cell .time {
            font-size: 0.8rem;
            color: var(--gray-600);
        }

        .transaction-type {
            display: inline-flex;
            align-items: center;
            gap: 0.35rem;
            padding: 0.35rem 0.7rem;
            border-radius: 100px;
            font-size: 0.8rem;
            font-weight: 600;
        }

            .transaction-type.inbound {
                background: rgba(25, 135, 84, 0.15);
                color: var(--success);
            }

            .transaction-type.outbound {
                background: rgba(220, 53, 69, 0.15);
                color: var(--danger);
            }

        .quantity-cell, .count-cell, .balance-cell {
            font-family: 'Courier New', monospace;
            font-weight: 600;
        }

            .balance-cell.negative {
                color: var(--danger);
            }

            .balance-cell.positive {
                color: var(--success);
            }

        .details-btn {
            transition: var(--transition);
        }

            .details-btn:hover {
                transform: scale(1.1);
            }

        .transaction-details {
            background: var(--gray-100);
            padding: 1.25rem;
            border-radius: calc(var(--border-radius) - 0.2rem);
        }

        .details-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1rem;
        }

        .detail-item {
            display: flex;
            flex-direction: column;
            gap: 0.25rem;
        }

            .detail-item label {
                font-weight: 600;
                font-size: 0.85rem;
                color: var(--gray-600);
            }

            .detail-item span {
                font-size: 0.95rem;
            }

            .detail-item.full-width {
                grid-column: 1 / -1;
            }

        /* No Results */
        .no-results {
            text-align: center;
            padding: 3rem 1rem;
            background: white;
            border-radius: var(--border-radius);
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            margin-bottom: 2rem;
        }

        .no-results-icon {
            font-size: 4rem;
            color: var(--gray-400);
            margin-bottom: 1.5rem;
        }

        .no-results h3 {
            font-size: 1.5rem;
            color: var(--gray-700);
            margin-bottom: 0.75rem;
        }

        .no-results p {
            color: var(--gray-600);
            margin-bottom: 1.5rem;
            max-width: 500px;
            margin-left: auto;
            margin-right: auto;
        }

        .no-results-actions {
            display: flex;
            justify-content: center;
            gap: 0.75rem;
        }

        /* Responsive Design */
        @@media (max-width: 992px) {
            .page-header

        {
            flex-direction: column;
            align-items: flex-start;
            gap: 1rem;
        }

        .session-info {
            width: 100%;
        }

        .search-form .form-row {
            grid-template-columns: 1fr;
        }

        .stats-grid {
            grid-template-columns: repeat(2, 1fr);
        }

        .results-header {
            flex-direction: column;
            align-items: flex-start;
        }

        .results-actions {
            width: 100%;
            justify-content: flex-start;
        }

        }

        @@media (max-width: 768px) {
            .stats-grid

        {
            grid-template-columns: 1fr;
        }

        .results-table {
            font-size: 0.85rem;
        }

            .results-table th,
            .results-table td {
                padding: 0.7rem 0.5rem;
            }

        .form-actions {
            flex-direction: column;
        }

        .btn {
            width: 100%;
            justify-content: center;
        }

        }

        @@media (max-width: 576px) {
            .yarn-search-container

        {
            padding: 0.5rem;
        }

        .page-header {
            padding: 1rem;
        }

        .search-card .card-body {
            padding: 1rem;
        }

        .no-results-actions {
            flex-direction: column;
        }

            .no-results-actions .btn {
                width: 100%;
            }

        }

        /* Animation */
        @@keyframes fadeIn {
            from

        {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .fade-in {
            animation: fadeIn 0.5s ease forwards;
        }

        /* Print Styles */
        @@media print {
            .breadcrumb-nav, .search-section, .results-actions, .details-btn

        {
            display: none !important;
        }

        .page-header {
            background: white !important;
            color: black !important;
            box-shadow: none !important;
        }

        .stat-card {
            break-inside: avoid;
            box-shadow: none !important;
            border: 1px solid #ddd !important;
        }

        .table-container {
            box-shadow: none !important;
        }

        .results-table {
            page-break-inside: avoid;
        }

        }</style>
</head>
<body>
    <!-- Main Container -->
    <div class="yarn-search-container">

        <!-- Breadcrumb Navigation -->
        <div class="breadcrumb-nav" aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="@Url.Action("Index", "Home")">
                        <i class="fas fa-home"></i>
                        الرئيسية
                    </a>
                </li>
                <li class="breadcrumb-item">
                    <a href="@Url.Action("Index", "YarnItems")">
                        <i class="fas fa-yarn"></i>
                        قسم الغزل
                    </a>
                </li>
                <li class="breadcrumb-item active">
                    <i class="fas fa-search"></i>
                    @ViewData["Title"]
                </li>
            </ol>
        </div>

        <!-- Page Header -->
        <div class="page-header fade-in">
            <div>
                <h1 class="page-title">@ViewData["Title"]</h1>
                <p class="page-subtitle">ابحث في معاملات الغزل وفقًا للمعايير المحددة</p>
            </div>

            <div class="session-info">
                <div class="info-item">
                    <i class="fas fa-clock"></i>
                    <span>@currentTime</span>
                </div>
                <div class="info-item">
                    <i class="fas fa-user"></i>
                    <span>@currentUser</span>
                </div>
            </div>
        </div>

        <!-- Search Form Section -->
        <div class="search-section fade-in">
            <div class="search-card">
                <div class="card-header">
                    <h2>معايير البحث</h2>
                    <button type="button" class="btn btn-outline-secondary btn-sm" id="toggleAdvanced">
                        <i class="fas fa-cog"></i>
                        خيارات متقدمة
                    </button>
                </div>

                <div class="card-body">
                    <form asp-action="Search" method="post" id="searchForm" class="search-form">
                        @Html.AntiForgeryToken()

                        <!-- Basic Search Fields -->
                        <div class="search-group basic-search">
                            <div class="form-row">
                                <div class="form-group">
                                    <label asp-for="FromDate">
                                        <i class="fas fa-calendar-alt"></i>
                                        من تاريخ
                                    </label>
                                    <input asp-for="FromDate" type="date" class="form-control" />
                                    <span asp-validation-for="FromDate" class="form-error"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="ToDate">
                                        <i class="fas fa-calendar-alt"></i>
                                        إلى تاريخ
                                    </label>
                                    <input asp-for="ToDate" type="date" class="form-control" />
                                    <span asp-validation-for="ToDate" class="form-error"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="YarnItemId">
                                        <i class="fas fa-yarn"></i>
                                        صنف الغزل
                                    </label>
                                    <select asp-for="YarnItemId" asp-items="Model.AvailableItems" class="form-select">
                                        <option value="">جميع الأصناف</option>
                                    </select>
                                    <span asp-validation-for="YarnItemId" class="form-error"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Advanced Search Fields -->
                        <div class="search-group advanced-search" style="display: none;">
                            <div class="form-row">
                                <div class="form-group">
                                    <label asp-for="TransactionId">
                                        <i class="fas fa-hashtag"></i>
                                        رقم الإذن
                                    </label>
                                    <input asp-for="TransactionId" class="form-control" placeholder="مثال: YT-20250812-001" />
                                    <span asp-validation-for="TransactionId" class="form-error"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="TransactionType">
                                        <i class="fas fa-exchange-alt"></i>
                                        نوع المعاملة
                                    </label>
                                    <select asp-for="TransactionType" class="form-select">
                                        <option value="">جميع الأنواع</option>
                                        <option value="inbound">وارد فقط</option>
                                        <option value="outbound">صادر فقط</option>
                                    </select>
                                    <span asp-validation-for="TransactionType" class="form-error"></span>
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="form-group">
                                    <label asp-for="StakeholderTypeId">
                                        <i class="fas fa-tags"></i>
                                        نوع الجهة
                                    </label>
                                    <select asp-for="StakeholderTypeId" class="form-select" id="stakeholderType">
                                        <option value="">جميع الأنواع</option>
                                        @if (Model?.StakeholderTypes != null)
                                        {
                                            @foreach (var type in Model.StakeholderTypes)
                                            {
                                                <option value="@type.Value">@type.Text</option>
                                            }
                                        }
                                    </select>
                                    <span asp-validation-for="StakeholderTypeId" class="form-error"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="StakeholderId">
                                        <i class="fas fa-building"></i>
                                        الجهة التجارية
                                    </label>
                                    <select asp-for="StakeholderId" class="form-select" id="stakeholder">
                                        <option value="">جميع الجهات</option>
                                        @if (Model?.Stakeholders != null)
                                        {
                                            @foreach (var stakeholder in Model.Stakeholders)
                                            {
                                                <option value="@stakeholder.Value">@stakeholder.Text</option>
                                            }
                                        }
                                    </select>
                                    <span asp-validation-for="StakeholderId" class="form-error"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="form-actions">
                            <button type="button" class="btn btn-outline-secondary" id="resetBtn">
                                <i class="fas fa-undo"></i>
                                إعادة تعيين
                            </button>
                            <button type="submit" class="btn btn-primary" id="searchBtn">
                                <i class="fas fa-search"></i>
                                بحث
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Results Section -->
        @if (searchPerformed)
        {
            @if (hasResults)
            {
                <!-- Statistics Cards -->
                <div class="stats-section fade-in">
                    <div class="stats-grid">
                        <div class="stat-card primary">
                            <div class="stat-icon">
                                <i class="fas fa-list-alt"></i>
                            </div>
                            <div class="stat-content">
                                <h3 class="stat-value">@totalTransactions.ToString("N0", arabicCulture)</h3>
                                <p class="stat-label">إجمالي المعاملات</p>
                            </div>
                        </div>

                        <div class="stat-card success">
                            <div class="stat-icon">
                                <i class="fas fa-arrow-down"></i>
                            </div>
                            <div class="stat-content">
                                <h3 class="stat-value">@totalInbound.ToString("N1", arabicCulture)</h3>
                                <p class="stat-label">إجمالي الوارد (كجم)</p>
                            </div>
                        </div>

                        <div class="stat-card warning">
                            <div class="stat-icon">
                                <i class="fas fa-arrow-up"></i>
                            </div>
                            <div class="stat-content">
                                <h3 class="stat-value">@totalOutbound.ToString("N1", arabicCulture)</h3>
                                <p class="stat-label">إجمالي الصادر (كجم)</p>
                            </div>
                        </div>

                        <div class="stat-card @(netBalance >= 0 ? "info" : "danger")">
                            <div class="stat-icon">
                                <i class="fas fa-balance-scale"></i>
                            </div>
                            <div class="stat-content">
                                <h3 class="stat-value">@netBalance.ToString("N1", arabicCulture)</h3>
                                <p class="stat-label">الرصيد الصافي (كجم)</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Results Table -->
                <div class="results-section fade-in">
                    <div class="results-header">
                        <h2>نتائج البحث (@totalTransactions.ToString("N0", arabicCulture) معاملة)</h2>
                        <div class="results-actions">
                            <button type="button" class="btn btn-success btn-sm" id="exportExcel">
                                <i class="fas fa-file-excel"></i>
                                تصدير Excel
                            </button>
                            <button type="button" class="btn btn-info btn-sm" id="printResults">
                                <i class="fas fa-print"></i>
                                طباعة
                            </button>
                        </div>
                    </div>

                    <div class="table-container">
                        <table class="results-table" id="resultsTable">
                            <thead>
                                <tr>
                                    <th>التاريخ</th>
                                    <th>رقم الإذن</th>
                                    <th>صنف الغزل</th>
                                    <th class="text-center">النوع</th>
                                    <th class="text-end">الكمية (كجم)</th>
                                    <th class="text-end">العدد</th>
                                    <th>الجهة</th>
                                    <th class="text-end">رصيد الكمية</th>
                                    <th class="text-end">رصيد العدد</th>
                                    <th class="text-center">تفاصيل</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Results)
                                {
                                    <tr class="transaction-row" data-id="@item.Id">
                                        <td class="date-cell">
                                            <div class="date-display">
                                                <span class="date">@item.Date.ToString("yyyy/MM/dd", arabicCulture)</span>
                                                <span class="time">@item.Date.ToString("HH:mm", arabicCulture)</span>
                                            </div>
                                        </td>
                                        <td class="transaction-id">@item.TransactionId</td>
                                        <td class="yarn-name">@item.YarnItemName</td>
                                        <td class="text-center">
                                            <span class="transaction-type @(item.IsInbound ? "inbound" : "outbound")">
                                                <i class="fas @(item.IsInbound ? "fa-arrow-down" : "fa-arrow-up")"></i>
                                                @(item.IsInbound ? "وارد" : "صادر")
                                            </span>
                                        </td>
                                        <td class="text-end quantity-cell">@item.Quantity.ToString("N3", arabicCulture)</td>
                                        <td class="text-end count-cell">@item.Count.ToString("N0", arabicCulture)</td>
                                        <td class="stakeholder-name">@item.StakeholderName</td>
                                        <td class="text-end balance-cell @(item.QuantityBalance < 0 ? "negative" : "positive")">
                                            @item.QuantityBalance.ToString("N3", arabicCulture)
                                        </td>
                                        <td class="text-end balance-cell @(item.CountBalance < 0 ? "negative" : "positive")">
                                            @item.CountBalance.ToString("N0", arabicCulture)
                                        </td>
                                        <td class="text-center">
                                            <button type="button" class="btn btn-sm btn-outline-info details-btn" data-id="@item.Id">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                        </td>
                                    </tr>

                                    <!-- Details Row -->
                                    <tr class="details-row" id="details-@item.Id" style="display: none;">
                                        <td colspan="10">
                                            <div class="transaction-details">
                                                <div class="details-grid">
                                                    <div class="detail-item">
                                                        <label>معرف داخلي:</label>
                                                        <span>@(item.InternalId ?? "غير متوفر")</span>
                                                    </div>
                                                    <div class="detail-item">
                                                        <label>معرف خارجي:</label>
                                                        <span>@(item.ExternalId ?? "غير متوفر")</span>
                                                    </div>
                                                    <div class="detail-item">
                                                        <label>الغزل الأصلي:</label>
                                                        <span>@(item.OriginYarnName ?? "غير متوفر")</span>
                                                    </div>
                                                    <div class="detail-item">
                                                        <label>نوع الجهة:</label>
                                                        <span>@item.StakeholderTypeName</span>
                                                    </div>
                                                    <div class="detail-item">
                                                        <label>نوع التعبئة:</label>
                                                        <span>@item.PackagingStyleName</span>
                                                    </div>
                                                    @if (!string.IsNullOrEmpty(item.Comment))
                                                    {
                                                        <div class="detail-item full-width">
                                                            <label>البيان:</label>
                                                            <span>@item.Comment</span>
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }
            else
            {
                <!-- No Results -->
                <div class="no-results fade-in">
                    <div class="no-results-icon">
                        <i class="fas fa-search-minus"></i>
                    </div>
                    <h3>لا توجد نتائج</h3>
                    <p>لم يتم العثور على معاملات تطابق معايير البحث المحددة</p>
                    <div class="no-results-actions">
                        <button type="button" class="btn btn-primary" id="modifySearch">
                            <i class="fas fa-edit"></i>
                            تعديل البحث
                        </button>
                        <button type="button" class="btn btn-outline-secondary" id="clearSearch">
                            <i class="fas fa-times"></i>
                            مسح البحث
                        </button>
                    </div>
                </div>
            }
        }
    </div>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.3.6/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.3.6/js/buttons.html5.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>

    <script>
        $(document).ready(function() {
            // Toggle advanced search
            $('#toggleAdvanced').click(function() {
                const advancedSection = $('.advanced-search');
                const icon = $(this).find('i');

                if (advancedSection.is(':visible')) {
                    advancedSection.slideUp(300);
                    icon.removeClass('fa-cog').addClass('fa-cog');
                    $(this).find('span').text('خيارات متقدمة');
                } else {
                    advancedSection.slideDown(300);
                    icon.removeClass('fa-cog').addClass('fa-times');
                    $(this).html('<i class="fas fa-times"></i> إخفاء الخيارات');
                }
            });

            // Stakeholder type change handler
            $('#stakeholderType').change(function() {
                const typeId = $(this).val();
                const stakeholderSelect = $('#stakeholder');

                if (typeId) {
                    stakeholderSelect.prop('disabled', true);
                    stakeholderSelect.html('<option value="">جاري التحميل...</option>');

                    $.ajax({
                        url: '@Url.Action("GetStakeholdersByType", "YarnTransactions")',
                        type: 'GET',
                        data: { typeId: typeId },
                        success: function(response) {
                            stakeholderSelect.empty().append('<option value="">جميع الجهات</option>');

                            if (response && response.success && response.data) {
                                $.each(response.data, function(index, item) {
                                    stakeholderSelect.append(
                                        $('<option></option>').attr('value', item.id).text(item.name)
                                    );
                                });
                            }
                        },
                        error: function() {
                            stakeholderSelect.empty().append('<option value="">خطأ في التحميل</option>');
                        },
                        complete: function() {
                            stakeholderSelect.prop('disabled', false);
                        }
                    });
                } else {
                    stakeholderSelect.empty().append('<option value="">جميع الجهات</option>');
                }
            });

            // Form reset
            $('#resetBtn').click(function() {
                $('#searchForm')[0].reset();
                $('#stakeholder').empty().append('<option value="">جميع الجهات</option>');
            });

            // Search form submission
            $('#searchForm').submit(function(e) {
                const submitBtn = $('#searchBtn');
                submitBtn.prop('disabled', true);
                submitBtn.html('<i class="fas fa-spinner fa-spin"></i> جاري البحث...');

                // Re-enable after timeout to prevent permanent disable
                setTimeout(function() {
                    submitBtn.prop('disabled', false);
                    submitBtn.html('<i class="fas fa-search"></i> بحث');
                }, 10000);
            });

            // Details toggle
            $('.details-btn').click(function() {
                const id = $(this).data('id');
                const detailsRow = $('#details-' + id);
                const icon = $(this).find('i');

                if (detailsRow.is(':visible')) {
                    detailsRow.hide();
                    icon.removeClass('fa-eye-slash').addClass('fa-eye');
                } else {
                    detailsRow.show();
                    icon.removeClass('fa-eye').addClass('fa-eye-slash');
                }
            });

            // Initialize DataTable if results exist
            if ($('#resultsTable').length) {
                $('#resultsTable').DataTable({
                    language: {
                        url: '//cdn.datatables.net/plug-ins/1.13.4/i18n/ar.json'
                    },
                    pageLength: 25,
                    responsive: true,
                    order: [[0, 'desc']],
                    columnDefs: [
                        { targets: [9], orderable: false }  // Details column
                    ]
                });
            }

            // Export functions
            $('#exportExcel').click(function() {
                // Excel export logic here
                window.location.href = '@Url.Action("ExportExcel", "YarnTransactions")';
            });

            $('#printResults').click(function() {
                window.print();
            });

            // No results actions
            $('#modifySearch, #clearSearch').click(function() {
                $('.search-section').get(0).scrollIntoView({ behavior: 'smooth' });
                if ($(this).attr('id') === 'clearSearch') {
                    $('#resetBtn').click();
                }
            });
        });
    </script>
</body>
</html>