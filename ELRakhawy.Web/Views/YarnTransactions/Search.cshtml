        });

        // ✅ Arabic/Latin conversion functions
        function toArabicDigits(str) {
            if (typeof str !== 'string') str = str.toString();
            return str.replace(/[0-9]/g, d => '٠١٢٣٤٥٦٧٨٩'[d]);
        }

        function toLatinDigits(str) {
            if (typeof str !== 'string') str = str.toString();
            return str.replace(/[٠-٩]/g, d => '0123456789'['٠١٢٣٤٥٦٧٨٩'.indexOf(d)]);
        }

        function isTransactionId(str) {
            if (typeof str !== 'string') return false;

            var transactionIdPatterns = [
                /^[A-Z]{2,4}-\d{8}-\d{4}$/,  // TXN-20250904-0001
                /^[A-Z]{3}-\d{8}-\d{4}$/,    // OUT-20250904-0001
                /^[A-Z]{2}-\d{8}-\d{4}$/,    // IN-20250904-0001
                /^\d{8}-\d{4}$/,             // 20250904-0001
                /^T\d{10,}$/,                // T1725476398001
                /^TXN\d{8,}$/,               // TXN20250904001
                /^RST-\d{8}-\d{4}$/          // RST-20250904-0001
            ];

            return transactionIdPatterns.some(pattern => pattern.test(str));
        }

        function toArabicDigitsExceptTransactionId(str) {
            if (typeof str !== 'string') str = str.toString();

            if (isTransactionId(str)) {
                return str; // Keep Transaction IDs in Latin
            }

            return toArabicDigits(str);
        }

        // ✅ Convert numbers to Arabic while preserving Transaction IDs
        function convertNumbersToArabic() {
            console.log('🔄 Converting numbers to Arabic at', CURRENT_TIME);

            // Convert statistics
            $('#totalTransactions').text(toArabicDigits($('#totalTransactions').text()));
            $('#totalInbound').text(toArabicDigits($('#totalInbound').text()));
            $('#totalOutbound').text(toArabicDigits($('#totalOutbound').text()));
            $('#netBalance').text(toArabicDigits($('#netBalance').text()));
            $('#resultsCount').text(toArabicDigits($('#resultsCount').text()));
            $('#totalCount').text(toArabicDigits($('#totalCount').text()));

            // Convert current time in header
            $('#currentTime').text(toArabicDigits($('#currentTime').text()));

            // Convert table values BUT preserve Transaction IDs
            $('.transaction-date').each(function() {
                $(this).text(toArabicDigits($(this).text()));
            });

            $('.transaction-time').each(function() {
                $(this).text(toArabicDigits($(this).text()));
            });

            $('.quantity-value').each(function() {
                $(this).text(toArabicDigits($(this).text()));
            });

            $('.count-value').each(function() {
                $(this).text(toArabicDigits($(this).text()));
            });

            $('.balance-quantity').each(function() {
                $(this).text(toArabicDigits($(this).text()));
            });

            $('.balance-count').each(function() {
                $(this).text(toArabicDigits($(this).text()));
            });

            // Convert internal/external IDs only if they're not transaction IDs
            $('.internal-id, .external-id').each(function() {
                var text = $(this).text();
                // Extract the ID part after "داخلي: " or "خارجي: "
                var parts = text.split(': ');
                if (parts.length === 2) {
                    var idPart = parts[1];
                    var convertedId = toArabicDigitsExceptTransactionId(idPart);
                    $(this).text(parts[0] + ': ' + convertedId);
                }
            });

            // Transaction IDs are NOT converted - they stay in Latin (handled by CSS class .transaction-id)
            console.log('✅ Numbers converted to Arabic (Transaction IDs preserved)');
        }

        // ✅ Copy Transaction ID functionality
        function copyTransactionId(transactionId) {
            try {
                const tempInput = document.createElement('input');
                tempInput.value = transactionId;
                document.body.appendChild(tempInput);
                tempInput.select();
                document.execCommand('copy');
                document.body.removeChild(tempInput);

                showToast('success', 'تم النسخ', `رقم المعاملة: ${transactionId}`);
                console.log('✅ Transaction ID copied:', transactionId, 'at', CURRENT_TIME);
            } catch (error) {
                console.error('❌ Error copying transaction ID:', error);
                prompt('انسخ رقم المعاملة من هنا:', transactionId);
            }
        }

        // Utility functions
        function showLoading() {
            $('#loadingOverlay').fadeIn();
        }

        function hideLoading() {
            $('#loadingOverlay').fadeOut();
        }

        function showToast(type, title, message) {
            const iconMap = {
                success: 'check-circle',
                error: 'exclamation-circle',
                warning: 'exclamation-triangle',
                info: 'info-circle'
            };

            const toast = `
                <div class="toast" role="alert" aria-live="assertive" aria-atomic="true">
                    <div class="toast-header">
                        <i class="fas fa-${iconMap[type]} me-2 text-${type}"></i>
                        <strong class="me-auto">${title}</strong>
                        <small class="text-muted">الآن</small>
                        <button type="button" class="btn-close" data-bs-dismiss="toast"></button>
                    </div>
                    <div class="toast-body">${message}</div>
                </div>
            `;

            $('.toast-container').append(toast);
            const toastElement = $('.toast').last();
            const bsToast = new bootstrap.Toast(toastElement[0]);
            bsToast.show();

            setTimeout(() => {
                toastElement.remove();
            }, 5000);
        }

        function resetForm() {
            $('#searchForm')[0].reset();
            $('.select2-yarn, .select2-type, .select2-stakeholder').val(null).trigger('change');

            // Set default dates
            const today = new Date();
            const thirtyDaysAgo = new Date();
            thirtyDaysAgo.setDate(today.getDate() - 30);

            $('#FromDate').val(thirtyDaysAgo.toISOString().split('T')[0]);
            $('#ToDate').val(today.toISOString().split('T')[0]);
        }

        function validateDates() {
            const fromDate = $('#FromDate').val();
            const toDate = $('#ToDate').val();

            if (fromDate && toDate && fromDate > toDate) {
                showToast('error', 'خطأ في التاريخ', 'تاريخ البداية يجب أن يكون أقل من تاريخ النهاية');
                $('#ToDate').focus();
                return false;
            }
            return true;
        }

        function quickSearch(period) {
            const today = new Date();
            let fromDate = new Date();

            switch(period) {
                case 'today':
                    fromDate = new Date(today);
                    break;
                case 'week':
                    fromDate.setDate(today.getDate() - 7);
                    break;
                case 'month':
                    fromDate.setMonth(today.getMonth() - 1);
                    break;
            }

            $('#FromDate').val(fromDate.toISOString().split('T')[0]);
            $('#ToDate').val(today.toISOString().split('T')[0]);

            showToast('info', 'تم التحديث', `تم تعيين فترة البحث: ${period === 'today' ? 'اليوم' : period === 'week' ? 'هذا الأسبوع' : 'هذا الشهر'}`);
        }

        function exportToExcel() {
            showLoading();
            const form = $('<form>', {
                method: 'POST',
                action: '@Url.Action("ExportToExcel", "YarnTransactions")'
            });

            form.append($('@Html.AntiForgeryToken()'));

            const formData = $('#searchForm').serializeArray();
            $.each(formData, function(i, field) {
                form.append($('<input>', {
                    type: 'hidden',
                    name: field.name,
                    value: field.value
                }));
            });

            form.appendTo('body').submit().remove();
            hideLoading();
            showToast('success', 'تم التصدير', 'تم تصدير البيانات إلى Excel بنجاح');
        }

        function printResults() {
            window.print();
        }

        function copyToClipboard() {
            const table = document.getElementById('resultsTable');
            const range = document.createRange();
            range.selectNode(table);
            window.getSelection().removeAllRanges();
            window.getSelection().addRange(range);

            try {
                document.execCommand('copy');
                showToast('success', 'تم النسخ', 'تم نسخ الجدول إلى الحافظة');
            } catch (err) {
                showToast('error', 'خطأ', 'فشل في نسخ البيانات');
            }

            window.getSelection().removeAllRanges();
        }

        // Keep Transaction ID input in Latin
        $('#TransactionId').on('input', function() {
            // Don't convert Transaction ID search input - keep it Latin for searching
        });

        // Hide loading on page load
        $(window).on('load', function() {
            hideLoading();
        });

        console.log('✅ Search page scripts loaded at', CURRENT_TIME, 'by', CURRENT_USER);
    </script>
