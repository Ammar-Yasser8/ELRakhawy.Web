                    error: function(xhr, status, error) {
                        showNotification('حدث خطأ أثناء تحميل الواجهات المتاحة', 'error');
                        console.error('Forms load error:', { xhr, status, error, time: CURRENT_TIME });
                    }
                });
            }

            // Load packaging style details via API
            function loadPackagingStyleDetails(id) {
                showLoading();

                $.ajax({
                    url: `/api/PackagingStyles/${id}`,
                    method: 'GET',
                    success: function(response) {
                        hideLoading();

                        if (response.success) {
                            renderDetailsModal(response.data);
                            currentDetailsId = id;
                            detailsModal.show();

                            console.log('Loaded packaging style details:', {
                                id: id,
                                styleName: response.data.styleName,
