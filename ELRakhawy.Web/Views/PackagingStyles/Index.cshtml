<!-- Enhanced JavaScript with Sorting Functionality -->
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const table = document.getElementById("packagingStylesTable");
        const tbody = table.querySelector("tbody");
        const headers = table.querySelectorAll(".sortable");
        const toggleMenu = document.getElementById("columnToggleMenu");
        let currentSortColumn = -1;
        let currentSortDirection = "none";

        // ===== COLUMN TOGGLE =====
        headers.forEach((th, index) => {
            const li = document.createElement("li");
            li.innerHTML = `
                <label class="dropdown-item">
                    <input type="checkbox" class="me-2 column-toggle" data-index="${index}" checked>
                    ${th.innerText.trim()}
                </label>`;
            toggleMenu.appendChild(li);
        });

        toggleMenu.addEventListener("change", e => {
            if (!e.target.classList.contains("column-toggle")) return;
            const index = e.target.dataset.index;
            const visible = e.target.checked;
            table.querySelectorAll("tr").forEach(row => {
                const cell = row.querySelectorAll("th, td")[index];
                if (cell) cell.style.display = visible ? "" : "none";
            });
        });

        // ===== SORT FUNCTION =====
        function sortTable(columnIndex, direction) {
            const rows = Array.from(tbody.querySelectorAll("tr"));
            rows.sort((a, b) => {
                const aText = a.querySelectorAll("td")[columnIndex]?.innerText.trim() || "";
                const bText = b.querySelectorAll("td")[columnIndex]?.innerText.trim() || "";
                const comparison = aText.localeCompare(bText, "ar", { numeric: true, sensitivity: "base" });
                return direction === "asc" ? comparison : -comparison;
            });
            tbody.innerHTML = "";
            rows.forEach(row => tbody.appendChild(row));
        }

        // ===== HANDLE HEADER CLICK =====
        headers.forEach(header => {
            header.addEventListener("click", function () {
                const colIndex = parseInt(this.dataset.column);
                let newDirection = "asc";
                if (currentSortColumn === colIndex && currentSortDirection === "asc") {
                    newDirection = "desc";
                }
                currentSortColumn = colIndex;
                currentSortDirection = newDirection;
                sortTable(colIndex, newDirection);

                // Reset icons
                headers.forEach(h => {
                    const icon = h.querySelector(".sort-icon");
                    icon.className = "fas fa-sort sort-icon text-muted ms-1";
                });
                const icon = this.querySelector(".sort-icon");
                icon.className = newDirection === "asc"
                    ? "fas fa-sort-up sort-icon text-primary ms-1"
                    : "fas fa-sort-down sort-icon text-primary ms-1";
            });
        });
    });
</script>

