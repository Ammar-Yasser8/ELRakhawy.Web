                $.ajax({
                    url: '/api/PackagingStyles/GetAvailableForms',
                    method: 'GET',
                    success: function(response) {
                        if (response.success) {
                            availableForms = response.data;
                            renderAvailableForms(availableForms);
                        } else {
                            showNotification('حدث خطأ أثناء تحميل الواجهات المتاحة', 'error');
                        }
