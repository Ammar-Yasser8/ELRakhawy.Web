    <script>
        $(document).ready(function() {
            const CURRENT_TIME = '2025-08-16 20:01:16';
            const CURRENT_USER = 'Ammar-Yasser8';

            console.log('Enhanced packaging styles with details integration loaded:', {
                time: CURRENT_TIME,
                user: CURRENT_USER
            });

            // Initialize components
            const toastElement = document.getElementById('notificationToast');
            const toast = new bootstrap.Toast(toastElement, { delay: 4000 });
            const modal = new bootstrap.Modal(document.getElementById('packagingStyleModal'));
            const deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
            const detailsModal = new bootstrap.Modal(document.getElementById('detailsModal'));

            let packagingStylesData = [];
            let availableForms = [];
            let currentDetailsId = null;

            // Character counter for comment
            $('#styleComment').on('input', function() {
                const count = $(this).val().length;
                $('#charCount').text(count);

                if (count > 900) {
                    $('#charCount').addClass('text-warning');
                } else if (count > 1000) {
                    $('#charCount').addClass('text-danger');
                } else {
                    $('#charCount').removeClass('text-warning text-danger');
                }
            });

            // Enhanced notification function
            function showNotification(message, type = 'success') {
                const icons = {
                    success: 'fa-check-circle',
                    error: 'fa-exclamation-circle',
                    warning: 'fa-exclamation-triangle',
                    info: 'fa-info-circle'
                };

                const colors = {
                    success: 'bg-success',
                    error: 'bg-danger',
                    warning: 'bg-warning',
                    info: 'bg-info'
                };

                $('#toastIcon').removeClass().addClass(`fas ${icons[type]} me-2`);
                $('#toastMessage').text(message);
                $('#notificationToast').removeClass('bg-success bg-danger bg-warning bg-info text-white text-dark')
                    .addClass(`${colors[type]} ${type === 'warning' ? 'text-dark' : 'text-white'}`);

                toast.show();
            }

            // Loading functions
            function showLoading() {
                $('#loadingOverlay').removeClass('d-none');
            }

            function hideLoading() {
                $('#loadingOverlay').addClass('d-none');
            }

            // Load packaging styles data
            function loadPackagingStyles() {
                showLoading();

                $.ajax({
                    url: '/api/PackagingStyles',
                    method: 'GET',
                    success: function(response) {
                        hideLoading();

                        if (response.success) {
                            packagingStylesData = response.data;
                            renderPackagingStyles(packagingStylesData);
                            updateCounts(packagingStylesData.length);

                            console.log('Loaded packaging styles:', {
                                count: packagingStylesData.length,
                                time: CURRENT_TIME,
                                user: CURRENT_USER
                            });
                        } else {
                            showNotification('حدث خطأ أثناء تحميل البيانات', 'error');
                        }
                    },
                    error: function(xhr, status, error) {
                        hideLoading();
                        showNotification('حدث خطأ أثناء تحميل أنماط التعبئة', 'error');
                        console.error('Load error:', { xhr, status, error, time: CURRENT_TIME });
                    }
                });
            }

            // Load available forms
