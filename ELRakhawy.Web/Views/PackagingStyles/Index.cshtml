                    ? `<div class="alert alert-light border-start border-4 border-warning">
                        <h6 class="alert-heading mb-2">
                            <i class="fas fa-comment-alt text-warning me-2"></i>البيان والتعليقات
                        </h6>
                        <p class="mb-0">${style.comment}</p>
                       </div>`
                    : '<div class="alert alert-light text-muted text-center"><i class="fas fa-info-circle me-2"></i>لا يوجد بيان أو تعليقات</div>';

                const detailsContent = `
                    <div class="p-4">
                        <!-- Header Section -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <div class="d-flex align-items-center p-3 bg-light rounded">
                                    <div class="flex-shrink-0 me-3">
                                        <div class="icon-circle bg-info text-white">
                                            <i class="fas fa-cube fa-2x"></i>
                                        </div>
                                    </div>
                                    <div class="flex-grow-1">
                                        <h4 class="mb-1 fw-bold text-dark">${style.styleName}</h4>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <small class="text-muted">
                                                </small>
                                            </div>
                                            <div class="col-md-6">
                                                <small class="text-muted">
                                                    <i class="fas fa-link me-1"></i>عدد الواجهات: <strong>${style.formsCount || 0}</strong>
                                                </small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Forms Section -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <h6 class="fw-bold text-dark mb-3">
                                    <i class="fas fa-link text-info me-2"></i>الواجهات المرتبطة
                                </h6>
                                <div class="row g-2">
                                    ${formsHtml}
                                </div>
                            </div>
                        </div>

                        <!-- Comment Section -->
                        <div class="row">
                            <div class="col-12">
                                ${commentHtml}
                            </div>
                        </div>

                        <!-- Meta Information -->
                        <div class="row mt-4 pt-3 border-top">
                            <div class="col-12">
                                <div class="row text-center">
                                    <div class="col-md-4">
                                        <div class="p-2">
                                            <div class="text-primary fs-5 fw-bold">${style.formsCount || 0}</div>
                                            <small class="text-muted">واجهات مرتبطة</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                `;

                $('#detailsContent').html(detailsContent);
            }

            // Render packaging styles table
            function renderPackagingStyles(data) {
                const tbody = $('#packagingStylesTableBody');
                tbody.empty();

                if (!data || data.length === 0) {
                    $('#emptyState').show();
                    $('#packagingStylesContainer').hide();
                    return;
                }

                $('#emptyState').hide();
                $('#packagingStylesContainer').show();

                data.forEach(function(style) {
                    const formsHtml = style.forms && style.forms.length > 0
                        ? style.forms.map(form =>
                            `<span class="badge bg-info bg-opacity-10 text-info border border-info border-opacity-25">
                                <i class="fas fa-link me-1"></i>${form.name}
                            </span>`
                          ).join(' ')
                        : '<span class="text-muted fst-italic"><i class="fas fa-unlink me-1"></i>لا توجد واجهات مرتبطة</span>';

                    const commentHtml = style.comment
                        ? `<span title="${style.comment}" class="comment-text">
                            ${style.comment.length > 50 ? style.comment.substring(0, 47) + '...' : style.comment}
                           </span>`
                        : '<span class="text-muted fst-italic"><i class="fas fa-info-circle me-1"></i>لا يوجد بيان</span>';

                    const row = `
                        <tr data-id="${style.id}" class="packaging-style-row">
                            <td class="packaging-style-name">
                                <div class="d-flex align-items-center">
                                    <div class="packaging-icon me-2">
                                        <i class="fas fa-cube text-success"></i>
                                    </div>
                                    <div>
                                        <span class="fw-semibold">${style.styleName}</span>
                                        <br>
                                    </div>
                                </div>
                            </td>
                            <td class="packaging-style-forms">
                                <div class="d-flex flex-wrap gap-1">
                                    ${formsHtml}
                                </div>
                            </td>
                            <td class="packaging-style-comment">
                                ${commentHtml}
                            </td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    
                                     <button class="btn btn-sm btn-outline-info edit-style"
                                             onclick="window.location.href='/PackagingStyles/Edit/${style.id}'"
                                             title="تعديل ${style.styleName}">
                                         <i class="fas fa-edit"></i>
                                     </button>
                                           
                                    </button>
                                    <button class="btn btn-sm btn-outline-secondary view-details"
                                            data-id="${style.id}" title="تفاصيل ${style.styleName}">
                                        <i class="fas fa-info-circle"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger delete-style"
                                            data-id="${style.id}" data-name="${style.styleName}" title="حذف ${style.styleName}">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    `;
                    tbody.append(row);
                });
            }

            // Render available forms
            function renderAvailableForms(forms, selectedFormIds = []) {
                const container = $('#availableFormsContainer');

                if (!forms || forms.length === 0) {
                    container.html(`
                        <div class="text-center text-muted">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            لا توجد واجهات متاحة
                        </div>
                    `);
                    return;
                }

                const formsHtml = forms.map(form => `
                    <div class="form-check form-check-inline mb-2">
                        <input class="form-check-input" type="checkbox"
                               id="form_${form.id}" value="${form.id}"
                               ${selectedFormIds.includes(form.id) ? 'checked' : ''}>
                        <label class="form-check-label" for="form_${form.id}">
                            <i class="fas fa-link me-1 text-info"></i>${form.formName}
                        </label>
                    </div>
                `).join('');

                container.html(formsHtml);
            }

            // Enhanced search functionality
            function performSearch() {
                const nameSearch = $('#searchByName').val().toLowerCase().trim();
                const formsSearch = $('#searchByForms').val().toLowerCase().trim();
                const commentSearch = $('#searchByComment').val().toLowerCase().trim();
                let visibleCount = 0;

                $('.packaging-style-row').each(function() {
                    const row = $(this);
                    const name = row.find('.packaging-style-name').text().toLowerCase();
                    const forms = row.find('.packaging-style-forms').text().toLowerCase();
                    const comment = row.find('.packaging-style-comment').text().toLowerCase();

                    const nameMatch = !nameSearch || name.includes(nameSearch);
                    const formsMatch = !formsSearch || forms.includes(formsSearch);
                    const commentMatch = !commentSearch || comment.includes(commentSearch);

                    const shouldShow = nameMatch && formsMatch && commentMatch;
                    row.toggle(shouldShow);

                    if (shouldShow) visibleCount++;
                });

                updateSearchInfo(visibleCount, nameSearch, formsSearch, commentSearch);
            }

            function updateSearchInfo(visibleCount, nameSearch, formsSearch, commentSearch) {
                $('#visibleCount').text(visibleCount);
                $('#badgeCount').text(visibleCount);

                // Show/hide clear buttons
                $('#clearNameSearch').toggle(nameSearch.length > 0);
                $('#clearFormsSearch').toggle(formsSearch.length > 0);
                $('#clearCommentSearch').toggle(commentSearch.length > 0);

                const hasAnySearch = nameSearch.length > 0 || formsSearch.length > 0 || commentSearch.length > 0;
                $('#clearAllSearch').toggle(hasAnySearch);

                // Show/hide no results
                if (visibleCount === 0 && hasAnySearch) {
                    $('#noResultsMessage').show();
                    $('#packagingStylesContainer .section-card').hide();
                } else {
                    $('#noResultsMessage').hide();
                    $('#packagingStylesContainer .section-card').show();
                }

                // Add visual feedback to search inputs
                $('#searchByName').toggleClass('border-primary', nameSearch.length > 0);
                $('#searchByForms').toggleClass('border-primary', formsSearch.length > 0);
                $('#searchByComment').toggleClass('border-primary', commentSearch.length > 0);
            }

            function updateCounts(count) {
                $('#totalCount').text(count);
                $('#visibleCount').text(count);
                $('#badgeCount').text(count);
            }

            // Search events
            let searchTimeout;
            $('#searchByName, #searchByForms, #searchByComment').on('input', function() {
                clearTimeout(searchTimeout);
                searchTimeout = setTimeout(performSearch, 200);
            });

            // Clear search buttons
            $('#clearNameSearch').click(function() {
                $('#searchByName').val('').removeClass('border-primary');
                performSearch();
                $('#searchByName').focus();
            });

            $('#clearFormsSearch').click(function() {
                $('#searchByForms').val('').removeClass('border-primary');
                performSearch();
                $('#searchByForms').focus();
            });

            $('#clearCommentSearch').click(function() {
                $('#searchByComment').val('').removeClass('border-primary');
                performSearch();
                $('#searchByComment').focus();
            });

            $('#clearAllSearch, #resetSearch').click(function() {
                $('#searchByName, #searchByForms, #searchByComment').val('').removeClass('border-primary');
                performSearch();
            });

            // Modal handlers
            $('#addNewStyle, #addFirstStyle').click(function() {
                resetForm();
                $('#modalTitle').html('<i class="fas fa-plus-circle text-success me-2"></i>إضافة نمط تعبئة جديد');
                loadAvailableForms();
                modal.show();
            });

            $(document).on('click', '.edit-style', function() {
                const id = $(this).data('id');
                editPackagingStyle(id);
            });

            $(document).on('click', '.delete-style', function() {
                const id = $(this).data('id');
                const name = $(this).data('name');

                $('#deleteStyleId').val(id);
                $('#deleteStyleName').text(name);
                deleteModal.show();
            });

            // Enhanced details view handler
            $(document).on('click', '.view-details', function() {
                const id = $(this).data('id');
                loadPackagingStyleDetails(id);
            });

            // Edit from details modal
            $('#editFromDetails').click(function() {
                if (currentDetailsId) {
                    detailsModal.hide();
                    editPackagingStyle(currentDetailsId);
                }
            });

            // Reset form
            function resetForm() {
                $('#packagingStyleForm')[0].reset();
                $('#styleId').val('');
                $('#charCount').text('0');
                $('#packagingStyleForm .is-invalid').removeClass('is-invalid');
                $('#packagingStyleForm').removeClass('was-validated');
                $('#availableFormsContainer input[type="checkbox"]').prop('checked', false);
            }

            // Edit packaging style
            function editPackagingStyle(id) {
                showLoading();

                $.ajax({
                    url: `/api/PackagingStyles/${id}`,
                    method: 'GET',
                    success: function(response) {
                        hideLoading();

                        if (response.success) {
                            const style = response.data;

                            $('#styleId').val(style.id);
                            $('#styleName').val(style.styleName);
                            $('#styleComment').val(style.comment || '');
                            $('#charCount').text((style.comment || '').length);

                            const selectedFormIds = style.forms ? style.forms.map(f => f.id) : [];
                            renderAvailableForms(availableForms, selectedFormIds);

                            $('#modalTitle').html('<i class="fas fa-edit text-info me-2"></i>تعديل نمط التعبئة');
                            modal.show();
                        } else {
                            showNotification('حدث خطأ أثناء تحميل بيانات نمط التعبئة', 'error');
                        }
                    },
                    error: function(xhr, status, error) {
                        hideLoading();
                        showNotification('حدث خطأ أثناء تحميل بيانات نمط التعبئة', 'error');
                        console.error('Edit load error:', { xhr, status, error, time: CURRENT_TIME });
                    }
                });
            }

            // Save packaging style
            $('#savePackagingStyle').click(function() {
                const form = document.getElementById('packagingStyleForm');
                if (!form.checkValidity()) {
                    $(form).addClass('was-validated');
                    return;
                }

                const id = $('#styleId').val();
                const styleName = $('#styleName').val().trim();
                const comment = $('#styleComment').val().trim();
                const selectedFormIds = [];

                $('#availableFormsContainer input[type="checkbox"]:checked').each(function() {
                    selectedFormIds.push(parseInt($(this).val()));
                });

                const data = {
                    StyleName: styleName,
                    Comment: comment,
                    SelectedFormIds: selectedFormIds
                };

                const isEdit = id && id !== '';
                const url = isEdit ? `/api/PackagingStyles/${id}` : '/api/PackagingStyles';
                const method = isEdit ? 'PUT' : 'POST';

                showLoading();

                $.ajax({
                    url: url,
                    method: method,
                    contentType: 'application/json',
                    data: JSON.stringify(data),
                    success: function(response) {
                        hideLoading();

                        if (response.success) {
                            showNotification(response.message, 'success');
                            modal.hide();
                            loadPackagingStyles(); // Reload data
                        } else {
                            showNotification(response.message, 'error');
                        }
                    },
                    error: function(xhr, status, error) {
                        hideLoading();

                        let errorMessage = 'حدث خطأ أثناء حفظ نمط التعبئة';
                        if (xhr.responseJSON && xhr.responseJSON.message) {
                            errorMessage = xhr.responseJSON.message;
                        }

                        showNotification(errorMessage, 'error');
                        console.error('Save error:', { xhr, status, error, time: CURRENT_TIME });
                    }
                });
            });

            // Delete packaging style
            $('#confirmDelete').click(function() {
                const id = $('#deleteStyleId').val();

                showLoading();

                $.ajax({
                    url: `/api/PackagingStyles/${id}`,
                    method: 'DELETE',
                    success: function(response) {
                        hideLoading();

                        if (response.success) {
                            showNotification(response.message, 'success');
                            deleteModal.hide();
                            loadPackagingStyles(); // Reload data
                        } else {
                            showNotification(response.message, 'error');
                        }
                    },
                    error: function(xhr, status, error) {
                        hideLoading();
                        showNotification('حدث خطأ أثناء حذف نمط التعبئة', 'error');
                        console.error('Delete error:', { xhr, status, error, time: CURRENT_TIME });
                    }
                });
            });

            // Refresh data
            $('#refreshData').click(function() {
                const btn = $(this);
                const originalText = btn.html();
                btn.prop('disabled', true).html('<span class="spinner-border spinner-border-sm me-2"></span>جاري التحديث...');

                loadPackagingStyles();

                setTimeout(() => {
                    btn.prop('disabled', false).html(originalText);
                }, 1000);
            });

            // Keyboard shortcuts
            $(document).keydown(function(e) {
                if (e.ctrlKey && e.keyCode === 70) { // Ctrl+F
                    e.preventDefault();
                    $('#searchByName').focus();
                }
                if (e.ctrlKey && e.keyCode === 78) { // Ctrl+N
                    e.preventDefault();
                    $('#addNewStyle').click();
                }
                if (e.keyCode === 27) { // Escape
                    $('#searchByName, #searchByForms, #searchByComment').val('').removeClass('border-primary');
                    performSearch();
                }
            });

            // Initialize page
            loadPackagingStyles();
            loadAvailableForms();

            console.log('Enhanced packaging styles page with details modal initialized successfully at', CURRENT_TIME, 'by', CURRENT_USER);
        });
    </script>

