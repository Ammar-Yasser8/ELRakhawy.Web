@using ELRakhawy.EL.ViewModels
@model PackagingStyleViewModel
@{
    ViewData["Title"] = "تعديل نمط التعبئة";
}

<div class="welcome-card mb-4">
    <div class="row">
        <div class="col">
            <h2 class="mb-3">تعديل نمط التعبئة</h2>
            <p class="text-muted">تعديل بيانات نمط التعبئة والواجهات المرتبطة به</p>
        </div>
    </div>
</div>
<nav aria-label="breadcrumb" class="mb-4">
    <div class="card border-0 shadow-sm">
        <div class="card-body py-2">
            <ol class="breadcrumb mb-0 align-items-center">
                <li class="breadcrumb-item">
                    <a href="@Url.Action("Index", "Home")" class="text-decoration-none d-flex align-items-center">
                        <i class="fas fa-home text-primary me-2"></i>
                        <span class="fw-semibold">الرئيسية</span>
                    </a>
                </li>
                <li class="breadcrumb-item">
                    <a href="@Url.Action("PublicTables", "Home")" class="text-decoration-none d-flex align-items-center">
                        <i class="fas fa-table text-info me-2"></i>
                        <span class="fw-semibold">الجداول العامة</span>
                    </a>
                </li>
                <li class="breadcrumb-item">
                    <a href="@Url.Action("Index", "PackagingStyles")" class="text-decoration-none d-flex align-items-center">
                        <i class="fas fa-table text-info me-2"></i>
                        <span class="fw-semibold">أنماط التعبئة</span>
                    </a>
                </li>
                <li class="breadcrumb-item active d-flex align-items-center">
                    <i class="fas fa-box text-success me-2"></i>
                    <span class="fw-bold text-dark">@ViewData["Title"]</span>
                </li>
            </ol>
        </div>
    </div>
</nav>

<div class="row">
    <div class="col-md-8">
        <div class="section-card">
            <div class="section-header">
                <h5 class="mb-0">بيانات نمط التعبئة</h5>
            </div>
            <div class="section-content">
                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="mb-3">
                        <label asp-for="StyleName" class="form-label">التعبئة <span class="text-danger">*</span></label>
                        <input asp-for="StyleName" class="form-control" placeholder="أدخل اسم نمط التعبئة" />
                        <span asp-validation-for="StyleName" class="text-danger"></span>
                        <small class="text-muted">مطلوب ويجب أن يكون فريدًا</small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Comment" class="form-label">بيان</label>
                        <textarea asp-for="Comment" class="form-control" rows="3" placeholder="أدخل بيان إضافي (اختياري)"></textarea>
                        <span asp-validation-for="Comment" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="SelectedFormIds" class="form-label">الواجهات المرتبطة <span class="text-danger">*</span></label>
                        <div class="card border">
                            <div class="card-body p-3">
                                <div class="row">
                                    @foreach (var form in Model.AvailableForms)
                                    {
                                        <div class="col-md-4 mb-2">
                                            <div class="form-check">
                                                <input type="checkbox"
                                                       class="form-check-input"
                                                       id="form_@form.Id"
                                                       name="SelectedFormIds"
                                                       value="@form.Id"
                                                       @(form.IsSelected ? "checked" : "") />
                                                <label class="form-check-label" for="form_@form.Id">@form.FormName</label>
                                            </div>
                                        </div>
                                    }
                                </div>
                                <span asp-validation-for="SelectedFormIds" class="text-danger d-block mt-2"></span>
                                <small class="text-muted">يجب اختيار واجهة واحدة على الأقل</small>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-right me-1"></i>
                            العودة للقائمة
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-1"></i>
                            حفظ التغييرات
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="section-card">
            <div class="section-header">
                <h5 class="mb-0">تعليمات</h5>
            </div>
            <div class="section-content">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item px-0">
                        <i class="fas fa-info-circle text-primary me-2"></i>
                        <strong>اسم التعبئة:</strong> يجب أن يكون فريدًا ولا يتجاوز 100 حرف
                    </li>
                    <li class="list-group-item px-0">
                        <i class="fas fa-info-circle text-primary me-2"></i>
                        <strong>الواجهات المرتبطة:</strong> حدد واجهة واحدة أو أكثر
                    </li>
                    <li class="list-group-item px-0">
                        <i class="fas fa-info-circle text-primary me-2"></i>
                        <strong>بيان:</strong> يمكنك إضافة تفاصيل إضافية (اختياري)
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function() {
            // Validate at least one form is selected
            $("form").on("submit", function(e) {
                if ($("input[name='SelectedFormIds']:checked").length === 0) {
                    e.preventDefault();
                    $("span[data-valmsg-for='SelectedFormIds']").text("يجب اختيار واجهة واحدة على الأقل");
                    return false;
                }
                return true;
            });
        });
    </script>
}