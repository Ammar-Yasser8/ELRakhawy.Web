                    <span class="fw-bold text-dark">@ViewData["Title"]</span>
                </li>
            </ol>
        </div>
    </div>
</nav>
<div class="row">
    <div class="col-lg-8 mb-4">
        <div class="section-card h-100">
            <div class="section-header">
                <h5 class="mb-0">بيانات نمط التعبئة</h5>
            </div>
            <div class="section-content">
                <form asp-action="Create" method="post" id="createForm">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3 py-2"></div>

                    <div class="mb-4">
                        <label asp-for="StyleName" class="form-label fw-bold">التعبئة <span class="text-danger">*</span></label>
                        <input asp-for="StyleName" class="form-control" maxlength="100" autocomplete="off" />
                        <span asp-validation-for="StyleName" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Comment" class="form-label fw-bold">بيان</label>
                        <textarea asp-for="Comment" class="form-control" rows="3" maxlength="500"></textarea>
                        <span asp-validation-for="Comment" class="text-danger"></span>
                        <div class="d-flex justify-content-between mt-1">
                            <small class="text-muted">يمكنك إضافة تفاصيل إضافية (اختياري)</small>
                            <small class="text-muted"><span id="commentCounter">0</span>/500</small>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label asp-for="SelectedFormIds" class="form-label fw-bold">
                            الواجهات المرتبطة <span class="text-danger">*</span>
                        </label>
                        <div class="card shadow-sm border-0">
                            <div class="card-header bg-light py-2 d-flex justify-content-between align-items-center">
                                <span class="fw-semibold">
                                    <i class="fas fa-layer-group text-primary me-2"></i>
                                    حدد واحدة أو أكثر من الواجهات
                                    <span class="badge bg-secondary ms-2" id="selectedCount">0</span>
                                </span>
                                <div>
                                    <button type="button" class="btn btn-sm btn-outline-success" id="selectAllForms">
                                        <i class="fas fa-check-double me-1"></i> تحديد الكل
                                    </button>
                                    <button type="button" class="btn btn-sm btn-outline-danger ms-1" id="deselectAllForms">
                                        <i class="fas fa-times me-1"></i> إلغاء الكل
                                    </button>
                                </div>
                            </div>
                            <div class="card-body p-3" style="max-height:250px; overflow-y:auto;">
                                <div class="row row-cols-1 row-cols-md-2 g-2">
                                    @if (Model.AvailableForms != null && Model.AvailableForms.Any())
                                    {
                                        foreach (var form in Model.AvailableForms)
                                        {
                                            <div class="col">
                                                <div class="form-check p-2 rounded hover-card">
                                                    <input type="checkbox"
                                                           class="form-check-input form-checkbox"
                                                           id="form_@form.Id"
                                                           name="SelectedFormIds"
                                                           value="@form.Id"
                                                           @(form.IsSelected ? "checked" : "") />
                                                    <label class="form-check-label" for="form_@form.Id">
                                                        <i class="fas fa-cube text-info me-1"></i> @form.FormName
                                                    </label>
                                                </div>
                                            </div>
                                        }
                                    }
                                    else
                                    {
                                        <div class="col-12">
                                            <div class="alert alert-warning mb-0">لا توجد واجهات متاحة للاختيار</div>
                                        </div>
                                    }
                                </div>
                                <div id="formValidation" class="text-danger mt-2"></div>
                            </div>
                        </div>
                    </div>


                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="Index" class="btn btn-secondary">إلغاء</a>
                        <button type="submit" class="btn btn-primary" id="submitBtn">
                            <i class="fas fa-save me-1"></i> حفظ
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            // Character counter for Comment field
            $("#Comment").on("input", function() {
                const maxLength = 500;
                const currentLength = $(this).val().length;
                $("#commentCounter").text(currentLength);

                if (currentLength > maxLength) {
                    $(this).val($(this).val().substring(0, maxLength));
                    $("#commentCounter").text(maxLength);
                }
            });

            // Initialize the comment counter
            $("#commentCounter").text($("#Comment").val().length);

            // Select all forms
            $("#selectAllForms").on("click", function() {
                $(".form-checkbox").prop("checked", true);
                validateForms();
            });

            // Deselect all forms
            $("#deselectAllForms").on("click", function() {
                $(".form-checkbox").prop("checked", false);
                validateForms();
            });

            // Validate forms selection
            function validateForms() {
                if ($(".form-checkbox:checked").length === 0) {
                    $("#formValidation").text("يجب اختيار واجهة واحدة على الأقل");
                    return false;
                } else {
                    $("#formValidation").text("");
                    return true;
                }
            }

            // Validate on checkbox change
            $(".form-checkbox").on("change", validateForms);

            // Validate on form submit
            $("#createForm").on("submit", function(e) {
                if (!validateForms()) {
                    e.preventDefault();
                    $('html, body').animate({
                        scrollTop: $("#formValidation").offset().top - 100
                    }, 200);
                    return false;
                }
                return true;
            });

            // Prevent double submission
            $("#createForm").on("submit", function() {
                $("#submitBtn").prop("disabled", true).html('<span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>جارٍ الحفظ...');
            });

            // Initialize validation
            validateForms();
        });
    </script>
    <style>
        .hover-card {
            transition: background-color 0.2s ease, box-shadow 0.2s ease;
            cursor: pointer;
        }

            .hover-card:hover {
                background-color: #f8f9fa;
                box-shadow: 0 2px 6px rgba(0,0,0,0.08);
            }
    </style>

}