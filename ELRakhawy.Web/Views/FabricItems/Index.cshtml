@using ELRakhawy.EL.Models
@model IEnumerable<FabricItem>

@{
    ViewData["Title"] = "أصناف الأقمشة";
    Layout = "_Layout";
}

<!-- Enhanced Navigation Bar -->
<nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb bg-light rounded-3 px-3 py-2 shadow-sm">
        <li class="breadcrumb-item">
            <a href="@Url.Action("Index", "Home")" class="text-decoration-none">
                <i class="fas fa-home text-primary"></i>
                <span class="ms-1">الرئيسية</span>
            </a>
        </li>
        <li class="breadcrumb-item">
            <i class="fas fa-cut text-info me-1"></i>قسم الأقمشة
        </li>
        <li class="breadcrumb-item active">
            <i class="fas fa-fabric text-secondary me-1"></i>@ViewData["Title"]
        </li>
    </ol>
</nav>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">قائمة أصناف الأقمشة</h5>
                        <a asp-action="Create" class="btn btn-light btn-sm">
                            <i class="fas fa-plus"></i> إضافة جديد
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (Model == null || !Model.Any())
                    {
                        <div class="alert alert-info text-center">
                            <i class="fas fa-info-circle"></i> لا توجد أصناف أقمشة. <a asp-action="Create">إضافة صنف جديد</a>.
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover" id="fabricItemsTable">
                                <thead class="table-dark">
                                    <tr>
                                        <th>
                                            <div class="d-flex flex-column">
                                                <span>اسم الصنف</span>
                                                <input type="text" class="form-control form-control-sm mt-1 column-search" placeholder="بحث..." data-column="0">
                                            </div>
                                        </th>
                                        <th>
                                            <div class="d-flex flex-column">
                                                <span>الخام المكون</span>
                                                <input type="text" class="form-control form-control-sm mt-1 column-search" placeholder="بحث..." data-column="1">
                                            </div>
                                        </th>
                                        <th>
                                            <div class="d-flex flex-column">
                                                <span>الحالة</span>
                                                <select class="form-control form-control-sm mt-1 column-search" data-column="2">
                                                    <option value="">الكل</option>
                                                    <option value="نشط">نشط</option>
                                                    <option value="غير نشط">غير نشط</option>
                                                </select>
                                            </div>
                                        </th>
                                        <th>البيان</th>
                                        <th>الإجراءات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@Html.DisplayFor(modelItem => item.Item)</td>
                                            <td>@Html.DisplayFor(modelItem => item.OriginRaw.Item)</td>
                                            <td>
                                                @if (item.Status)
                                                {
                                                    <span class="badge bg-success">نشط</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">غير نشط</span>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(item.Comment))
                                                {
                                                    @(item.Comment.Length > 50 ? item.Comment.Substring(0, 50) + "..." : item.Comment)
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="عرض">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="تعديل">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="حذف">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .column-search {
        direction: rtl;
        text-align: right;
    }

    .table th {
        text-align: center;
        vertical-align: middle;
    }

    .table td {
        vertical-align: middle;
    }

    .btn-group .btn {
        border-radius: 4px;
        margin: 0 2px;
    }

    /* RTL support */
    .card-header .d-flex {
        direction: rtl;
    }

    .alert {
        text-align: center;
        direction: rtl;
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize DataTable with RTL support
            var table = $('#fabricItemsTable').DataTable({
                responsive: true,
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/ar.json'
                },
                dom: '<"row"<"col-sm-12 col-md-6"l><"col-sm-12 col-md-6"f>>rtip',
                columnDefs: [
                    {
                        orderable: false,
                        targets: -1,
                        className: 'text-center'
                    },
                    {
                        className: 'text-center',
                        targets: [0, 1, 2, 3]
                    }
                ]
            });

            // Apply column search
            $('.column-search').on('keyup change', function() {
                var columnIndex = $(this).data('column');
                table.column(columnIndex).search(this.value).draw();
            });

            // Clear search inputs
            $('#clearSearch').on('click', function() {
                $('.column-search').val('').trigger('change');
            });
        });
    </script>
}