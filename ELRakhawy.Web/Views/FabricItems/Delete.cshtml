@using ELRakhawy.EL.Models
@model FabricItem

@{
    ViewData["Title"] = "حذف صنف القماش";
    Layout = "_Layout";
}

<!-- Navigation Bar -->
<nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb bg-light rounded-pill px-4 py-3 shadow-sm">
        <li class="breadcrumb-item">
            <a href="@Url.Action("Index", "Home")" class="text-decoration-none">
                <i class="fas fa-home me-1"></i>الرئيسية
            </a>
        </li>
        <li class="breadcrumb-item">
            <a href="@Url.Action("Index")" class="text-decoration-none">
                <i class="fas fa-fabric me-1"></i>إدارة أصناف الأقمشة
            </a>
        </li>
        <li class="breadcrumb-item active">
            <i class="fas fa-trash me-1"></i>@ViewData["Title"]
        </li>
    </ol>
</nav>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white text-center">
                    <h5 class="mb-0">
                        <i class="fas fa-exclamation-triangle"></i> تأكيد حذف صنف القماش
                    </h5>
                </div>
                <div class="card-body" dir="rtl">
                    <div class="alert alert-danger d-flex align-items-center mb-4" role="alert">
                        <i class="fas fa-exclamation-triangle fs-4 me-3"></i>
                        <div>
                            <strong>تحذير!</strong> 
                            هل أنت متأكد من رغبتك في حذف هذا الصنف؟ هذا الإجراء لا يمكن التراجع عنه.
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="detail-item">
                                <h6 class="detail-label">
                                    <i class="fas fa-tag me-2 text-primary"></i>اسم الصنف
                                </h6>
                                <p class="detail-value">@Html.DisplayFor(model => model.Item)</p>
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <div class="detail-item">
                                <h6 class="detail-label">
                                    <i class="fas fa-cube me-2 text-secondary"></i>الخام المكون
                                </h6>
                                <p class="detail-value">@Html.DisplayFor(model => model.OriginRaw.Item)</p>
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <div class="detail-item">
                                <h6 class="detail-label">
                                    <i class="fas fa-power-off me-2 text-success"></i>الحالة
                                </h6>
                                <p class="detail-value">
                                    @if (Model.Status)
                                    {
                                        <span class="badge bg-success fs-6">
                                            <i class="fas fa-check-circle me-1"></i>نشط
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger fs-6">
                                            <i class="fas fa-times-circle me-1"></i>غير نشط
                                        </span>
                                    }
                                </p>
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <div class="detail-item">
                                <h6 class="detail-label">
                                    <i class="fas fa-hashtag me-2 text-info"></i>رقم الهوية
                                </h6>
                                <p class="detail-value">@Html.DisplayFor(model => model.Id)</p>
                            </div>
                        </div>
                        
                        @if (!string.IsNullOrEmpty(Model.Comment))
                        {
                            <div class="col-md-12 mb-3">
                                <div class="detail-item">
                                    <h6 class="detail-label">
                                        <i class="fas fa-comment me-2 text-warning"></i>البيان
                                    </h6>
                                    <div class="detail-value comment-box">
                                        @Html.DisplayFor(model => model.Comment)
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    
                    <hr class="my-4">
                    
                    <div class="text-center">
                        <form asp-action="Delete" method="post" class="d-inline" id="deleteForm">
                            <input type="hidden" asp-for="Id" />
                            <button type="submit" class="btn btn-danger btn-lg me-3" id="confirmDeleteBtn">
                                <i class="fas fa-trash"></i> تأكيد الحذف
                            </button>
                        </form>
                        
                        <a asp-action="Index" class="btn btn-secondary btn-lg">
                            <i class="fas fa-arrow-left"></i> إلغاء
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 15px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
    
    .card-header {
        border-radius: 15px 15px 0 0 !important;
    }
    
    .detail-item {
        background: #f8f9fa;
        border-radius: 8px;
        padding: 15px;
        border-left: 4px solid #dc3545;
        height: 100%;
    }
    
    .detail-label {
        color: #495057;
        font-weight: 600;
        margin-bottom: 8px;
        border-bottom: 1px solid #dee2e6;
        padding-bottom: 5px;
    }
    
    .detail-value {
        font-size: 1.1rem;
        color: #212529;
        margin-bottom: 0;
        font-weight: 500;
    }
    
    .comment-box {
        background: white;
        border: 1px solid #dee2e6;
        border-radius: 6px;
        padding: 12px;
        white-space: pre-wrap;
        min-height: 80px;
    }
    
    .btn {
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.3s ease;
    }
    
    .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
    }
    
    .badge {
        padding: 8px 12px;
    }
    
    hr {
        border-top: 2px solid #dee2e6;
        border-radius: 2px;
    }
    
    .alert {
        border-radius: 10px;
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#deleteForm').on('submit', function(e) {
                e.preventDefault();
                
                // Show confirmation modal or use browser confirm
                if (confirm('هل أنت متأكد من رغبتك في حذف هذا الصنف نهائياً؟ لا يمكن التراجع عن هذا الإجراء.')) {
                    // Disable the button to prevent double submission
                    $('#confirmDeleteBtn').prop('disabled', true).html('<i class="fas fa-spinner fa-spin"></i> جاري الحذف...');
                    
                    // Submit the form
                    this.submit();
                }
            });
        });
    </script>
}