@using ELRakhawy.EL.Models
@model FullWarpBeam
@{
    ViewData["Title"] = "Delete Full Warp Beam";
}
<!-- Navigation Breadcrumb -->
<nav aria-label="breadcrumb" class="mb-4">
    <div class="card border-0 shadow-sm">
        <div class="card-body py-2 px-3">
            <ol class="breadcrumb mb-0 align-items-center">
                <li class="breadcrumb-item">
                    <a href="@Url.Action("Index", "Home")" class="text-decoration-none d-flex align-items-center">
                        <i class="fas fa-home text-primary me-2"></i>الرئيسية
                    </a>
                </li>
                <li class="breadcrumb-item">
                    <a href="@Url.Action("PublicTables", "Home")" class="text-decoration-none d-flex align-items-center">
                        <i class="fas fa-table text-info me-2"></i>الجداول العامة
                    </a>
                </li>
                <li class="breadcrumb-item">
                    <a href="@Url.Action("Index", "FullWarpBeam")" class="text-decoration-none d-flex align-items-center">
                        <i class="fas fa-cogs text-success me-2"></i>إدارة السدى
                    </a>
                </li>
                <li class="breadcrumb-item active d-flex align-items-center">
                    <i class="fas fa-edit text-warning me-2"></i>
                    <span class="fw-bold text-dark">حذف السدى</span>
                </li>
            </ol>
        </div>
    </div>

</nav>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h4><i class="fas fa-exclamation-triangle"></i> Delete Confirmation</h4>
                </div>
                <div class="card-body">
                    <h5 class="text-danger">Are you sure you want to delete this Full Warp Beam?</h5>
                    <p class="text-muted">This action cannot be undone.</p>

                    <div class="card mb-4">
                        <div class="card-header bg-light">
                            <h6>Beam Details</h6>
                        </div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-4">ID:</dt>
                                <dd class="col-sm-8">@Model.Id</dd>

                                <dt class="col-sm-4">Item Name:</dt>
                                <dd class="col-sm-8">@Model.Item</dd>

                                <dt class="col-sm-4">Origin Yarn:</dt>
                                <dd class="col-sm-8">@(Model.OriginYarn?.Item ?? "N/A")</dd>

                                <dt class="col-sm-4">Status:</dt>
                                <dd class="col-sm-8">
                                    <span class="badge @(Model.Status ? "bg-success" : "bg-secondary")">
                                        @(Model.Status ? "Active" : "Inactive")
                                    </span>
                                </dd>

                                <dt class="col-sm-4">Comment:</dt>
                                <dd class="col-sm-8">@(string.IsNullOrEmpty(Model.Comment) ? "No comment" : Model.Comment)</dd>
                            </dl>
                        </div>
                    </div>

                    <form asp-action="Delete" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />

                        <div class="form-group">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Delete
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>