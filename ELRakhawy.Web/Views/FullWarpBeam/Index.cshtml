@using ELRakhawy.EL.Models
@model IEnumerable<FullWarpBeam>

@{
    ViewData["Title"] = "إدارة السدى";
}

<!-- Breadcrumb Navigation -->
<nav aria-label="breadcrumb" class="mb-4">
    <div class="card border-0 shadow-sm">
        <div class="card-body py-2 px-3">
            <ol class="breadcrumb mb-0 align-items-center">
                <li class="breadcrumb-item">
                    <a href="@Url.Action("Index", "Home")" class="text-decoration-none d-flex align-items-center">
                        <i class="fas fa-home text-primary me-2"></i>الرئيسية
                    </a>
                </li>
                <li class="breadcrumb-item">
                    <a href="@Url.Action("PublicTables", "Home")" class="text-decoration-none d-flex align-items-center">
                        <i class="fas fa-table text-info me-2"></i>الجداول العامة
                    </a>
                </li>
                <li class="breadcrumb-item active d-flex align-items-center">
                    <i class="fas fa-cogs text-warning me-2"></i>
                    <span class="fw-bold text-dark">السدى</span>
                </li>
            </ol>
        </div>
    </div>
</nav>

<div class="container mt-4">
    <div class="d-flex flex-wrap gap-3 justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1 fw-bold text-primary"><i class="fas fa-boxes me-2"></i>إدارة السدى</h2>
            <span class="text-muted">قائمة كاملة بالسدى مع خيارات الإنشاء والتعديل والحذف</span>
        </div>
        <div>
            <a asp-action="Create" class="btn btn-success btn-lg">
                <i class="fas fa-plus"></i> إضافة سدى جديد
            </a>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info shadow-sm text-center py-4">
            <i class="fas fa-info-circle me-2"></i>لا توجد سجلات سدى مضافة بعد.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0" id="warpBeamTable">
                <thead class="table-light">
                    <tr>
                        <th>
                            <div class="d-flex flex-column">
                                <span>اسم السدى</span>
                                <input type="text" class="form-control form-control-sm mt-1 field-search" data-field="item" placeholder="بحث..." />
                            </div>
                        </th>
                        <th>
                            <div class="d-flex flex-column">
                                <span>الغزل المكون</span>
                                <input type="text" class="form-control form-control-sm mt-1 field-search" data-field="origin" placeholder="بحث..." />
                            </div>
                        </th>
                        <th>
                            <div class="d-flex flex-column">
                                <span>الحالة</span>
                                <select class="form-select form-select-sm mt-1 field-search" data-field="status">
                                    <option value="">الكل</option>
                                    <option value="نشط">نشط</option>
                                    <option value="غير نشط">غير نشط</option>
                                </select>
                            </div>
                        </th>
                        <th>
                            <div class="d-flex flex-column">
                                <span>بيان</span>
                                <input type="text" class="form-control form-control-sm mt-1 field-search" data-field="comment" placeholder="بحث..." />
                            </div>
                        </th>
                        <th class="text-center">الإجراءات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var beam in Model)
                    {
                        <tr data-item="@beam.Item.ToLower()"
                            data-origin="@((beam.OriginYarn?.Item ?? "").ToLower())"
                            data-status="@(beam.Status ? "نشط" : "غير نشط")"
                            data-comment="@((beam.Comment ?? "").ToLower())">
                            <td class="fw-bold text-dark">@beam.Item</td>
                            <td>@(beam.OriginYarn?.Item ?? "-")</td>
                            <td>
                                <span class="badge bg-@(beam.Status ? "success" : "secondary") px-3 py-2">
                                    <i class="fas fa-@(beam.Status ? "check" : "times") me-1"></i>
                                    @(beam.Status ? "نشط" : "غير نشط")
                                </span>
                            </td>
                            <td>
                                @if (string.IsNullOrEmpty(beam.Comment))
                                {
                                    <span class="text-muted">—</span>
                                }
                                else
                                {
                                    <span class="text-truncate d-inline-block" style="max-width:140px;" title="@beam.Comment">@beam.Comment</span>
                                }
                            </td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@beam.Id" class="btn btn-sm btn-outline-primary" title="تعديل"><i class="fas fa-edit"></i></a>
                                    <a asp-action="Delete" asp-route-id="@beam.Id" class="btn btn-sm btn-outline-danger" title="حذف"><i class="fas fa-trash"></i></a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div id="noResults" class="alert alert-info text-center mt-3 d-none">
                <i class="fas fa-info-circle me-2"></i>لا توجد نتائج مطابقة للبحث.
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(function () {
            const $rows = $('#warpBeamTable tbody tr');
            const $searchFields = $('.field-search');
            function filterRows() {
                let visible = 0;
                $rows.each(function () {
                    const $row = $(this);
                    let match = true;
                    $searchFields.each(function () {
                        const $s = $(this);
                        const val = ($s.val() || '').trim().toLowerCase();
                        if (!val) return;
                        const field = $s.data('field');
                        if (field === 'status') {
                            if (val && $row.data('status') !== val) match = false;
                        } else {
                            if (val && !$row.data(field).includes(val)) match = false;
                        }
                    });
                    $row.toggle(match);
                    if (match) visible++;
                });
                $('#noResults').toggle(visible === 0);
            }
            $searchFields.on('input change', filterRows);

            // Accessibility: ESC clears all fields, '/' focuses first field
            $(document).on('keydown', function (e) {
                if (e.key === 'Escape') $searchFields.val('').trigger('input');
                if (e.key === '/' && !$(e.target).is('input, textarea, select')) {
                    e.preventDefault();
                    $searchFields.first().focus();
                }
            });

            $('[title]').tooltip();
        });
    </script>
    <style>
        .card {
            border-radius: 12px;
        }

        .table thead th {
            background: #fafbfc;
            font-weight: 600;
            vertical-align: bottom;
        }

        .table-hover tbody tr:hover {
            background: #f8f9fa;
        }

        .badge {
            font-size: 0.9em;
            font-weight: 600;
        }

        .text-truncate {
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }

        .field-search {
            width: 100%;
            font-size: 0.97em;
        }

        #noResults {
            display: none;
        }
        @@media (max-width: 991.98px) {
            .container

        {
            padding: 0 4px;
        }

        .d-flex {
            flex-direction: column !important;
            gap: 1rem !important;
        }

        .field-search {
            font-size: 1em;
        }

        }</style>
}