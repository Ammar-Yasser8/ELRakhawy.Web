@using ELRakhawy.EL.Models
@model FullWarpBeam
@{
    var originYarns = ViewBag.OriginYarns as List<YarnItem>;
    ViewData["Title"] = "إضافة سدى جديد";
}

<!-- Breadcrumb Navigation -->
<nav aria-label="breadcrumb" class="mb-4">
    <div class="card border-0 shadow-sm">
        <div class="card-body py-2 px-3">
            <ol class="breadcrumb mb-0 align-items-center">
                <li class="breadcrumb-item">
                    <a href="@Url.Action("Index", "Home")" class="text-decoration-none d-flex align-items-center">
                        <i class="fas fa-home text-primary me-2"></i>الرئيسية
                    </a>
                </li>
                <li class="breadcrumb-item">
                    <a href="@Url.Action("PublicTables", "Home")" class="text-decoration-none d-flex align-items-center">
                        <i class="fas fa-table text-info me-2"></i>الجداول العامة
                    </a>
                </li>
                <li class="breadcrumb-item">
                    <a href="@Url.Action("Index", "FullWarpBeam")" class="text-decoration-none d-flex align-items-center">
                        <i class="fas fa-cogs text-success me-2"></i>إدارة السدى
                    </a>
                </li>
                <li class="breadcrumb-item active d-flex align-items-center">
                    <i class="fas fa-plus-circle text-warning me-2"></i>
                    <span class="fw-bold text-dark">إضافة سدى جديد</span>
                </li>
            </ol>
        </div>
    </div>
</nav>

<div class="card shadow-sm mb-4">
    <div class="card-header bg-light">
        <h4 class="mb-0 fw-bold text-primary">
            <i class="fas fa-plus-circle me-2"></i>إضافة سدى جديد
        </h4>
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post" autocomplete="off" id="createForm">
            <div class="mb-3">
                <label asp-for="Item" class="form-label fw-bold"></label>
                <input asp-for="Item" class="form-control" placeholder="اسم السدى" maxlength="200" />
                <span asp-validation-for="Item" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="OriginYarnId" class="form-label fw-bold"></label>
                <select asp-for="OriginYarnId" class="form-select">
                    <option value="">اختر الغزل المكون (اختياري)</option>
                    @foreach (var yarn in originYarns ?? new List<YarnItem>())
                    {
                        <option value="@yarn.Id">@yarn.Item</option>
                    }
                </select>
                <span asp-validation-for="OriginYarnId" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Status" class="form-label fw-bold">الحالة</label>
                <div class="form-check form-switch">
                    <input asp-for="Status" class="form-check-input" type="checkbox" checked id="statusSwitch" />
                    <label class="form-check-label" for="statusSwitch">
                        <span class="badge status-badge bg-success px-2"><span class="status-badge-text">نشط</span></span>
                    </label>
                    <span class="status-text visually-hidden">نشط</span>
                </div>
                <span asp-validation-for="Status" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Comment" class="form-label fw-bold">بيان (اختياري)</label>
                <textarea asp-for="Comment" class="form-control" rows="3" maxlength="1000" placeholder="اكتب أي ملاحظات أو بيان هنا..." id="commentTextarea"></textarea>
                <span asp-validation-for="Comment" class="text-danger small"></span>
                <div class="text-end small text-muted mt-1">
                    عدد الأحرف: <span id="charCount">0</span>/1000
                </div>
            </div>

            <div class="d-flex gap-2 mt-4">
                <button type="submit" class="btn btn-success px-4">
                    <i class="fas fa-save me-1"></i>حفظ السدى
                </button>
                <a asp-action="Index" class="btn btn-secondary px-4">
                    <i class="fas fa-arrow-left me-1"></i>عودة للقائمة
                </a>
            </div>
        </form>
        <script>
            function toArabicDigits(str) {
                return str.replace(/[0-9]/g, d => '٠١٢٣٤٥٦٧٨٩'[d]);
            }

            function toLatinDigits(str) {
                return str.replace(/[٠-٩]/g, d => '0123456789'['٠١٢٣٤٥٦٧٨٩'.indexOf(d)]);
            }

            function isArabicChar(c) {
                return /[\u0600-\u06FF]/.test(c);
            }

            function isEnglishChar(c) {
                return /[a-zA-Z]/.test(c);
            }

            function getLastLetter(str) {
                for (let i = str.length - 1; i >= 0; i--) {
                    let char = str[i];
                    if (isArabicChar(char)) {
                        return 'arabic';
                    } else if (isEnglishChar(char)) {
                        return 'english';
                    }
                }
                return 'arabic';
            }

            document.addEventListener("input", function (e) {
                if (e.target.closest("#createForm")) {
                    let input = e.target;
                    let val = input.value;

                    if (input.type === 'text' || input.tagName === 'TEXTAREA') {
                        if (val.length > 0) {
                            let lastLetterLang = getLastLetter(val);

                            let newVal;
                            if (lastLetterLang === 'arabic') {
                                newVal = toArabicDigits(val);
                            } else {
                                newVal = toLatinDigits(val);
                            }

                            if (newVal !== val) {
                                let cursorPos = input.selectionStart;
                                input.value = newVal;
                                input.setSelectionRange(cursorPos, cursorPos);
                            }
                        }

                        if (input.id === 'commentTextarea') {
                            document.getElementById('charCount').textContent = val.length;
                        }
                    }
                }
            });

            document.addEventListener('DOMContentLoaded', function () {
                const statusSwitch = document.getElementById('statusSwitch');
                const statusText = document.querySelector('.status-text');
                const statusBadge = document.querySelector('.status-badge');
                const statusBadgeText = document.querySelector('.status-badge-text');

                if (statusSwitch && statusText && statusBadge && statusBadgeText) {
                    statusSwitch.addEventListener('change', function () {
                        if (this.checked) {
                            statusText.textContent = 'نشط';
                            statusBadgeText.textContent = 'نشط';
                            statusBadge.className = 'badge status-badge bg-success px-3 py-2';
                            statusBadge.innerHTML = '<i class="fas fa-check-circle me-1"></i><span class="status-badge-text">نشط</span>';
                        } else {
                            statusText.textContent = 'غير نشط';
                            statusBadgeText.textContent = 'غير نشط';
                            statusBadge.className = 'badge status-badge bg-danger px-3 py-2';
                            statusBadge.innerHTML = '<i class="fas fa-times-circle me-1"></i><span class="status-badge-text">غير نشط</span>';
                        }
                    });
                }

                // Initialize char count for comment textarea
                const commentTextarea = document.getElementById('commentTextarea');
                if (commentTextarea) {
                    document.getElementById('charCount').textContent = commentTextarea.value.length;
                }
            });
        </script>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Accessibility: focus first input
        $(function(){ $('input:visible:first').focus(); });
    </script>
    <style>
        .card {
            border-radius: 12px;
        }

        .form-label {
            font-weight: 600;
        }

        .form-check-label .badge {
            font-size: 0.95em;
        }

        .form-control, .form-select {
            font-size: 1.05em;
        }

        .btn {
            font-size: 1.07em;
        }
        @@media (max-width: 991.98px) {
            .card-body

        {
            padding: 1rem;
        }

        }
    </style>
}