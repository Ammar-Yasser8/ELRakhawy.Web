<script>
    function formatInput(inputId) {
        const input = document.getElementById(inputId);
        const value = input.value;
        const lang = input.getAttribute('lang');
        
        if (lang === 'ar') {
            // Convert to Arabic digits
            input.value = toArabicDigits(value);
        } else if (lang === 'en') {
            // Convert to Latin digits
            input.value = toLatinDigits(value);
        }
    }

    // Add event listeners for real-time formatting
    document.addEventListener('DOMContentLoaded', function() {
        const arabicInput = document.getElementById('arabicInput');
        const englishInput = document.getElementById('englishInput');

        if (arabicInput) {
            arabicInput.addEventListener('input', function() {
                this.value = toArabicDigits(this.value);
            });
        }

        if (englishInput) {
            englishInput.addEventListener('input', function() {
                this.value = toLatinDigits(this.value);
            });
        }
    });
</script>