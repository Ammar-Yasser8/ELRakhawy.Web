@section Scripts {
    <script>
        $(document).ready(function() {
            // Update current date/time based on provided UTC time: 2025-10-24 23:22:47
            function updateDateTime() {
                const baseTime = new Date('2025-10-24T23:22:47Z');
                const pageLoadTime = new Date('@DateTime.UtcNow.ToString("yyyy-MM-ddTHH:mm:ssZ")');
                const now = new Date();
                const elapsed = now.getTime() - pageLoadTime.getTime();
                const currentTime = new Date(baseTime.getTime() + elapsed);

                // Format as YYYY-MM-DD HH:MM:SS
                const year = currentTime.getUTCFullYear();
                const month = String(currentTime.getUTCMonth() + 1).padStart(2, '0');
                const day = String(currentTime.getUTCDate()).padStart(2, '0');
                const hours = String(currentTime.getUTCHours()).padStart(2, '0');
                const minutes = String(currentTime.getUTCMinutes()).padStart(2, '0');
                const seconds = String(currentTime.getUTCSeconds()).padStart(2, '0');

                const formatted = `${year}-${month}-${day} ${hours}:${minutes}:${seconds}`;
                $('#currentDateTime').text(formatted);
            }

            // Update time immediately and then every second
            updateDateTime();
            setInterval(updateDateTime, 1000);

            // Animate statistics on load
            $('.stat-value').each(function() {
                const $this = $(this);
                const targetValue = parseInt($this.text().replace(/[٠-٩]/g, function(match) {
                    return '0123456789'['٠١٢٣٤٥٦٧٨٩'.indexOf(match)];
                }));

                if (!isNaN(targetValue)) {
                    $this.text('٠');
                    $({ countNum: 0 }).animate({ countNum: targetValue }, {
                        duration: 2000,
                        easing: 'swing',
                        step: function() {
                            const arabicNum = Math.floor(this.countNum).toString().replace(/[0-9]/g, function(match) {
                                return '٠١٢٣٤٥٦٧٨٩'[match];
                            });
                            $this.text(arabicNum);
                        },
                        complete: function() {
                            const finalArabicNum = targetValue.toString().replace(/[0-9]/g, function(match) {
                                return '٠١٢٣٤٥٦٧٨٩'[match];
                            });
                            $this.text(finalArabicNum);
                        }
                    });
                }
            });

            // Add hover effects to cards
            $('.card').hover(
                function() {
                    $(this).css('transform', 'translateY(-2px)');
                },
                function() {
                    $(this).css('transform', 'translateY(0)');
                }
            );

            console.log('Dashboard loaded for user: @currentUserName at @currentDateTime');
        });
    </script>
}

