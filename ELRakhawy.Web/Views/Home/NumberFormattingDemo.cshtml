@{
    ViewData["Title"] = "Number Formatting Demo";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">عرض توضيحي لتنسيق الأرقام</h4>
                    <p class="card-subtitle">Number Formatting Demo</p>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Arabic Context Examples -->
                        <div class="col-md-6">
                            <div class="card border-primary">
                                <div class="card-header bg-primary text-white">
                                    <h5>النصوص العربية - Arabic Text</h5>
                                </div>
                                <div class="card-body" lang="ar">
                                    <p>إجمالي المبيعات: 1,250,000 جنيه مصري</p>
                                    <p>عدد العملاء: 500 عميل</p>
                                    <p>تاريخ اليوم: 2025-08-16</p>
                                    <p>الوقت الحالي: 18:51:08</p>
                                    <p>نسبة الربح: 25.5%</p>
                                    <p>كمية الإنتاج: 1,000 متر</p>
                                    <p>سعر الوحدة: 150.75 جنيه</p>
                                    <p>إجمالي الفواتير: 75,500 جنيه</p>
                                </div>
                            </div>
                        </div>

                        <!-- English Context Examples -->
                        <div class="col-md-6">
                            <div class="card border-success">
                                <div class="card-header bg-success text-white">
                                    <h5>English Text</h5>
                                </div>
                                <div class="card-body" lang="en">
                                    <p>Total Sales: 1,250,000 Egyptian Pounds</p>
                                    <p>Number of Customers: 500 customers</p>
                                    <p>Today's Date: 2025-08-16</p>
                                    <p>Current Time: 18:51:08</p>
                                    <p>Profit Margin: 25.5%</p>
                                    <p>Production Quantity: 1,000 meters</p>
                                    <p>Unit Price: 150.75 pounds</p>
                                    <p>Total Invoices: 75,500 pounds</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4">

                    <!-- Mixed Context Examples -->
                    <div class="row">
                        <div class="col-12">
                            <div class="card border-warning">
                                <div class="card-header bg-warning text-dark">
                                    <h5>نصوص مختلطة - Mixed Text</h5>
                                </div>
                                <div class="card-body">
                                    <p>This is English text with numbers: 123,456 and 789.012</p>
                                    <p>هذا نص عربي مع أرقام: ١٢٣٬٤٥٦ و ٧٨٩٫٠١٢</p>
                                    <p>Mixed: English 123 and Arabic نص 456</p>
                                    <p>مختلط: عربي ١٢٣ و English ٤٥٦</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4">

                    <!-- Interactive Examples -->
                    <div class="row">
                        <div class="col-12">
                            <div class="card border-info">
                                <div class="card-header bg-info text-white">
                                    <h5>أمثلة تفاعلية - Interactive Examples</h5>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <h6>إدخال أرقام - Number Input</h6>
                                            <div class="mb-3">
                                                <label for="arabicInput" class="form-label">أدخل رقماً:</label>
                                                <input type="text" class="form-control" id="arabicInput" placeholder="123456" lang="ar">
                                                <small class="form-text text-muted">سيتم تحويل الأرقام تلقائياً إلى العربية</small>
                                            </div>
                                            <button class="btn btn-primary" onclick="formatInput('arabicInput')">تنسيق الأرقام</button>
                                        </div>
                                        <div class="col-md-6">
                                            <h6>Number Input</h6>
                                            <div class="mb-3">
                                                <label for="englishInput" class="form-label">Enter a number:</label>
                                                <input type="text" class="form-control" id="englishInput" placeholder="١٢٣٤٥٦" lang="en">
                                                <small class="form-text text-muted">Numbers will be automatically converted to Latin</small>
                                            </div>
                                            <button class="btn btn-success" onclick="formatInput('englishInput')">Format Numbers</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4">

                    <!-- Currency Examples -->
                    <div class="row">
                        <div class="col-12">
                            <div class="card border-secondary">
                                <div class="card-header bg-secondary text-white">
                                    <h5>أمثلة العملة - Currency Examples</h5>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-6" lang="ar">
                                            <h6>العملة المصرية - Egyptian Currency</h6>
                                            <p>المبلغ: 1,234.56 جنيه مصري</p>
                                            <p>السعر: 99.99 جنيه</p>
                                            <p>الخصم: 15.5%</p>
                                            <p>الضريبة: 14%</p>
                                        </div>
                                        <div class="col-md-6" lang="en">
                                            <h6>US Dollar</h6>
                                            <p>Amount: $1,234.56 USD</p>
                                            <p>Price: $99.99</p>
                                            <p>Discount: 15.5%</p>
                                            <p>Tax: 14%</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function formatInput(inputId) {
        const input = document.getElementById(inputId);
        const value = input.value;
        const lang = input.getAttribute('lang');
        
        if (lang === 'ar') {
            // Convert to Arabic digits
            input.value = toArabicDigits(value);
        } else if (lang === 'en') {
            // Convert to Latin digits
            input.value = toLatinDigits(value);
        }
    }

    // Add event listeners for real-time formatting
    document.addEventListener('DOMContentLoaded', function() {
        const arabicInput = document.getElementById('arabicInput');
        const englishInput = document.getElementById('englishInput');

        arabicInput.addEventListener('input', function() {
            this.value = toArabicDigits(this.value);
        });

        englishInput.addEventListener('input', function() {
            this.value = toLatinDigits(this.value);
        });
    });
</script>
