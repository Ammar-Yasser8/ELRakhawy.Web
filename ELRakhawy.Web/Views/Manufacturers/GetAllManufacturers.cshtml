            $(document).on('click', '.delete-manufacturer', function() {
                const id = $(this).data('id');
                const name = $(this).data('name');

                $('#deleteManufacturerId').val(id);
                $('#deleteManufacturerName').text(name);
                deleteModal.show();
            });

            // Save manufacturer
            $('#saveManufacturer').on('click', function() {
                const form = document.getElementById('manufacturerForm');
                if (!form.checkValidity()) {
                    $(form).addClass('was-validated');
                    return;
                }

                const id = $('#manufacturerId').val();
                const name = $('#manufacturerName').val().trim();
                const description = $('#manufacturerDescription').val().trim();

                const manufacturerData = {
                    Id: id ? parseInt(id) : 0,
                    Name: name,
                    Description: description
                };

                const isEdit = id && id !== '0';
                const url = isEdit ? '/Manufacturers/Edit' : '/Manufacturers/Create';

                showLoading();

                $.ajax({
                    url: url,
                    type: 'POST',
                    contentType: 'application/x-www-form-urlencoded',
                    data: manufacturerData,
                    success: function(response) {
                        hideLoading();

                        if (response.success) {
                            showNotification(response.message, 'success');

                            if (isEdit) {
                                updateManufacturerInUI(response.data);
                            } else {
                                addManufacturerToUI(response.data);
                                totalCount++;
                                $('#badgeCount').text(toArabicDigits(totalCount.toString()));
                            }

                            manufacturerModal.hide();
                            performSearch();
                        } else {
                            showNotification(response.message, 'error');
                        }
                    },
                    error: function(xhr, status, error) {
                        hideLoading();
                        showNotification('حدث خطأ أثناء معالجة الطلب', 'error');
                        console.error('AJAX Error:', { xhr, status, error, time: CURRENT_TIME });
                    }
                });
            });

            // Delete manufacturer
            $('#confirmDelete').on('click', function() {
                const id = $('#deleteManufacturerId').val();
                showLoading();

                $.ajax({
                    url: '/Manufacturers/Delete',
                    type: 'POST',
                    data: { id: id },
                    success: function(response) {
                        hideLoading();

                        if (response.success) {
                            showNotification(response.message, 'success');
                            removeManufacturerFromUI(id);
                            totalCount--;
                            $('#badgeCount').text(toArabicDigits(totalCount.toString()));
                            deleteModal.hide();
                            performSearch();
                        } else {
                            showNotification(response.message, 'error');
                        }
                    },
                    error: function(xhr, status, error) {
                        hideLoading();
                        showNotification('حدث خطأ أثناء حذف المصنع', 'error');
                        console.error('Delete Error:', { xhr, status, error, time: CURRENT_TIME });
                    }
                });
            });

            // UI update functions
            function updateManufacturerInUI(manufacturer) {
                const id = manufacturer.id || manufacturer.Id;
                const name = manufacturer.name || manufacturer.Name;
                const description = manufacturer.description || manufacturer.Description;

                const tableRow = $(`#manufacturersTable tr[data-id="${id}"]`);
                if (tableRow.length) {
                    tableRow.find('.manufacturer-name .fw-semibold').text(name);

                    const descriptionTd = tableRow.find('.manufacturer-description');
                    if (description) {
                        descriptionTd.html(`<span class="description-text">${description}</span>`);
                    } else {
                        descriptionTd.html('<span class="text-muted fst-italic"><i class="fas fa-info-circle me-1"></i>لا يوجد وصف</span>');
                    }

                    tableRow.find('.edit-manufacturer, .delete-manufacturer, .view-manufacturer')
                        .data('name', name).attr('data-name', name);
                    tableRow.find('.edit-manufacturer, .view-manufacturer')
                        .data('description', description || '').attr('data-description', description || '');
                }
            }

            function addManufacturerToUI(manufacturer) {
                const id = manufacturer.id || manufacturer.Id;
                const name = manufacturer.name || manufacturer.Name;
                const description = manufacturer.description || manufacturer.Description;

                const tableRow = `
                    <tr data-id="${id}" class="manufacturer-row">
                        <td class="manufacturer-name">
                            <div class="d-flex align-items-center">
                                <div class="manufacturer-icon me-2">
                                    <i class="fas fa-building text-primary"></i>
                                </div>
                                <div>
                                    <span class="fw-semibold">${name}</span>
                                </div>
                            </div>
                        </td>
                        <td class="manufacturer-description">
                            ${description ? `<span class="description-text">${description}</span>` :
                              '<span class="text-muted fst-italic"><i class="fas fa-info-circle me-1"></i>لا يوجد وصف</span>'}
                        </td>
                        <td class="text-center">
                            <div class="btn-group" role="group">
                                <button class="btn btn-sm btn-outline-info edit-manufacturer"
                                        data-id="${id}" data-name="${name}" data-description="${description || ''}"
                                        title="تعديل المصنع">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button class="btn btn-sm btn-outline-secondary view-manufacturer"
                                        data-id="${id}" data-name="${name}" data-description="${description || ''}"
                                        title="عرض التفاصيل">
                                    <i class="fas fa-eye"></i>
                                </button>
                                <button class="btn btn-sm btn-outline-danger delete-manufacturer"
                                        data-id="${id}" data-name="${name}"
                                        title="حذف المصنع">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                `;

                $('#manufacturersTable tbody').prepend(tableRow);
            }

            function removeManufacturerFromUI(id) {
                $(`#manufacturersTable tr[data-id="${id}"]`).fadeOut(300, function() {
                    $(this).remove();
                });
            }

                       // Enhanced refresh data with Arabic counter update
            $('#refreshData').click(function() {
                const btn = $(this);
                const originalText = btn.html();
                btn.prop('disabled', true).html('<span class="spinner-border spinner-border-sm me-2"></span>جاري التحديث...');

                // Immediate reload without delay
                location.reload();
            });
            // Enhanced initial count setup with Arabic numbers
            function updateInitialCounts() {
                const currentTotal = $('.manufacturer-row').length;
                const arabicTotal = toArabicDigits(currentTotal.toString());
                $('#badgeCount').text(arabicTotal);
            }

            // Keyboard shortcuts
            $(document).keydown(function(e) {
                if (e.ctrlKey && e.keyCode === 70) { // Ctrl+F
                    e.preventDefault();
                    $('#searchByName').focus();
                }
                if (e.ctrlKey && e.keyCode === 78) { // Ctrl+N
                    e.preventDefault();
                    $('.add-manufacturer-btn').click();
                }
                if (e.keyCode === 27) { // Escape key
                    $('#searchByName, #searchByComment').val('').removeClass('border-primary');
                    performSearch();
                }
            });

            // Expose functions globally
            window.toArabicDigits = toArabicDigits;
            window.toLatinDigits = toLatinDigits;
            window.containsArabic = containsArabic;
            window.shouldUseArabicNumbers = shouldUseArabicNumbers;

            // Initialize with Arabic numbers
            updateInitialCounts();

            console.log('Enhanced manufacturers page with improved Arabic number priority initialized successfully at', CURRENT_TIME, 'by', CURRENT_USER);
        });
    </script>

