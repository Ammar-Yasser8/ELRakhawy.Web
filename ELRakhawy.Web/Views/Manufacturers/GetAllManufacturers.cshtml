    <script src="https://cdn.jsdelivr.net/npm/xlsx@0.18.5/dist/xlsx.full.min.js"></script>
    
    <!-- Export and Print Functions -->
    <script>
        // Export to Excel function - Fixed version
        function exportToExcel() {
            try {
                // Get table data
                const table = document.getElementById('manufacturersTable');
                const rows = table.querySelectorAll('tr:not(.search-row)');

                // Create Excel workbook
                const wb = XLSX.utils.book_new();
                const wsData = [];

                // Add header row (skip actions column - index 2)
                const headerCells = Array.from(table.querySelectorAll('thead tr:first-child th'));
                const headers = headerCells
                    .map((th, index) => ({ text: th.textContent.trim().replace(/\s+/g, ' '), index }))
                    .filter(item => item.index !== 2) // Skip actions column (index 2)
                    .map(item => item.text);

                wsData.push(headers);

                // Add data rows
                rows.forEach(row => {
                    // Skip search row and header
                    if (row.classList.contains('search-row') || row.querySelector('th')) return;

                    const rowData = [];
                    const cols = row.querySelectorAll('td');

                    cols.forEach((col, index) => {
                        // Skip actions column (index 2)
                        if (index === 2) return;

                        let text = col.textContent.trim().replace(/\s+/g, ' ');

                        // For manufacturer name, extract just the text without icons
                        if (index === 0) {
                            text = col.querySelector('.fw-semibold')?.textContent.trim() || text;
                        }

                        rowData.push(text);
                    });

                    if (rowData.length > 0) {
                        wsData.push(rowData);
                    }
                });

                // Create worksheet
                const ws = XLSX.utils.aoa_to_sheet(wsData);

                // Set column widths
                const colWidths = [
                    {wch: 40}, // Company name
                    {wch: 60}  // Description
                ];
                ws['!cols'] = colWidths;

                // Add worksheet to workbook
                XLSX.utils.book_append_sheet(wb, ws, 'المصنعين');

                // Generate Excel file and trigger download
                const currentDate = new Date().toISOString().slice(0, 10);
                XLSX.writeFile(wb, `المصنعين_${currentDate}.xlsx`);

                // Show success notification
                if (typeof showNotification === 'function') {
                    showNotification('تم تصدير البيانات إلى Excel بنجاح', 'success');
                }

            } catch (error) {
                console.error('Error exporting to Excel:', error);
                if (typeof showNotification === 'function') {
                    showNotification('حدث خطأ أثناء التصدير إلى Excel', 'error');
                }
            }
        }

        // Print function
        function printTable() {
            try {
                // Create a print-friendly version of the table
                const printContent = document.createElement('div');
                printContent.id = 'printSection';

                // Add title and date
                const title = document.createElement('h4');
                title.textContent = 'قائمة المصنعين';
                title.className = 'text-center mb-3';
                printContent.appendChild(title);

                const date = document.createElement('p');
                date.textContent = `تاريخ الطباعة: ${new Date().toLocaleDateString('ar-EG')}`;
                date.className = 'text-center mb-4 text-muted';
                printContent.appendChild(date);

                // Create print table
                const printTable = document.createElement('table');
                printTable.className = 'print-table';

                // Create table header
                const thead = document.createElement('thead');
                const headerRow = document.createElement('tr');

                ['الشركة المصنعة', 'البيان'].forEach(headerText => {
                    const th = document.createElement('th');
                    th.textContent = headerText;
                    th.className = 'bg-light';
                    headerRow.appendChild(th);
                });

                thead.appendChild(headerRow);
                printTable.appendChild(thead);

                // Create table body with data
                const tbody = document.createElement('tbody');
                const visibleRows = document.querySelectorAll('.manufacturer-row:not([style*="display: none"])');

                if (visibleRows.length === 0) {
                    const row = document.createElement('tr');
                    const cell = document.createElement('td');
                    cell.textContent = 'لا توجد بيانات للعرض';
                    cell.colSpan = 2;
                    cell.className = 'text-center py-4 text-muted';
                    row.appendChild(cell);
                    tbody.appendChild(row);
                } else {
                    visibleRows.forEach(row => {
                        const dataRow = document.createElement('tr');

                        // Company name
                        const nameCell = document.createElement('td');
                        const name = row.querySelector('.manufacturer-name .fw-semibold')?.textContent.trim() || '';
                        nameCell.textContent = name;
                        dataRow.appendChild(nameCell);

                        // Description
                        const descCell = document.createElement('td');
                        const desc = row.querySelector('.manufacturer-description').textContent.trim() || 'لا يوجد وصف';
                        descCell.textContent = desc;
                        dataRow.appendChild(descCell);

                        tbody.appendChild(dataRow);
                    });
                }

                printTable.appendChild(tbody);
                printContent.appendChild(printTable);

                // Add summary
                const summary = document.createElement('p');
                summary.className = 'mt-3 text-muted text-center';
                summary.textContent = `عدد المصنعين: ${visibleRows.length}`;
                printContent.appendChild(summary);

                // Add to document and print
                document.body.appendChild(printContent);
                window.print();

                // Clean up
                document.body.removeChild(printContent);

            } catch (error) {
                console.error('Error printing table:', error);
                if (typeof showNotification === 'function') {
                    showNotification('حدث خطأ أثناء الطباعة', 'error');
                }
            }
        }
    </script>

    <!-- Enhanced Arabic Number Conversion Script -->
    <script>
        $(document).ready(function() {
            const CURRENT_TIME = '2025-09-04 16:29:29';
            const CURRENT_USER = 'Ammar-Yasser8';

            console.log('Enhanced manufacturers page with Arabic numbers loaded:', {
                time: CURRENT_TIME,
                user: CURRENT_USER,
                manufacturersCount: $('.manufacturer-row').length
            });

            // Arabic number conversion functions
            function toArabicDigits(str) {
                if (typeof str !== 'string') return str;
                return str.replace(/[0-9]/g, d => '٠١٢٣٤٥٦٧٨٩'[d]);
            }

            function toLatinDigits(str) {
                if (typeof str !== 'string') return str;
                return str.replace(/[٠-٩]/g, d => '0123456789'['٠١٢٣٤٥٦٧٨٩'.indexOf(d)]);
            }

            function isArabicChar(c) {
                return /[\u0600-\u06FF]/.test(c);
            }

            function isEnglishChar(c) {
                return /[a-zA-Z]/.test(c);
            }

            // Enhanced function to check if text contains Arabic characters
            function containsArabic(str) {
                if (!str || str.trim().length === 0) return false;
                return /[\u0600-\u06FF]/.test(str);
            }

            // Enhanced function to determine number format - prioritizes Arabic
            function shouldUseArabicNumbers(str) {
                if (!str || str.trim().length === 0) {
                    return true; // Default to Arabic when empty
                }
                
                // If text contains ANY Arabic character, use Arabic numbers
                if (containsArabic(str)) {
                    return true;
                }
                
                // If text contains ONLY English characters and numbers, use English numbers
                                if (/^[a-zA-Z0-9\s\-_.@@#$%^&*()+={}[\]:";'<>?,./\\|`~]*$/.test(str)) {
                    return false;
                }
                
                // Default to Arabic for any other cases
                return true;
            }

            // Enhanced number conversion function
            function applyNumberConversion($input) {
                let val = $input.val();

                if (val && val.length > 0) {
                    let useArabicNumbers = shouldUseArabicNumbers(val);
                    let newVal = useArabicNumbers ? toArabicDigits(val) : toLatinDigits(val);

                    if (newVal !== val) {
                        let cursorPos = $input[0].selectionStart;
                        $input.val(newVal);
                        try {
                            $input[0].setSelectionRange(cursorPos, cursorPos);
                        } catch (ex) {
                            $input.focus();
                        }
                    }
                }
            }

            // Enhanced search and form input event handler with improved Arabic support
            $(document).on("input keyup paste", "#searchByName, #searchByComment, #manufacturerName, #manufacturerDescription", function(e) {
                const $input = $(this);
                applyNumberConversion($input);
            });

            // Enhanced number key conversion - always converts to Arabic by default
            $(document).on("keypress", "#searchByName, #searchByComment, #manufacturerName, #manufacturerDescription", function(e) {
                // Convert English digits to Arabic immediately
                if (e.which >= 48 && e.which <= 57) { // 0-9
                    e.preventDefault();
                    let digit = String.fromCharCode(e.which);
                    
                    // Get current input value to determine if we should use Arabic or English
                    let currentValue = e.target.value;
                    let cursorPos = e.target.selectionStart || 0;
                    
                    // Create temporary value to test what the result would be
                    let tempValue = currentValue.slice(0, cursorPos) + digit + currentValue.slice(cursorPos);
                    
                    // Determine if we should use Arabic numbers
                    let useArabicNumbers = shouldUseArabicNumbers(tempValue);
                    let convertedDigit = useArabicNumbers ? toArabicDigits(digit) : digit;

                    let input = e.target;
                    let newValue = currentValue.slice(0, cursorPos) + convertedDigit + currentValue.slice(cursorPos);
                    input.value = newValue;

                    input.setSelectionRange(cursorPos + 1, cursorPos + 1);

                    // Trigger appropriate events
                    if ($(input).attr('id').startsWith('search')) {
                        $(input).trigger('input');
                    }
                }
            });
            
            // Initialize components
            const toastElement = document.getElementById('notificationToast');
            const toast = new bootstrap.Toast(toastElement, { delay: 4000 });
            const manufacturerModal = new bootstrap.Modal(document.getElementById('manufacturerModal'));
            const deleteModal = new bootstrap.Modal(document.getElementById('deleteManufacturerModal'));

            let totalCount = $('.manufacturer-row').length;

            // Enhanced character counter for description with Arabic numbers
            $('#manufacturerDescription').on('input', function() {
                const count = $(this).val().length;
                $('#charCount').text(toArabicDigits(count.toString()));

                if (count > 900) {
                    $('#charCount').addClass('text-warning');
                } else if (count > 1000) {
                    $('#charCount').addClass('text-danger');
                } else {
                    $('#charCount').removeClass('text-warning text-danger');
                }
            });

            // Enhanced search functionality with improved Arabic number support
            function performSearch() {
                const nameSearch = $('#searchByName').val().toLowerCase().trim();
                const nameSearchLatin = toLatinDigits(nameSearch);
                const nameSearchArabic = toArabicDigits(nameSearch);

                const commentSearch = $('#searchByComment').val().toLowerCase().trim();
                const commentSearchLatin = toLatinDigits(commentSearch);
                const commentSearchArabic = toArabicDigits(commentSearch);

                let visibleCount = 0;

                $('.manufacturer-row').each(function() {
                    const row = $(this);
                    const name = row.find('.manufacturer-name').text().toLowerCase();
                    const description = row.find('.manufacturer-description').text().toLowerCase();

                    // Enhanced matching with Arabic/English number support
                    const nameMatch = !nameSearch ||
                        name.includes(nameSearch) ||
                        name.includes(nameSearchLatin) ||
                        name.includes(nameSearchArabic);

                    const commentMatch = !commentSearch ||
                        description.includes(commentSearch) ||
                        description.includes(commentSearchLatin) ||
                        description.includes(commentSearchArabic);

                    const shouldShow = nameMatch && commentMatch;
                    row.toggle(shouldShow);

                    if (shouldShow) visibleCount++;
                });

                updateSearchInfo(visibleCount, nameSearch, commentSearch);
            }

            // Enhanced updateSearchInfo with Arabic numbers
            function updateSearchInfo(visibleCount, nameSearch, commentSearch) {
                $('#badgeCount').text(toArabicDigits(visibleCount.toString()));

                // Show/hide clear buttons
                $('#clearNameSearch').toggle(nameSearch.length > 0);
                $('#clearCommentSearch').toggle(commentSearch.length > 0);
                $('#clearAllSearch').toggle(nameSearch.length > 0 || commentSearch.length > 0);

                // Keep table always visible - no modal overlays
                $('#manufacturersContainer .section-card').show();

                // Add visual feedback to search inputs
                $('#searchByName').toggleClass('border-primary', nameSearch.length > 0);
                $('#searchByComment').toggleClass('border-primary', commentSearch.length > 0);
            }

            // Search events with improved debouncing
            let searchTimeout;
            $('#searchByName, #searchByComment').on('input', function() {
                clearTimeout(searchTimeout);
                searchTimeout = setTimeout(performSearch, 200);
            });

            // Enhanced search input focus effects
            $('#searchByName, #searchByComment').focus(function() {
                $(this).closest('.input-group').addClass('shadow-sm');
            }).blur(function() {
                $(this).closest('.input-group').removeClass('shadow-sm');
            });

            // Clear search buttons
            $('#clearNameSearch').click(function() {
                $('#searchByName').val('').removeClass('border-primary');
                performSearch();
                $('#searchByName').focus();
            });

            $('#clearCommentSearch').click(function() {
                $('#searchByComment').val('').removeClass('border-primary');
                performSearch();
                $('#searchByComment').focus();
            });

            $('#clearAllSearch, #resetSearch').click(function() {
                $('#searchByName, #searchByComment').val('').removeClass('border-primary');
                performSearch();
            });

            // Enhanced notification function
            window.showNotification = function(message, type = 'success') {
                const icons = {
                    success: 'fa-check-circle',
                    error: 'fa-exclamation-circle',
                    warning: 'fa-exclamation-triangle',
                    info: 'fa-info-circle'
                };

                const colors = {
                    success: 'bg-success',
                    error: 'bg-danger',
                    warning: 'bg-warning',
                    info: 'bg-info'
                };

                $('#toastIcon').removeClass().addClass(`fas ${icons[type]} me-2`);
                $('#toastMessage').text(message);
                $('#notificationToast').removeClass('bg-success bg-danger bg-warning bg-info text-white text-dark')
                    .addClass(`${colors[type]} ${type === 'warning' ? 'text-dark' : 'text-white'}`);

                toast.show();
            };

            // Loading functions
            function showLoading() {
                $('#loadingOverlay').removeClass('d-none');
            }

            function hideLoading() {
                $('#loadingOverlay').addClass('d-none');
            }

            // Enhanced reset form with Arabic character counter
            function resetForm() {
                $('#manufacturerForm')[0].reset();
                $('#manufacturerId').val('');
                $('#charCount').text(toArabicDigits('0'));
                $('#manufacturerForm .is-invalid').removeClass('is-invalid');
                $('#manufacturerForm').removeClass('was-validated');
            }

            // Modal handlers
            $('.add-manufacturer-btn').on('click', function() {
                resetForm();
                $('#manufacturerModalTitle').html('<i class="fas fa-plus-circle text-success me-2"></i>إضافة مصنع جديد');
                manufacturerModal.show();
            });

            $(document).on('click', '.edit-manufacturer', function() {
                resetForm();
                const id = $(this).data('id');
                const name = $(this).data('name');
                const description = $(this).data('description');

                $('#manufacturerId').val(id);
                $('#manufacturerName').val(name);
                $('#manufacturerDescription').val(description);
                $('#charCount').text(toArabicDigits((description || '').length.toString()));

                $('#manufacturerModalTitle').html('<i class="fas fa-edit text-info me-2"></i>تعديل المصنع');
                manufacturerModal.show();
            });

            $(document).on('click', '.view-manufacturer', function() {
                const id = $(this).data('id');
                const name = $(this).data('name');
                const description = $(this).data('description');

                const detailsContent = `
                    <div class="row g-4">
                        <div class="col-12">
                            <div class="card border-0 bg-light">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <label class="form-label fw-bold text-success">
                                                <i class="fas fa-signature me-2"></i>اسم المصنع
                                            </label>
                                            <div class="form-control-plaintext bg-white border p-2 rounded fw-semibold">
                                                ${name}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-12 mb-3">
                                            <label class="form-label fw-bold text-warning">
                                                <i class="fas fa-comment-alt me-2"></i>الوصف والتفاصيل
                                            </label>
                                            <div class="form-control-plaintext bg-white border p-3 rounded" style="min-height: 80px;">
                                                ${description || '<span class="text-muted fst-italic"><i class="fas fa-info-circle me-1"></i>لا يوجد وصف متاح</span>'}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                `;

                $('#detailsContent').html(detailsContent);
                const detailsModal = new bootstrap.Modal(document.getElementById('detailsModal'));
                detailsModal.show();
            });

            $(document).on('click', '.delete-manufacturer', function() {
                const id = $(this).data('id');
                const name = $(this).data('name');

                $('#deleteManufacturerId').val(id);
                $('#deleteManufacturerName').text(name);
                deleteModal.show();
            });

            // Save manufacturer
            $('#saveManufacturer').on('click', function() {
                const form = document.getElementById('manufacturerForm');
                if (!form.checkValidity()) {
                    $(form).addClass('was-validated');
                    return;
                }

                const id = $('#manufacturerId').val();
                const name = $('#manufacturerName').val().trim();
                const description = $('#manufacturerDescription').val().trim();

                const manufacturerData = {
                    Id: id ? parseInt(id) : 0,
                    Name: name,
                    Description: description
                };

                const isEdit = id && id !== '0';
                const url = isEdit ? '/Manufacturers/Edit' : '/Manufacturers/Create';

                showLoading();

                $.ajax({
                    url: url,
                    type: 'POST',
                    contentType: 'application/x-www-form-urlencoded',
                    data: manufacturerData,
                    success: function(response) {
                        hideLoading();

                        if (response.success) {
                            showNotification(response.message, 'success');

                            if (isEdit) {
                                updateManufacturerInUI(response.data);
                            } else {
                                addManufacturerToUI(response.data);
                                totalCount++;
                                $('#badgeCount').text(toArabicDigits(totalCount.toString()));
                            }

                            manufacturerModal.hide();
                            performSearch();
                        } else {
                            showNotification(response.message, 'error');
                        }
                    },
                    error: function(xhr, status, error) {
                        hideLoading();
                        showNotification('حدث خطأ أثناء معالجة الطلب', 'error');
                        console.error('AJAX Error:', { xhr, status, error, time: CURRENT_TIME });
                    }
                });
            });

            // Delete manufacturer
            $('#confirmDelete').on('click', function() {
                const id = $('#deleteManufacturerId').val();
                showLoading();

                $.ajax({
                    url: '/Manufacturers/Delete',
                    type: 'POST',
                    data: { id: id },
                    success: function(response) {
                        hideLoading();

                        if (response.success) {
                            showNotification(response.message, 'success');
                            removeManufacturerFromUI(id);
                            totalCount--;
                            $('#badgeCount').text(toArabicDigits(totalCount.toString()));
                            deleteModal.hide();
                            performSearch();
                        } else {
                            showNotification(response.message, 'error');
                        }
                    },
                    error: function(xhr, status, error) {
                        hideLoading();
                        showNotification('حدث خطأ أثناء حذف المصنع', 'error');
                        console.error('Delete Error:', { xhr, status, error, time: CURRENT_TIME });
                    }
                });
            });

            // UI update functions
            function updateManufacturerInUI(manufacturer) {
                const id = manufacturer.id || manufacturer.Id;
                const name = manufacturer.name || manufacturer.Name;
                const description = manufacturer.description || manufacturer.Description;

                const tableRow = $(`#manufacturersTable tr[data-id="${id}"]`);
                if (tableRow.length) {
                    tableRow.find('.manufacturer-name .fw-semibold').text(name);

                    const descriptionTd = tableRow.find('.manufacturer-description');
                    if (description) {
                        descriptionTd.html(`<span class="description-text">${description}</span>`);
                    } else {
                        descriptionTd.html('<span class="text-muted fst-italic"><i class="fas fa-info-circle me-1"></i>لا يوجد وصف</span>');
                    }

                    tableRow.find('.edit-manufacturer, .delete-manufacturer, .view-manufacturer')
                        .data('name', name).attr('data-name', name);
                    tableRow.find('.edit-manufacturer, .view-manufacturer')
                        .data('description', description || '').attr('data-description', description || '');
                }
            }

            function addManufacturerToUI(manufacturer) {
                const id = manufacturer.id || manufacturer.Id;
                const name = manufacturer.name || manufacturer.Name;
                const description = manufacturer.description || manufacturer.Description;

                const tableRow = `
                    <tr data-id="${id}" class="manufacturer-row">
                        <td class="manufacturer-name">
                            <div class="d-flex align-items-center">
                                <div class="manufacturer-icon me-2">
                                    <i class="fas fa-building text-primary"></i>
                                </div>
                                <div>
                                    <span class="fw-semibold">${name}</span>
                                    <br>
                                </div>
                            </div>
                        </td>
                        <td class="manufacturer-description">
                            ${description ? `<span class="description-text">${description}</span>` :
                              '<span class="text-muted fst-italic"><i class="fas fa-info-circle me-1"></i>لا يوجد وصف</span>'}
                        </td>
                        <td class="text-center">
                            <div class="btn-group" role="group">
                                <button class="btn btn-sm btn-outline-info edit-manufacturer"
                                        data-id="${id}" data-name="${name}" data-description="${description || ''}"
                                        title="تعديل المصنع">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button class="btn btn-sm btn-outline-secondary view-manufacturer"
                                        data-id="${id}" data-name="${name}" data-description="${description || ''}"
                                        title="عرض التفاصيل">
                                    <i class="fas fa-eye"></i>
                                </button>
                                <button class="btn btn-sm btn-outline-danger delete-manufacturer"
                                        data-id="${id}" data-name="${name}"
                                        title="حذف المصنع">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                `;

                $('#manufacturersTable tbody').prepend(tableRow);
            }

            function removeManufacturerFromUI(id) {
                $(`#manufacturersTable tr[data-id="${id}"]`).fadeOut(300, function() {
                    $(this).remove();
                });
            }

            // Enhanced refresh data with Arabic counter update
            $('#refreshData').click(function() {
                const btn = $(this);
                const originalText = btn.html();
                btn.prop('disabled', true).html('<span class="spinner-border spinner-border-sm me-2"></span>جاري التحديث...');

                setTimeout(() => {
                    location.reload();
                }, 1000);
            });

            // Enhanced initial count setup with Arabic numbers
            function updateInitialCounts() {
                const currentTotal = $('.manufacturer-row').length;
                const arabicTotal = toArabicDigits(currentTotal.toString());
                $('#badgeCount').text(arabicTotal);
            }

            // Keyboard shortcuts
            $(document).keydown(function(e) {
                if (e.ctrlKey && e.keyCode === 70) { // Ctrl+F
                    e.preventDefault();
                    $('#searchByName').focus();
                }
                if (e.ctrlKey && e.keyCode === 78) { // Ctrl+N
                    e.preventDefault();
                    $('.add-manufacturer-btn').click();
                }
                if (e.keyCode === 27) { // Escape key
                    $('#searchByName, #searchByComment').val('').removeClass('border-primary');
                    performSearch();
                }
            });

            // Test enhanced number conversion functions
            console.log('Testing Enhanced Arabic number conversion:');
            console.log('English only "hello 123":', shouldUseArabicNumbers('hello 123') ? 'Arabic' : 'English');
            console.log('Mixed "hello مرحبا 123":', shouldUseArabicNumbers('hello مرحبا 123') ? 'Arabic' : 'English');
            console.log('Arabic only "مرحبا 123":', shouldUseArabicNumbers('مرحبا 123') ? 'Arabic' : 'English');
            console.log('Numbers only "123":', shouldUseArabicNumbers('123') ? 'Arabic' : 'English');
            console.log('Empty "":', shouldUseArabicNumbers('') ? 'Arabic' : 'English');

            // Initialize with Arabic numbers
            updateInitialCounts();

            console.log('Enhanced manufacturers page with improved Arabic number priority initialized successfully at', CURRENT_TIME, 'by', CURRENT_USER);
        });
    </script>

