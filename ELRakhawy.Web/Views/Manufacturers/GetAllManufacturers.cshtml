                            </button>
                            <button class="btn btn-success add-manufacturer-btn ms-3">
                                <i class="fas fa-plus-circle me-1"></i>إضافة مصنع جديد
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0" id="manufacturersTable">
                        <thead class="table-light">
                            <tr>
                                <th class="fw-bold" style="width: 40%;">
                                    <i class="fas fa-industry text-primary me-1"></i>الشركة المصنعة
                                </th>
                                <th class="fw-bold" style="width: 40%;">
                                    <i class="fas fa-comment text-warning me-1"></i>البيان
                                </th>
                                <th class="text-center fw-bold" style="width: 20%;">
                                    <i class="fas fa-cogs text-info me-1"></i>الإجراءات
                                </th>
                            </tr>
                            <!-- Inline Search Row -->
                            <tr class="search-row bg-white">
                                <th class="border-bottom-0 pb-2 pt-2">
                                    <div class="search-container">
                                        <div class="input-group input-group-sm">
                                            <span class="input-group-text bg-light border-end-0">
                                                <i class="fas fa-search text-muted"></i>
                                            </span>
                                            <input type="text" id="searchByName" class="form-control border-start-0"
                                                   placeholder="ابحث في الأسماء...">
                                            <button class="btn btn-outline-secondary btn-sm" type="button" id="clearNameSearch" style="display: none;">
                                                <i class="fas fa-times"></i>
                                            </button>
                                        </div>
                                    </div>
                                </th>
                                <th class="border-bottom-0 pb-2 pt-2">
                                    <div class="search-container">
                                        <div class="input-group input-group-sm">
                                            <span class="input-group-text bg-light border-end-0">
                                                <i class="fas fa-search text-muted"></i>
                                            </span>
                                            <input type="text" id="searchByComment" class="form-control border-start-0"
                                                   placeholder="ابحث في البيان...">
                                            <button class="btn btn-outline-secondary btn-sm" type="button" id="clearCommentSearch" style="display: none;">
                                                <i class="fas fa-times"></i>
                                            </button>
                                        </div>
                                    </div>
                                </th>
                                <th class="border-bottom-0 pb-2 pt-2 text-center">
                                    <small class="text-muted">
                                        <i class="fas fa-filter me-1"></i>البحث والتصفية
                                    </small>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var manufacturer in Model)
                            {
                                <tr data-id="@manufacturer.Id" class="manufacturer-row">
                                    <td class="manufacturer-name">
                                        <div class="d-flex align-items-center">
                                            <div class="manufacturer-icon me-2">
                                                <i class="fas fa-building text-primary"></i>
                                            </div>
                                            <div>
                                                <span class="fw-semibold">@manufacturer.Name</span>
                                                <br>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="manufacturer-description">
                                        @if (!string.IsNullOrEmpty(manufacturer.Description))
                                        {
                                            <span class="description-text">@manufacturer.Description</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted fst-italic">
                                                <i class="fas fa-info-circle me-1"></i>لا يوجد وصف
                                            </span>
                                        }
                                    </td>
