                const wsData = [];

                // --- HEADERS & VISIBLE COLUMNS ---
                const headerCells = table.querySelectorAll('thead tr:first-child th');
                const headers = [];
                const visibleColumnIndices = [];
                headerCells.forEach((th, index) => {
                    // skip last actions column (if your table follows that pattern)
                    if (index === headerCells.length - 1) return;
                    if (th.style.display === "none") return; // skip hidden columns

                    visibleColumnIndices.push(index);

                    let headerText = th.textContent.trim().replace(/\s+/g, ' ');
                    headerText = headerText.replace(/[\u{1F300}-\u{1F9FF}]/gu, '').trim();
                    headers.push(headerText);
                });

                if (headers.length === 0) {
                    throw new Error('No visible columns to export');
                }

                wsData.push(headers);

                // Try to detect which visible column is the "types" column by class or header name
                // We map visibleColumnIndices index -> original table column index
                const headerNameIndexMap = {};
                visibleColumnIndices.forEach((origIdx, i) => {
                    const headerText = headers[i] || '';
                    headerNameIndexMap[origIdx] = headerText;
                });

                // --- ROWS ---
                const rows = table.querySelectorAll('tbody tr.stakeholder-row');
                let exportedRowCount = 0;

                rows.forEach(row => {
                    const computedStyle = window.getComputedStyle(row);
                    if (row.style.display === "none" ||
                        computedStyle.display === "none" ||
                        computedStyle.visibility === "hidden") return;

                    const cols = row.querySelectorAll('td');
                    const rowData = [];

                    visibleColumnIndices.forEach((colIndex) => {
                        const col = cols[colIndex];
                        if (!col) {
                            rowData.push('');
                            return;
                        }

                        let text = '';

