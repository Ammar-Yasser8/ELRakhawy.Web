@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/xlsx@0.18.5/dist/xlsx.full.min.js"></script>

    <style>
        .sortable {
            user-select: none;
            transition: background-color 0.2s;
        }

            .sortable:hover {
                background-color: rgba(0, 0, 0, 0.05);
            }

        .sort-icon {
            font-size: 0.8rem;
            transition: all 0.2s;
        }

        .sortable.asc .sort-icon {
            transform: rotate(180deg);
            color: #0d6efd !important;
        }

        .sortable.desc .sort-icon {
            color: #0d6efd !important;
        }

        .column-toggle-menu {
            max-height: 300px;
            overflow-y: auto;
        }

    </style>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const table = document.getElementById('manufacturersTable');
            const tbody = table.querySelector('tbody');
            const headers = table.querySelectorAll('thead tr:first-child th');
            const columnToggleMenu = document.getElementById('columnToggleMenu');

            // Initialize column toggle menu
            headers.forEach((th, index) => {
                if (index === headers.length - 1) return; // Skip actions column

                const title = th.textContent.trim().replace(/\s+/g, ' ');
                const li = document.createElement("li");
                li.innerHTML = `
                    <label class="dropdown-item">
                        <input type="checkbox" class="me-2 column-toggle" data-index="${index}" checked>
                        ${title}
                    </label>`;
                columnToggleMenu.appendChild(li);
            });

            // Handle column visibility toggle
            columnToggleMenu.addEventListener("change", function (e) {
                if (!e.target.classList.contains("column-toggle")) return;

                const colIndex = parseInt(e.target.getAttribute("data-index"));
                const isVisible = e.target.checked;

                table.querySelectorAll("tr").forEach(row => {
                    const cell = row.querySelectorAll("th, td")[colIndex];
                    if (cell) {
                        cell.style.display = isVisible ? "" : "none";
                    }
                });
            });

            // Sorting functionality
            let sortDirection = {};

            document.querySelectorAll('.sortable').forEach(header => {
                const column = parseInt(header.getAttribute('data-column'));
                sortDirection[column] = 'none';

                header.addEventListener('click', function() {
                    // Get all rows
                    const rows = Array.from(tbody.querySelectorAll('tr'));

                    // Determine sort direction
                    if (sortDirection[column] === 'none' || sortDirection[column] === 'desc') {
                        sortDirection[column] = 'asc';
                    } else {
                        sortDirection[column] = 'desc';
                    }

                    // Update all headers to show unsorted state
                    document.querySelectorAll('.sortable').forEach(h => {
                        h.classList.remove('asc', 'desc');
                        const icon = h.querySelector('.sort-icon');
                        icon.className = 'fas fa-sort sort-icon text-muted';
                    });

                    // Update current header
                    header.classList.add(sortDirection[column]);
                    const icon = header.querySelector('.sort-icon');
                    if (sortDirection[column] === 'asc') {
                        icon.className = 'fas fa-sort-up sort-icon';
                    } else {
                        icon.className = 'fas fa-sort-down sort-icon';
                    }

                    // Sort rows
                    rows.sort((a, b) => {
                        const aCell = a.querySelectorAll('td')[column];
                        const bCell = b.querySelectorAll('td')[column];

                        let aValue = aCell.textContent.trim();
                        let bValue = bCell.textContent.trim();

                        // Handle empty values
                        if (aValue === 'لا يوجد وصف' || aValue === '') aValue = '';
                        if (bValue === 'لا يوجد وصف' || bValue === '') bValue = '';

                        // Try to parse as numbers (both Arabic and English)
                        const aNum = parseFloat(toLatinDigits(aValue));
                        const bNum = parseFloat(toLatinDigits(bValue));

                        let comparison = 0;

                        if (!isNaN(aNum) && !isNaN(bNum)) {
                            // Both are numbers
                            comparison = aNum - bNum;
                        } else {
                            // String comparison (case-insensitive)
                            comparison = aValue.localeCompare(bValue, 'ar');
                        }

                        return sortDirection[column] === 'asc' ? comparison : -comparison;
                    });

                    // Re-append sorted rows
                    rows.forEach(row => tbody.appendChild(row));
                });
            });
        });

        // Updated Export to Excel function - respects hidden rows and columns with RTL
        function exportToExcel() {
            const table = document.getElementById('manufacturersTable');
            const wsData = [];

            // Header row (only visible columns, skip actions)
            const headerCells = table.querySelectorAll('thead tr:first-child th');
            const headers = [];
            const visibleColumnIndices = [];

            headerCells.forEach((th, index) => {
                if (index === headerCells.length - 1) return; // skip actions column
                if (th.style.display === "none") return; // skip hidden columns

                visibleColumnIndices.push(index);
                headers.push(th.textContent.trim().replace(/\s+/g, ' '));
            });
            wsData.push(headers);

            // Body rows (only visible rows and columns)
            const rows = table.querySelectorAll('tbody tr');
            rows.forEach(row => {
                // Skip hidden rows
                if (row.style.display === "none" || row.offsetParent === null) return;

                const cols = row.querySelectorAll('td');
                const rowData = [];

                visibleColumnIndices.forEach(index => {
                    const col = cols[index];
                    if (!col) return;

                    let text = col.textContent.trim().replace(/\s+/g, ' ');
                    // Remove "لا يوجد وصف" text for cleaner export
                    if (text === 'لا يوجد وصف') text = '';
                    rowData.push(text);
                });

                wsData.push(rowData);
            });

            // Generate Excel with RTL layout
            const wb = XLSX.utils.book_new();
            const ws = XLSX.utils.aoa_to_sheet(wsData);

            // Set RTL for Excel
            ws['!rtl'] = true;

            // Set column widths
            const colWidths = visibleColumnIndices.map(() => ({wch: 25}));
            ws['!cols'] = colWidths;

            XLSX.utils.book_append_sheet(wb, ws, "المصنعين");

            const currentDate = new Date().toLocaleDateString('ar-EG');
            XLSX.writeFile(wb, `manufacturers_${currentDate.replace(/\//g, '-')}.xlsx`);
        }

          function printTable() {
            try {
                    const printContent = document.createElement('div');
                    printContent.id = 'printSection';
                    printContent.style.direction = 'rtl';
                    printContent.style.padding = '20px';

                    const title = document.createElement('h2');
                    title.textContent = 'قائمة المصنعين';
                    title.style.textAlign = 'center';
                    title.style.marginBottom = '10px';
                    title.style.color = '#333';
                    title.style.fontFamily = 'Arial, sans-serif';
                    printContent.appendChild(title);

                    const dateP = document.createElement('p');
                    dateP.textContent = `تاريخ الطباعة: ${new Date().toLocaleDateString('ar-EG')}`;
                    dateP.style.textAlign = 'center';
                    dateP.style.marginBottom = '20px';
                    dateP.style.color = '#666';
                    dateP.style.fontSize = '14px';
                    printContent.appendChild(dateP);

                    const headerCells = document.querySelectorAll('#manufacturersTable thead tr:first-child th');
                    const visibleHeaders = [];
                    const visibleIndices = [];

                    headerCells.forEach((th, index) => {
                        if (index === headerCells.length - 1) return;
                        if (th.style.display === "none") return;
                        visibleHeaders.push(th.textContent.trim().replace(/\s+/g, ' '));
                        visibleIndices.push(index);
                    });

                    const allRows = document.querySelectorAll('.manufacturer-row');
                    const visibleRows = Array.from(allRows).filter(row => {
                        const computedStyle = window.getComputedStyle(row);
                        return row.style.display !== 'none' &&
                               computedStyle.display !== 'none' &&
                               computedStyle.visibility !== 'hidden';
                    });

                    const table = document.createElement('table');
                    table.className = 'print-table';
                    table.style.width = '100%';
                    table.style.borderCollapse = 'collapse';
                    table.style.direction = 'rtl';
                    table.style.fontFamily = 'Arial, sans-serif';
                    table.style.fontSize = '12px';

                    const thead = document.createElement('thead');
                    const headerRow = document.createElement('tr');

                    visibleHeaders.forEach(headerText => {
                        const th = document.createElement('th');
                        th.textContent = headerText;
                        th.style.border = '1px solid #000';
                        th.style.padding = '10px';
                        th.style.backgroundColor = '#f0f0f0';
                        th.style.fontWeight = 'bold';
                        th.style.textAlign = 'right';
                        headerRow.appendChild(th);
                    });

                    thead.appendChild(headerRow);
                    table.appendChild(thead);

                    const tbody = document.createElement('tbody');

                    if (visibleRows.length === 0) {
                        const row = document.createElement('tr');
                        const cell = document.createElement('td');
                        cell.textContent = 'لا توجد بيانات للعرض';
                        cell.colSpan = visibleHeaders.length || 1;
                        cell.style.textAlign = 'center';
                        cell.style.padding = '20px';
                        cell.style.border = '1px solid #000';
                        row.appendChild(cell);
                        tbody.appendChild(row);
                    } else {
                        visibleRows.forEach((row, rowIndex) => {
                            const dataRow = document.createElement('tr');
                            const cells = row.querySelectorAll('td');

                            visibleIndices.forEach(index => {
                                const cell = cells[index];
                                if (!cell) return;

                                const td = document.createElement('td');
                                let text = cell.textContent.trim().replace(/\s+/g, ' ');
                                if (text === 'لا يوجد وصف') text = '';
                                td.textContent = text;
                                td.style.border = '1px solid #000';
                                td.style.padding = '8px';
                                td.style.textAlign = 'right';

                                if (rowIndex % 2 === 1) {
                                    td.style.backgroundColor = '#f9f9f9';
                                }

                                dataRow.appendChild(td);
                            });

                            tbody.appendChild(dataRow);
                        });
                }

                table.appendChild(tbody);
                printContent.appendChild(table);

                const summary = document.createElement('p');
                summary.style.marginTop = '20px';
                summary.style.textAlign = 'center';
