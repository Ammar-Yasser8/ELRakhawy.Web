@using ELRakhawy.EL.ViewModels
@model FabricStudioIndexViewModel
@{
    ViewData["Title"] = "إدارة استوديو القماش";
    var currentTime = "2025-09-02 19:40:25";
    var currentUser = "Ammar-Yasser8";
}

<div class="container-fluid mt-4">
      <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="text-primary mb-1">
                <i class="fas fa-palette me-2"></i>إدارة استوديو القماش
            </h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">الرئيسية</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Dashboard", "FabricItems")">الجداول العامة للأقمشة</a></li>
                    <li class="breadcrumb-item active">إدارة استوديو القماش </li>
                </ol>
            </nav>
        </div>
        
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-center border-primary">
                <div class="card-body">
                    <h4 class="text-primary mb-0">@Model.TotalItems</h4>
                    <small class="text-muted">إجمالي الاستوديوهات</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center border-success">
                <div class="card-body">
                    <h4 class="text-success mb-0">@Model.ActiveItemsCount</h4>
                    <small class="text-muted">النشطة</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center border-info">
                <div class="card-body">
                    <h4 class="text-info mb-0">@Model.ColorBasedCount</h4>
                    <small class="text-muted">على أساس اللون</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center border-warning">
                <div class="card-body">
                    <h4 class="text-warning mb-0">@Model.DesignBasedCount</h4>
                    <small class="text-muted">على أساس التصميم</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters and Actions -->
    <div class="card mb-4">
        <div class="card-header bg-light">
            <div class="row align-items-center">
                <div class="col">
                    <h5 class="mb-0">
                        <i class="fas fa-filter me-2"></i>البحث والتصفية المتقدمة
                    </h5>
                </div>
                <div class="col-auto">
                    <a href="@Url.Action("Create")" class="btn btn-primary">
                        <i class="fas fa-plus me-1"></i>إضافة استوديو جديد
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <form method="get" action="@Url.Action("Index")">
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <label class="form-label">البحث العام</label>
                        <input type="text" name="searchQuery" class="form-control" value="@Model.SearchQuery" 
                               placeholder="ابحث في الأصناف والألوان والتصاميم..." />
                    </div>
                    <div class="col-md-2 mb-3">
                        <label class="form-label">الصنف</label>
                        <select name="selectedItemId" class="form-select">
                            <option value="">-- كل الأصناف --</option>
                            @foreach (var item in Model.ItemsFilter)
                            {
                                <option value="@item.Value" @@(Model.SelectedItemId?.ToString() == item.Value ? "selected" : "")>@item.Text</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-2 mb-3">
                        <label class="form-label">اللون</label>
                        <select name="selectedColorId" class="form-select">
                            <option value="">-- كل الألوان --</option>
                            @foreach (var color in Model.ColorsFilter)
                            {
                                <option value="@color.Value" @@(Model.SelectedColorId?.ToString() == color.Value ? "selected" : "")>@color.Text</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-2 mb-3">
                        <label class="form-label">التصميم</label>
                        <select name="selectedDesignId" class="form-select">
                            <option value="">-- كل التصاميم --</option>
                            @foreach (var design in Model.DesignsFilter)
                            {
                                <option value="@design.Value" @@(Model.SelectedDesignId?.ToString() == design.Value ? "selected" : "")>@design.Text</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-1 mb-3">
                        <label class="form-label">الحالة</label>
                        <select name="statusFilter" class="form-select">
                            <option value="All" @@(Model.StatusFilter == "All" ? "selected" : "")>الكل</option>
                            <option value="Active" @@(Model.StatusFilter == "Active" ? "selected" : "")>نشط</option>
                            <option value="Inactive" @@(Model.StatusFilter == "Inactive" ? "selected" : "")>غير نشط</option>
                        </select>
                    </div>
                    <div class="col-md-1 mb-3">
                        <label class="form-label">النوع</label>
                        <select name="typeFilter" class="form-select">
                            <option value="All" @@(Model.TypeFilter == "All" ? "selected" : "")>الكل</option>
                            <option value="Color" @@(Model.TypeFilter == "Color" ? "selected" : "")>لون</option>
                            <option value="Design" @@(Model.TypeFilter == "Design" ? "selected" : "")>تصميم</option>
                        </select>
                    </div>
                    <div class="col-md-1 mb-3 d-flex align-items-end">
                        <button type="submit" class="btn btn-outline-primary me-1">
                            <i class="fas fa-search"></i>
                        </button>
                        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                            <i class="fas fa-times"></i>
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Studios Grid/Table -->
    <div class="card">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="fas fa-images me-2"></i>استوديو القماش
                    @if (Model.HasItems)
                    {
                        <span class="badge bg-light text-dark ms-2">@Model.TotalItems استوديو</span>
                    }
                </h5>
                <div class="btn-group btn-group-sm">
                    <button type="button" class="btn btn-outline-light" id="gridViewBtn" title="عرض شبكي">
                        <i class="fas fa-th"></i>
                    </button>
                    <button type="button" class="btn btn-light" id="listViewBtn" title="عرض قائمة">
                        <i class="fas fa-list"></i>
                    </button>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            @if (Model.HasItems)
            {
                <!-- Grid View -->
                <div id="gridView" class="p-3" style="display: none;">
                    <div class="row">
                        @foreach (var studio in Model.FabricStudios)
                        {
                            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                                <div class="card h-100 shadow-sm studio-card">
                                    <div class="position-relative">
                                        <img src="@(string.IsNullOrEmpty(studio.WatermarkedImagePath) ? "/images/no-image-placeholder.png" : studio.WatermarkedImagePath)" 
                                             class="card-img-top" style="height: 200px; object-fit: cover;" alt="@studio.ItemName" />
                                        
                                        <!-- Status Badge -->
                                        <span class="position-absolute top-0 start-0 badge bg-@studio.StatusClass m-2">
                                            <i class="fas @studio.StatusIcon me-1"></i>@studio.StatusText
                                        </span>
                                        
                                        <!-- Type Badge -->
                                        <span class="position-absolute top-0 end-0 badge bg-@(studio.HasColor ? "primary" : "info") m-2">
                                            <i class="fas @(studio.HasColor ? "fa-palette" : "fa-paint-brush") me-1"></i>@studio.StudioType
                                        </span>
                                    </div>
                                    
                                    <div class="card-body">
                                        <h6 class="card-title">@studio.ItemName</h6>
                                        <p class="card-text small">
                                            @if (studio.HasColor)
                                            {
                                                <span class="text-primary">
                                                    <i class="fas fa-palette me-1"></i>@studio.ColorName
                                                </span>
                                            }
                                            else if (studio.HasDesign)
                                            {
                                                <span class="text-info">
                                                    <i class="fas fa-paint-brush me-1"></i>@studio.DesignName
                                                </span>
                                            }
                                        </p>
                                        @if (!string.IsNullOrEmpty(studio.Comment))
                                        {
                                            <p class="card-text small text-muted">@studio.Comment.Substring(0, Math.Min(50, studio.Comment.Length))@(studio.Comment.Length > 50 ? "..." : "")</p>
                                        }
                                    </div>
                                    
                                    <div class="card-footer bg-transparent">
                                        <div class="btn-group w-100">
                                            <a href="@Url.Action("Details", new { id = studio.Id })" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="@Url.Action("Edit", new { id = studio.Id })" class="btn btn-sm btn-outline-warning">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <button type="button" class="btn btn-sm btn-outline-@(studio.Status ? "warning" : "success") toggle-status-btn" 
                                                    data-id="@studio.Id" data-current-status="@studio.Status.ToString().ToLower()">
                                                <i class="fas @(studio.Status ? "fa-eye-slash" : "fa-eye")"></i>
                                            </button>
                                            <button type="button" class="btn btn-sm btn-outline-danger delete-btn" 
                                                    data-id="@studio.Id" data-name="@studio.ItemName">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <!-- List View -->
                <div id="listView" class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>الصورة</th>
                                <th>الصنف</th>
                                <th>النوع</th>
                                <th>اللون/التصميم</th>
                                <th>الحالة</th>
                                <th>البيان</th>
                                <th>الإجراءات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var studio in Model.FabricStudios)
                            {
                                <tr>
                                    <td>
                                        <img src="@(string.IsNullOrEmpty(studio.WatermarkedImagePath) ? "/images/no-image-placeholder.png" : studio.WatermarkedImagePath)" 
                                             class="rounded" style="width: 60px; height: 60px; object-fit: cover;" alt="@studio.ItemName" />
                                    </td>
                                    <td>
                                        <strong>@studio.ItemName</strong>
                                        <br><small class="text-muted">رقم: @studio.Id</small>
                                    </td>
                                    <td>
                                        <span class="badge bg-@(studio.HasColor ? "primary" : "info")">
                                            <i class="fas @(studio.HasColor ? "fa-palette" : "fa-paint-brush") me-1"></i>@studio.StudioType
                                        </span>
                                    </td>
                                    <td>
                                        @if (studio.HasColor)
                                        {
                                            <span class="text-primary">@studio.ColorName</span>
                                        }
                                        else if (studio.HasDesign)
                                        {
                                            <span class="text-info">@studio.DesignName</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">غير محدد</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-@studio.StatusClass status-badge" data-id="@studio.Id">
                                            <i class="fas @studio.StatusIcon me-1"></i>
                                            <span class="status-text">@studio.StatusText</span>
                                        </span>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(studio.Comment))
                                        {
                                            <span title="@studio.Comment">@studio.Comment.Substring(0, Math.Min(30, studio.Comment.Length))@(studio.Comment.Length > 30 ? "..." : "")</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">لا يوجد بيان</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a href="@Url.Action("Details", new { id = studio.Id })" 
                                               class="btn btn-outline-primary" title="التفاصيل">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="@Url.Action("Edit", new { id = studio.Id })" 
                                               class="btn btn-outline-warning" title="تعديل">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <button type="button" class="btn btn-outline-@(studio.Status ? "warning" : "success") toggle-status-btn" 
                                                    data-id="@studio.Id" data-current-status="@studio.Status.ToString().ToLower()" 
                                                    title="@(studio.Status ? "إلغاء تنشيط" : "تنشيط")">
                                                <i class="fas @(studio.Status ? "fa-eye-slash" : "fa-eye")"></i>
                                            </button>
                                            <button type="button" class="btn btn-outline-danger delete-btn" 
                                                    data-id="@studio.Id" data-name="@studio.ItemName" title="حذف">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                @if (Model.TotalPages > 1)
                {
                    <div class="card-footer">
                        <nav aria-label="تصفح الصفحات">
                            <ul class="pagination justify-content-center mb-0">
                                @if (Model.HasPreviousPage)
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="@Url.Action("Index", new { 
                                           page = Model.CurrentPage - 1, 
                                           searchQuery = Model.SearchQuery,
                                           selectedItemId = Model.SelectedItemId,
                                           selectedColorId = Model.SelectedColorId,
                                           selectedDesignId = Model.SelectedDesignId,
                                           statusFilter = Model.StatusFilter,
                                           typeFilter = Model.TypeFilter
                                         })">السابق</a>
                                    </li>
                                }

                                @for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                                {
                                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                        <a class="page-link" href="@Url.Action("Index", new { 
                                           page = i, 
                                           searchQuery = Model.SearchQuery,
                                           selectedItemId = Model.SelectedItemId,
                                           selectedColorId = Model.SelectedColorId,
                                           selectedDesignId = Model.SelectedDesignId,
                                           statusFilter = Model.StatusFilter,
                                           typeFilter = Model.TypeFilter
                                         })">@i</a>
                                    </li>
                                }

                                @if (Model.HasNextPage)
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="@Url.Action("Index", new { 
                                           page = Model.CurrentPage + 1, 
                                           searchQuery = Model.SearchQuery,
                                           selectedItemId = Model.SelectedItemId,
                                           selectedColorId = Model.SelectedColorId,
                                           selectedDesignId = Model.SelectedDesignId,
                                           statusFilter = Model.StatusFilter,
                                           typeFilter = Model.TypeFilter
                                         })">التالي</a>
                                    </li>
                                }
                            </ul>
                        </nav>
                        <div class="text-center mt-2">
                            <small class="text-muted">
                                صفحة @Model.CurrentPage من @Model.TotalPages (إجمالي @Model.TotalItems استوديو)
                            </small>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-camera fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">لا توجد استوديوهات قماش</h5>
                    <p class="text-muted">لا توجد استوديوهات تطابق معايير البحث المحددة</p>
                    <a href="@Url.Action("Create")" class="btn btn-primary">
                        <i class="fas fa-plus me-1"></i>إضافة استوديو جديد
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            console.log('Fabric Studios Index loaded at 2025-09-02 19:40:25 by Ammar-Yasser8');

            // View toggle functionality
            $('#gridViewBtn, #listViewBtn').click(function() {
                var isGridView = $(this).attr('id') === 'gridViewBtn';
                
                $('#gridViewBtn, #listViewBtn').removeClass('btn-light').addClass('btn-outline-light');
                $(this).removeClass('btn-outline-light').addClass('btn-light');
                
                if (isGridView) {
                    $('#listView').hide();
                    $('#gridView').show();
                } else {
                    $('#gridView').hide();
                    $('#listView').show();
                }
                
                localStorage.setItem('fabricStudioViewMode', isGridView ? 'grid' : 'list');
            });

            // Restore view mode
            var viewMode = localStorage.getItem('fabricStudioViewMode') || 'list';
            if (viewMode === 'grid') {
                $('#gridViewBtn').click();
            } else {
                $('#listViewBtn').click();
            }

            // Toggle status functionality
            $('.toggle-status-btn').click(function() {
                var btn = $(this);
                var studioId = btn.data('id');
                var currentStatus = btn.data('current-status') === 'true';
                var newStatusText = currentStatus ? 'غير نشط' : 'نشط';
                
                if (confirm(`هل تريد تغيير حالة الاستوديو إلى "${newStatusText}"؟`)) {
                    $.post('@Url.Action("ToggleStatus")', { id: studioId }, function(result) {
                        if (result.success) {
                            var statusBadge = $(`.status-badge[data-id="${studioId}"]`);
                            statusBadge.removeClass('bg-success bg-secondary')
                                      .addClass('bg-' + result.statusClass);
                            statusBadge.find('i').removeClass('fa-check-circle fa-times-circle')
                                      .addClass(result.statusIcon);
                            statusBadge.find('.status-text').text(result.statusText);
                            
                            btn.data('current-status', result.newStatus.toString().toLowerCase())
                               .removeClass('btn-outline-warning btn-outline-success')
                               .addClass(result.newStatus ? 'btn-outline-warning' : 'btn-outline-success')
                               .attr('title', result.newStatus ? 'إلغاء تنشيط' : 'تنشيط');
                            btn.find('i').removeClass('fa-eye fa-eye-slash')
                               .addClass(result.newStatus ? 'fa-eye-slash' : 'fa-eye');
                            
                            showToast('success', result.message);
                        } else {
                            showToast('error', result.message);
                        }
                    }).fail(function() {
                        showToast('error', 'حدث خطأ أثناء تحديث الحالة');
                    });
                }
            });

            // Delete functionality
            $('.delete-btn').click(function() {
                var btn = $(this);
                var studioId = btn.data('id');
                var studioName = btn.data('name');
                
                if (confirm(`هل أنت متأكد من حذف استوديو "${studioName}"؟\n\nسيتم حذف جميع الصور المرتبطة.\nلا يمكن التراجع عن هذا الإجراء.`)) {
                    $.post('@Url.Action("Delete")', { id: studioId }, function(result) {
                        if (result.success) {
                            btn.closest('tr, .col-lg-3, .col-md-4, .col-sm-6').fadeOut(function() {
                                $(this).remove();
                            });
                            showToast('success', result.message);
                        } else {
                            showToast('error', result.message);
                        }
                    }).fail(function() {
                        showToast('error', 'حدث خطأ أثناء حذف الاستوديو');
                    });
                }
            });

            function showToast(type, message) {
                var alertClass = type === 'success' ? 'alert-success' : 'alert-danger';
                var icon = type === 'success' ? 'fa-check-circle' : 'fa-exclamation-circle';
                
                var toast = $(`
                    <div class="alert ${alertClass} alert-dismissible fade show position-fixed" style="top: 20px; right: 20px; z-index: 9999;">
                        <i class="fas ${icon} me-2"></i>${message}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                `);
                
                $('body').append(toast);
                setTimeout(function() {
                    toast.alert('close');
                }, 5000);
            }
        });
    </script>
}