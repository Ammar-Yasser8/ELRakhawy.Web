@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            // Last updated: 2025-08-03 17:27:22 by Ammar-Yasser8

            // Form validation
            $("#createForm").on("submit", function(e) {
                if (!validateForm()) {
                    e.preventDefault();
                    return false;
                }

                // Disable submit button to prevent double submission
                $("#submitBtn")
                    .prop("disabled", true)
                    .html('<span class="spinner-border spinner-border-sm me-2"></span>جارٍ الحفظ...');

                return true;
            });

            // Validate form
            function validateForm() {
                let isValid = true;

                // Check if any forms are selected
                if (!$("input[name='SelectedFormIds']:checked").length) {
                    $("#formsValidationMsg").removeClass("d-none");
                    isValid = false;
                } else {
                    $("#formsValidationMsg").addClass("d-none");
                }

                return isValid;
            }

            // Select all forms
            $("#selectAllForms").on("click", function() {
                $("input[name='SelectedFormIds']").prop("checked", true);
                $("#formsValidationMsg").addClass("d-none");
            });

            // Deselect all forms
            $("#deselectAllForms").on("click", function() {
                $("input[name='SelectedFormIds']").prop("checked", false);
                validateForm();
            });

            // Clear validation message when a form is checked
            $("input[name='SelectedFormIds']").on("change", function() {
                if ($("input[name='SelectedFormIds']:checked").length) {
                    $("#formsValidationMsg").addClass("d-none");
                }
            });

            // Initialize Select2 for financial transaction type dropdown
            if ($.fn.select2) {
                $("#FinancialTransactionTypeId").select2({
                    placeholder: "-- اختر نوع المعاملة المالية --",
                    dir: "rtl",
                    language: "ar",
                    width: '100%'
                });
            }
        });
    </script>

