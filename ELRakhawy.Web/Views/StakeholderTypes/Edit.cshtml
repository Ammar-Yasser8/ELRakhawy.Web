@using ELRakhawy.EL
@using ELRakhawy.EL.ViewModels
@model StakeholderTypeViewModel
@{
    ViewData["Title"] = "تعديل نوع صاحب المصلحة";
    // Last updated: 2025-08-03 17:49:07 by Ammar-Yasser8
}

<div class="welcome-card mb-4">
    <div class="row">
        <div class="col">
            <h2 class="mb-3">تعديل نوع صاحب المصلحة</h2>
            <p class="text-muted">تعديل بيانات نوع صاحب المصلحة والواجهات المرتبطة به</p>
        </div>
    </div>
</div>

<nav aria-label="breadcrumb" class="mb-4">
    <div class="card border-0 shadow-sm">
        <div class="card-body py-2">
            <ol class="breadcrumb mb-0 align-items-center">
                <li class="breadcrumb-item">
                    <a href="@Url.Action("Index", "Home")" class="text-decoration-none d-flex align-items-center">
                        <i class="fas fa-home text-primary me-2"></i>
                        <span class="fw-semibold">الرئيسية</span>
                    </a>
                </li>
                <li class="breadcrumb-item">
                    <a href="@Url.Action("PublicTables", "Home")" class="text-decoration-none d-flex align-items-center">
                        <i class="fas fa-table text-info me-2"></i>
                        <span class="fw-semibold">الجداول العامة</span>
                    </a>
                </li>
                <li class="breadcrumb-item">
                    <a href="@Url.Action("Index", "StakeholderTypes")" class="text-decoration-none d-flex align-items-center">
                        <i class="fas fa-table text-info me-2"></i>
                        <span class="fw-semibold">أنواع الجهات</span>
                    </a>
                </li>
                <li class="breadcrumb-item active d-flex align-items-center">
                    <i class="fas fa-user-tag text-warning me-2"></i>
                    <span class="fw-bold text-dark">@ViewData["Title"]</span>
                </li>
            </ol>
        </div>
    </div>
</nav>

<div class="row">
    <div class="col-lg-8 mb-4">
        <div class="section-card">
            <div class="section-header">
                <h5 class="mb-0">بيانات النوع</h5>
            </div>
            <div class="section-content">
                <form asp-action="Edit" method="post" id="editForm">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3 py-2"></div>

                    <input type="hidden" asp-for="Id" />

                    <div class="mb-4">
                        <label asp-for="Type" class="form-label fw-bold">النوع <span class="text-danger">*</span></label>
                        <input asp-for="Type" class="form-control" placeholder="أدخل نوع صاحب المصلحة" />
                        <span asp-validation-for="Type" class="text-danger d-block mt-1"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="FinancialTransactionTypeId" class="form-label fw-bold">نوع المعاملة المالية <span class="text-danger">*</span></label>
                        <select asp-for="FinancialTransactionTypeId" class="form-select">
                            <option value="">-- اختر نوع المعاملة المالية --</option>
                            @foreach (var type in Model.FinancialTransactionTypes)
                            {
                                <option value="@type.Id" selected="@(type.Id == Model.FinancialTransactionTypeId)">@type.Type</option>
                            }
                        </select>
                        <span asp-validation-for="FinancialTransactionTypeId" class="text-danger d-block mt-1"></span>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-bold">الواجهات المرتبطة <span class="text-danger">*</span></label>
                        <div class="card border">
                            <div class="card-header bg-light py-2">
                                <div class="d-flex justify-content-between align-items-center">
                                    <span>حدد الواجهات المرتبطة</span>
                                    <div>
                                        <button type="button" class="btn btn-sm btn-outline-secondary" id="selectAllForms">تحديد الكل</button>
                                        <button type="button" class="btn btn-sm btn-outline-secondary ms-1" id="deselectAllForms">إلغاء تحديد الكل</button>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="row g-3">
                                    @foreach (var form in Model.AvailableForms)
                                    {
                                        <div class="col-md-4 col-sm-6">
                                            <div class="form-check">
                                                <input type="checkbox" class="form-check-input"
                                                       id="form_@form.Id"
                                                       name="SelectedFormIds"
                                                       value="@form.Id"
                                                       @(Model.SelectedFormIds.Contains(form.Id) ? "checked" : "")>
                                                <label class="form-check-label" for="form_@form.Id">@form.FormName</label>
                                            </div>
                                        </div>
                                    }
                                </div>
                                <div id="formsValidationMsg" class="text-danger mt-2 @(Model.SelectedFormIds.Any() ? "d-none" : "")">
                                    يجب اختيار واجهة واحدة على الأقل
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Comment" class="form-label fw-bold">بيان</label>
                        <textarea asp-for="Comment" class="form-control" rows="3"
                                  placeholder="أدخل بيان إضافي (اختياري)"
                                  maxlength="500"></textarea>
                        <span asp-validation-for="Comment" class="text-danger"></span>
                        <div class="text-muted mt-1 small">
                            <span id="commentCounter">0</span>/500 حرف
                        </div>
                    </div>

                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-times me-1"></i>
                            إلغاء
                        </a>
                        <button type="submit" class="btn btn-primary" id="submitBtn">
                            <i class="fas fa-save me-1"></i>
                            حفظ التغييرات
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="section-card mb-4">
            <div class="section-header">
                <h5 class="mb-0">
                    <i class="fas fa-info-circle me-2 text-primary"></i>
                    تعليمات
                </h5>
            </div>
            <div class="section-content">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item px-0">
                        <div class="d-flex">
                            <div class="flex-shrink-0 text-primary me-2">
                                <i class="fas fa-check-circle"></i>
                            </div>
                            <div>
                                <strong>النوع:</strong> يمكنك تعديل اسم نوع صاحب المصلحة.
                            </div>
                        </div>
                    </li>
                    <li class="list-group-item px-0">
                        <div class="d-flex">
                            <div class="flex-shrink-0 text-primary me-2">
                                <i class="fas fa-check-circle"></i>
                            </div>
                            <div>
                                <strong>الواجهات المرتبطة:</strong> يمكنك تغيير الواجهات المرتبطة بهذا النوع.
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            // Form validation
            $("#editForm").on("submit", function(e) {
                if (!validateForm()) {
                    e.preventDefault();
                    return false;
                }

                // Disable submit button
                $("#submitBtn")
                    .prop("disabled", true)
                    .html('<span class="spinner-border spinner-border-sm me-2"></span>جارٍ الحفظ...');

                return true;
            });

            // Validate form
            function validateForm() {
                let isValid = true;

                // Check if any forms are selected
                if (!$("input[name='SelectedFormIds']:checked").length) {
                    $("#formsValidationMsg").removeClass("d-none");
                    isValid = false;
                } else {
                    $("#formsValidationMsg").addClass("d-none");
                }

                return isValid;
            }

            // Select all forms
            $("#selectAllForms").on("click", function() {
                $("input[name='SelectedFormIds']").prop("checked", true);
                $("#formsValidationMsg").addClass("d-none");
            });

            // Deselect all forms
            $("#deselectAllForms").on("click", function() {
                $("input[name='SelectedFormIds']").prop("checked", false);
                validateForm();
            });

            // Update character counter
            function updateCharCount() {
                const maxLength = 500;
                const currentLength = $("#Comment").val().length;
                $("#commentCounter").text(currentLength);

                if (currentLength > maxLength) {
                    $("#Comment").val($("#Comment").val().substring(0, maxLength));
                    $("#commentCounter").text(maxLength);
                }
            }

            // Initialize character counter
            updateCharCount();

            // Update counter on input
            $("#Comment").on("input", updateCharCount);

            // Initialize Select2
            if ($.fn.select2) {
                $("#FinancialTransactionTypeId").select2({
                    placeholder: "-- اختر نوع المعاملة المالية --",
                    dir: "rtl",
                    language: "ar",
                    width: '100%'
                });
            }
        });
    </script>

    <style>
        /* Form styling */
        .form-check {
            padding: 0.75rem;
            border-radius: 0.25rem;
            transition: background-color 0.2s;
        }

            .form-check:hover {
                background-color: rgba(0,0,0,0.02);
            }

        .form-check-input:checked + .form-check-label {
            font-weight: 500;
            color: var(--bs-primary);
        }

        /* Select2 RTL fixes */
        .select2-container--default .select2-selection--single {
            height: calc(1.5em + 0.75rem + 2px);
            padding: 0.375rem 0.75rem;
            border: 1px solid #ced4da;
        }

            .select2-container--default .select2-selection--single .select2-selection__rendered {
                line-height: 1.5;
                padding-right: 0;
                padding-left: 20px;
            }

            .select2-container--default .select2-selection--single .select2-selection__arrow {
                height: calc(1.5em + 0.75rem);
            }

        /* Mobile optimizations */
        @@media (max-width: 767.98px) {
            .form-check

        {
            padding: 1rem;
            margin-bottom: 0.5rem;
        }

        .btn-group-sm > .btn,
        .btn-sm {
            padding: 0.5rem 0.75rem;
        }

        }
    </style>
}