            // ========================================
            // CONSTANTS & CONFIGURATION
            // ========================================
            const CONFIG = {
                CURRENT_TIME: '2025-09-04 16:33:23',
                CURRENT_USER: 'Ammar-Yasser8',
                SEARCH_DELAY: 200,
                TOAST_DELAY: 4000,
                RELOAD_DELAY: 1500
            };

            // ========================================
            // STATE MANAGEMENT
            // ========================================
            const State = {
                currentEditId: null,
                currentDetailsId: null,
                searchTimeout: null
            };

            // ========================================
            // MODAL INSTANCES - FIXED
            // ========================================
            const Modals = {
                create: null,
                edit: null,
                delete: null,
                details: null,
                toast: null
            };

            // Initialize modals safely
            function initializeModals() {
                try {
                    if (document.getElementById('createModal')) {
                        Modals.create = new bootstrap.Modal(document.getElementById('createModal'), {
                            backdrop: 'static',
                            keyboard: false
                        });
                    }
                    if (document.getElementById('editModal')) {
                        Modals.edit = new bootstrap.Modal(document.getElementById('editModal'), {
                            backdrop: 'static',
                            keyboard: false
                        });
                    }
                    if (document.getElementById('deleteModal')) {
                        Modals.delete = new bootstrap.Modal(document.getElementById('deleteModal'));
                    }
                    if (document.getElementById('detailsModal')) {
                        Modals.details = new bootstrap.Modal(document.getElementById('detailsModal'));
                    }
                    if (document.getElementById('notificationToast')) {
                        Modals.toast = new bootstrap.Toast(document.getElementById('notificationToast'), {
                            delay: CONFIG.TOAST_DELAY
                        });
                    }
                } catch (error) {
                    console.error('Error initializing modals:', error);
                }
            }

            // ========================================
            // UTILITY: ARABIC NUMBER CONVERSION
            // ========================================
            const NumberConverter = {
                arabicDigits: '٠١٢٣٤٥٦٧٨٩',
                latinDigits: '0123456789',

                toArabic(str) {
                    if (typeof str !== 'string') return str;
                    return str.replace(/[0-9]/g, d => this.arabicDigits[d]);
                },

                toLatin(str) {
                    if (typeof str !== 'string') return str;
                    return str.replace(/[٠-٩]/g, d => this.latinDigits[this.arabicDigits.indexOf(d)]);
                },

                isArabicChar(c) {
                    return /[\u0600-\u06FF]/.test(c);
                },

                isEnglishChar(c) {
                    return /[a-zA-Z]/.test(c);
                },

                hasArabicChar(str) {
                    if (!str) return false;
                    return /[\u0600-\u06FF]/.test(str);
                },

                hasOnlyEnglishLetters(str) {
                    if (!str || str.trim().length === 0) return false;
                    const hasEnglish = /[a-zA-Z]/.test(str);
                    const hasArabic = this.hasArabicChar(str);
                    return hasEnglish && !hasArabic;
                },

                getDisplayFormat(str) {
                    if (!str || str.trim().length === 0) {
                        return 'arabic';
                    }

                    if (this.hasArabicChar(str)) {
                        return 'arabic';
                    }

                    if (this.hasOnlyEnglishLetters(str)) {
                        return 'english';
                    }

                    return 'arabic';
                },

                convertBasedOnContent(str) {
                    const format = this.getDisplayFormat(str);
                    return format === 'arabic' ? this.toArabic(str) : this.toLatin(str);
                }
            };

            // ========================================
            // UTILITY: NOTIFICATIONS - FIXED
            // ========================================
            const Notification = {
                icons: {
                    success: 'fa-check-circle',
                    error: 'fa-exclamation-circle',
                    warning: 'fa-exclamation-triangle',
                    info: 'fa-info-circle'
                },

                colors: {
                    success: 'bg-success',
                    error: 'bg-danger',
                    warning: 'bg-warning',
                    info: 'bg-info'
                },

                show(message, type = 'success') {
                    try {
                        $('#toastIcon').removeClass().addClass(`fas ${this.icons[type]} me-2`);
                        $('#toastMessage').text(message);
                        $('#notificationToast')
                            .removeClass('bg-success bg-danger bg-warning bg-info text-white text-dark')
                            .addClass(`${this.colors[type]} ${type === 'warning' ? 'text-dark' : 'text-white'}`);

                        if (Modals.toast) {
                            Modals.toast.show();
                        }
                    } catch (error) {
                        console.error('Error showing notification:', error);
                        // Fallback to alert if toast fails
                        alert(message);
                    }
                }
            };

            // ========================================
            // UTILITY: INPUT NUMBER HANDLER - FIXED
            // ========================================
            const InputNumberHandler = {
                applyConversion($input) {
                    const val = $input.val();
                    if (!val || val.length === 0) return;

                    const newVal = NumberConverter.convertBasedOnContent(val);

                    if (newVal !== val) {
                        const cursorPos = $input[0].selectionStart;
                        $input.val(newVal);
                        try {
                            $input[0].setSelectionRange(cursorPos, cursorPos);
                        } catch (ex) {
                            $input.focus();
                        }
                    }
                },

                handleKeyPress(e, input) {
                    if (e.which >= 48 && e.which <= 57) {
                        e.preventDefault();

                        const digit = String.fromCharCode(e.which);
                        const currentValue = input.value;
                        const cursorStart = input.selectionStart || 0;
                        const cursorEnd = input.selectionEnd || 0;

                        let newValue;
                        if (cursorStart !== cursorEnd) {
                            const beforeSelection = currentValue.slice(0, cursorStart);
                            const afterSelection = currentValue.slice(cursorEnd);

                            const remainingText = beforeSelection + afterSelection;
                            const format = NumberConverter.getDisplayFormat(remainingText || digit);
                            const convertedDigit = format === 'arabic'
                                ? NumberConverter.toArabic(digit)
                                : digit;

                            newValue = beforeSelection + convertedDigit + afterSelection;

                            input.value = newValue;
                            input.setSelectionRange(cursorStart + 1, cursorStart + 1);
                        } else {
                            const format = NumberConverter.getDisplayFormat(currentValue);
                            const convertedDigit = format === 'arabic'
                                ? NumberConverter.toArabic(digit)
                                : digit;

                            newValue = currentValue.slice(0, cursorStart) +
                                      convertedDigit +
                                      currentValue.slice(cursorStart);

                            input.value = newValue;
                            input.setSelectionRange(cursorStart + 1, cursorStart + 1);
                        }

                        $(input).trigger('input');
                    }
                },

                initialize($container) {
                    const $inputs = $container.find('input[type="text"], input[type="number"], textarea');

                    // Convert existing values
                    $inputs.each(function() {
                        const $input = $(this);
                        const val = $input.val();
                        if (val) {
                            $input.val(NumberConverter.convertBasedOnContent(val));
                        }
                    });

                    // Remove any existing handlers to prevent duplicates
                    $inputs.off('input.numberHandler keyup.numberHandler paste.numberHandler keypress.numberHandler');

                    // Handle input events with namespaced events
                    $inputs.on('input.numberHandler keyup.numberHandler paste.numberHandler', function() {
                        InputNumberHandler.applyConversion($(this));
                    });

                    // Handle key press with namespaced events
                    $inputs.on('keypress.numberHandler', function(e) {
                        InputNumberHandler.handleKeyPress(e, this);
                    });
                }
            };

            // ========================================
            // SEARCH FUNCTIONALITY
            // ========================================
            const Search = {
                getSearchValues(query) {
                    const trimmed = query.toLowerCase().trim();
                    return {
                        original: trimmed,
                        latin: NumberConverter.toLatin(trimmed),
                        arabic: NumberConverter.toArabic(trimmed)
                    };
                },

                matchesSearch(text, searchValues) {
                    if (!searchValues.original) return true;
                    const lowerText = text.toLowerCase();
                    return lowerText.includes(searchValues.original) ||
                           lowerText.includes(searchValues.latin) ||
                           lowerText.includes(searchValues.arabic);
                },

                perform() {
                    const searches = {
                        type: this.getSearchValues($('#searchByType').val()),
                        financial: this.getSearchValues($('#searchByFinancial').val()),
                        forms: this.getSearchValues($('#searchByForms').val()),
                        comment: this.getSearchValues($('#searchByComment').val())
                    };

                    let visibleCount = 0;

                    $('.stakeholder-type-row').each(function() {
                        const $row = $(this);
                        const data = {
                            type: $row.find('.stakeholder-type-name').text().toLowerCase(),
                            financial: $row.find('.stakeholder-type-financial').text().toLowerCase(),
                            forms: $row.find('.stakeholder-type-forms').text().toLowerCase(),
                            comment: $row.find('.stakeholder-type-comment').text().toLowerCase()
                        };

                        const matches = {
                            type: Search.matchesSearch(data.type, searches.type),
                            financial: Search.matchesSearch(data.financial, searches.financial),
                            forms: Search.matchesSearch(data.forms, searches.forms),
                            comment: Search.matchesSearch(data.comment, searches.comment)
                        };

                        const shouldShow = matches.type && matches.financial &&
                                          matches.forms && matches.comment;

                        $row.toggle(shouldShow);
                        if (shouldShow) visibleCount++;
                    });

                    this.updateUI(visibleCount, searches);
                },

                updateUI(visibleCount, searches) {
                    const arabicCount = NumberConverter.toArabic(visibleCount.toString());
                    $('#visibleCount, #badgeCount').text(arabicCount);

                    const fields = ['Type', 'Financial', 'Forms', 'Comment'];
                    fields.forEach(field => {
                        const hasValue = searches[field.toLowerCase()].original.length > 0;
                        $(`#clear${field}Search`).toggle(hasValue);
                        $(`#searchBy${field}`).toggleClass('border-primary', hasValue);
                    });

                    const hasAnySearch = Object.values(searches)
                        .some(s => s.original.length > 0);
                    $('#clearAllSearch').toggle(hasAnySearch);

                    $('#stakeholderTypesContainer .section-card').show();
                },

                clear(field) {
                    if (field === 'all') {
                        $('#searchByType, #searchByFinancial, #searchByForms, #searchByComment')
                            .val('')
                            .removeClass('border-primary');
                    } else {
                        $(`#searchBy${field}`)
                            .val('')
                            .removeClass('border-primary')
                            .focus();
                    }
                    this.perform();
                },

                initialize() {
                    $('#searchByType, #searchByFinancial, #searchByForms, #searchByComment')
                        .on('input', function() {
                            InputNumberHandler.applyConversion($(this));
                            clearTimeout(State.searchTimeout);
                            State.searchTimeout = setTimeout(() => Search.perform(), CONFIG.SEARCH_DELAY);
                        });

                    $('#clearTypeSearch').click(() => this.clear('Type'));
                    $('#clearFinancialSearch').click(() => this.clear('Financial'));
                    $('#clearFormsSearch').click(() => this.clear('Forms'));
                    $('#clearCommentSearch').click(() => this.clear('Comment'));
                    $('#clearAllSearch, #resetSearch').click(() => this.clear('all'));

                    $('#searchByType, #searchByFinancial, #searchByForms, #searchByComment').each(function() {
                        const $input = $(this);
                        $input.on('keypress', function(e) {
                            InputNumberHandler.handleKeyPress(e, this);
                        });
                    });
                }
            };

            // ========================================
            // COUNTS UPDATE
            // ========================================
            function updateCounts() {
                const total = $('.stakeholder-type-row').length;
                const visible = $('.stakeholder-type-row:visible').length;

                $('#totalCount').text(NumberConverter.toArabic(total.toString()));
                $('#visibleCount').text(NumberConverter.toArabic(visible.toString()));
                $('#badgeCount').text(NumberConverter.toArabic(visible.toString()));
            }

            // ========================================
            // MODAL: CREATE - FIXED
            // ========================================
            const CreateModal = {
                load() {
                    if (!Modals.create) {
                        console.error('Create modal not initialized');
                        return;
                    }

                    $('#createModalContent').html(`
                        <div class="text-center py-4">
                            <div class="spinner-border text-success" role="status">
                                <span class="visually-hidden">جاري التحميل...</span>
                            </div>
                            <p class="mt-2 text-muted">جاري تحميل النموذج...</p>
                        </div>
                    `);

                    Modals.create.show();

                    $.get('/StakeholderTypes/CreatePopup')
                        .done(data => {
                            $('#createModalContent').html(data);
                            this.initialize();
                        })
                        .fail((xhr, status, error) => {
                            console.error('Failed to load create modal:', error);
                            $('#createModalContent').html(`
                                <div class="alert alert-danger text-center">
                                    <i class="fas fa-exclamation-triangle me-2"></i>
                                    فشل في تحميل النموذج. يرجى المحاولة مرة أخرى.
                                    <br><small class="text-muted">خطأ: ${error}</small>
                                </div>
                            `);
                        });
                },

                initialize() {
                    try {
                        // Initialize Select2
                        if ($.fn.select2) {
                            $('#FinancialTransactionTypeId').select2({
                                placeholder: "-- اختر نوع المعاملة المالية --",
                                dir: "rtl",
                                language: "ar",
                                width: '100%',
                                dropdownParent: $('#createModal')
                            });
                        }

                        // Initialize number inputs
                        InputNumberHandler.initialize($('#createModal'));

                        // Remove any existing handlers
                        $('#createForm').off('submit.createModal');

                        // Form submission
                        $('#createForm').on('submit.createModal', (e) => {
                            e.preventDefault();
                            e.stopPropagation();

                            if (this.validate()) {
                                this.submit();
                            }
                        });

                        // Checkbox handlers
                        this.initializeCheckboxes();
                    } catch (error) {
                        console.error('Error initializing create modal:', error);
                    }
                },

                initializeCheckboxes() {
                    // Remove existing handlers
                    $('#selectAllForms').off('click.createModal');
                    $('#deselectAllForms').off('click.createModal');
                    $("input[name='SelectedFormIds']").off('change.createModal');

                    $('#selectAllForms').on('click.createModal', function() {
                        $("input[name='SelectedFormIds']").prop("checked", true);
                        $("#formsValidationMsg").addClass("d-none");
                    });

                    $('#deselectAllForms').on('click.createModal', function() {
                        $("input[name='SelectedFormIds']").prop("checked", false);
                        CreateModal.validateForms();
                    });

                    $("input[name='SelectedFormIds']").on('change.createModal', () => this.validateForms());
                },

                validate() {
                    let isValid = true;

                    // Validate Type
                    const typeValue = $('#Type').val().trim();
                    if (!typeValue) {
                        $('#Type').addClass('is-invalid');
                        isValid = false;
                    } else {
                        $('#Type').removeClass('is-invalid');
                    }

                    // Validate Financial Transaction Type
                    const financialValue = $('#FinancialTransactionTypeId').val();
                    if (!financialValue) {
                        $('#FinancialTransactionTypeId').addClass('is-invalid');
                        isValid = false;
                    } else {
                        $('#FinancialTransactionTypeId').removeClass('is-invalid');
                    }

                    // Validate Forms
                    if (!$("input[name='SelectedFormIds']:checked").length) {
                        $("#formsValidationMsg").removeClass("d-none");
                        isValid = false;
                    }

                    return isValid;
                },

                validateForms() {
                    const hasChecked = $("input[name='SelectedFormIds']:checked").length > 0;
                    $("#formsValidationMsg").toggleClass("d-none", hasChecked);
                },

                submit() {
                    const formData = new FormData($('#createForm')[0]);
                    const $submitBtn = $('#submitBtn');

                    $submitBtn.prop('disabled', true)
                        .html('<span class="spinner-border spinner-border-sm me-2"></span>جارٍ الحفظ...');

                    $.ajax({
                        url: '/StakeholderTypes/Create',
                        type: 'POST',
                        data: formData,
                        processData: false,
                        contentType: false,
                        success(response) {
                            if (response.success) {
                                Notification.show('تم إضافة النوع بنجاح', 'success');
                                Modals.create.hide();
                                setTimeout(() => location.reload(), CONFIG.RELOAD_DELAY);
                            } else {
                                $('#createModalContent').html(response);
                                CreateModal.initialize();
                                Notification.show('يرجى تصحيح الأخطاء في النموذج', 'error');
                            }
                        },
                        error(xhr, status, error) {
                            console.error('Create submission error:', error);
                            Notification.show('حدث خطأ أثناء الحفظ. يرجى المحاولة مرة أخرى.', 'error');
                            $submitBtn.prop('disabled', false)
                                .html('<i class="fas fa-save me-1"></i>حفظ');
                        }
                    });
                }
            };

            // ========================================
            // MODAL: EDIT - FIXED
            // ========================================
            const EditModal = {
                load(id) {
                    if (!Modals.edit) {
                        console.error('Edit modal not initialized');
                        return;
                    }

                    State.currentEditId = id;

                    $('#editModalContent').html(`
                        <div class="text-center py-4">
                            <div class="spinner-border text-warning" role="status">
                                <span class="visually-hidden">جاري التحميل...</span>
                            </div>
                            <p class="mt-2 text-muted">جاري تحميل بيانات التعديل...</p>
                        </div>
                    `);

                    Modals.edit.show();

                    $.get(`/StakeholderTypes/EditPopup/${id}`)
                        .done(data => {
                            $('#editModalContent').html(data);
                            this.initialize();
                        })
                        .fail((xhr, status, error) => {
                            console.error('Failed to load edit modal:', error);
                            $('#editModalContent').html(`
                                <div class="alert alert-danger text-center">
                                    <i class="fas fa-exclamation-triangle me-2"></i>
                                    فشل في تحميل البيانات. يرجى المحاولة مرة أخرى.
                                    <br><small class="text-muted">خطأ: ${error}</small>
                                </div>
                            `);
                        });
                },

                initialize() {
                    try {
                        // Initialize Select2
                        if ($.fn.select2) {
                            $('#FinancialTransactionTypeId').select2({
                                placeholder: "-- اختر نوع المعاملة المالية --",
                                dir: "rtl",
                                language: "ar",
                                width: '100%',
                                dropdownParent: $('#editModal')
                            });
                        }

                        // Initialize number inputs
                        InputNumberHandler.initialize($('#editModal'));

                        // Remove any existing handlers
                        $('#editForm').off('submit.editModal');

                        // Form submission - FIXED
                        $('#editForm').on('submit.editModal', (e) => {
                            e.preventDefault();
                            e.stopPropagation();

                            if (this.validate()) {
                                this.submit();
                            }
                        });

                        // Checkbox handlers
                        this.initializeCheckboxes();
                    } catch (error) {
                        console.error('Error initializing edit modal:', error);
                    }
                },

                initializeCheckboxes() {
                    // Remove existing handlers
                    $('#selectAllFormsEdit').off('click.editModal');
                    $('#deselectAllFormsEdit').off('click.editModal');
                    $("input[name='SelectedFormIds']").off('change.editModal');

                    $('#selectAllFormsEdit').on('click.editModal', function() {
                        $("input[name='SelectedFormIds']").prop("checked", true);
                        $("#formsValidationMsgEdit").addClass("d-none");
                    });

                    $('#deselectAllFormsEdit').on('click.editModal', function() {
                        $("input[name='SelectedFormIds']").prop("checked", false);
                        EditModal.validateForms();
                    });

                    $("input[name='SelectedFormIds']").on('change.editModal', () => this.validateForms());
                },

                validate() {
                    let isValid = true;

                    // Validate Type
                    const typeValue = $('#Type').val().trim();
                    if (!typeValue) {
                        $('#Type').addClass('is-invalid');
                        isValid = false;
                    } else {
                        $('#Type').removeClass('is-invalid');
                    }

                    // Validate Financial Transaction Type
                    const financialValue = $('#FinancialTransactionTypeId').val();
                    if (!financialValue) {
                        $('#FinancialTransactionTypeId').addClass('is-invalid');
                        isValid = false;
                    } else {
                        $('#FinancialTransactionTypeId').removeClass('is-invalid');
                    }

                    // Validate Forms
                    if (!$("input[name='SelectedFormIds']:checked").length) {
                        $("#formsValidationMsgEdit").removeClass("d-none");
                        isValid = false;
                    }

                    return isValid;
                },

                validateForms() {
                    const hasChecked = $("input[name='SelectedFormIds']:checked").length > 0;
                    $("#formsValidationMsgEdit").toggleClass("d-none", hasChecked);
                },

                submit() {
                    const formData = new FormData($('#editForm')[0]);
                    const $submitBtn = $('#editSubmitBtn');

                    $submitBtn.prop('disabled', true)
                        .html('<span class="spinner-border spinner-border-sm me-2"></span>جارٍ التحديث...');

                    $.ajax({
                        url: `/StakeholderTypes/Edit/${State.currentEditId}`,
                        type: 'POST',
                        data: formData,
                        processData: false,
                        contentType: false,
                        success(response) {
                            if (response.success) {
                                Notification.show('تم تحديث النوع بنجاح', 'success');
                                Modals.edit.hide();
                                setTimeout(() => location.reload(), CONFIG.RELOAD_DELAY);
                            } else {
                                $('#editModalContent').html(response);
                                EditModal.initialize();
                                Notification.show('يرجى تصحيح الأخطاء في النموذج', 'error');
                            }
                        },
                        error(xhr, status, error) {
                            console.error('Edit submission error:', error);
                            Notification.show('حدث خطأ أثناء التحديث. يرجى المحاولة مرة أخرى.', 'error');
                            $submitBtn.prop('disabled', false)
                                .html('<i class="fas fa-save me-1"></i>تحديث');
                        }
                    });
                }
            };

            // ========================================
            // MODAL: DETAILS - FIXED
            // ========================================
            const DetailsModal = {
                load(id) {
                    if (!Modals.details) {
                        console.error('Details modal not initialized');
                        return;
                    }

                    State.currentDetailsId = id;
                    const $row = $(`.stakeholder-type-row[data-id="${id}"]`);

                    const data = {
                        id: id,
                        type: $row.find('.stakeholder-type-name .fw-semibold').text(),
                        financialType: $row.find('.stakeholder-type-financial').text().trim(),
                        forms: $row.find('.stakeholder-type-forms .badge').map(function() {
                            return $(this).text().replace(/.*\s/, '');
                        }).get(),
                        comment: $row.find('.stakeholder-type-comment').text().trim()
                    };

                    this.render(data);
                    Modals.details.show();
                },

                render(data) {
                    const arabicId = NumberConverter.toArabic(data.id.toString());
                    const arabicFormsCount = NumberConverter.toArabic((data.forms?.length || 0).toString());

                    const formsHtml = data.forms && data.forms.length > 0
                        ? data.forms.map(form =>
                            `<div class="col-auto">
                                <span class="badge bg-light text-dark border border-secondary border-opacity-25 fs-6 py-2 px-3">
                                    <i class="fas fa-link me-1"></i>${form}
                                </span>
                            </div>`
                          ).join('')
                        : '<div class="col-12"><span class="text-muted fst-italic"><i class="fas fa-unlink me-2"></i>لا توجد واجهات مرتبطة</span></div>';

                    const financialHtml = data.financialType && !data.financialType.includes('لا يوجد')
                        ? `<div class="alert alert-light border-start border-4 border-info">
                            <h6 class="alert-heading mb-2">
                                <i class="fas fa-coins text-info me-2"></i>نوع المعاملة المالية
                            </h6>
                            <p class="mb-0">${data.financialType}</p>
                           </div>`
                        : '<div class="alert alert-light text-muted text-center"><i class="fas fa-info-circle me-2"></i>لا يوجد نوع معاملة مالية محدد</div>';

                    const commentHtml = data.comment && !data.comment.includes('لا يوجد')
                        ? `<div class="alert alert-light border-start border-4 border-warning">
                            <h6 class="alert-heading mb-2">
                                <i class="fas fa-comment-alt text-warning me-2"></i>البيان والتعليقات
                            </h6>
                            <p class="mb-0">${data.comment}</p>
                           </div>`
                        : '<div class="alert alert-light text-muted text-center"><i class="fas fa-comment-slash me-2"></i>لا يوجد بيان أو تعليقات</div>';

                    const content = `
                        <div class="p-4">
                            <div class="row mb-4">
                                <div class="col-12">
                                    <div class="d-flex align-items-center p-3 bg-light rounded">
                                        <div class="flex-shrink-0 me-3">
                                            <div class="icon-circle bg-warning text-white">
                                                <i class="fas fa-user-tag fa-2x"></i>
                                            </div>
                                        </div>
                                        <div class="flex-grow-1">
                                            <h4 class="mb-1 fw-bold text-dark">${data.type}</h4>
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <small class="text-muted">
                                                        <i class="fas fa-hashtag me-1"></i>معرف النوع: <strong>#${arabicId}</strong>
                                                    </small>
                                                </div>
