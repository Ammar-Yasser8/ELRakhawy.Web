            // Initialize Create Form
            function initializeCreateForm() {
                // Initialize Select2
                if ($.fn.select2) {
                    $('#FinancialTransactionTypeId').select2({
                        placeholder: "-- اختر نوع المعاملة المالية --",
                        dir: "rtl",
                        language: "ar",
                        width: '100%',
                        dropdownParent: $('#createModal')
                    });
                }

                // Form validation
                $('#createForm').on('submit', function(e) {
                    e.preventDefault();

                    if (!validateCreateForm()) {
                        return false;
                    }

                    submitCreateForm();
                });

                // Checkbox handlers
                $('#selectAllForms').click(function() {
                    $("input[name='SelectedFormIds']").prop("checked", true);
                    $("#formsValidationMsg").addClass("d-none");
                });

                $('#deselectAllForms').click(function() {
                    $("input[name='SelectedFormIds']").prop("checked", false);
                    validateFormsSelection();
                });

                $("input[name='SelectedFormIds']").change(function() {
                    validateFormsSelection();
                });
            }

            // Validate Create Form
            function validateCreateForm() {
                let isValid = true;

                // Check Type field
                const typeValue = $('#Type').val().trim();
                if (!typeValue) {
                    $('#Type').addClass('is-invalid');
                    isValid = false;
                } else {
                    $('#Type').removeClass('is-invalid');
                }

                // Check Financial Transaction Type
                const financialValue = $('#FinancialTransactionTypeId').val();
                if (!financialValue) {
                    $('#FinancialTransactionTypeId').addClass('is-invalid');
                    isValid = false;
                } else {
                    $('#FinancialTransactionTypeId').removeClass('is-invalid');
                }

                // Check Forms selection
                if (!$("input[name='SelectedFormIds']:checked").length) {
                    $("#formsValidationMsg").removeClass("d-none");
                    isValid = false;
                }

                return isValid;
            }

            // Validate Forms Selection
            function validateFormsSelection() {
                if ($("input[name='SelectedFormIds']:checked").length) {
                    $("#formsValidationMsg").addClass("d-none");
                } else {
                    $("#formsValidationMsg").removeClass("d-none");
                }
            }

            // Submit Create Form via AJAX
            function submitCreateForm() {
                const formData = new FormData($('#createForm')[0]);
                const submitBtn = $('#submitBtn');

                // Disable submit button
                submitBtn.prop('disabled', true)
                    .html('<span class="spinner-border spinner-border-sm me-2"></span>جارٍ الحفظ...');

                $.ajax({
                    url: '/StakeholderTypes/Create',
                    type: 'POST',
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function(response) {
                        if (response.success) {
                            showNotification('تم إضافة النوع بنجاح', 'success');
                            createModal.hide();

                            // Refresh the page or update table
                            setTimeout(() => {
                                location.reload();
                            }, 1500);
                        } else {
                            // Handle validation errors
                            $('#createModalContent').html(response);
                            initializeCreateForm();
                            showNotification('يرجى تصحيح الأخطاء في النموذج', 'error');
                        }
                    },
                    error: function(xhr, status, error) {
                        showNotification('حدث خطأ أثناء الحفظ. يرجى المحاولة مرة أخرى.', 'error');
                        submitBtn.prop('disabled', false)
                            .html('<i class="fas fa-save me-1"></i>حفظ');
                    }
                });
            }

