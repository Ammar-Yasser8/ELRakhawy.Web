@section Scripts {
    <script>
        $(document).ready(function() {
            const CURRENT_TIME = '2025-09-04 16:33:23';
            const CURRENT_USER = 'Ammar-Yasser8';

            console.log('Enhanced stakeholder types with Arabic numbers loaded:', {
                time: CURRENT_TIME,
                user: CURRENT_USER
            });

            // Arabic number conversion functions
            function toArabicDigits(str) {
                if (typeof str !== 'string') return str;
                return str.replace(/[0-9]/g, d => '٠١٢٣٤٥٦٧٨٩'[d]);
            }

            function toLatinDigits(str) {
                if (typeof str !== 'string') return str;
                return str.replace(/[٠-٩]/g, d => '0123456789'['٠١٢٣٤٥٦٧٨٩'.indexOf(d)]);
            }

            function isArabicChar(c) {
                return /[\u0600-\u06FF]/.test(c);
            }

            function isEnglishChar(c) {
                return /[a-zA-Z]/.test(c);
            }

            function getLastLetter(str) {
                if (!str || str.trim().length === 0) {
                    return 'arabic';
                }

                for (let i = str.length - 1; i >= 0; i--) {
                    let char = str[i];
                    if (isArabicChar(char)) {
                        return 'arabic';
                    } else if (isEnglishChar(char)) {
                        return 'english';
                    }
                }
                return 'arabic'; // default is Arabic
            }

            // Apply Arabic number conversion to search inputs
            function applyNumberConversion($input) {
                let val = $input.val();

                if (val && val.length > 0) {
                    let lastLetterLang = getLastLetter(val);
                    let newVal = lastLetterLang === 'arabic' ? toArabicDigits(val) : toLatinDigits(val);

                    if (newVal !== val) {
                        let cursorPos = $input[0].selectionStart;
                        $input.val(newVal);
                        try {
                            $input[0].setSelectionRange(cursorPos, cursorPos);
                        } catch (ex) {
                            $input.focus();
                        }
                    }
                }
            }

            // Enhanced search input event handler with Arabic support
            $(document).on("input keyup paste", "#searchByType, #searchByFinancial, #searchByForms, #searchByComment", function(e) {
                const $input = $(this);
                applyNumberConversion($input);
            });

            // Direct number key conversion for immediate Arabic conversion
            $(document).on("keypress", "#searchByType, #searchByFinancial, #searchByForms, #searchByComment", function(e) {
                // Convert English digits to Arabic immediately
                if (e.which >= 48 && e.which <= 57) { // 0-9
                    e.preventDefault();
                    let digit = String.fromCharCode(e.which);
                    let arabicDigit = toArabicDigits(digit);

                    let input = e.target;
                    let cursorPos = input.selectionStart || 0;
                    let currentValue = input.value;

                    let newValue = currentValue.slice(0, cursorPos) + arabicDigit + currentValue.slice(cursorPos);
                    input.value = newValue;

                    input.setSelectionRange(cursorPos + 1, cursorPos + 1);

                    // Trigger search
                    $(input).trigger('input');
                }
            });

            // Initialize components
            const toastElement = document.getElementById('notificationToast');
            const toast = new bootstrap.Toast(toastElement, { delay: 4000 });
            const detailsModal = new bootstrap.Modal(document.getElementById('detailsModal'));

            let currentDetailsId = null;

            // Enhanced notification function
            function showNotification(message, type = 'success') {
                const icons = {
                    success: 'fa-check-circle',
                    error: 'fa-exclamation-circle',
                    warning: 'fa-exclamation-triangle',
                    info: 'fa-info-circle'
                };

                const colors = {
                    success: 'bg-success',
                    error: 'bg-danger',
                    warning: 'bg-warning',
                    info: 'bg-info'
                };

                $('#toastIcon').removeClass().addClass(`fas ${icons[type]} me-2`);
                $('#toastMessage').text(message);
                $('#notificationToast').removeClass('bg-success bg-danger bg-warning bg-info text-white text-dark')
                    .addClass(`${colors[type]} ${type === 'warning' ? 'text-dark' : 'text-white'}`);

                toast.show();
            }

            // Enhanced search functionality with Arabic number support
            function performSearch() {
                const typeSearch = $('#searchByType').val().toLowerCase().trim();
                const typeSearchLatin = toLatinDigits(typeSearch);
                const typeSearchArabic = toArabicDigits(typeSearch);

                const financialSearch = $('#searchByFinancial').val().toLowerCase().trim();
                const financialSearchLatin = toLatinDigits(financialSearch);
                const financialSearchArabic = toArabicDigits(financialSearch);

                const formsSearch = $('#searchByForms').val().toLowerCase().trim();
                const formsSearchLatin = toLatinDigits(formsSearch);
                const formsSearchArabic = toArabicDigits(formsSearch);

                const commentSearch = $('#searchByComment').val().toLowerCase().trim();
                const commentSearchLatin = toLatinDigits(commentSearch);
                const commentSearchArabic = toArabicDigits(commentSearch);

                let visibleCount = 0;

                $('.stakeholder-type-row').each(function() {
                    const row = $(this);
                    const type = row.find('.stakeholder-type-name').text().toLowerCase();
                    const financial = row.find('.stakeholder-type-financial').text().toLowerCase();
                    const forms = row.find('.stakeholder-type-forms').text().toLowerCase();
                    const comment = row.find('.stakeholder-type-comment').text().toLowerCase();

                    // Enhanced matching with Arabic/English number support
                    const typeMatch = !typeSearch ||
                        type.includes(typeSearch) ||
                        type.includes(typeSearchLatin) ||
                        type.includes(typeSearchArabic);

                    const financialMatch = !financialSearch ||
                        financial.includes(financialSearch) ||
                        financial.includes(financialSearchLatin) ||
                        financial.includes(financialSearchArabic);

                    const formsMatch = !formsSearch ||
                        forms.includes(formsSearch) ||
                        forms.includes(formsSearchLatin) ||
                        forms.includes(formsSearchArabic);

                    const commentMatch = !commentSearch ||
                        comment.includes(commentSearch) ||
                        comment.includes(commentSearchLatin) ||
                        comment.includes(commentSearchArabic);

                    const shouldShow = typeMatch && financialMatch && formsMatch && commentMatch;
                    row.toggle(shouldShow);

                    if (shouldShow) visibleCount++;
                });

                updateSearchInfo(visibleCount, typeSearch, financialSearch, formsSearch, commentSearch);
            }

            // Enhanced updateSearchInfo with Arabic numbers
            function updateSearchInfo(visibleCount, typeSearch, financialSearch, formsSearch, commentSearch) {
                $('#visibleCount').text(toArabicDigits(visibleCount.toString()));
                $('#badgeCount').text(toArabicDigits(visibleCount.toString()));

                // Show/hide clear buttons
                $('#clearTypeSearch').toggle(typeSearch.length > 0);
                $('#clearFinancialSearch').toggle(financialSearch.length > 0);
                $('#clearFormsSearch').toggle(formsSearch.length > 0);
                $('#clearCommentSearch').toggle(commentSearch.length > 0);

                const hasAnySearch = typeSearch.length > 0 || financialSearch.length > 0 ||
                                   formsSearch.length > 0 || commentSearch.length > 0;
                $('#clearAllSearch').toggle(hasAnySearch);

                // Keep table always visible - no modal overlays
                $('#stakeholderTypesContainer .section-card').show();

                // Add visual feedback to search inputs
                $('#searchByType').toggleClass('border-primary', typeSearch.length > 0);
                $('#searchByFinancial').toggleClass('border-primary', financialSearch.length > 0);
                $('#searchByForms').toggleClass('border-primary', formsSearch.length > 0);
                $('#searchByComment').toggleClass('border-primary', commentSearch.length > 0);
            }

            // Enhanced updateCounts with Arabic numbers
            function updateCounts() {
                const totalCount = $('.stakeholder-type-row').length;
                const visibleCount = $('.stakeholder-type-row:visible').length;

                $('#totalCount').text(toArabicDigits(totalCount.toString()));
                $('#visibleCount').text(toArabicDigits(visibleCount.toString()));
                $('#badgeCount').text(toArabicDigits(visibleCount.toString()));
            }

            // Search events
            let searchTimeout;
            $('#searchByType, #searchByFinancial, #searchByForms, #searchByComment').on('input', function() {
                clearTimeout(searchTimeout);
                searchTimeout = setTimeout(performSearch, 200);
            });

            // Clear search buttons
            $('#clearTypeSearch').click(function() {
                $('#searchByType').val('').removeClass('border-primary');
                performSearch();
                $('#searchByType').focus();
            });

            $('#clearFinancialSearch').click(function() {
                $('#searchByFinancial').val('').removeClass('border-primary');
                performSearch();
                $('#searchByFinancial').focus();
            });

            $('#clearFormsSearch').click(function() {
                $('#searchByForms').val('').removeClass('border-primary');
                performSearch();
                $('#searchByForms').focus();
            });

            $('#clearCommentSearch').click(function() {
                $('#searchByComment').val('').removeClass('border-primary');
                performSearch();
                $('#searchByComment').focus();
            });

            $('#clearAllSearch, #resetSearch').click(function() {
                $('#searchByType, #searchByFinancial, #searchByForms, #searchByComment').val('').removeClass('border-primary');
                performSearch();
            });

            // View details handler
            $(document).on('click', '.view-details', function() {
                const id = $(this).data('id');
                loadStakeholderTypeDetails(id);
            });

            // Enhanced load stakeholder type details with Arabic numbers
            function loadStakeholderTypeDetails(id) {
                // Find the row data
                const row = $(`.stakeholder-type-row[data-id="${id}"]`);
                const typeName = row.find('.stakeholder-type-name .fw-semibold').text();
                const financialType = row.find('.stakeholder-type-financial').text().trim();
                const forms = row.find('.stakeholder-type-forms .badge').map(function() {
                    return $(this).text().replace(/.*\s/, ''); // Remove icon text
                }).get();
                const comment = row.find('.stakeholder-type-comment').text().trim();

                renderDetailsModal({
                    id: id,
                    type: typeName,
                    financialType: financialType.includes('لا يوجد') ? null : financialType,
                    forms: forms,
                    comment: comment.includes('لا يوجد') ? null : comment
                });

                currentDetailsId = id;
                detailsModal.show();
            }

            // Enhanced render details modal content with Arabic numbers
            function renderDetailsModal(data) {
                const arabicId = toArabicDigits(data.id.toString());
                const arabicFormsCount = toArabicDigits((data.forms ? data.forms.length : 0).toString());

                const formsHtml = data.forms && data.forms.length > 0
                    ? data.forms.map(form =>
                        `<div class="col-auto">
                            <span class="badge bg-light text-dark border border-secondary border-opacity-25 fs-6 py-2 px-3">
                                <i class="fas fa-link me-1"></i>${form}
                            </span>
