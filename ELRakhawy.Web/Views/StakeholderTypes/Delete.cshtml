@using ELRakhawy.EL.Models
@model StakeholderType
@{
    ViewData["Title"] = "حذف نوع أصحاب المصلحة";
}

<div class="welcome-card mb-4">
    <div class="row">
        <div class="col-lg-8">
            <h2 class="mb-3">حذف نوع أصحاب المصلحة</h2>
            <p class="text-muted">هل أنت متأكد من أنك تريد حذف هذا النوع؟</p>
        </div>
        <div class="col-lg-4 text-start text-lg-end mt-3 mt-lg-0">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-right me-2"></i>
                العودة للقائمة
            </a>
        </div>
    </div>
</div>
<nav aria-label="breadcrumb" class="mb-4">
    <div class="card border-0 shadow-sm">
        <div class="card-body py-2">
            <ol class="breadcrumb mb-0 align-items-center">
                <li class="breadcrumb-item">
                    <a href="@Url.Action("Index", "Home")" class="text-decoration-none d-flex align-items-center">
                        <i class="fas fa-home text-primary me-2"></i>
                        <span class="fw-semibold">الرئيسية</span>
                    </a>
                </li>
                <li class="breadcrumb-item">
                    <a href="@Url.Action("PublicTables", "Home")" class="text-decoration-none d-flex align-items-center">
                        <i class="fas fa-table text-info me-2"></i>
                        <span class="fw-semibold">الجداول العامة</span>
                    </a>
                </li>
                <li class="breadcrumb-item">
                    <a href="@Url.Action("Index", "StakeholderTypes")" class="text-decoration-none d-flex align-items-center">
                        <i class="fas fa-table text-info me-2"></i>
                        <span class="fw-semibold">أنواع الجهات</span>
                    </a>
                </li>
                <li class="breadcrumb-item active d-flex align-items-center">
                    <i class="fas fa-user-tag text-warning me-2"></i>
                    <span class="fw-bold text-dark">@ViewData["Title"]</span>
                </li>
            </ol>
        </div>
    </div>
</nav>

<div class="section-card">
    <div class="section-header">
        <h5 class="mb-0 text-danger">
            <i class="fas fa-exclamation-triangle me-2"></i>
            تأكيد الحذف
        </h5>
    </div>
    <div class="section-content">
        <div class="alert alert-warning" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            <strong>تحذير:</strong> سيتم حذف هذا النوع نهائياً ولا يمكن التراجع عن هذا الإجراء.
            @if (Model.StakeholderTypeForms?.Any() == true)
            {
                
            }
        </div>

        <!-- Desktop/Tablet View -->
        <div class="d-none d-md-block">
            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="card h-100">
                        <div class="card-header bg-light">
                            <h6 class="mb-0">تفاصيل النوع</h6>
                        </div>
                        <div class="card-body">
                            <table class="table table-borderless mb-0">
                                <tr>
                                    <td class="fw-bold" style="width: 40%;">النوع:</td>
                                    <td>@Model.Type</td>
                                </tr>
                                <tr>
                                    <td class="fw-bold">نوع المعاملة المالية:</td>
                                    <td>@Model.FinancialTransactionType?.Type</td>
                                </tr>
                                <tr>
                                    <td class="fw-bold">البيان:</td>
                                    <td>
                                        @if (string.IsNullOrEmpty(Model.Comment))
                                        {
                                            <span class="text-muted">لا يوجد بيان</span>
                                        }
                                        else
                                        {
                                            @Model.Comment
                                        }
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card h-100">
                        <div class="card-header bg-light">
                            <h6 class="mb-0">الواجهات المرتبطة</h6>
                        </div>
                        <div class="card-body">
                            @if (Model.StakeholderTypeForms?.Any() == true)
                            {
                                <div class="d-flex flex-wrap gap-2">
                                    @foreach (var form in Model.StakeholderTypeForms)
                                    {
                                        <span class="badge bg-light text-dark border py-2 px-3">
                                            <i class="fas fa-file-alt me-1"></i>
                                            @form.Form.FormName
                                        </span>
                                    }
                                </div>
                                <small class="text-muted d-block mt-2">
                                    <i class="fas fa-info-circle me-1"></i>
                                    سيتم حذف (@Model.StakeholderTypeForms.Count) واجهة مرتبطة
                                </small>
                            }
                            else
                            {
                                <div class="text-center text-muted py-3">
                                    <i class="fas fa-file-alt fa-2x mb-2 opacity-50"></i>
                                    <p class="mb-0">لا توجد واجهات مرتبطة بهذا النوع</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Mobile View -->
        <div class="d-md-none">
            <div class="card mb-3">
                <div class="card-header">
                    <h6 class="mb-0">تفاصيل النوع</h6>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <strong>النوع:</strong>
                        <div class="mt-1">@Model.Type</div>
                    </div>
                    <div class="mb-3">
                        <strong>نوع المعاملة المالية:</strong>
                        <div class="mt-1">@Model.FinancialTransactionType?.Type</div>
                    </div>
                    <div class="mb-3">
                        <strong>البيان:</strong>
                        <div class="mt-1">
                            @if (string.IsNullOrEmpty(Model.Comment))
                            {
                                <span class="text-muted">لا يوجد بيان</span>
                            }
                            else
                            {
                                @Model.Comment
                            }
                        </div>
                    </div>
                    <div>
                        <strong>الواجهات المرتبطة:</strong>
                        <div class="mt-2">
                            @if (Model.StakeholderTypeForms?.Any() == true)
                            {
                                <div class="d-flex flex-wrap gap-2 mb-2">
                                    @foreach (var form in Model.StakeholderTypeForms)
                                    {
                                        <span class="badge bg-light text-dark border py-2 px-2">
                                            <i class="fas fa-file-alt me-1"></i>
                                            @form.Form.FormName
                                        </span>
                                    }
                                </div>
                                <small class="text-muted">
                                    <i class="fas fa-info-circle me-1"></i>
                                    سيتم حذف (@Model.StakeholderTypeForms.Count) واجهة مرتبطة
                                </small>
                            }
                            else
                            {
                                <span class="text-muted">لا توجد واجهات مرتبطة</span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="d-flex justify-content-end gap-2 mt-4">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-times me-2"></i>
                إلغاء
            </a>
            <form asp-action="Delete" method="post" class="d-inline">
                <input type="hidden" asp-for="Id" />
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-danger" onclick="return confirm('هل أنت متأكد من أنك تريد حذف هذا النوع؟')">
                    <i class="fas fa-trash me-2"></i>
                    تأكيد الحذف
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Focus on cancel button for accessibility
            $('.btn-secondary').first().focus();
            
            // Add confirmation dialog with more details
            $('form').on('submit', function(e) {
                const hasAssociatedForms = @(Model.StakeholderTypeForms?.Any() == true ? "true" : "false");
                let message = 'هل أنت متأكد من أنك تريد حذف نوع أصحاب المصلحة "@Model.Type"؟';
                
                if (hasAssociatedForms) {
                    message += '\n\nسيتم أيضاً حذف @Model.StakeholderTypeForms?.Count واجهة مرتبطة بهذا النوع.';
                }
                
                message += '\n\nهذا الإجراء لا يمكن التراجع عنه.';
                
                if (!confirm(message)) {
                    e.preventDefault();
                    return false;
                }
            });
        });
    </script>
}