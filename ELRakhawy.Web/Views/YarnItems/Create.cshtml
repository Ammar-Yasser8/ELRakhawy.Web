    <script>
        $(document).ready(function() {
            console.log('Create form loaded at 2025-08-12 00:54:16 by Ammar-Yasser8');

            // Update current time
            function updateDateTime() {
                const now = new Date();
                const utcString = now.getUTCFullYear() + '-' +
                    String(now.getUTCMonth() + 1).padStart(2, '0') + '-' +
                    String(now.getUTCDate()).padStart(2, '0') + ' ' +
                    String(now.getUTCHours()).padStart(2, '0') + ':' +
                    String(now.getUTCMinutes()).padStart(2, '0') + ':' +
                    String(now.getUTCSeconds()).padStart(2, '0');
                $('#currentDateTime, #sessionTime').text(utcString);
            }

            updateDateTime();
            setInterval(updateDateTime, 1000);

            // Character counter for comment
            $('#commentTextarea').on('input', function() {
                const length = $(this).val().length;
                $('#charCount').text(length);

                if (length > 450) {
                    $('#charCount').addClass('text-warning');
                } else if (length > 480) {
                    $('#charCount').addClass('text-danger');
                } else {
                    $('#charCount').removeClass('text-warning text-danger');
                }
            });

            // Status toggle functionality
            $('#statusSwitch').change(function() {
                const isChecked = $(this).is(':checked');
                $('.status-text').text(isChecked ? 'نشط' : 'غير نشط');
                $('.status-badge')
                    .removeClass('bg-success bg-secondary')
                    .addClass(isChecked ? 'bg-success' : 'bg-secondary');
                $('.status-badge-text').text(isChecked ? 'نشط' : 'غير نشط');
                $('.status-badge i')
                    .removeClass('fa-check-circle fa-times-circle')
                    .addClass(isChecked ? 'fa-check-circle' : 'fa-times-circle');
            });

            // Auto-capitalize first letter of item name
            $('#itemInput').on('blur', function() {
                const value = $(this).val().trim();
                if (value) {
                    $(this).val(value.charAt(0).toUpperCase() + value.slice(1));
                    $(this).removeClass('is-invalid');
                }
            });

            // Enhanced dropdown validation
            $('.form-select').change(function() {
                const select = $(this);
                const value = select.val();

                select.removeClass('is-invalid is-valid');

                if (value && value !== '') {
                    select.addClass('is-valid');
                }
            });

            // Refresh origin yarns
            $('#refreshOriginYarnBtn').click(function() {
                const btn = $(this);
                btn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin"></i>');

                setTimeout(() => {
                    btn.prop('disabled', false).html('<i class="fas fa-sync-alt"></i>');
                    if (typeof toastr !== 'undefined') {
                        toastr.success('تم تحديث قائمة الغزل المكون');
                    }
                }, 1000);
            });

            // Preview functionality
            $('#previewBtn').click(function() {
                const formData = {
                    item: $('#itemInput').val(),
                    manufacturer: $('#manufacturerSelect option:selected').text(),
                    originYarn: $('#originYarnSelect option:selected').text(),
                    status: $('#statusSwitch').is(':checked'),
                    comment: $('#commentTextarea').val() || 'لا يوجد بيان'
                };

                const content = `
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="card border-primary">
                                <div class="card-header bg-primary text-white">
                                    <h6 class="mb-0"><i class="fas fa-info me-2"></i>معلومات أساسية</h6>
                                </div>
                                <div class="card-body">
                                    <div class="mb-3">
                                        <strong class="text-primary">اسم الصنف:</strong>
                                        <p class="mb-1">${formData.item}</p>
                                    </div>
                                    <div class="mb-3">
                                        <strong class="text-success">الشركة المصنعة:</strong>
                                        <p class="mb-1">${formData.manufacturer}</p>
                                    </div>
                                    <div>
                                        <strong class="text-purple">الغزل المكون:</strong>
                                        <p class="mb-0">${formData.originYarn}</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card border-info">
                                <div class="card-header bg-info text-white">
                                    <h6 class="mb-0"><i class="fas fa-cog me-2"></i>إعدادات</h6>
                                </div>
                                <div class="card-body">
                                    <div class="mb-3">
                                        <strong>الحالة:</strong>
                                        <p class="mb-1">
                                            <span class="badge ${formData.status ? 'bg-success' : 'bg-secondary'} px-3 py-2">
                                                <i class="fas ${formData.status ? 'fa-check' : 'fa-times'} me-1"></i>
                                                ${formData.status ? 'نشط' : 'غير نشط'}
                                            </span>
                                        </p>
                                    </div>
                                    <div>
                                        <strong>البيان:</strong>
                                        <p class="mb-0 text-muted">${formData.comment}</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-4">
                        <div class="col-12">
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle me-2"></i>
                                <strong>ملاحظة:</strong> هذه معاينة للبيانات المطلوب إضافتها. انقر على "تأكيد الحفظ" لحفظ الصنف نهائياً.
                            </div>
                        </div>
                    </div>
                `;

                $('#previewContent').html(content);
                $('#previewModal').modal('show');
            });

            // Confirm save from preview
            $('#confirmSaveBtn').click(function() {
                $('#previewModal').modal('hide');
                $('#createForm').submit();
            });

            // Reset form functionality
            $('#resetBtn').click(function() {
                if (typeof Swal !== 'undefined') {
                    Swal.fire({
                        title: 'إعادة تعيين النموذج',
                        text: 'هل أنت متأكد من إعادة تعيين جميع البيانات المدخلة؟',
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonText: 'نعم، إعادة تعيين',
                        cancelButtonText: 'إلغاء',
                        confirmButtonColor: '#dc3545'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            $('#createForm')[0].reset();
                            $('#statusSwitch').prop('checked', true).trigger('change');
                            $('#charCount').text('0');
                            $('.form-control, .form-select').removeClass('is-invalid is-valid');
                        }
                    });
                } else {
                    if (confirm('هل أنت متأكد من إعادة تعيين جميع البيانات المدخلة؟')) {
                        $('#createForm')[0].reset();
                        $('#statusSwitch').prop('checked', true).trigger('change');
                        $('#charCount').text('0');
                        $('.form-control, .form-select').removeClass('is-invalid is-valid');
                    }
                }
            });

            // Enhanced form validation
            $('#createForm').on('submit', function(e) {
                let hasErrors = false;

                // Clear previous validation
                $('.form-control, .form-select').removeClass('is-invalid is-valid');

                // Validate item name
                const itemName = $('#itemInput').val().trim();
                if (itemName.length < 2) {
                    $('#itemInput').addClass('is-invalid');
                    hasErrors = true;
                    if (typeof toastr !== 'undefined') {
                        toastr.error('اسم الصنف يجب أن يحتوي على حرفين على الأقل');
                    }
                } else {
                    $('#itemInput').addClass('is-valid');
                }

                // Validate manufacturer selection if provided
                const manufacturerId = $('#manufacturerSelect').val();
                if (manufacturerId && manufacturerId !== '') {
                    const manufacturerExists = $('#manufacturerSelect option[value="' + manufacturerId + '"]').length > 0;
                    if (!manufacturerExists) {
                        $('#manufacturerSelect').addClass('is-invalid');
                        hasErrors = true;
                        if (typeof toastr !== 'undefined') {
                            toastr.error('الشركة المصنعة المحددة غير صحيحة');
                        }
                    }
                }

                // Validate origin yarn selection if provided
                const originYarnId = $('#originYarnSelect').val();
                if (originYarnId && originYarnId !== '') {
                    const originExists = $('#originYarnSelect option[value="' + originYarnId + '"]').length > 0;
                    if (!originExists) {
                        $('#originYarnSelect').addClass('is-invalid');
                        hasErrors = true;
                        if (typeof toastr !== 'undefined') {
                            toastr.error('الغزل المكون المحدد غير صحيح');
                        }
                    }
                }

                if (hasErrors) {
                    e.preventDefault();
                    return false;
                }

                // Show loading state
                const btn = $('#saveBtn');
                btn.prop('disabled', true)
                   .html('<span class="spinner-border spinner-border-sm me-2"></span>جاري الحفظ...');

                if (typeof toastr !== 'undefined') {
                    toastr.info('جاري حفظ الصنف الجديد...');
                }
            });

            // Auto-hide alerts
            $('.alert').delay(6000).fadeOut(350);

            // Initialize form
            $('#charCount').text($('#commentTextarea').val().length);
        });
    </script>

