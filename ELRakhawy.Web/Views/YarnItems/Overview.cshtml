@using ELRakhawy.EL.ViewModels
@using System.Text.Json
@model IEnumerable<YarnItemViewModel>

@{
    ViewData["Title"] = "لوحة تحكم مخزون الخيوط";
    var currentTime = "2025-09-01 00:58:06";
    var currentUser = "Ammar-Yasser8";

    // Calculate statistics
    var totalItems = Model.Count();
    var activeItems = Model.Count(x => x.Status);
    var totalBalance = Model.Sum(x => x.CurrentBalance);
    var lowStockItems = Model.Count(x => x.CurrentBalance <= 10 && x.CurrentBalance > 0);
    var zeroStockItems = Model.Count(x => x.CurrentBalance <= 0);
    var availableItems = Model.Count(x => x.Status && x.CurrentBalance > 0);

    // Prepare manufacturers data for charts
    var manufacturers = Model
        .SelectMany(x => x.ManufacturerNames ?? Enumerable.Empty<string>())
        .GroupBy(x => x)
        .Select(g => new
        {
            Name = g.Key,
            Count = g.Count(),
            Balance = Model
                .Where(x => x.ManufacturerNames != null && x.ManufacturerNames.Contains(g.Key))
                .Sum(x => x.CurrentBalance)
        })
        .OrderByDescending(x => x.Balance)
        .Take(5)
        .ToList();
}

<div class="dashboard-container">
    <!-- Header Section -->
    <div class="dashboard-header bg-gradient-primary text-white rounded-4 p-4 mb-4">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h1 class="h3 mb-2">
                    <i class="fas fa-chart-line me-2"></i>لوحة تحكم مخزون الخيوط
                </h1>
            </div>
            <div class="col-md-6 text-md-end mt-3 mt-md-0">
                <div class="btn-group">
                    <a href="@Url.Action("Create")" class="btn btn-light">
                        <i class="fas fa-plus-circle me-2"></i>إضافة صنف جديد
                    </a>
                    <button type="button" class="btn btn-light" id="refreshDashboard">
                        <i class="fas fa-sync-alt me-2"></i>تحديث
                    </button>
                </div>
            </div>
        </div>
    </div>

  

    <!-- Items Grid -->
    <div class="card border-0 rounded-4 shadow-sm">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h5 class="card-title mb-0">
                    <i class="fas fa-boxes text-primary me-2"></i>
                    قائمة الأصناف
                    <span class="badge bg-primary ms-2">@Model.Count()</span>
                </h5>
                
            </div>

            <!-- Update the item card section in your Razor page -->
            <div class="row g-4" id="itemsGrid">
                @foreach (var item in Model)
                {
                    <div class="col-xl-4 col-md-6 item-card-wrapper"
                         data-id="@item.Id"
                         data-status="@(item.Status ? "active" : "inactive")"
                         data-balance="@item.CurrentBalance"
                         data-manufacturers="@(item.ManufacturerNames != null ? string.Join(",", item.ManufacturerNames) : "")"
                         data-search="@item.Item.ToLower()">
                        <div class="card h-100 border-0 rounded-4 shadow-sm item-card">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <div>
                                        <h6 class="card-title mb-1">@item.Item</h6>
                                        <span class="badge bg-@(item.Status ? "success" : "secondary")">
                                            @(item.Status ? "نشط" : "غير نشط")
                                        </span>
                                    </div>
                                    <div class="stock-indicator">
                                        <span class="badge bg-@(item.CurrentBalance <= 0 ? "danger" :
                                                                                                                               item.CurrentBalance <= 10 ? "warning" : "success")">
                                        @item.CurrentBalance.ToString("N3") كجم
                                    </span>
                                </div>
                            </div>

                                <div class="item-details small text-muted">
                                @if (item.ManufacturerNames != null && item.ManufacturerNames.Any())
                                    {
                                        <div class="mb-1">
                                            <i class="fas fa-industry me-1"></i>
                                            @string.Join(", ", item.ManufacturerNames)
                                        </div>
                                    }
                                    @if (!string.IsNullOrEmpty(item.OriginYarnName))
                                    {
                                        <div class="mb-1">
                                            <i class="fas fa-link me-1"></i>
                                            @item.OriginYarnName
                                        </div>
                                    }

                                    <!-- Enhanced Count Balance Display -->
                                    <div class="mb-2">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <span>
                                                <i class="fas fa-boxes me-1"></i>
                                                رصيد العدد:
                                            </span>
                                            <button class="btn btn-link btn-sm p-0 text-info"
                                                    onclick="loadPackagingBreakdown(@item.Id, this)"
                                                    title="عرض تفاصيل التعبئة">
                                                <i class="fas fa-info-circle"></i>
                                            </button>
                                        </div>
                                        <div class="packaging-display" id="packaging-@item.Id">
                                            <span class="text-primary fw-bold">@item.CurrentCountBalance وحدة</span>
                                            <small class="text-muted d-block">اضغط لعرض التفاصيل</small>
                                        </div>
                                    </div>
                                </div>

                                <div class="item-actions mt-3 pt-3 border-top">
                                    <div class="btn-group w-100">
                                        <a href="@Url.Action("Edit", new { id = item.Id })"
                                           class="btn btn-sm btn-outline-secondary">
                                            <i class="fas fa-edit me-1"></i>
                                            تعديل
                                        </a>
                                        <button class="btn btn-sm btn-outline-info"
                                                onclick="showItemDetails(@item.Id)">
                                            <i class="fas fa-eye me-1"></i>
                                            التفاصيل
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Add this JavaScript to the existing Scripts section -->
            <script>
                // Add these functions to your existing JavaScript

                // Convert to Arabic digits
                function toArabicDigits(str) {
                    if (!str) return str;
                    return str.toString().replace(/[0-9]/g, d => '٠١٢٣٤٥٦٧٨٩'[d]);
                }

                // Load packaging breakdown for an item
                function loadPackagingBreakdown(yarnItemId, buttonElement) {
                    const displayElement = document.getElementById(`packaging-${yarnItemId}`);

                    // Show loading state
                    displayElement.innerHTML = '<i class="fas fa-spinner fa-spin"></i> جاري التحميل...';

                    // Make AJAX call to get yarn item balance (reuse existing API)
                    fetch(`/YarnTransactions/GetYarnItemBalance?yarnItemId=${yarnItemId}`)
                        .then(response => response.json())
                        .then(data => {
                            if (data.success && data.packagingBreakdown && data.packagingBreakdown.length > 0) {
                                // Display packaging breakdown
                                let packagingHtml = '';

                                if (data.packagingBreakdown.length === 1) {
                                    // Single packaging type
                                    const pkg = data.packagingBreakdown[0];
                                    packagingHtml = `
                                        <div class="text-success fw-bold">
                                            ${toArabicDigits(pkg.totalCount.toString())} ${pkg.packagingType}
                                        </div>
                                    `;
                                } else {
                                    // Multiple packaging types - show compact view
                                    packagingHtml = `
                                        <div class="packaging-compact">
                                            ${data.packagingBreakdown.slice(0, 2).map(pkg =>
                                                `<span class="badge bg-light text-dark border me-1 mb-1">
                                                    ${toArabicDigits(pkg.totalCount.toString())} ${pkg.packagingType}
                                                </span>`
                                            ).join('')}
                                            ${data.packagingBreakdown.length > 2 ?
                                                `<span class="badge bg-info text-white">+${data.packagingBreakdown.length - 2} أخرى</span>` : ''}
                                        </div>
                                        <small class="text-muted d-block mt-1">
                                            المجموع: ${toArabicDigits(data.countBalance.toString())} وحدة
                                        </small>
                                    `;
                                }

                                displayElement.innerHTML = packagingHtml;

                                // Add click handler to show full breakdown
                                if (data.packagingBreakdown.length > 1) {
                                    displayElement.style.cursor = 'pointer';
                                    displayElement.onclick = () => showFullPackagingBreakdown(data);
                                }

                            } else if (data.success && data.countBalance > 0) {
                                // Has count but no packaging breakdown
                                displayElement.innerHTML = `
                                    <div class="text-success fw-bold">
                                        ${toArabicDigits(data.countBalance.toString())} وحدة غير محددة
                                    </div>
                                `;
                            } else {
                                // No count balance
                                displayElement.innerHTML = `
                                    <div class="text-muted">
                                        <i class="fas fa-times-circle me-1"></i>
                                        لا يوجد رصيد
                                    </div>
                                `;
                            }
                        })
                        .catch(error => {
                            console.error('Error loading packaging breakdown:', error);
                            displayElement.innerHTML = `
                                <div class="text-danger">
                                    <i class="fas fa-exclamation-triangle me-1"></i>
                                    خطأ في التحميل
                                </div>
                            `;
                        });
                }

                // Show full packaging breakdown in modal
                function showFullPackagingBreakdown(data) {
                    let modalContent = `
                        <div class="row">
                            <div class="col-12">
                                <h6 class="text-primary mb-3">
                                    <i class="fas fa-boxes me-2"></i>
                                    تفاصيل التعبئة الكاملة - ${data.yarnItem}
                                </h6>

                                <div class="row g-2 mb-3">
                                    ${data.packagingBreakdown.map(pkg => `
                                        <div class="col-md-6">
                                            <div class="d-flex justify-content-between align-items-center p-2 bg-light rounded">
                                                <span class="fw-bold">${pkg.packagingType}</span>
                                                <span class="badge bg-primary">
                                                    ${toArabicDigits(pkg.totalCount.toString())} وحدة
                                                </span>
                                            </div>
                                        </div>
                                    `).join('')}
                                </div>

                                <div class="alert alert-info d-flex align-items-center">
                                    <i class="fas fa-info-circle me-2"></i>
                                    <div>
                                        <strong>المجموع الكلي:</strong> ${toArabicDigits(data.countBalance.toString())} وحدة
                                        موزعة على ${toArabicDigits(data.packagingBreakdown.length.toString())} نوع تعبئة
                                    </div>
                                </div>

                                <div class="text-muted small">
                                    <strong>ملاحظة:</strong> عند إجراء معاملة صادر، يجب تحديد نوع التعبئة المطابق للرصيد المتاح
                                </div>
                            </div>
                        </div>
                    `;

                    // Update modal content and show
                    document.getElementById('modalContent').innerHTML = modalContent;
                    document.querySelector('#detailsModal .modal-title').textContent = 'تفاصيل التعبئة';
                    new bootstrap.Modal(document.getElementById('detailsModal')).show();
                }

                // Enhanced item details function
                function showItemDetails(yarnItemId) {
                    // Show loading state
                    document.getElementById('modalContent').innerHTML = `
                        <div class="text-center py-4">
                            <i class="fas fa-spinner fa-spin fa-2x text-primary"></i>
                            <div class="mt-2">جاري تحميل التفاصيل...</div>
                        </div>
                    `;

                    // Show modal
                    const modal = new bootstrap.Modal(document.getElementById('detailsModal'));
                    modal.show();

                    // Load full item details
                    fetch(`/YarnTransactions/GetYarnItemBalance?yarnItemId=${yarnItemId}`)
                        .then(response => response.json())
                        .then(data => {
                            if (data.success) {
                                let detailsHtml = `
                                    <div class="row">
                                        <div class="col-md-6">
                                            <h6 class="text-primary mb-3">معلومات أساسية</h6>
                                            <table class="table table-borderless">
                                                <tr>
                                                    <td><strong>اسم الصنف:</strong></td>
                                                    <td>${data.yarnItem || 'غير محدد'}</td>
                                                </tr>
                                                <tr>
                                                    <td><strong>الغزل الأصلي:</strong></td>
                                                    <td>${data.originYarn || 'غير محدد'}</td>
                                                </tr>
                                                <tr>
                                                    <td><strong>الشركة المصنعة:</strong></td>
                                                    <td>${data.manufacturer || 'غير محدد'}</td>
                                                </tr>
                                            </table>
                                        </div>

                                        <div class="col-md-6">
                                            <h6 class="text-success mb-3">معلومات المخزون</h6>
                                            <table class="table table-borderless">
                                                <tr>
                                                    <td><strong>رصيد الكمية:</strong></td>
                                                    <td class="text-success fw-bold">
                                                        ${toArabicDigits(data.quantityBalance.toFixed(3))} كجم
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td><strong>رصيد العدد:</strong></td>
                                                    <td class="text-info fw-bold">
                                                        ${data.packagingDisplay || 'لا يوجد رصيد'}
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td><strong>عدد المعاملات:</strong></td>
                                                    <td>${toArabicDigits(data.transactionCount.toString())}</td>
                                                </tr>
                                                <tr>
                                                    <td><strong>آخر معاملة:</strong></td>
                                                    <td>${data.lastTransactionDate || 'لا توجد معاملات'}</td>
                                                </tr>
                                            </table>
                                        </div>
                                    </div>

                                    ${data.packagingBreakdown && data.packagingBreakdown.length > 0 ? `
                                    <hr>
                                    <div class="row">
                                        <div class="col-12">
                                            <h6 class="text-warning mb-3">
                                                <i class="fas fa-boxes me-2"></i>
                                                تفاصيل أنواع التعبئة
                                            </h6>
                                            <div class="row g-2">
                                                ${data.packagingBreakdown.map(pkg => `
                                                    <div class="col-md-4">
                                                        <div class="card bg-light">
                                                            <div class="card-body text-center py-2">
                                                                <i class="fas fa-box text-primary mb-1"></i>
                                                                <div class="fw-bold">${pkg.packagingType}</div>
                                                                <div class="text-primary">
                                                                    ${toArabicDigits(pkg.totalCount.toString())} وحدة
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                `).join('')}
                                            </div>
                                        </div>
                                    </div>
                                    ` : ''}
                                `;

                                document.getElementById('modalContent').innerHTML = detailsHtml;
                                document.querySelector('#detailsModal .modal-title').textContent = `تفاصيل الصنف - ${data.yarnItem}`;
                            } else {
                                document.getElementById('modalContent').innerHTML = `
                                    <div class="alert alert-danger">
                                        <i class="fas fa-exclamation-triangle me-2"></i>
                                        فشل في تحميل تفاصيل الصنف: ${data.error || 'خطأ غير معروف'}
                                    </div>
                                `;
                            }
                        })
                        .catch(error => {
                            console.error('Error loading item details:', error);
                            document.getElementById('modalContent').innerHTML = `
                                <div class="alert alert-danger">
                                    <i class="fas fa-exclamation-triangle me-2"></i>
                                    حدث خطأ أثناء تحميل التفاصيل
                                </div>
                            `;
                        });
                }

                // Auto-load packaging for items with count > 0 on page load
                document.addEventListener('DOMContentLoaded', function() {
                    // Auto-load packaging breakdown for items with high count balance
                    document.querySelectorAll('.item-card-wrapper').forEach(card => {
                        const itemId = card.dataset.id;
                        const balance = parseFloat(card.dataset.balance);

                        // Auto-load for items with quantity > 0 (likely to have count balance too)
                        if (balance > 0) {
                            setTimeout(() => {
                                const infoButton = card.querySelector(`button[onclick*="${itemId}"]`);
                                if (infoButton) {
                                    loadPackagingBreakdown(itemId, infoButton);
                                }
                            }, 100 * parseInt(itemId)); // Stagger the requests
                        }
                    });
                });
            </script>

            <!-- Add these styles to your existing CSS -->
            <style>
                .packaging-display {
                    min-height: 40px;
                    padding: 8px 0;
                    border-radius: 6px;
                    transition: background-color 0.2s ease;
                }

                    .packaging-display:hover {
                        background-color: #f8f9fa;
                    }

                .packaging-compact .badge {
                    font-size: 0.75em;
                    margin-bottom: 2px;
                }

                .item-details {
                    min-height: 120px; /* Increased to accommodate packaging info */
                }

                /* Loading state for packaging */
                .packaging-display .fa-spinner {
                    color: #6c757d;
                }

                /* Clickable packaging breakdown */
                .packaging-display[style*="cursor: pointer"]:hover {
                    background-color: #e3f2fd;
                    border: 1px solid #2196f3;
                    padding: 7px;
                }

                /* Modal enhancements */
                .table td {
                    padding: 0.5rem 0.75rem;
                    border: none;
                }

                    .table td:first-child {
                        width: 40%;
                        color: #6c757d;
                    }

                .card.bg-light .card-body {
                    background: linear-gradient(145deg, #f8f9fa 0%, #e9ecef 100%);
                }

                /* Responsive adjustments */
                @@media (max-width: 768px) {
                    .packaging-compact .badge

                {
                    font-size: 0.7em;
                    padding: 0.25em 0.5em;
                }

                .item-details {
                    min-height: 100px;
                }

                }</style>
        </div>
    </div>
</div>

<!-- Details Modal -->
