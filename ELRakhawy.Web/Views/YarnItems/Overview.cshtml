<script>
    // Add these functions to your existing JavaScript

    // Convert to Arabic digits
    function toArabicDigits(str) {
        if (!str) return str;
        return str.toString().replace(/[0-9]/g, d => '٠١٢٣٤٥٦٧٨٩'[d]);
    }

    // Load packaging breakdown for an item
    function loadPackagingBreakdown(yarnItemId, buttonElement) {
        const displayElement = document.getElementById(`packaging-${yarnItemId}`);

        // Show loading state
        displayElement.innerHTML = '<i class="fas fa-spinner fa-spin"></i> جاري التحميل...';

        // Make AJAX call to get yarn item balance (reuse existing API)
        fetch(`/YarnTransactions/GetYarnItemBalance?yarnItemId=${yarnItemId}`)
            .then(response => response.json())
            .then(data => {
                if (data.success && data.packagingBreakdown && data.packagingBreakdown.length > 0) {
                    // Display packaging breakdown
                    let packagingHtml = '';

                    if (data.packagingBreakdown.length === 1) {
                        // Single packaging type
                        const pkg = data.packagingBreakdown[0];
                        packagingHtml = `
                            <div class="text-success fw-bold">
                                ${toArabicDigits(pkg.totalCount.toString())} ${pkg.packagingType}
                            </div>
                        `;
                    } else {
                        // Multiple packaging types - show compact view
                        packagingHtml = `
                            <div class="packaging-compact">
                                ${data.packagingBreakdown.slice(0, 2).map(pkg =>
                                    `<span class="badge bg-light text-dark border me-1 mb-1">
                                        ${toArabicDigits(pkg.totalCount.toString())} ${pkg.packagingType}
                                    </span>`
                                ).join('')}
                                ${data.packagingBreakdown.length > 2 ?
                                    `<span class="badge bg-info text-white">+${data.packagingBreakdown.length - 2} أخرى</span>` : ''}
                            </div>
                            <small class="text-muted d-block mt-1">
                                المجموع: ${toArabicDigits(data.countBalance.toString())} وحدة
                            </small>
                        `;
                    }

                    displayElement.innerHTML = packagingHtml;

                    // Add click handler to show full breakdown
                    if (data.packagingBreakdown.length > 1) {
                        displayElement.style.cursor = 'pointer';
                        displayElement.onclick = () => showFullPackagingBreakdown(data);
                    }

                } else if (data.success && data.countBalance > 0) {
                    // Has count but no packaging breakdown
                    displayElement.innerHTML = `
                        <div class="text-success fw-bold">
                            ${toArabicDigits(data.countBalance.toString())} وحدة غير محددة
                        </div>
                    `;
                } else {
                    // No count balance
                    displayElement.innerHTML = `
                        <div class="text-muted">
