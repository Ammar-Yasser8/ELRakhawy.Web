@using ELRakhawy.EL.ViewModels
@model FullWarpBeamTransactionOverviewViewModel
@{
    ViewData["Title"] = "معاملات خيوط السداة الكاملة";
    var currentTime = "2025-09-04 20:55:19"; // ✅ Updated current time
    var currentUser = "Ammar-Yasser8";
}

<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/animate.css@4.1.1/animate.min.css" rel="stylesheet">

<style>
    /* Enhanced styling for Full Warp Beam transactions */
    .warp-beam-container {
        background: linear-gradient(135deg, #f8f9fc 0%, #e8f4fd 100%);
        min-height: 100vh;
        padding: 2rem 0;
    }

    .hero-section {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 3rem 2rem;
        border-radius: 20px;
        margin-bottom: 2rem;
        position: relative;
        overflow: hidden;
        box-shadow: 0 15px 35px rgba(102, 126, 234, 0.2);
    }

    .hero-section::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -50%;
        width: 200%;
        height: 200%;
        background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="50" cy="50" r="2" fill="rgba(255,255,255,0.1)"/></svg>') repeat;
        animation: drift 25s linear infinite;
    }

    @@keyframes drift {
        0% { transform: translateX(0) rotate(0deg); }
        100% { transform: translateX(-100px) rotate(360deg); }
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
        margin-bottom: 2rem;
    }

    .stat-card {
        background: white;
        border: none;
        border-radius: 16px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        transition: all 0.4s ease;
        overflow: hidden;
        position: relative;
    }

    .stat-card:hover {
        transform: translateY(-8px) scale(1.02);
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.15);
    }

    .stat-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: var(--card-gradient);
    }

    .stat-card.success { --card-gradient: linear-gradient(90deg, #28a745, #34ce57); }
    .stat-card.warning { --card-gradient: linear-gradient(90deg, #ffc107, #ffcd39); }
    .stat-card.primary { --card-gradient: linear-gradient(90deg, #007bff, #0056b3); }
    .stat-card.info { --card-gradient: linear-gradient(90deg, #17a2b8, #138496); }

    .stat-card .card-body {
        padding: 2rem;
        text-align: center;
        position: relative;
    }

    .stat-icon {
        font-size: 3rem;
        margin-bottom: 1rem;
        opacity: 0.8;
    }

    .stat-value {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
        background: var(--card-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .stat-label {
        color: #6c757d;
        font-weight: 500;
        margin-bottom: 0.5rem;
    }

    .stat-meta {
        font-size: 0.875rem;
        color: #28a745;
        font-weight: 500;
    }

    /* Enhanced Filter Card */
    .filter-card {
        background: white;
        border: none;
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        margin-bottom: 2rem;
        overflow: hidden;
    }

    .filter-card .card-header {
        background: linear-gradient(135deg, #4e73df 0%, #224abe 100%);
        color: white;
        border: none;
        padding: 1.5rem 2rem;
        border-radius: 20px 20px 0 0;
    }

    .filter-form {
        padding: 2rem;
    }

    .form-label {
        font-weight: 600;
        color: #495057;
        margin-bottom: 0.5rem;
    }

    .form-control, .form-select {
        border-radius: 10px;
        border: 2px solid #e3e6f0;
        padding: 0.75rem 1rem;
        transition: all 0.3s ease;
    }

    .form-control:focus, .form-select:focus {
        border-color: #4e73df;
        box-shadow: 0 0 0 0.2rem rgba(78, 115, 223, 0.25);
        transform: translateY(-1px);
    }

    /* Enhanced Action Buttons */
    .action-buttons {
        display: flex;
        gap: 1rem;
        justify-content: center;
        margin-bottom: 2rem;
    }

    .btn-enhanced {
        border-radius: 12px;
        padding: 0.75rem 1.5rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        transition: all 0.3s ease;
        border: none;
        position: relative;
        overflow: hidden;
    }

    .btn-enhanced::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
        transition: left 0.5s;
    }

    .btn-enhanced:hover::before {
        left: 100%;
    }

    .btn-enhanced:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
    }

    /* Enhanced Table */
    .table-card {
        background: white;
        border: none;
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }

    .table-card .card-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        padding: 1.5rem 2rem;
    }

    .enhanced-table {
        margin: 0;
        background: white;
    }

    .enhanced-table th {
        background: linear-gradient(135deg, #f8f9fc 0%, #e3f2fd 100%);
        color: #495057;
        font-weight: 700;
        border: none;
        padding: 1.25rem 1rem;
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 0.5px;
        position: sticky;
        top: 0;
        z-index: 10;
    }

    .enhanced-table td {
        padding: 1rem;
        border: none;
        border-bottom: 1px solid #f0f0f0;
        vertical-align: middle;
    }

    .enhanced-table tr:hover {
        background: linear-gradient(135deg, rgba(78, 115, 223, 0.05), rgba(102, 126, 234, 0.05));
        transform: scale(1.001);
        transition: all 0.3s ease;
    }

    /* Transaction ID styling - keep Latin */
    .transaction-id {
        font-family: 'Courier New', monospace;
        font-weight: bold;
        padding: 4px 10px;
        border-radius: 8px;
        background: linear-gradient(135deg, rgba(13, 110, 253, 0.1), rgba(13, 110, 253, 0.05));
        border: 1px dashed rgba(13, 110, 253, 0.3);
        cursor: pointer;
        transition: all 0.3s ease;
        letter-spacing: 0.5px;
        color: #0d6efd;
        display: inline-block;
        position: relative;
    }

    .transaction-id:hover {
        background: linear-gradient(135deg, rgba(13, 110, 253, 0.2), rgba(13, 110, 253, 0.1));
        border-color: rgba(13, 110, 253, 0.5);
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(13, 110, 253, 0.3);
    }

    .transaction-id::after {
        content: '📋';
        position: absolute;
        right: -22px;
        top: 50%;
        transform: translateY(-50%);
        opacity: 0;
        transition: opacity 0.3s ease;
        font-size: 0.8em;
    }

    .transaction-id:hover::after {
        opacity: 1;
    }

    .badge-enhanced {
        padding: 0.5rem 0.75rem;
        border-radius: 8px;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.75rem;
    }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        color: #6c757d;
    }

    .empty-state-icon {
        font-size: 4rem;
        margin-bottom: 1.5rem;
        opacity: 0.5;
    }

    /* Modal enhancements */
    .modal-enhanced .modal-content {
        border: none;
        border-radius: 20px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
    }

    .modal-enhanced .modal-header {
        background: linear-gradient(135deg, #4e73df 0%, #224abe 100%);
        color: white;
        border: none;
        border-radius: 20px 20px 0 0;
    }

    /* Loading states */
    .loading-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.7);
        display: none;
        z-index: 9999;
        align-items: center;
        justify-content: center;
    }

    .loading-content {
        text-align: center;
        color: white;
    }

    /* Mobile responsive */
    @@media (max-width: 768px) {
        .warp-beam-container {
            padding: 1rem 0;
        }
        
        .hero-section {
            padding: 2rem 1rem;
            text-align: center;
        }
        
        .stats-grid {
            grid-template-columns: 1fr;
        }
        
        .action-buttons {
            flex-direction: column;
            align-items: center;
        }
        
        .transaction-id::after {
            display: none;
        }
        
        .enhanced-table {
            font-size: 0.875rem;
        }
    }

    @@media print {
        .no-print {
            display: none !important;
        }
        
        .transaction-id {
            background: none !important;
            border: none !important;
            color: black !important;
            box-shadow: none !important;
        }
        
        .stat-card, .filter-card, .table-card {
            box-shadow: none !important;
            border: 1px solid #ddd !important;
        }
    }

    /* Additional animations */
    .animate-fade-in {
        animation: fadeIn 0.6s ease-out;
    }

    @@keyframes fadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }
</style>

<div class="warp-beam-container">
    <div class="container-fluid">
        <!-- Enhanced Hero Section -->
        <div class="hero-section animate-fade-in">
            <div class="row align-items-center">
                <div class="col-lg-8">
                    <h1 class="display-5 fw-bold mb-3">
                        <i class="fas fa-project-diagram me-3"></i>
                        معاملات خيوط السداة الكاملة
                    </h1>
                    <p class="lead mb-0 opacity-90">
                        نظام إدارة شامل لمعاملات خيوط السداة الكاملة - عرض، تحليل، ومتابعة جميع العمليات الواردة والصادرة
                    </p>
                </div>
                <div class="col-lg-4 text-lg-end">
                    <div class="d-flex flex-column align-items-lg-end">
                        <small class="opacity-75 mb-2">
                            <i class="fas fa-clock me-1"></i>
                            <span id="currentTime">@currentTime</span>
                        </small>
                        <small class="opacity-75 mb-3">
                            <i class="fas fa-user me-1"></i>@currentUser
                        </small>
                        <div class="action-buttons d-flex gap-2">
                            <a href="@Url.Action("Inbound", "FullWarpBeamTransactions")" class="btn btn-success btn-enhanced">
                                <i class="fas fa-plus-circle me-2"></i>إضافة وارد
                            </a>
                            <a href="@Url.Action("Outbound", "FullWarpBeamTransactions")" class="btn btn-warning btn-enhanced">
                                <i class="fas fa-minus-circle me-2"></i>إضافة صادر
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Enhanced Statistics Cards -->
        <div class="stats-grid animate-fade-in">
            <div class="stat-card success">
                <div class="card-body">
                    <i class="fas fa-arrow-down stat-icon text-success"></i>
                    <div class="stat-value" id="totalInbound">@Model.TotalInbound.ToString("N3")</div>
                    <div class="stat-label">إجمالي الوارد (كجم)</div>
                    <div class="stat-meta" id="totalLengthInbound">@Model.TotalLengthInbound متر</div>
                </div>
            </div>

            <div class="stat-card warning">
                <div class="card-body">
                    <i class="fas fa-arrow-up stat-icon text-warning"></i>
                    <div class="stat-value" id="totalOutbound">@Model.TotalOutbound.ToString("N3")</div>
                    <div class="stat-label">إجمالي الصادر (كجم)</div>
                    <div class="stat-meta" id="totalLengthOutbound">@Model.TotalLengthOutbound متر</div>
                </div>
            </div>

            <div class="stat-card primary">
                <div class="card-body">
                    <i class="fas fa-balance-scale stat-icon text-primary"></i>
                    <div class="stat-value" id="currentBalance">@Model.CurrentBalance.ToString("N3")</div>
                    <div class="stat-label">الرصيد الحالي (كجم)</div>
                    <div class="stat-meta" id="currentLengthBalance">@Model.CurrentLengthBalance متر</div>
                </div>
            </div>

            <div class="stat-card info">
                <div class="card-body">
                    <i class="fas fa-list-ol stat-icon text-info"></i>
                    <div class="stat-value" id="totalTransactions">@Model.TotalTransactions</div>
                    <div class="stat-label">إجمالي المعاملات</div>
                    <div class="stat-meta">معاملة مسجلة</div>
                </div>
            </div>
        </div>

        <!-- Enhanced Filters Section -->
        <div class="filter-card animate-fade-in no-print">
            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fas fa-filter me-2"></i>فلاتر البحث والتصفية
                    </h5>
                    <button type="button" class="btn btn-light btn-sm" onclick="resetFilters()">
                        <i class="fas fa-undo me-1"></i>إعادة تعيين
                    </button>
                </div>
            </div>
            <div class="filter-form">
                <form method="get" action="@Url.Action("Overview")" id="filterForm">
                    <div class="row">
                        <div class="col-lg-3 col-md-6 mb-3">
                            <label for="SelectedFullWarpBeamItemId" class="form-label">
                                <i class="fas fa-cube text-primary me-1"></i>الصنف
                            </label>
                            <select name="SelectedFullWarpBeamItemId" class="form-select select2-enhanced">
                                <option value="">-- جميع الأصناف --</option>
                                @foreach (var item in Model.FullWarpBeamItems)
                                {
                                    <option value="@item.Value" @@(Model.SelectedFullWarpBeamItemId?.ToString() == item.Value ? "selected" : "")>@item.Text</option>
                                }
                            </select>
                        </div>
                        <div class="col-lg-3 col-md-6 mb-3">
                            <label for="SelectedStakeholderId" class="form-label">
                                <i class="fas fa-building text-success me-1"></i>الجهة
                            </label>
                            <select name="SelectedStakeholderId" class="form-select select2-enhanced">
                                <option value="">-- جميع الجهات --</option>
                                @foreach (var stakeholder in Model.Stakeholders)
                                {
                                    <option value="@stakeholder.Value" @@(Model.SelectedStakeholderId?.ToString() == stakeholder.Value ? "selected" : "")>@stakeholder.Text</option>
                                }
                            </select>
                        </div>
                        <div class="col-lg-2 col-md-4 mb-3">
                            <label for="TransactionType" class="form-label">
                                <i class="fas fa-exchange-alt text-warning me-1"></i>نوع المعاملة
                            </label>
                            <select name="TransactionType" class="form-select">
                                <option value="All" @@(Model.TransactionType == "All" ? "selected" : "")>الكل</option>
                                <option value="Inbound" @@(Model.TransactionType == "Inbound" ? "selected" : "")>وارد</option>
                                <option value="Outbound" @@(Model.TransactionType == "Outbound" ? "selected" : "")>صادر</option>
                            </select>
                        </div>
                        <div class="col-lg-2 col-md-4 mb-3">
                            <label for="FromDate" class="form-label">
                                <i class="fas fa-calendar-alt text-info me-1"></i>من تاريخ
                            </label>
                            <input type="date" name="FromDate" class="form-control date-input" 
                                   value="@(Model.FromDate?.ToString("yyyy-MM-dd"))" />
                        </div>
                        <div class="col-lg-2 col-md-4 mb-3">
                            <label for="ToDate" class="form-label">
                                <i class="fas fa-calendar-check text-info me-1"></i>إلى تاريخ
                            </label>
                            <input type="date" name="ToDate" class="form-control date-input" 
                                   value="@(Model.ToDate?.ToString("yyyy-MM-dd"))" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-8 mb-3">
                            <label for="SearchQuery" class="form-label">
                                <i class="fas fa-search text-secondary me-1"></i>البحث الشامل
                            </label>
                            <input type="text" name="SearchQuery" class="form-control" 
                                   value="@Model.SearchQuery" 
                                   placeholder="ابحث في رقم الإذن، الصنف، الجهة، البيان، أو أي تفاصيل أخرى..." />
                        </div>
                        <div class="col-md-4 mb-3 d-flex align-items-end gap-2">
                            <button type="submit" class="btn btn-primary btn-enhanced flex-fill">
                                <i class="fas fa-search me-2"></i>بحث وتصفية
                            </button>
                            <button type="button" class="btn btn-outline-info btn-enhanced" onclick="exportToExcel()">
                                <i class="fas fa-file-excel me-1"></i>تصدير
                            </button>
                        </div>
                    </div>
                    
                    <!-- Quick Date Filters -->
                    <div class="row">
                        <div class="col-12">
                            <div class="btn-group btn-group-sm" role="group">
                                <button type="button" class="btn btn-outline-info" onclick="setDateRange('today')">اليوم</button>
                                <button type="button" class="btn btn-outline-info" onclick="setDateRange('week')">هذا الأسبوع</button>
                                <button type="button" class="btn btn-outline-info" onclick="setDateRange('month')">هذا الشهر</button>
                                <button type="button" class="btn btn-outline-info" onclick="setDateRange('quarter')">هذا الربع</button>
                                <button type="button" class="btn btn-outline-info" onclick="setDateRange('year')">هذا العام</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Enhanced Transactions Table -->
        <div class="table-card animate-fade-in">
            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fas fa-table me-2"></i>قائمة المعاملات
                        @if (Model.Transactions.Any())
                        {
                            <span class="badge bg-light text-dark ms-2" id="transactionCount">@Model.Transactions.Count</span>
                        }
                    </h5>
                    <div class="btn-group no-print">
                        <button class="btn btn-light btn-sm" onclick="refreshData()" title="تحديث">
                            <i class="fas fa-sync-alt"></i>
                        </button>
                        <button class="btn btn-light btn-sm" onclick="printTable()" title="طباعة">
                            <i class="fas fa-print"></i>
                        </button>
                        <button class="btn btn-light btn-sm" onclick="exportToExcel()" title="تصدير Excel">
                            <i class="fas fa-file-excel"></i>
                        </button>
                    </div>
                </div>
            </div>
            <div class="card-body p-0">
                @if (Model.Transactions.Any())
                {
                    <div class="table-responsive">
                        <table class="table enhanced-table mb-0" id="transactionsTable">
                            <thead>
                                <tr>
                                    <th><i class="fas fa-hashtag me-1"></i>رقم الإذن</th>
                                    <th><i class="fas fa-calendar me-1"></i>التاريخ</th>
                                    <th><i class="fas fa-cube me-1"></i>الصنف</th>
                                    <th><i class="fas fa-building me-1"></i>الجهة</th>
                                    <th><i class="fas fa-tag me-1"></i>النوع</th>
                                    <th><i class="fas fa-weight me-1"></i>الكمية</th>
                                    <th><i class="fas fa-ruler me-1"></i>الطول</th>
                                    <th><i class="fas fa-balance-scale me-1"></i>الرصيد</th>
                                    <th><i class="fas fa-cog me-1"></i>الإجراءات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var transaction in Model.Transactions)
                                {
                                    <tr class="transaction-row">
                                        <td>
                                            <!-- ✅ Transaction ID preserved in Latin -->
                                            <div class="transaction-id" onclick="copyTransactionId('@transaction.TransactionId')" 
                                                 title="انقر للنسخ">
                                                @transaction.TransactionId
                                            </div>
                                            @if (!string.IsNullOrEmpty(transaction.InternalId))
                                            {
                                                <small class="text-muted d-block internal-id">
                                                    داخلي: @transaction.InternalId
                                                </small>
                                            }
                                        </td>
                                        <td>
                                            <div class="fw-bold transaction-date">@transaction.Date.ToString("yyyy-MM-dd")</div>
                                            <small class="text-muted transaction-time">@transaction.Date.ToString("HH:mm")</small>
                                        </td>
                                        <td>
                                            <strong class="text-primary">@transaction.FullWarpBeamItemName</strong>
                                        </td>
                                        <td>
                                            <strong>@transaction.StakeholderName</strong>
                                        </td>
                                        <td>
                                            <span class="badge badge-enhanced bg-@transaction.TransactionTypeClass">
                                                <i class="fas fa-arrow-@(transaction.IsInbound ? "down" : "up") me-1"></i>
                                                @transaction.TransactionType
                                            </span>
                                        </td>
                                        <td>
                                            <div class="fw-bold transaction-quantity">@transaction.Quantity.ToString("N3")</div>
                                            <small class="text-muted">كجم</small>
                                        </td>
                                        <td>
                                            <div class="fw-bold transaction-length">@transaction.Length</div>
                                            <small class="text-muted">متر</small>
                                        </td>
                                        <td>
                                            <div class="fw-bold text-primary transaction-balance">@transaction.QuantityBalance.ToString("N3")</div>
                                            <small class="text-muted">كجم</small>
                                            <div class="mt-1">
                                                <small class="text-muted transaction-count-balance">@transaction.CountBalance وحدة</small>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <a href="@Url.Action("Details", new { id = transaction.Id })" 
                                                   class="btn btn-outline-primary" title="عرض التفاصيل">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                
                                                <button type="button" class="btn btn-outline-success" 
                                                        title="نسخ رقم المعاملة"
                                                        onclick="copyTransactionId('@transaction.TransactionId')">
                                                    <i class="fas fa-copy"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="empty-state">
                        <i class="fas fa-inbox empty-state-icon"></i>
