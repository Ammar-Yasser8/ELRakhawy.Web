@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        $(document).ready(function() {
            const CURRENT_TIME = '2025-09-04 20:55:19';
            const CURRENT_USER = 'Ammar-Yasser8';

            console.log('🚀 Full Warp Beam Transactions Overview initialized at', CURRENT_TIME, 'by', CURRENT_USER);

            // Initialize Select2
            $('.select2-enhanced').select2({
                theme: 'bootstrap-5',
                width: '100%',
                language: {
                    noResults: function () {
                        return "لا توجد نتائج";
                    },
                    searching: function () {
                        return "جاري البحث...";
                    }
                }
            });

            // ✅ Convert numbers to Arabic while preserving Transaction IDs
            convertNumbersToArabic();

            // Real-time clock update
            function updateClock() {
                const now = new Date();
                const timeString = now.toISOString().slice(0, 19).replace('T', ' ');
                $('#currentTime').text(toArabicDigits(timeString));
            }
            setInterval(updateClock, 1000);

            // Initialize tooltips
            $('[title]').tooltip();

            console.log('✅ Full Warp Beam Transactions Overview ready');
        });

        // ✅ Arabic/Latin conversion functions
        function toArabicDigits(str) {
            if (typeof str !== 'string') str = str.toString();
            return str.replace(/[0-9]/g, d => '٠١٢٣٤٥٦٧٨٩'[d]);
        }

        function toLatinDigits(str) {
            if (typeof str !== 'string') str = str.toString();
            return str.replace(/[٠-٩]/g, d => '0123456789'['٠١٢٣٤٥٦٧٨٩'.indexOf(d)]);
        }

        function isTransactionId(str) {
            if (typeof str !== 'string') return false;
            
            var transactionIdPatterns = [
                /^[A-Z]{2,4}-\d{8}-\d{4}$/,  // FWB-20250904-0001
                /^[A-Z]{3}-\d{8}-\d{4}$/,    // OUT-20250904-0001
                /^[A-Z]{2}-\d{8}-\d{4}$/,    // IN-20250904-0001
                /^\d{8}-\d{4}$/,             // 20250904-0001
                /^F\d{10,}$/,                // F1725476398001
                /^FWB\d{8,}$/,               // FWB20250904001
                /^WARP-\d{8}-\d{4}$/         // WARP-20250904-0001
            ];
            
            return transactionIdPatterns.some(pattern => pattern.test(str));
        }

        function toArabicDigitsExceptTransactionId(str) {
            if (typeof str !== 'string') str = str.toString();
            
            if (isTransactionId(str)) {
                return str; // Keep Transaction IDs in Latin
            }
            
            return toArabicDigits(str);
        }

        // ✅ Convert numbers to Arabic while preserving Transaction IDs
        function convertNumbersToArabic() {
            console.log('🔄 Converting numbers to Arabic at 2025-09-04 20:55:19');

            // Convert statistics
            $('#totalInbound').text(toArabicDigits($('#totalInbound').text()));
            $('#totalOutbound').text(toArabicDigits($('#totalOutbound').text()));
            $('#currentBalance').text(toArabicDigits($('#currentBalance').text()));
            $('#totalTransactions').text(toArabicDigits($('#totalTransactions').text()));
            $('#totalLengthInbound').text(toArabicDigits($('#totalLengthInbound').text()));
            $('#totalLengthOutbound').text(toArabicDigits($('#totalLengthOutbound').text()));
            $('#currentLengthBalance').text(toArabicDigits($('#currentLengthBalance').text()));
            $('#transactionCount').text(toArabicDigits($('#transactionCount').text()));

            // Convert current time in header
            $('#currentTime').text(toArabicDigits($('#currentTime').text()));

            // Convert table values BUT preserve Transaction IDs
            $('.transaction-date').each(function() {
                $(this).text(toArabicDigits($(this).text()));
            });

            $('.transaction-time').each(function() {
                $(this).text(toArabicDigits($(this).text()));
            });

            $('.transaction-quantity, .transaction-length, .transaction-balance').each(function() {
                $(this).text(toArabicDigits($(this).text()));
            });

            $('.transaction-count-balance').each(function() {
                $(this).text(toArabicDigits($(this).text()));
            });

            // Convert internal IDs only if they're not transaction IDs
            $('.internal-id').each(function() {
                var text = $(this).text();
                var parts = text.split(': ');
                if (parts.length === 2) {
                    var idPart = parts[1];
                    var convertedId = toArabicDigitsExceptTransactionId(idPart);
                    $(this).text(parts[0] + ': ' + convertedId);
                }
            });

            // Transaction IDs are NOT converted - they stay in Latin
            console.log('✅ Numbers converted to Arabic (Transaction IDs preserved)');
        }

        // ✅ Copy Transaction ID functionality
        function copyTransactionId(transactionId) {
            try {
                const tempInput = document.createElement('input');
                tempInput.value = transactionId;
                document.body.appendChild(tempInput);
                tempInput.select();
                document.execCommand('copy');
                document.body.removeChild(tempInput);

                Swal.fire({
                    icon: 'success',
                    title: 'تم النسخ',
                    text: `رقم المعاملة: ${transactionId}`,
                    timer: 2000,
                    showConfirmButton: false,
                    toast: true,
                    position: 'top-end'
                });

                console.log('✅ Transaction ID copied:', transactionId, 'at 2025-09-04 20:55:19');
            } catch (error) {
                console.error('❌ Error copying transaction ID:', error);
                prompt('انسخ رقم المعاملة من هنا:', transactionId);
            }
        }

        // Utility functions
        function showLoading() {
            $('#loadingOverlay').css('display', 'flex');
        }

        function hideLoading() {
            $('#loadingOverlay').hide();
        }

        function resetFilters() {
            $('#filterForm')[0].reset();
            $('.select2-enhanced').val(null).trigger('change');
            
            Swal.fire({
                icon: 'info',
                title: 'تم إعادة التعيين',
                text: 'تم مسح جميع الفلاتر',
                timer: 1500,
                showConfirmButton: false
            });
            
            setTimeout(() => {
                window.location.href = '@Url.Action("Overview")';
            }, 1000);
        }

        function refreshData() {
            showLoading();
            setTimeout(() => {
                window.location.reload();
            }, 500);
        }

        function setDateRange(period) {
            const today = new Date();
            let fromDate = new Date();

            switch(period) {
                case 'today':
                    fromDate = new Date(today);
                    break;
                case 'week':
                    fromDate.setDate(today.getDate() - 7);
                    break;
                case 'month':
                    fromDate.setMonth(today.getMonth() - 1);
                    break;
                case 'quarter':
                    fromDate.setMonth(today.getMonth() - 3);
                    break;
                case 'year':
                    fromDate.setFullYear(today.getFullYear() - 1);
                    break;
            }

            $('input[name="FromDate"]').val(fromDate.toISOString().split('T')[0]);
            $('input[name="ToDate"]').val(today.toISOString().split('T')[0]);

            Swal.fire({
                icon: 'info',
                title: 'تم تحديد الفترة',
                text: `تم تعيين فترة البحث: ${period === 'today' ? 'اليوم' : period === 'week' ? 'هذا الأسبوع' : period === 'month' ? 'هذا الشهر' : period === 'quarter' ? 'هذا الربع' : 'هذا العام'}`,
                timer: 2000,
                showConfirmButton: false
            });
        }

        let currentTransactionId = null;

        function showQuickPreview(transactionId) {
            currentTransactionId = transactionId;
            $('#quickPreviewModal').modal('show');
            
            $.ajax({
                url: '@Url.Action("Details", "FullWarpBeamTransactions")/' + transactionId,
                type: 'GET',
                success: function(data) {
                    // Extract content for quick preview
                    var content = $(data).find('.transaction-details').html();
                    if (!content) {
                        content = `
                            <div class="alert alert-info">
                                <h6 class="mb-2">تفاصيل المعاملة</h6>
                                <p class="mb-0">رقم المعاملة: ${transactionId}</p>
                                <p class="mb-0">للحصول على التفاصيل الكاملة، يرجى النقر على "عرض التفاصيل الكاملة"</p>
                            </div>
                        `;
                    }
                    $('#quickPreviewContent').html(content);
                    
                    // Update "View Full Details" button
                    $('#viewFullDetailsBtn').off('click').on('click', function() {
                        window.location.href = '@Url.Action("Details", "FullWarpBeamTransactions")/' + transactionId;
                    });
                },
                error: function() {
                    $('#quickPreviewContent').html(`
                        <div class="alert alert-danger text-center">
                            <i class="fas fa-exclamation-triangle fa-2x mb-2"></i>
                            <h6>حدث خطأ أثناء تحميل التفاصيل</h6>
                            <p class="mb-0">يرجى المحاولة مرة أخرى أو عرض التفاصيل الكاملة</p>
                        </div>
                    `);
                }
            });
        }

        function exportToExcel() {
            showLoading();
            
            // Create export URL with current filters
            var params = new URLSearchParams(window.location.search);
            params.set('export', 'excel');
            
            setTimeout(() => {
                window.location.href = '@Url.Action("Overview")?' + params.toString();
                hideLoading();
                
                Swal.fire({
                    icon: 'success',
                    title: 'تم التصدير',
                    text: 'تم تصدير البيانات إلى Excel بنجاح',
                    timer: 2000,
                    showConfirmButton: false
                });
            }, 1500);
        }

        function printTable() {
            window.print();
        }

        // Date input styling
        $('.date-input').on('change', function() {
            $(this).addClass('is-valid');
        });

        console.log('✅ Full Warp Beam Transactions Overview scripts loaded at 2025-09-04 20:55:19 by Ammar-Yasser8');
    </script>
