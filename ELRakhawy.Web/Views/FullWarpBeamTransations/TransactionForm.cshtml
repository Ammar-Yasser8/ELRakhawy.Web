        // Form validation function
        function validateForm() {
            var isValid = true;
            var errors = [];

            // Validate full warp beam item
            if (!$('#FullWarpBeamItemId').val()) {
                errors.push('يجب اختيار صنف خيوط السداة الكاملة');
                isValid = false;
            }

            // Validate quantity
            var quantity = parseFloat(toLatinDigits($('#Quantity').val() || '0'));
            if (!quantity || quantity <= 0) {
                errors.push('يجب إدخال كمية صحيحة أكبر من الصفر');
                isValid = false;
            }

            // Validate length
            var length = parseInt(toLatinDigits($('#Length').val() || '0'));
            if (isNaN(length) || length < 0) {
                errors.push('يجب إدخال طول صحيح (صفر أو أكبر)');
                isValid = false;
            }

            // Validate stakeholder
            if (!$('#StakeholderId').val()) {
                errors.push('يجب اختيار الجهة');
                isValid = false;
            }

            // Validate date
            if (!$('#Date').val()) {
                errors.push('يجب تحديد تاريخ المعاملة');
                isValid = false;
            }

            return { isValid: isValid, errors: errors };
        }

        // Show validation errors
        function showValidationErrors(errors) {
            var errorHtml = errors.map(error => `<li>${error}</li>`).join('');
            $('#validationList').html(errorHtml);
            $('#validationSummary').show();
            $('html, body').animate({ scrollTop: 0 }, 500);
        }

        // Function to convert to Arabic digits
        function toArabicDigits(str) {
            if (!str) return str;
            return str.toString().replace(/[0-9]/g, d => '٠١٢٣٤٥٦٧٨٩'[d]);
        }

        // Function to convert to Latin digits
        function toLatinDigits(str) {
            if (!str) return str;
            return str.toString().replace(/[٠-٩]/g, d => '0123456789'['٠١٢٣٤٥٦٧٨٩'.indexOf(d)]);
        }

        // Function to detect Arabic character
        function isArabicChar(c) {
            return /[\u0600-\u06FF]/.test(c);
        }

        // Function to detect English character
        function isEnglishChar(c) {
            return /[a-zA-Z]/.test(c);
        }

        // Validate date immediately
        function validateDateImmediate() {
            var $date = $('#Date');
            var $msg = $("span[data-valmsg-for='Date']");
            var valueAr = ($date.val() || '').trim();
            var value = toLatinDigits(valueAr);

            // Basic format check
            var match = value.match(/^(\d{4})-(\d{2})-(\d{2})$/);
            if (!match) {
                $msg.text('صيغة التاريخ يجب أن تكون yyyy-MM-dd');
                $date.addClass('is-invalid');
                return false;
            }

            var year = parseInt(match[1], 10);
            var month = parseInt(match[2], 10);
            var day = parseInt(match[3], 10);

            if (month < 1 || month > 12) {
                $msg.text('الشهر غير صحيح (1-12)');
                $date.addClass('is-invalid');
                return false;
            }

            var daysInMonth = [31, (isLeapYear(year) ? 29 : 28), 31, 30, 31, 30, 31, 31, 30, 31, 30, 31];
            var maxDay = daysInMonth[month - 1];

            if (day < 1 || day > maxDay) {
                $msg.text('اليوم غير صحيح لهذا الشهر');
                $date.addClass('is-invalid');
                return false;
            }

            $msg.text('');
            $date.removeClass('is-invalid');
            return true;
        }

        function isLeapYear(y) {
            return (y % 4 === 0 && y % 100 !== 0) || (y % 400 === 0);
        }

        // Handle Arabic number input in real-time
        $(document).on("input", "#Quantity, #Length", function() {
            let input = this;
            let val = input.value;
            
            // Allow users to type Arabic numbers, but don't convert until submission
            console.log('Input changed:', { field: input.id, value: val });
        });

        // Auto-convert all text inputs and textareas to Arabic digits (except numeric calculation fields)
        $(document).on("input", "#fullWarpBeamTransactionForm input[type='text']:not(#Quantity):not(#Length), #fullWarpBeamTransactionForm textarea", function() {
            let input = this;
            let val = input.value;
            if (val.length > 0) {
                let newVal = toArabicDigits(val);
                if (newVal !== val) {
                    let cursorPos = input.selectionStart;
                    input.value = newVal;
                    input.setSelectionRange(cursorPos, cursorPos);
                }
            }
        });

        // Validate date on input/blur/change
        $(document).on('input blur change', '#Date', function() {
            validateDateImmediate();
        });
    </script>
