            // Load initial item balance if selected
            var initialItemId = $('#FullWarpBeamItemId').val();
            if (initialItemId) {
                fetchFullWarpBeamItemBalance(parseInt(initialItemId));
            }

            console.log('Full Warp Beam transaction form initialized successfully');
        });

        // Form validation function
        function validateForm() {
            var isValid = true;
            var errors = [];

            // Validate full warp beam item
            if (!$('#FullWarpBeamItemId').val()) {
                errors.push('يجب اختيار صنف خيوط السداة الكاملة');
                isValid = false;
            }

            // Validate quantity
            var quantity = parseFloat(toLatinDigits($('#Quantity').val()));
            if (!quantity || quantity <= 0) {
                errors.push('يجب إدخال كمية صحيحة أكبر من الصفر');
                isValid = false;
            }

            // Validate length
            var length = parseInt(toLatinDigits($('#Length').val()));
            if (isNaN(length) || length < 0) {
                errors.push('يجب إدخال طول صحيح (صفر أو أكبر)');
                isValid = false;
            }

            // Validate stakeholder type
            if (!$('#StakeholderTypeId').val()) {
                errors.push('يجب اختيار نوع الجهة');
                isValid = false;
            }

            // Validate stakeholder
            if (!$('#StakeholderId').val()) {
                errors.push('يجب اختيار الجهة');
                isValid = false;
            }

            // Validate date
            if (!$('#Date').val()) {
                errors.push('يجب تحديد تاريخ المعاملة');
                isValid = false;
            }

            return { isValid: isValid, errors: errors };
        }

        // Show validation errors
        function showValidationErrors(errors) {
            var errorHtml = errors.map(error => `<li>${error}</li>`).join('');
            $('#validationList').html(errorHtml);
            $('#validationSummary').show();
            $('html, body').animate({ scrollTop: 0 }, 500);
        }

        // Show alert function
        function showAlert(type, message) {
            const alertTypes = {
                'success': { id: 'successAlert', class: 'alert-success', icon: 'fa-check-circle' },
                'error': { id: 'errorAlert', class: 'alert-danger', icon: 'fa-exclamation-circle' },
                'warning': { id: 'errorAlert', class: 'alert-warning', icon: 'fa-exclamation-triangle' }
            };

            const alertConfig = alertTypes[type] || alertTypes['error'];
            
            $(`#${alertConfig.id} span`).text(message);
            $(`#${alertConfig.id}`).removeClass('alert-success alert-danger alert-warning')
                                   .addClass(alertConfig.class)
                                   .show();

            setTimeout(() => {
                $(`#${alertConfig.id}`).fadeOut();
            }, 5000);
        }

        // Hide alert function
        function hideAlert(alertId) {
            $(`#${alertId}`).fadeOut();
        }

        // Function to convert to Arabic digits
        function toArabicDigits(str) {
            return str.replace(/[0-9]/g, d => '٠١٢٣٤٥٦٧٨٩'[d]);
        }

        // Function to convert to Latin digits
        function toLatinDigits(str) {
            return str.replace(/[٠-٩]/g, d => '0123456789'['٠١٢٣٤٥٦٧٨٩'.indexOf(d)]);
        }

        // Function to detect Arabic character
        function isArabicChar(c) {
            return /[\u0600-\u06FF]/.test(c);
        }

        // Function to detect English character
        function isEnglishChar(c) {
            return /[a-zA-Z]/.test(c);
        }

        // Function to get last letter type
        function getLastLetter(str) {
            for (let i = str.length - 1; i >= 0; i--) {
                let char = str[i];
                if (isArabicChar(char)) {
                    return 'arabic';
                } else if (isEnglishChar(char)) {
                    return 'english';
                }
            }
            return 'arabic'; // default is Arabic
        }

        // Validate date immediately
        function validateDateImmediate() {
            var $date = $('#Date');
            var $msg = $("span[data-valmsg-for='Date']");
            var valueAr = ($date.val() || '').trim();
            var value = toLatinDigits(valueAr);

            // Basic format check
            var match = value.match(/^(\d{4})-(\d{2})-(\d{2})$/);
            if (!match) {
                $msg.text('صيغة التاريخ يجب أن تكون yyyy-MM-dd');
                $date.addClass('is-invalid');
                return false;
            }

            var year = parseInt(match[1], 10);
            var month = parseInt(match[2], 10);
            var day = parseInt(match[3], 10);

            if (month < 1 || month > 12) {
                $msg.text('الشهر غير صحيح (1-12)');
                $date.addClass('is-invalid');
                return false;
            }

            var daysInMonth = [31, (isLeapYear(year) ? 29 : 28), 31, 30, 31, 30, 31, 31, 30, 31, 30, 31];
            var maxDay = daysInMonth[month - 1];

            if (day < 1 || day > maxDay) {
                $msg.text('اليوم غير صحيح لهذا الشهر');
                $date.addClass('is-invalid');
                return false;
            }

            $msg.text('');
            $date.removeClass('is-invalid');
            return true;
        }

        function isLeapYear(y) {
            return (y % 4 === 0 && y % 100 !== 0) || (y % 400 === 0);
        }

        // Auto-convert all text inputs and textareas to Arabic digits
        $(document).on("input", "#fullWarpBeamTransactionForm input[type='text'], #fullWarpBeamTransactionForm textarea", function() {
            let input = this;
            let val = input.value;
            if (val.length > 0) {
                let newVal = toArabicDigits(val);
                if (newVal !== val) {
                    let cursorPos = input.selectionStart;
                    input.value = newVal;
                    input.setSelectionRange(cursorPos, cursorPos);
                }
            }
        });

        // Validate date on input/blur/change
        $(document).on('input blur change', '#Date', function() {
            validateDateImmediate();
        });

        // Auto-convert numeric fields to Latin digits for processing
        $(document).on("input", "#fullWarpBeamTransactionForm input[type='number']", function() {
            let input = this;
            let val = input.value;

            if (val.length > 0) {
                let newVal = toLatinDigits(val);
                
                if (newVal !== val) {
                    let cursorPos = input.selectionStart;
                    input.value = newVal;
                    input.setSelectionRange(cursorPos, cursorPos);
                }
            }
        });
