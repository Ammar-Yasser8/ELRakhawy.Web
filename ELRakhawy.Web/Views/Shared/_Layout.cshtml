        /* Core Variables */
        :root {
            --primary: #4285F4;
            --primary-hover: #2b6bcf;
            --secondary: #6c757d;
            --success: #28a745;
            --danger: #dc3545;
            --warning: #ffc107;
            --info: #17a2b8;
            --dark: #212529;
            --light: #f8f9fa;
            --white: #ffffff;
            --sidebar-width: 280px;
            --header-height: 65px;
            --footer-height: 60px;
            --border-radius: 8px;
            --transition-speed: 0.3s;
            --shadow-sm: 0 2px 5px rgba(0,0,0,0.05);
            --shadow-md: 0 5px 15px rgba(0,0,0,0.07);
            --shadow-lg: 0 15px 30px rgba(0,0,0,0.1);
        }

        /* Global Styles */
        body {
            font-family: Cairo, sans-serif;
            unicode-bidi: bidi-override;
            direction: rtl;
            font-variant-numeric: normal;
            font-feature-settings: "anum";
            background-color: #f5f7fa;
            overflow-x: hidden;
            color: #444;
            margin: 0;
            padding: 0;
        }

        /* Prevent flash of unstyled content */
        body:not(.loaded) .sidebar,
        body:not(.loaded) .content {
            transition: none !important;
        }

        /* Wrapper */
        .wrapper {
            display: flex;
            min-height: 100vh;
            position: relative;
        }

        @@media print {
            body * {
                visibility: hidden !important;
            }

            #printSection, #printSection * {
                visibility: visible !important;
            }

            #printSection {
                position: absolute;
                top: 0;
                right: 0;
                width: 100%;
                padding: 20px;
            }
        }
        /* Sidebar */
        .sidebar {
            width: var(--sidebar-width);
            position: fixed;
            top: 0;
            right: 0;
            bottom: 0;
            z-index: 1050;
            background-color: var(--dark);
            transition: transform var(--transition-speed) cubic-bezier(0.4, 0, 0.2, 1);
            display: flex;
            flex-direction: column;
            box-shadow: var(--shadow-lg);
            overflow-y: auto;
            scrollbar-width: thin;
            scrollbar-color: rgba(255,255,255,0.2) transparent;
            transform: translateX(0);
        }

        .sidebar::-webkit-scrollbar {
            width: 5px;
        }

        .sidebar::-webkit-scrollbar-track {
            background: transparent;
        }

        .sidebar::-webkit-scrollbar-thumb {
            background-color: rgba(255,255,255,0.2);
            border-radius: 10px;
        }

        /* Main content */
        .content {
            flex: 1;
            margin-right: var(--sidebar-width);
            transition: margin-right var(--transition-speed) cubic-bezier(0.4, 0, 0.2, 1);
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            width: calc(100% - var(--sidebar-width));
        }

        /* Sidebar collapsed states */
        body.sidebar-collapsed .sidebar {
            transform: translateX(100%);
        }

        body.sidebar-collapsed .content {
            margin-right: 0;
            width: 100%;
        }

        /* Header */
        .app-header {
            height: var(--header-height);
            background-color: var(--white);
            border-bottom: 1px solid rgba(0,0,0,0.08);
            padding: 0 1.5rem;
            display: flex;
            align-items: center;
            justify-content: space-between;
            position: sticky;
            top: 0;
            z-index: 1020;
            box-shadow: var(--shadow-sm);
        }

        /* Logo */
        .brand {
            display: flex;
            align-items: center;
            text-decoration: none;
        }

        .logo-icon {
            width: 42px;
            height: 42px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.3rem;
            background: var(--primary);
            color: var(--white);
            border-radius: var(--border-radius);
            box-shadow: 0 2px 10px rgba(66, 133, 244, 0.3);
            margin-left: 0.8rem;
            transition: transform 0.2s;
        }

        .brand:hover .logo-icon {
            transform: scale(1.05);
        }

        .brand-text {
            margin-bottom: 0;
            font-weight: 700;
            color: var(--primary);
            font-size: 1.3rem;
        }

        .brand-tagline {
            font-size: 0.8rem;
            color: var(--secondary);
            margin-top: -5px;
        }

        /* Header right section */
        .header-right {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        /* User info */
        .user-info {
            display: flex;
            align-items: center;
            cursor: pointer;
            padding: 0.4rem 0.8rem;
            border-radius: var(--border-radius);
            transition: background-color 0.2s;
            position: relative;
        }

        .user-info:hover {
            background-color: rgba(0,0,0,0.03);
        }

        .user-avatar {
            width: 38px;
            height: 38px;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: var(--primary);
            color: var(--white);
            border-radius: 50%;
            margin-left: 0.7rem;
            font-size: 1.1rem;
            position: relative;
            border: 2px solid transparent;
            transition: all 0.2s;
        }

        .user-info:hover .user-avatar {
            border-color: var(--primary);
            transform: scale(1.05);
        }

        .user-status {
            width: 10px;
            height: 10px;
            background-color: var(--success);
            border: 2px solid var(--white);
            border-radius: 50%;
            position: absolute;
            bottom: 0;
            right: 0;
        }

        .user-name {
            font-weight: 500;
            margin-bottom: 2px;
            font-size: 0.9rem;
        }

        .user-role {
            font-size: 0.75rem;
            color: var(--secondary);
        }

        .user-info .dropdown-menu {
            min-width: 220px;
            padding: 0.5rem 0;
            margin-top: 0.5rem;
            box-shadow: var(--shadow-md);
            border: none;
            border-radius: var(--border-radius);
        }

        .user-info .dropdown-item {
            padding: 0.6rem 1rem;
            font-size: 0.9rem;
            color: #444;
        }

        .user-info .dropdown-item i {
            margin-left: 0.5rem;
            color: var(--secondary);
        }

        .user-info .dropdown-item:hover i,
        .user-info .dropdown-item:active i {
            color: inherit;
        }

        .user-info .dropdown-divider {
            margin: 0.3rem 0;
        }

        /* Date display */
        .date-display {
            padding: 0.4rem 0.8rem;
            background-color: rgba(0,0,0,0.03);
            border-radius: var(--border-radius);
            display: flex;
            align-items: center;
            font-size: 0.9rem;
            color: var(--secondary);
        }

        .date-display i {
            margin-left: 0.5rem;
            color: var(--primary);
        }

        /* Sidebar Header */
        .sidebar-header {
            padding: 1.5rem;
            display: flex;
            align-items: center;
            justify-content: center;
            border-bottom: 1px solid rgba(255,255,255,0.1);
            position: sticky;
            top: 0;
            background-color: var(--dark);
            z-index: 2;
            box-shadow: 0 2px 5px rgba(0,0,0,0.2);
        }

        .sidebar-title {
            color: var(--white);
            margin-bottom: 0;
            font-size: 1.2rem;
            font-weight: 600;
            text-align: center;
        }

        /* Sidebar Navigation */
        .sidebar-nav {
            padding: 1rem 0;
            flex-grow: 1;
        }

        .sidebar-nav .nav-item {
            margin: 2px 0;
        }

        .sidebar-nav .nav-link {
            padding: 0.8rem 1.2rem;
            color: rgba(255,255,255,0.75);
            display: flex;
            align-items: center;
            border-right: 4px solid transparent;
            transition: all 0.2s;
            text-decoration: none;
        }

        .sidebar-nav .nav-link:hover,
        .sidebar-nav .nav-link.active {
            color: var(--white);
            background-color: rgba(255,255,255,0.08);
            border-right-color: var(--primary);
        }

        .sidebar-nav .nav-link i:first-child {
            font-size: 1.1rem;
            width: 1.5rem;
            text-align: center;
            margin-left: 0.8rem;
            color: rgba(255,255,255,0.6);
            transition: all 0.2s;
        }

        .sidebar-nav .nav-link:hover i:first-child,
        .sidebar-nav .nav-link.active i:first-child {
            color: var(--primary);
        }

        .sidebar-nav .nav-link span {
            flex: 1;
        }

        .sidebar-nav .arrow {
            margin-right: auto;
            transition: transform 0.3s;
            font-size: 0.8rem;
            opacity: 0.7;
        }

        .sidebar-nav .nav-link[aria-expanded="true"] .arrow {
            transform: rotate(180deg);
        }

        /* Submenu */
        .sidebar-nav .sub-menu {
            padding: 0.5rem 0 0.5rem 2.5rem;
            background-color: rgba(0,0,0,0.15);
        }

        .sidebar-nav .sub-menu .nav-link {
            padding: 0.6rem 1rem;
            font-size: 0.9rem;
            border-right: none;
            position: relative;
        }

        .sidebar-nav .sub-menu .nav-link::before {
            content: '';
            position: absolute;
            right: 0;
            top: 50%;
            transform: translateY(-50%);
            width: 5px;
            height: 5px;
            border-radius: 50%;
            background-color: transparent;
            transition: all 0.2s;
        }

        .sidebar-nav .sub-menu .nav-link:hover::before,
        .sidebar-nav .sub-menu .nav-link.active::before {
            background-color: var(--primary);
            box-shadow: 0 0 0 2px rgba(66, 133, 244, 0.3);
        }

        /* Collapse Button */
        .sidebar-collapse-btn {
            padding: 0.8rem 1.2rem;
            background-color: rgba(0,0,0,0.2);
            color: rgba(255,255,255,0.8);
            display: flex;
            align-items: center;
            justify-content: space-between;
            cursor: pointer;
            transition: all 0.2s;
            border: none;
            margin-top: auto;
            border-top: 1px solid rgba(255,255,255,0.1);
            text-decoration: none;
        }

        .sidebar-collapse-btn:hover {
            background-color: rgba(255,255,255,0.1);
            color: var(--white);
        }

        .sidebar-collapse-btn i {
            font-size: 1rem;
        }

        .sidebar-collapse-btn .keyboard-shortcut {
            font-size: 0.7rem;
            padding: 2px 5px;
            background-color: rgba(255,255,255,0.1);
            border-radius: 3px;
            color: rgba(255,255,255,0.6);
        }

        /* Unified Toggle Button Style (same for mobile and desktop) */
        .sidebar-toggle {
            width: 38px;
            height: 38px;
            border-radius: 50%;
            background-color: rgba(0,0,0,0.03);
            color: var(--secondary);
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            border: none;
            transition: all 0.2s;
            margin-left: 1rem;
        }

        .sidebar-toggle:hover {
            background-color: var(--primary);
            color: var(--white);
            transform: scale(1.05);
        }

        /* Mobile Optimizations */
        @@media (max-width: 991.98px) {
            .content {
                margin-right: 0 !important;
                width: 100% !important;
            }

            .sidebar {
                transform: translateX(100%);
                box-shadow: -5px 0 25px rgba(0,0,0,0.1);
            }

            body:not(.sidebar-collapsed) .sidebar {
                transform: translateX(0);
            }

            body:not(.sidebar-collapsed) .sidebar-overlay {
                display: block;
                opacity: 1;
            }

            .app-header {
                padding: 0 1rem;
            }
        }

        @@media (max-width: 767.98px) {
            .brand-text {
                font-size: 1.1rem;
            }

            .brand-tagline,
            .user-role {
                display: none;
            }

            .app-main {
                padding: 1rem;
            }

            .date-display {
                font-size: 0.8rem;
                padding: 0.3rem 0.6rem;
            }

            .user-avatar {
                width: 34px;
                height: 34px;
                font-size: 0.9rem;
            }

            .user-name {
                font-size: 0.85rem;
                max-width: 80px;
                white-space: nowrap;
                overflow: hidden;
                text-overflow: ellipsis;
            }

            .stat-icon {
                width: 40px;
                height: 40px;
                font-size: 1.1rem;
            }

            .stat-value {
                font-size: 1.5rem;
            }
        }

        @@media (max-width: 575.98px) {
            .logo-icon {
                width: 38px;
                height: 38px;
            }

            .header-right {
                gap: 0.5rem;
            }

            .date-display {
                display: none;
            }
        }

        /* Main Content */
        main.app-main {
            padding: 1.5rem;
            flex: 1;
        }

        /* Footer */
        .app-footer {
            height: var(--footer-height);
            padding: 0 1.5rem;
            background-color: var(--white);
            border-top: 1px solid rgba(0,0,0,0.08);
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--secondary);
            font-size: 0.9rem;
        }

        /* Mobile Overlay */
        .sidebar-overlay {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: rgba(0,0,0,0.5);
            z-index: 1040;
            display: none;
            opacity: 0;
            backdrop-filter: blur(2px);
            transition: opacity 0.3s;
        }

        /* Dashboard Cards */
        .welcome-card {
            background-color: var(--white);
            border-radius: var(--border-radius);
            box-shadow: var(--shadow-sm);
            padding: 1.5rem;
        }

        .stat-card {
            background-color: var(--white);
            border-radius: var(--border-radius);
            box-shadow: var(--shadow-sm);
            padding: 1.25rem;
            transition: all 0.3s;
        }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: var(--shadow-md);
        }

        .stat-icon {
            width: 48px;
            height: 48px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: var(--border-radius);
            font-size: 1.25rem;
        }

        .stat-value {
            font-size: 1.75rem;
            font-weight: 700;
            line-height: 1.2;
        }

        .stat-label {
            color: var(--secondary);
            font-size: 0.85rem;
        }

        .section-card {
            background-color: var(--white);
            border-radius: var(--border-radius);
            box-shadow: var(--shadow-sm);
            height: 100%;
        }

        .section-header {
            padding: 1rem 1.25rem;
            border-bottom: 1px solid rgba(0,0,0,0.05);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .section-content {
            padding: 1.25rem;
        }

        /* Accessibility focus styles */
        button:focus,
        a:focus {
            outline: 2px solid var(--primary);
            outline-offset: 2px;
        }

        .btn:focus-visible,
        .nav-link:focus-visible {
            box-shadow: 0 0 0 3px rgba(66, 133, 244, 0.4);
            outline: none;
        }
    </style>
</head>
