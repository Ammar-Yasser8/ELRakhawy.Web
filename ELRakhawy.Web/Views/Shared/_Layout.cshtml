    <script>
        $(document).ready(function() {
            // Constants
            const SIDEBAR_STATE_KEY = 'rakhawyTex_sidebarState';
            const SUBMENU_STATE_KEY = 'rakhawyTex_submenuStates';
            
            // Initialize the layout
            initializeLayout();
            
            function initializeLayout() {
                // Load saved states
                loadSidebarState();
                loadSubmenuStates();
                setActiveNavLink();
                
                // Enable transitions after initialization
                setTimeout(() => {
                    $('body').addClass('loaded');
                }, 100);
                
                // Update current date/time based on provided UTC time
                updateDateTime();
                setInterval(updateDateTime, 1000);
            }
            
            function updateDateTime() {
                // Start from the provided UTC time: 2025-08-16 18:51:08
                const baseTime = new Date('2025-08-16T18:51:08Z');
                const now = new Date();
                const elapsed = now.getTime() - new Date().getTime();
                const currentTime = new Date(baseTime.getTime() + elapsed);
                
                // Format as YYYY-MM-DD HH:MM:SS
                const year = currentTime.getUTCFullYear();
                const month = String(currentTime.getUTCMonth() + 1).padStart(2, '0');
                const day = String(currentTime.getUTCDate()).padStart(2, '0');
                const hours = String(currentTime.getUTCHours()).padStart(2, '0');
                const minutes = String(currentTime.getUTCMinutes()).padStart(2, '0');
                const seconds = String(currentTime.getUTCSeconds()).padStart(2, '0');
                
                const formatted = `${year}-${month}-${day} ${hours}:${minutes}:${seconds}`;
                $('#currentDateTime').text(formatted);
            }
            
            function toggleSidebar() {
                $('body').toggleClass('sidebar-collapsed');
                updateToggleIcons();
                saveSidebarState();
            }
            
            function updateToggleIcons() {
                const isCollapsed = $('body').hasClass('sidebar-collapsed');
                
                // Update unified toggle button
                const $toggleBtn = $('#sidebarToggle i');
                if (isCollapsed) {
                    $toggleBtn.removeClass('fa-times').addClass('fa-bars');
                    $('#sidebarCollapseBtn').html('<i class="fas fa-angle-double-left me-2"></i><span>فتح القائمة</span><span class="keyboard-shortcut">Alt+S</span>');
                } else {
                    $toggleBtn.removeClass('fa-bars').addClass('fa-times');
                    $('#sidebarCollapseBtn').html('<i class="fas fa-angle-double-right me-2"></i><span>طي القائمة</span><span class="keyboard-shortcut">Alt+S</span>');
                }
            }
            
            function saveSidebarState() {
                try {
                    const state = {
                        collapsed: $('body').hasClass('sidebar-collapsed'),
                        timestamp: Date.now(),
                        screenWidth: $(window).width()
                    };
                    localStorage.setItem(SIDEBAR_STATE_KEY, JSON.stringify(state));
                } catch (e) {
                    console.warn('Could not save sidebar state:', e);
                }
            }
            
            function loadSidebarState() {
                try {
                    const savedStateStr = localStorage.getItem(SIDEBAR_STATE_KEY);
                    
                    if (savedStateStr) {
                        const savedState = JSON.parse(savedStateStr);
                        const isRecent = (Date.now() - savedState.timestamp) < (24 * 60 * 60 * 1000);
                        
                        if (isRecent) {
                            if ($(window).width() < 992) {
                                // Mobile: always start collapsed
                                $('body').addClass('sidebar-collapsed');
                            } else {
                                // Desktop: use saved state
                                if (savedState.collapsed) {
                                    $('body').addClass('sidebar-collapsed');
                                } else {
                                    $('body').removeClass('sidebar-collapsed');
                                }
                            }
                        } else {
                            setDefaultSidebarState();
                        }
                    } else {
                        setDefaultSidebarState();
                    }
                } catch (e) {
                    console.warn('Could not load sidebar state:', e);
                    setDefaultSidebarState();
                }
                
                updateToggleIcons();
            }
            
            function setDefaultSidebarState() {
                if ($(window).width() < 992) {
                    $('body').addClass('sidebar-collapsed');
                } else {
                    $('body').removeClass('sidebar-collapsed');
                }
            }
            
            function saveSubmenuStates() {
                try {
                    const submenuStates = {};
                    $('.collapse').each(function() {
                        const id = $(this).attr('id');
                        if (id) {
                            submenuStates[id] = $(this).hasClass('show');
                        }
                    });
                    localStorage.setItem(SUBMENU_STATE_KEY, JSON.stringify(submenuStates));
                } catch (e) {
                    console.warn('Could not save submenu states:', e);
                }
            }
            
            function loadSubmenuStates() {
                try {
                    const savedStatesStr = localStorage.getItem(SUBMENU_STATE_KEY);
                    if (savedStatesStr) {
                        const savedStates = JSON.parse(savedStatesStr);
                        
                        Object.keys(savedStates).forEach(function(menuId) {
                            const $menu = $('#' + menuId);
                            const $trigger = $('[href="#' + menuId + '"]');
                            
                            if (savedStates[menuId] && $menu.length) {
                                $menu.addClass('show');
                                $trigger.attr('aria-expanded', 'true');
                            }
                        });
                    }
                } catch (e) {
                    console.warn('Could not load submenu states:', e);
                }
            }
            
            function setActiveNavLink() {
                const currentPath = window.location.pathname.toLowerCase();
                
                $('.sidebar-nav .nav-link').removeClass('active');
                
                $('.sidebar-nav .nav-link').each(function() {
                    const href = $(this).attr('href');
                    if (href && href !== '#' && href.toLowerCase() === currentPath) {
                        $(this).addClass('active');
                        
                        const $parentCollapse = $(this).closest('.collapse');
                        if ($parentCollapse.length) {
                            $parentCollapse.addClass('show');
                            $('[href="#' + $parentCollapse.attr('id') + '"]').attr('aria-expanded', 'true');
                        }
                        
                        return false;
                    }
                });
            }
            
            // Event handlers
            $('#sidebarToggle, #sidebarCollapseBtn').on('click', function(e) {
                e.preventDefault();
                toggleSidebar();
            });
            
            // Submenu handlers
            $('.nav-link[data-bs-toggle="collapse"]').on('click', function() {
                setTimeout(saveSubmenuStates, 350);
            });
            
            $('.collapse').on('shown.bs.collapse hidden.bs.collapse', function() {
                saveSubmenuStates();
            });
            
            // Keyboard shortcut
            $(document).keydown(function(e) {
                if (e.altKey && e.key === 's') {
                    toggleSidebar();
                    e.preventDefault();
                }
            });
            
            // Window resize
            let resizeTimer;
            $(window).on('resize', function() {
                clearTimeout(resizeTimer);
                resizeTimer = setTimeout(function() {
                    const currentWidth = $(window).width();
                    if (currentWidth < 992) {
                        $('body').addClass('sidebar-collapsed');
                    }
                    updateToggleIcons();
                }, 250);
            });
            
            // Overlay click
            $('.sidebar-overlay').on('click', function() {
                if (!$('body').hasClass('sidebar-collapsed')) {
                    toggleSidebar();
                }
            });
            
            // Touch gestures for mobile
            let touchStartX = 0;
            let touchEndX = 0;
            
            document.addEventListener('touchstart', function(e) {
                touchStartX = e.changedTouches[0].screenX;
            }, { passive: true });
            
            document.addEventListener('touchend', function(e) {
                touchEndX = e.changedTouches[0].screenX;
                handleSwipe();
            }, { passive: true });
            
            function handleSwipe() {
                const swipeDistance = touchEndX - touchStartX;
                const minSwipeDistance = 80;
                
                if (Math.abs(swipeDistance) < minSwipeDistance) return;
                if ($(window).width() >= 992) return;
                
                if (swipeDistance > 0 && touchStartX < 50) {
                    // Right swipe from edge - open sidebar
                    if ($('body').hasClass('sidebar-collapsed')) {
                        toggleSidebar();
                    }
                } else if (swipeDistance < 0) {
                    // Left swipe - close sidebar
                    if (!$('body').hasClass('sidebar-collapsed')) {
                        toggleSidebar();
                    }
                }
            }
            
            // Save states before page unload
            $(window).on('beforeunload', function() {
                saveSidebarState();
                saveSubmenuStates();
            });
            
            // Save states when page becomes hidden
            document.addEventListener('visibilitychange', function() {
                if (document.visibilityState === 'hidden') {
                    saveSidebarState();
                    saveSubmenuStates();
                }
            });
        });
    </script>
    
