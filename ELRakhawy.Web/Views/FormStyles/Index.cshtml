    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const table = document.getElementById("formStylesTable");
            const tbody = table.querySelector("tbody");
            const headers = table.querySelectorAll("thead th");
            const toggleMenu = document.getElementById("columnToggleMenu");
            let currentSortColumn = -1;
            let currentSortDirection = 'none';

            // Initialize column toggle menu
            headers.forEach((th, index) => {
                // Skip empty columns or action columns
                if (th.innerText.trim() === "" || th.innerText.includes("الإجراءات")) return;

                const li = document.createElement("li");
                li.innerHTML = `
                    <label class="dropdown-item">
                        <input type="checkbox" class="me-2 column-toggle" data-index="${index}" checked>
                        ${th.innerText.trim()}
                    </label>`;
                toggleMenu.appendChild(li);
            });

            // Handle column visibility toggle
            toggleMenu.addEventListener("change", function (e) {
                if (!e.target.classList.contains("column-toggle")) return;

                const colIndex = e.target.getAttribute("data-index");
                const isVisible = e.target.checked;

                // Show/hide column
                table.querySelectorAll("tr").forEach(row => {
                    const cell = row.querySelectorAll("th, td")[colIndex];
                    if (cell) {
                        cell.style.display = isVisible ? "" : "none";
                    }
                });
            });

            // Sorting functionality
            function sortTable(columnIndex, direction) {
                const rows = Array.from(tbody.querySelectorAll('tr'));

                // Update sort indicators
                document.querySelectorAll('.sortable').forEach(header => {
                    header.classList.remove('sorted-asc', 'sorted-desc');
                    const icon = header.querySelector('.sort-icon');
                    if (icon) {
                        icon.className = 'fas fa-sort sort-icon text-muted';
                    }
                });

                document.querySelectorAll('.sort-btn').forEach(btn => {
                    btn.classList.remove('active');
                });

                // Update current sort header
                const currentHeader = document.querySelector(`[data-column="${columnIndex}"].sortable`);
                if (currentHeader) {
                    currentHeader.classList.add(`sorted-${direction}`);
                    const icon = currentHeader.querySelector('.sort-icon');
                    if (icon) {
                        icon.className = direction === 'asc'
                            ? 'fas fa-sort-up sort-icon text-primary'
                            : 'fas fa-sort-down sort-icon text-primary';
                    }
                }

                // Activate current sort button
                const currentSortBtn = document.querySelector(`.sort-btn[data-column="${columnIndex}"][data-direction="${direction}"]`);
                if (currentSortBtn) {
                    currentSortBtn.classList.add('active');
                }

                // Sort rows
                rows.sort((a, b) => {
                    const aCell = a.querySelectorAll('td')[columnIndex];
                    const bCell = b.querySelectorAll('td')[columnIndex];

                    let aValue = aCell ? aCell.textContent.trim() : '';
                    let bValue = bCell ? bCell.textContent.trim() : '';

                    // String comparison for Arabic text
                    const comparison = aValue.localeCompare(bValue, 'ar', {
                        numeric: true,
                        sensitivity: 'base'
                    });

                    return direction === 'asc' ? comparison : -comparison;
                });

                // Re-append sorted rows
                rows.forEach(row => tbody.appendChild(row));

                currentSortColumn = columnIndex;
                currentSortDirection = direction;
            }

            // Handle header clicks for sorting
            document.querySelectorAll('.sortable').forEach(header => {
                header.addEventListener('click', function() {
                    const column = parseInt(this.getAttribute('data-column'));
                    let newDirection = 'asc';

                    if (currentSortColumn === column) {
                        newDirection = currentSortDirection === 'asc' ? 'desc' : 'asc';
                    }

                    sortTable(column, newDirection);
                });
            });

            // Handle sort button clicks
            document.querySelectorAll('.sort-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    const column = parseInt(this.getAttribute('data-column'));
                    const direction = this.getAttribute('data-direction');
                    sortTable(column, direction);
                });
            });

            // Enhanced search functionality
            let searchTimeout;
            document.getElementById('searchByFormName').addEventListener('input', function() {
                clearTimeout(searchTimeout);
                searchTimeout = setTimeout(() => {
                    const searchTerm = this.value.toLowerCase().trim();
                    let visibleCount = 0;

                    document.querySelectorAll('.form-style-row').forEach(row => {
                        const formName = row.querySelector('.form-style-name').textContent.toLowerCase();
                        const shouldShow = !searchTerm || formName.includes(searchTerm);

                        row.style.display = shouldShow ? '' : 'none';
                        if (shouldShow) visibleCount++;
                    });

                    // Update badge count
                    document.getElementById('badgeCount').textContent = visibleCount;

                    // Show/hide clear button
                    document.getElementById('clearFormNameSearch').style.display = searchTerm ? 'block' : 'none';

                    // Show/hide clear all button
                    document.getElementById('clearAllSearch').style.display = searchTerm ? 'block' : 'none';
                }, 200);
            });

            // Clear search functionality
            document.getElementById('clearFormNameSearch').addEventListener('click', function() {
                document.getElementById('searchByFormName').value = '';
                document.getElementById('searchByFormName').dispatchEvent(new Event('input'));
            });

            document.getElementById('clearAllSearch').addEventListener('click', function() {
                document.getElementById('searchByFormName').value = '';
                document.getElementById('searchByFormName').dispatchEvent(new Event('input'));
            });

            // Initialize badge count
            const initialCount = document.querySelectorAll('.form-style-row').length;
            document.getElementById('badgeCount').textContent = initialCount;
        });
    </script>

