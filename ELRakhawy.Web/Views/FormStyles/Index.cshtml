    document.addEventListener('DOMContentLoaded', function() {
        document.querySelectorAll('.mobile-sort-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                const direction = this.getAttribute('data-direction');
                const cards = Array.from(document.querySelectorAll('.mobile-form-card'));

                // Remove active state from all buttons
                document.querySelectorAll('.mobile-sort-btn').forEach(b => b.classList.remove('active'));
                this.classList.add('active');

                // Sort cards
                cards.sort((a, b) => {
                    const aName = a.querySelector('h6').textContent.trim();
                    const bName = b.querySelector('h6').textContent.trim();

                    const comparison = aName.localeCompare(bName, 'ar', {
                        numeric: true,
                        sensitivity: 'base'
                    });

                    return direction === 'asc' ? comparison : -comparison;
                });

                // Re-append sorted cards
                const container = document.getElementById('mobileCardsContainer');
                cards.forEach(card => container.appendChild(card));
            });
        });
    });
</script>
