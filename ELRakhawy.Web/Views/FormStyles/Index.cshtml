        // Convert English → Arabic
        function toArabicDigits(str) {
            if (typeof str !== 'string') return str;
            return str.replace(/[0-9]/g, d => '٠١٢٣٤٥٦٧٨٩'[d]);
        }

        // Convert Arabic → English
        function toLatinDigits(str) {
            if (typeof str !== 'string') return str;
            return str.replace(/[٠-٩]/g, d => '0123456789'['٠١٢٣٤٥٦٧٨٩'.indexOf(d)]);
        }

        // Detect Arabic letters
        function containsArabic(str) {
            if (!str || str.trim().length === 0) return false;
            return /[\u0600-\u06FF]/.test(str);
        }

        // Decide which number style to use
        function shouldUseArabicNumbers(str) {
            if (!str || str.trim().length === 0) {
                return true; // Default Arabic
            }
            if (containsArabic(str)) {
                return true;
            }
            if (/^[0-9٠-٩]+$/.test(str)) {
                return true;
            }
            return false; // fallback English
        }

        // Apply conversion on existing text
        function applyNumberConversion($input) {
            let val = $input.val();
            if (val && val.length > 0) {
                let useArabicNumbers = shouldUseArabicNumbers(val);
                let newVal = useArabicNumbers ? toArabicDigits(val) : toLatinDigits(val);

                if (newVal !== val) {
                    let cursorPos = $input[0].selectionStart;
                    $input.val(newVal);
                    try {
                        $input[0].setSelectionRange(cursorPos, cursorPos);
                    } catch (ex) {
                        $input.focus();
                    }
                }
            }
        }

        // Event binding
        $(document).on("input keyup paste", "#searchByFormName, #searchInputMobile, #formStyleName, #formStyleCategory", function() {
            const $input = $(this);
            if ($input.attr('type') === 'text' || $input.is('input:not([type])')) {
                applyNumberConversion($input);
            }
        });

        // Keypress handler - follow shouldUseArabicNumbers logic
        $(document).on("keypress", "#searchByFormName, #searchInputMobile, #formStyleName, #formStyleCategory", function(e) {
            if (e.which >= 48 && e.which <= 57) { // English 0-9
                e.preventDefault();
                let digit = String.fromCharCode(e.which);

                let input = e.target;
                let currentValue = input.value;
                let cursorPos = input.selectionStart || 0;

                let useArabicNumbers = shouldUseArabicNumbers(currentValue);
                let convertedDigit = useArabicNumbers ? toArabicDigits(digit) : digit;

                let newValue = currentValue.slice(0, cursorPos) + convertedDigit + currentValue.slice(cursorPos);
                input.value = newValue;

                input.setSelectionRange(cursorPos + 1, cursorPos + 1);

                if ($(input).attr('id').includes('search')) {
                    $(input).trigger('input');
                }
            }
        });

            // Enhanced search functionality with improved Arabic number support
            function performSearch() {
                const formNameSearch = $('#searchByFormName').val().toLowerCase().trim();
                const formNameSearchArabic = toArabicDigits(formNameSearch); // Default to Arabic numbers
                const formNameSearchLatin = toLatinDigits(formNameSearch);

                let visibleCount = 0;

                $('.form-style-row').each(function() {
                    const row = $(this);
                    const formName = row.find('.form-style-name').text().toLowerCase();

                    // Enhanced search matching with Arabic/English number support
                    const formNameMatch = !formNameSearch ||
                        formName.includes(formNameSearchArabic) || // Arabic first
                        formName.includes(formNameSearchLatin) ||
                        formName.includes(formNameSearch);

                    const shouldShow = formNameMatch;
                    row.toggle(shouldShow);

                    if (shouldShow) visibleCount++;
                });

                updateSearchInfo(visibleCount, formNameSearchArabic); // Pass Arabic numbers to update info
            }

            // Enhanced updateSearchInfo with Arabic numbers
            function updateSearchInfo(visibleCount, formNameSearch) {
                // Display counts in Arabic numerals
                $('#badgeCount').text(toArabicDigits(visibleCount.toString()));

                // Show/hide clear buttons
                $('#clearFormNameSearch').toggle(formNameSearch.length > 0);

                const hasAnyFilter = formNameSearch.length > 0;
                $('#clearAllSearch').toggle(hasAnyFilter);

                // Show/hide no results message
                if (visibleCount === 0 && hasAnyFilter) {
                    $('#noResultsMessage').show();
                    $('#formStylesContainer .section-card').show();
                } else {
                    $('#noResultsMessage').hide();
                    $('#formStylesContainer .section-card').show();
                }

                // Add visual feedback to search inputs
                $('#searchByFormName').toggleClass('border-primary', formNameSearch.length > 0);

                console.log(`Search completed: ${toArabicDigits(visibleCount.toString())} results for "${formNameSearch}"`);
            }

            // Enhanced updateCounts with Arabic numbers
            function updateCounts() {
                const totalCount = $('.form-style-row').length;
                const visibleCount = $('.form-style-row:visible').length;

                $('#badgeCount').text(toArabicDigits(visibleCount.toString()));

                // Update usage counts in Arabic
                $('.form-style-usage').each(function() {
                    const $badge = $(this).find('.badge');
                    const usage = parseInt($(this).data('usage')) || 0;
                    $badge.text(toArabicDigits(usage.toString()));
                });

                // Update mobile cards usage counts
                $('.mobile-form-card .badge').each(function() {
                    const text = $(this).text();
                    if (/^\d+$/.test(text)) {
                        $(this).text(toArabicDigits(text));
                    }
                });
            }

            function populateFilterOptions() {
                // Populate categories for mobile filters
                const categories = [...new Set($('.form-style-row').map(function() {
                    return $(this).data('category');
                }).get())].filter(cat => cat).sort();

                categories.forEach(category => {
                    $('#mobileCategoryFilter').append(
                        `<option value="${category}">${category}</option>`
                    );
                });
            }

            // Search events with debouncing
            let searchTimeout;
            $('#searchByFormName').on('input', function() {
                clearTimeout(searchTimeout);
                searchTimeout = setTimeout(performSearch, 200);
            });

            // Enhanced mobile search with Arabic number support
            $('#searchInputMobile, #mobileCategoryFilter, #mobileUsageFilter').on('input change', function() {
                const searchTerm = $('#searchInputMobile').val().toLowerCase();
                const searchTermLatin = toLatinDigits(searchTerm);
                const searchTermArabic = toArabicDigits(searchTerm);

                const categoryFilter = $('#mobileCategoryFilter').val();
                const usageFilter = $('#mobileUsageFilter').val();
                let visibleMobileCount = 0;

                $('.mobile-form-card').each(function() {
                    const card = $(this);
                    const text = card.text().toLowerCase();
                    const category = card.data('category');
                    const usage = parseInt(card.data('usage')) || 0;

                    // Enhanced mobile search with Arabic/English number support
                    const textMatch = !searchTerm ||
                        text.includes(searchTerm) ||
                        text.includes(searchTermLatin) ||
                        text.includes(searchTermArabic);

                    const categoryMatch = !categoryFilter || category === categoryFilter;

                    let usageMatch = true;
                    if (usageFilter) {
                        switch(usageFilter) {
                            case 'used':
                                usageMatch = usage > 0;
                                break;
                            case 'unused':
                                usageMatch = usage === 0;
                                break;
                        }
                    }

                    const shouldShow = textMatch && categoryMatch && usageMatch;
                    card.toggle(shouldShow);

                    if (shouldShow) visibleMobileCount++;
                });

                $('#clearMobileSearch').toggle($('#searchInputMobile').val().length > 0);

                console.log(`Mobile search: ${toArabicDigits(visibleMobileCount.toString())} cards visible`);
            });

            // Clear search buttons
            $('#clearFormNameSearch').click(function() {
                $('#searchByFormName').val('').removeClass('border-primary');
                performSearch();
                $('#searchByFormName').focus();
            });

            $('#clearAllSearch, #resetSearch').click(function() {
                $('#searchByFormName').val('').removeClass('border-primary');
                performSearch();
            });

            $('#clearMobileSearch').click(function() {
                $('#searchInputMobile').val('');
                $('#searchInputMobile').trigger('input');
            });

            // Enhanced delete functionality with Arabic number support
            $(document).on('click', '.delete-btn, .mobile-delete-btn', function(e) {
                e.preventDefault();
                const id = $(this).data('id');
                const name = $(this).data('name');
                const usage = parseInt($(this).data('usage')) || 0;

                if (usage > 0) {
                    const arabicUsage = toArabicDigits(usage.toString());
                    showNotification(`لا يمكن حذف هذه الواجهة لأنها مستخدمة في ${arabicUsage} من العمليات`, 'warning');
                    return;
                }

                currentDeleteId = id;
                $('#deleteFormName').text(name);
                deleteModal.show();
            });

            $('#confirmDelete').click(function() {
                if (!currentDeleteId) return;

                const btn = $(this);
                const originalText = btn.html();
                btn.prop('disabled', true)
                   .html('<span class="spinner-border spinner-border-sm me-2"></span>جارٍ الحذف...');

                $.ajax({
                    url: `/FormStyles/${currentDeleteId}`,
                    method: 'DELETE',
                    success: function(response) {
                        if (response.success) {
                            deleteModal.hide();
                            $(`.form-style-row[data-id="${currentDeleteId}"]`).fadeOut(400, function() {
                                $(this).remove();
                                updateCounts();
                                performSearch();
                            });
                            $(`.mobile-form-card[data-id="${currentDeleteId}"]`).fadeOut(400, function() {
                                $(this).remove();
                            });

                            showNotification(response.message, 'success');
                        } else {
                            btn.prop('disabled', false).html(originalText);
                            showNotification(response.message || 'حدث خطأ أثناء الحذف', 'error');
                        }
                        currentDeleteId = null;
                    },
                    error: function(xhr) {
                        btn.prop('disabled', false).html(originalText);
                        const errorMessage = xhr.responseJSON?.message || 'حدث خطأ أثناء حذف الواجهة';
                        showNotification(errorMessage, 'error');
                        currentDeleteId = null;
                    }
                });
            });

            // Enhanced export functionality with Arabic numbers
            $('#exportResults').click(function() {
                const visibleRows = $('.form-style-row:visible');
                if (visibleRows.length === 0) {
                    showNotification('لا توجد بيانات للتصدير', 'warning');
                    return;
                }

                let csvContent = "اسم الواجهة,الفئة,الاستخدامات\n";
                visibleRows.each(function() {
                    const name = $(this).find('.form-style-name .fw-semibold').text();
                    const category = $(this).data('category') || 'غير محدد';
                    const usage = parseInt($(this).find('.form-style-usage').data('usage')) || 0;
                    const arabicUsage = toArabicDigits(usage.toString());
                    csvContent += `"${name}","${category}","${arabicUsage}"\n`;
                });

                const blob = new Blob([csvContent], { type: 'text/csv;charset=utf-8;' });
                const link = document.createElement('a');
                link.href = URL.createObjectURL(blob);
                link.download = `form_styles_${new Date().toISOString().split('T')[0]}.csv`;
                link.click();

                const arabicCount = toArabicDigits(visibleRows.length.toString());
                showNotification(`تم تصدير ${arabicCount} واجهة بنجاح`, 'success');
            });

            // Refresh data
            $('#refreshData').click(function() {
                const btn = $(this);
                const originalText = btn.html();
                btn.prop('disabled', true).html('<span class="spinner-border spinner-border-sm me-2"></span>جاري التحديث...');

                setTimeout(() => {
                    location.reload();
                }, 1000);
            });

            // Enhanced notification function
            window.showNotification = function(message, type = 'success') {
                const alertTypes = {
                    'success': { class: 'alert-success', icon: 'fa-check-circle' },
                    'error': { class: 'alert-danger', icon: 'fa-exclamation-circle' },
                    'warning': { class: 'alert-warning', icon: 'fa-exclamation-triangle' },
                    'info': { class: 'alert-info', icon: 'fa-info-circle' }
                };

                const alertConfig = alertTypes[type] || alertTypes['info'];

                const alert = $(`
                    <div class="alert ${alertConfig.class} alert-dismissible fade show shadow-sm border-0" role="alert">
                        <div class="d-flex align-items-center">
                            <i class="fas ${alertConfig.icon} me-3 fa-lg"></i>
                            <span>${message}</span>
                        </div>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                `);

                $('nav[aria-label="breadcrumb"]').after(alert);

                setTimeout(() => {
                    alert.fadeOut(350, function() { $(this).remove(); });
                }, 4000);
            };

            // Auto-dismiss success alerts after 5 seconds
            setTimeout(function() {
                $('.alert-success, .alert-danger').fadeOut(350);
            }, 5000);

            // Keyboard shortcuts
            $(document).keydown(function(e) {
                if (e.ctrlKey && e.keyCode === 70) { // Ctrl+F
                    e.preventDefault();
                    $('#searchByFormName').focus();
                }
                if (e.ctrlKey && e.keyCode === 78) { // Ctrl+N
                    e.preventDefault();
                    $('.add-formstyle-btn').click();
                }
                if (e.keyCode === 27) { // Escape
                    $('#searchByFormName').val('').removeClass('border-primary');
                    performSearch();
                }
            });
            // Initialize with Arabic numbers
            populateFilterOptions();
            updateCounts();

            console.log('Enhanced form styles index with improved Arabic number priority initialized successfully at', CURRENT_TIME, 'by', CURRENT_USER);
        });
    </script>

