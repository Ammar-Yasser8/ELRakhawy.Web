<!-- Enhanced Data Display Section with Inline Search -->
<div id="formStylesContainer">
    <div class="section-card">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-light border-bottom">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold text-dark">
                        <i class="fas fa-list me-2 text-primary"></i>قائمة العمليات التجارية
                    </h5>
                    <div class="d-flex align-items-center gap-3">
                        <!-- Search Results Info -->
                        <small class="text-muted">
                            <span id="resultsInfo">عرض <strong id="visibleCount">0</strong> من أصل <strong id="totalCount">0</strong> عملية</span>
                        </small>
                        <div class="badge bg-warning px-3 py-2">
                            <i class="fas fa-database me-1"></i>
                            <span id="badgeCount">0</span> عملية
                        </div>
                        <button class="btn btn-outline-danger btn-sm" id="clearAllSearch" style="display: none;">
                            <i class="fas fa-eraser me-1"></i>مسح المرشحات
                        </button>
                    </div>
                </div>
            </div>

            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0" id="formStylesTable">
                        <thead class="table-light">
                            <tr>
                                <th class="fw-bold" style="width: 50%;">
                                    <i class="fas fa-cogs text-primary me-1"></i>اسم العملية التجارية
                                </th>
                                <th class="fw-bold" style="width: 20%;">
                                    <i class="fas fa-folder text-info me-1"></i>الفئة
                                </th>
                                <th class="text-center fw-bold" style="width: 15%;">
                                    <i class="fas fa-chart-bar text-success me-1"></i>الاستخدامات
                                </th>
                                <th class="text-center fw-bold" style="width: 15%;">
                                    <i class="fas fa-tools text-dark me-1"></i>الإجراءات
                                </th>
                            </tr>
                            <!-- Enhanced Inline Search Row -->
                            <tr class="search-row bg-white">
                                <th class="border-bottom-0 pb-2 pt-2">
                                    <div class="search-container">
                                        <div class="input-group input-group-sm">
                                            <span class="input-group-text bg-light border-end-0">
                                                <i class="fas fa-search text-muted"></i>
                                            </span>
                                            <input type="text" id="searchByFormName" class="form-control border-start-0"
                                                   placeholder="ابحث في أسماء العمليات...">
                                            <button class="btn btn-outline-secondary btn-sm" type="button" id="clearFormNameSearch" style="display: none;">
                                                <i class="fas fa-times"></i>
                                            </button>
                                        </div>
                                    </div>
                                </th>
                                <th class="border-bottom-0 pb-2 pt-2">
                                    <div class="search-container">
                                        <select id="searchByCategory" class="form-select form-select-sm">
                                            <option value="">جميع الفئات</option>
                                        </select>
                                    </div>
                                </th>
                                <th class="border-bottom-0 pb-2 pt-2">
                                    <div class="search-container">
                                        <select id="searchByUsage" class="form-select form-select-sm">
                                            <option value="">جميع الحالات</option>
                                            <option value="used">مستخدم</option>
                                            <option value="unused">غير مستخدم</option>
                                            <option value="high">استخدام عالي (5+)</option>
                                            <option value="medium">استخدام متوسط (1-4)</option>
                                        </select>
                                    </div>
                                </th>
                                <th class="border-bottom-0 pb-2 pt-2 text-center">
                                    <div class="d-flex gap-1 justify-content-center">
                                        <button class="btn btn-sm btn-outline-primary" id="exportResults" title="تصدير النتائج">
                                            <i class="fas fa-download"></i>
                                        </button>
                                        <button class="btn btn-sm btn-outline-info" id="toggleColumns" title="إظهار/إخفاء الأعمدة">
                                            <i class="fas fa-columns"></i>
                                        </button>
                                    </div>
                                </th>
                            </tr>
                        </thead>
                        <tbody id="formStylesTableBody">
                            @if (Model != null && Model.Any())
                            {
                                @foreach (var form in Model)
                                {
                                    <tr class="form-style-row" data-id="@form.Id" data-category="@form.FormCategory">
                                        <td class="form-style-name">
                                            <div class="d-flex align-items-center">
                                                <div class="form-icon me-2">
                                                    <i class="fas fa-cog text-warning"></i>
                                                </div>
                                                <div>
                                                    <span class="fw-semibold">@form.FormName</span>
                                                    <br>
                                                   
                                                </div>
                                            </div>
                                        </td>
                                        <td class="form-style-category">
                                            <span class="badge bg-info bg-opacity-10 text-info border border-info border-opacity-25">
                                                <i class="fas fa-folder me-1"></i>@form.FormCategory
                                            </span>
                                        </td>
                                        <td class="text-center form-style-usage" data-usage="@form.UsageCount">
                                            @if (form.UsageCount > 0)
                                            {
                                                <div class="d-flex flex-column align-items-center">
                                                    <span class="badge @(form.UsageCount >= 5 ? "bg-success" : form.UsageCount >= 1 ? "bg-primary" : "bg-secondary") fs-6 mb-1">
                                                        @form.UsageCount
                                                    </span>
                                                    <small class="text-muted">
                                                        @(form.UsageCount >= 5 ? "عالي" : form.UsageCount >= 1 ? "متوسط" : "منخفض")
                                                    </small>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="d-flex flex-column align-items-center">
                                                    <span class="badge bg-secondary fs-6 mb-1">0</span>
                                                    <small class="text-muted">غير مستخدم</small>
                                                </div>
                                            }
                                        </td>
                                        <td class="text-center">
                                            <div class="btn-group" role="group">
                                                <a asp-action="Details" asp-route-id="@form.Id"
                                                   class="btn btn-sm btn-outline-info"
                                                   title="تفاصيل @form.FormName">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@form.Id"
                                                   class="btn btn-sm btn-outline-warning"
                                                   title="تعديل @form.FormName">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <button class="btn btn-sm @(form.UsageCount > 0 ? "btn-outline-secondary" : "btn-outline-danger") delete-btn"
                                                        data-id="@form.Id"
                                                        data-name="@form.FormName"
                                                        data-usage="@form.UsageCount"
                                                        title="@(form.UsageCount > 0 ? "لا يمكن الحذف" : "حذف") @form.FormName"
                                                        @(form.UsageCount > 0 ? "disabled" : "")>
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- No Results Message -->
    <div id="noResultsMessage" class="text-center py-5" style="display: none;">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <i class="fas fa-search fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">لا توجد نتائج مطابقة</h5>
                <p class="text-muted mb-3">لم يتم العثور على عمليات تجارية تطابق معايير البحث الحالية</p>
                <button class="btn btn-outline-primary" id="resetSearch">
                    <i class="fas fa-refresh me-1"></i>إعادة تعيين البحث
                </button>
            </div>
        </div>
    </div>
</div>

