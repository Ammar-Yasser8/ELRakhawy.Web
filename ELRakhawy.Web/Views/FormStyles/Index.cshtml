                    <i class="fas fa-trash me-2"></i>تأكيد الحذف
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            const CURRENT_TIME = '@currentTime';
            const CURRENT_USER = '@currentUser';

            console.log('Enhanced form styles index with inline search loaded:', {
                time: CURRENT_TIME,
                user: CURRENT_USER
            });

            // Initialize components
            const deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
            let currentDeleteId = null;

            // Enhanced search functionality
            function performSearch() {
                const formNameSearch = $('#searchByFormName').val().toLowerCase().trim();
                const categoryFilter = $('#searchByCategory').val();
                const usageFilter = $('#searchByUsage').val();
                let visibleCount = 0;

                $('.form-style-row').each(function() {
                    const row = $(this);
                    const formName = row.find('.form-style-name').text().toLowerCase();
                    const category = row.data('category');
                    const usage = parseInt(row.find('.form-style-usage').data('usage'));

                    const formNameMatch = !formNameSearch || formName.includes(formNameSearch);
                    const categoryMatch = !categoryFilter || category === categoryFilter;

                    let usageMatch = true;
                    if (usageFilter) {
                        switch(usageFilter) {
                            case 'used':
                                usageMatch = usage > 0;
                                break;
                            case 'unused':
                                usageMatch = usage === 0;
                                break;
                            case 'high':
                                usageMatch = usage >= 5;
                                break;
                            case 'medium':
                                usageMatch = usage >= 1 && usage <= 4;
                                break;
                        }
                    }

                    const shouldShow = formNameMatch && categoryMatch && usageMatch;
                    row.toggle(shouldShow);

                    if (shouldShow) visibleCount++;
                });

                updateSearchInfo(visibleCount, formNameSearch, categoryFilter, usageFilter);
            }

            function updateSearchInfo(visibleCount, formNameSearch, categoryFilter, usageFilter) {
                $('#visibleCount').text(visibleCount);
                $('#badgeCount').text(visibleCount);

                // Show/hide clear buttons
                $('#clearFormNameSearch').toggle(formNameSearch.length > 0);

                const hasAnyFilter = formNameSearch.length > 0 || categoryFilter || usageFilter;
                $('#clearAllSearch').toggle(hasAnyFilter);

                // Show/hide no results
                if (visibleCount === 0 && hasAnyFilter) {
                    $('#noResultsMessage').show();
                    $('#formStylesContainer .section-card').hide();
                } else {
                    $('#noResultsMessage').hide();
                    $('#formStylesContainer .section-card').show();
                }

                // Add visual feedback to search inputs
                $('#searchByFormName').toggleClass('border-primary', formNameSearch.length > 0);
            }

            function updateCounts() {
                const totalCount = $('.form-style-row').length;
                const visibleCount = $('.form-style-row:visible').length;
                $('#totalCount').text(totalCount);
                $('#visibleCount').text(visibleCount);
                $('#badgeCount').text(visibleCount);
            }

            function populateFilterOptions() {
                // Populate categories
                const categories = [...new Set($('.form-style-row').map(function() {
                    return $(this).data('category');
                }).get())].sort();

                categories.forEach(category => {
                    if (category) {
                        $('#searchByCategory, #mobileCategoryFilter').append(
                            `<option value="${category}">${category}</option>`
                        );
                    }
                });
            }

            // Search events
            let searchTimeout;
            $('#searchByFormName, #searchByCategory, #searchByUsage').on('input change', function() {
                clearTimeout(searchTimeout);
                searchTimeout = setTimeout(performSearch, 200);
            });

            // Mobile search
            $('#searchInputMobile, #mobileCategoryFilter, #mobileUsageFilter').on('input change', function() {
                const searchTerm = $('#searchInputMobile').val().toLowerCase();
                const categoryFilter = $('#mobileCategoryFilter').val();
                const usageFilter = $('#mobileUsageFilter').val();

                $('.mobile-form-card').each(function() {
                    const card = $(this);
                    const text = card.text().toLowerCase();
                    const category = card.data('category');
                    const usage = parseInt(card.data('usage'));

                    const textMatch = !searchTerm || text.includes(searchTerm);
                    const categoryMatch = !categoryFilter || category === categoryFilter;

                    let usageMatch = true;
                    if (usageFilter) {
                        switch(usageFilter) {
                            case 'used':
                                usageMatch = usage > 0;
                                break;
                            case 'unused':
                                usageMatch = usage === 0;
                                break;
                        }
                    }

                    card.toggle(textMatch && categoryMatch && usageMatch);
                });

                $('#clearMobileSearch').toggle($('#searchInputMobile').val().length > 0);
            });

            // Clear search buttons
            $('#clearFormNameSearch').click(function() {
                $('#searchByFormName').val('').removeClass('border-primary');
                performSearch();
                $('#searchByFormName').focus();
            });

            $('#clearAllSearch, #resetSearch').click(function() {
                $('#searchByFormName, #searchByCategory, #searchByUsage').val('').removeClass('border-primary');
                performSearch();
            });

            $('#clearMobileSearch').click(function() {
                $('#searchInputMobile').val('');
                $('#searchInputMobile').trigger('input');
            });

            // Delete functionality
            $(document).on('click', '.delete-btn, .mobile-delete-btn', function(e) {
                e.preventDefault();
                const id = $(this).data('id');
                const name = $(this).data('name');
                const usage = $(this).data('usage');

                if (usage > 0) {
                    alert('لا يمكن حذف هذه العملية لأنها مستخدمة في أنماط التعبئة');
                    return;
                }

                currentDeleteId = id;
                $('#deleteFormName').text(name);
                deleteModal.show();
            });

            $('#confirmDelete').click(function() {
                if (!currentDeleteId) return;

                const btn = $(this);
                const originalText = btn.html();
                btn.prop('disabled', true)
                   .html('<span class="spinner-border spinner-border-sm me-2"></span>جارٍ الحذف...');

                $.ajax({
                    url: `/FormStyles/${currentDeleteId}`,
                    method: 'DELETE',
                    success: function(response) {
                        if (response.success) {
                            deleteModal.hide();
                            $(`.form-style-row[data-id="${currentDeleteId}"]`).fadeOut(400, function() {
                                $(this).remove();
                                updateCounts();
                                performSearch();
                            });
                            $(`.mobile-form-card[data-id="${currentDeleteId}"]`).fadeOut(400, function() {
                                $(this).remove();
                            });

                            showNotification(response.message, 'success');
                        } else {
                            btn.prop('disabled', false).html(originalText);
                            showNotification(response.message || 'حدث خطأ أثناء الحذف', 'error');
                        }
                        currentDeleteId = null;
                    },
                    error: function(xhr) {
                        btn.prop('disabled', false).html(originalText);
                        const errorMessage = xhr.responseJSON?.message || 'حدث خطأ أثناء حذف العملية';
                        showNotification(errorMessage, 'error');
                        currentDeleteId = null;
                    }
                });
            });

            // Export functionality
            $('#exportResults').click(function() {
                const visibleRows = $('.form-style-row:visible');
                if (visibleRows.length === 0) {
                    alert('لا توجد بيانات للتصدير');
                    return;
                }

                let csvContent = "اسم العملية,الفئة,الاستخدامات\n";
                visibleRows.each(function() {
                    const name = $(this).find('.form-style-name .fw-semibold').text();
                    const category = $(this).data('category');
                    const usage = $(this).find('.form-style-usage').data('usage');
                    csvContent += `"${name}","${category}","${usage}"\n`;
                });

                const blob = new Blob([csvContent], { type: 'text/csv;charset=utf-8;' });
                const link = document.createElement('a');
                link.href = URL.createObjectURL(blob);
                link.download = `business_operations_${new Date().toISOString().split('T')[0]}.csv`;
                link.click();
            });

            // Refresh data
            $('#refreshData').click(function() {
                const btn = $(this);
                const originalText = btn.html();
                btn.prop('disabled', true).html('<span class="spinner-border spinner-border-sm me-2"></span>جاري التحديث...');

                setTimeout(() => {
                    location.reload();
                }, 1000);
            });

            // Notification function
            function showNotification(message, type = 'success') {
                const alertClass = type === 'success' ? 'alert-success' : 'alert-danger';
                const icon = type === 'success' ? 'fa-check-circle' : 'fa-exclamation-circle';

                const alert = $(`
                    <div class="alert ${alertClass} alert-dismissible fade show shadow-sm border-0" role="alert">
                        <div class="d-flex align-items-center">
                            <i class="fas ${icon} me-3 fa-lg"></i>
                            <span>${message}</span>
                        </div>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                `);

                $('.welcome-card').after(alert);

                setTimeout(() => {
                    alert.fadeOut(350, function() { $(this).remove(); });
                }, 4000);
            }

            // Auto-dismiss success alerts after 5 seconds
            setTimeout(function() {
                $('.alert-success, .alert-danger').fadeOut(350);
            }, 5000);

            // Keyboard shortcuts
            $(document).keydown(function(e) {
                if (e.ctrlKey && e.keyCode === 70) { // Ctrl+F
                    e.preventDefault();
                    $('#searchByFormName').focus();
                }
                if (e.keyCode === 27) { // Escape
                    $('#searchByFormName, #searchByCategory, #searchByUsage').val('').removeClass('border-primary');
                    performSearch();
                }
            });

            // Initialize
            populateFilterOptions();
            updateCounts();

            console.log('Enhanced form styles index with inline search initialized successfully at', CURRENT_TIME, 'by', CURRENT_USER);
        });
    </script>

