@using ELRakhawy.EL.ViewModels
@model FormStyleDetailsViewModel
@{
    ViewData["Title"] = "تفاصيل الواجهة";
}

<!-- Breadcrumb Navigation -->
<nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb bg-white px-3 py-2 shadow rounded">
        <li class="breadcrumb-item">
            <a href="@Url.Action("Index", "Home")" class="text-decoration-none">
                <i class="fas fa-home text-primary me-2"></i>الرئيسية
            </a>
        </li>
        <li class="breadcrumb-item">
            <a href="@Url.Action("Index", "PublicTables")" class="text-decoration-none">
                <i class="fas fa-table text-info me-2"></i>الجداول العامة
            </a>
        </li>
        <li class="breadcrumb-item">
            <a href="@Url.Action("Index", "FormStyles")" class="text-decoration-none">
                <i class="fas fa-window-maximize text-success me-2"></i>الواجهات
            </a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">
            <i class="fas fa-info-circle text-warning me-2"></i>تفاصيل الواجهة
        </li>
    </ol>
</nav>

<!-- Details Header Card -->
<div class="card border-0 shadow mb-4">
    <div class="card-body">
        <div class="row align-items-center">
            <div class="col-12 col-md-8">
                <h2 class="mb-2 text-dark fw-bold">
                    <i class="fas fa-window-maximize text-warning me-2"></i>@Model.FormName
                </h2>
                <div class="mb-2">
                    <span class="badge bg-info me-2"><i class="fas fa-folder-open me-1"></i>@Model.FormCategory</span>
                    <span class="badge bg-secondary me-2"><i class="fas fa-hashtag me-1"></i>ID: @Model.Id</span>
                    <span class="badge @(Model.UsageCount > 0 ? "bg-success" : "bg-danger")"><i class="fas fa-link me-1"></i>@Model.UsageCount ارتباط</span>
                </div>
            </div>
            <div class="col-12 col-md-4 text-md-end mt-3 mt-md-0">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-lg me-2 mb-2 mb-md-0">
                    <i class="fas fa-edit"></i> تعديل
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                    <i class="fas fa-list"></i> العودة للقائمة
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Data Card -->
<div class="card border-0 shadow mb-4">
    <div class="card-header bg-light">
        <h5 class="mb-0 fw-bold"><i class="fas fa-info-circle text-info me-2"></i>بيانات الواجهة</h5>
    </div>
    <div class="card-body">
        <div class="row g-4">
            <div class="col-12 col-md-6">
                <label class="form-label fw-bold mb-1">اسم الواجهة</label>
                <div class="bg-white border rounded px-3 py-2 fs-5">@Model.FormName</div>
            </div>
            <div class="col-12 col-md-6">
                <label class="form-label fw-bold mb-1">بيان</label>
                <div class="bg-white border rounded px-3 py-2">
                    @if (!string.IsNullOrEmpty(Model.PackagingStyles?.FirstOrDefault()?.Comment))
                    {
                        <span>@Model.PackagingStyles.First().Comment</span>
                    }
                    else
                    {
                        <span class="text-muted">-</span>
                    }
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    <script>
        $(function() {
            // Inline search for packaging styles
            function filterPkgs() {
                const q = $('#pkgSearch').val().toLowerCase().trim();
                let visible = 0;
                $('.pkg-row').each(function() {
                    const row = $(this);
                    const name = row.data('name').toLowerCase();
                    const comment = row.data('comment').toLowerCase();
                    let match = !q || name.includes(q) || comment.includes(q);
                    row.toggle(match);
                    if (match) visible++;
                });
                $('#noPkgResults').toggle(visible === 0);
                $('#clearPkgSearch').toggle($('#pkgSearch').val().length > 0);
            }
            $('#pkgSearch').on('input', function() {
                clearTimeout($.data(this, 'timer'));
                const wait = setTimeout(filterPkgs, 120);
                $(this).data('timer', wait);
            });
            $('#clearPkgSearch').on('click', function() {
                $('#pkgSearch').val('');
                filterPkgs();
                $('#pkgSearch').focus();
            });
            filterPkgs();

            // Keyboard focus shortcut
            $(document).on('keydown', function(e) {
                if (e.key === '/' && !$(e.target).is('input, textarea')) {
                    e.preventDefault();
                    $('#pkgSearch').focus();
                }
            });
        });
    </script>
    <style>
        body {
            background: #f5f7fa;
        }

        .card {
            border-radius: 14px;
        }

        .breadcrumb {
            background: #fff !important;
            font-size: 1.1rem;
        }

        .section-header {
            background: #f8f9fa;
            padding: 16px 24px;
            border-radius: 14px 14px 0 0;
            border-bottom: 1px solid #eee;
        }

        .section-card {
            margin-bottom: 28px;
        }

        .table {
            margin-bottom: 0 !important;
        }

        .btn-lg {
            font-size: 1.1rem;
            padding: 0.9rem 1.6rem;
        }
        @@media (max-width: 768px) {
            .card-body, .section-header

        {
            padding: 1rem !important;
        }

        .btn-lg {
            font-size: 1rem;
            padding: 0.7rem 1.2rem;
        }

        }

        .pkg-row:hover {
            background: #f9fafb;
        }

        #pkgTable thead th {
            background: #f8f9fa;
        }
    </style>
}